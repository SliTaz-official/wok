# SliTaz package receipt.

PACKAGE="ttf-mgopen"
VERSION="1.1"
CATEGORY="x-window"
SHORT_DESC="TrueType fonts containing glyphs for the Latin and Greek alphabet"
MAINTAINER="al.bobylev@gmail.com"
WEB_SITE="http://pub.ellak.gr/fonts/mgopen/"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="${WEB_SITE}files/MgOpen.tar.gz"
TAGS="font ttf"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	TTFDIR=$fs/usr/share/fonts/TTF/MgOpen
	mkdir -p $TTFDIR
	install -m644 $src/*.ttf $TTFDIR
}
