# SliTaz package receipt.

PACKAGE="gadmin-httpd"
VERSION="0.1.5"
CATEGORY="x-window"
SHORT_DESC="GTK+ configuration tool for Apache."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://dalalven.dtdns.net/linux/gadmintools-webpage/"
WGET_URL="http://dalalven.dtdns.net/linux/$PACKAGE/$TARBALL"

DEPENDS="gtk+ apache"
BUILD_DEPENDS="gtk+-dev"


# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/applications
	cp -a $install/etc $fs
	cp -a $install/usr/sbin $fs/usr
	cp -a $install/usr/share/pixmaps $fs/usr/share
	cp -a $stuff/$PACKAGE.desktop $fs/usr/share/applications
}
