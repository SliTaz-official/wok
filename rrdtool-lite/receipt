# SliTaz package receipt.

PACKAGE="rrdtool-lite"
SOURCE="rrdtool"
VERSION="1.4.6"
CATEGORY="misc"
SHORT_DESC="Data logging system for time series data."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://oss.oetiker.ch/$SOURCE"
WGET_URL="$WEB_SITE/pub/$TARBALL"

DEPENDS="zlib glib libxml2"
BUILD_DEPENDS="pkg-config libxml2-dev glib-dev groff"
TAGS="logs"

# Rules to configure and make the package.
compile_rules()
{
	./configure --prefix=/usr --infodir=/usr/share/info \
		--disable-rrdcgi \
		--disable-rrd_graph \
		--disable-nls \
		--disable-libdbi \
		--disable-libwrap \
		--disable-perl \
		--disable-ruby \
		--disable-lua \
		--disable-tcl \
		--disable-python \
		--mandir=/usr/share/man $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/*.so* $fs/usr/lib
	cp -a $install/usr/bin $fs/usr
}
