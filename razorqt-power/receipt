# SliTaz package receipt.

PACKAGE="razorqt-power"
VERSION="0.4.1"
CATEGORY="x-window"
SHORT_DESC="RazorQT Apps switcher plugin."
MAINTAINER="pankso@slitaz.org"
WANTED="razorqt"
WEB_SITE="http://razor-qt.org/"

DEPENDS="razor-qt upower"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/share/razor
	cp -a $install/usr/bin/razor-power $fs/usr/bin
	cp -a $install/usr/share/razor/razor-power \
		 $fs/usr/share/razor
}
