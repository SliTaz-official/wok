# SliTaz package receipt.

PACKAGE="razorqt-power"
VERSION="0.5.0"
CATEGORY="x-window"
SHORT_DESC="Razor-qt power management component."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2 LGPL2.1"
WANTED="razorqt"
WEB_SITE="http://razor-qt.org/"

DEPENDS="razorqt upower"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/share/razor $fs/usr/share/applications
	cp -a $install/usr/bin/razor-power $fs/usr/bin
	cp -a $install/usr/share/razor/razor-power \
		$fs/usr/share/razor
	cp $install/usr/share/applications/razor-power.desktop \
		$fs/usr/share/applications
}
