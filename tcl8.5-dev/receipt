# SliTaz package receipt.

VERSION="8.5.5"
PACKAGE="tcl${VERSION%%.[0-9]}-dev"
CATEGORY="development"
SHORT_DESC="The Tool Command Language dev files"
MAINTAINER="erjo@slitaz.org"
DEPENDS="tcl${VERSION%%.[0-9]}"
WANTED="tcl${VERSION%%.[0-9]}"
SOURCE="tcl"
TARBALL="${PACKAGE}${VERSION}-src.tar.gz"
WEB_SITE="http://tcl.sourceforge.net/"


# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	
	src=$WOK/$WANTED/${SOURCE}${VERSION}
	_pkg=$src/unix/_pkg
	
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.*a $fs/usr/lib
	cp -a $_pkg/usr/lib/tclConfig.sh $fs/usr/lib
	cp -a $_pkg/usr/include $fs/usr
	cp -a $src/generic/tcl*.h $fs/usr/include
}

