# SliTaz package receipt.

PACKAGE="python-docutils"
SOURCE="docutils"
VERSION="0.11"
CATEGORY="development"
SHORT_DESC="Text processing system."
MAINTAINER="claudinei@slitaz.org"
LICENSE="PublicDomain GPL3 BSD"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://docutils.sourceforge.net"
WGET_URL="http://switch.dl.sourceforge.net/project/$SOURCE/$SOURCE/$VERSION/$TARBALL"
DEPENDS="python"
BUILD_DEPENDS="python python-dev"
SUGGESTED="pil"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}

# Remove old package.
post_install()
{
	rm -rf $1/var/lib/tazpkg/installed/docutils
}
