# SliTaz package receipt.
# 6.3 Higher version supports RAW Images and depends upon freeimage ufraw
# optional deps: exiv2
# we drop RAW Image HAndling till ufraw is compiled
PACKAGE="fotoxx"
VERSION="5.10.5"
CATEGORY="graphics"
SHORT_DESC="lightweight image editor"
MAINTAINER="jozee@slitaz.org"
DEPENDS="gtk+ "
BUILD_DEPENDS="gtk+-dev"
SUGGESTED="exiv2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://kornelix.squarespace.com/fotoxx" 
WGET_URL="http://kornelix.squarespace.com/storage/downloads/$TARBALL"


# Rules to configure and make the package.
compile_rules()
{
   	cd $src
	export PREFIX=/usr make
	make DESTDIR=$PWD/_pkg install
	
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    mkdir -p $fs/usr/bin
    mkdir -p $fs/usr/share/fotoxx  
	mkdir -p $fs/usr/share/applications 
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/share/fotoxx/icons $fs/usr/share/fotoxx 
	cp -a stuff/fotoxx.desktop $fs/usr/share/applications
	

}
