# SliTaz package receipt.

PACKAGE="openjpeg"
VERSION="1.3"
CATEGORY="development"
SHORT_DESC="An open source JPEG 2000 codec"
MAINTAINER="slaxemulator@gmail.com"
DEPENDS="glibc-base"
_VERSION=v1_3
TARBALL="${PACKAGE}_${_VERSION}.tar.gz"
WEB_SITE="http://www.openjpeg.org/"
WGET_URL="$WEB_SITE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	src=$WOK/$PACKAGE/OpenJPEG_${_VERSION}
	cd $src
	patch -Np1 -i ../stuff/30_fix_build_for_debian.dpatch
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	_pkg=$WOK/$PACKAGE/OpenJPEG_${_VERSION}/_pkg
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}

