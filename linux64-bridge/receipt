# SliTaz package receipt.

PACKAGE="linux64-bridge"
VERSION="3.2.53"
BASEVER="${VERSION:0:3}"
CATEGORY="base-system"
SHORT_DESC="The Linux kernel bridge modules."
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
DEPENDS="linux64"
WANTED="linux"
PROVIDE="linux-bridge"
WEB_SITE="http://www.kernel.org/"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    local path
    _pkg=$install/linux64
    path=lib/modules/$BASEVER-slitaz/kernel
    mkdir -p $fs/$path
    export src
    export _pkg
    $wanted_stuff/list_modules.sh net/bridge | while read module; do
    	dir=$path/$(dirname $module)
    	[ -d $fs/$dir ] || mkdir -p $fs/$dir
        cp -a $_pkg/$path/$module $fs/$dir
    done

    for i in $(cat $wanted_stuff/modules.list); do
        if [ -f $fs/$path/$i ]; then
	    rm -f $fs/$path/$i
	fi
    done
}

# Post install/remove commands for Tazpkg.
post_install()
{
	chroot "$1/" depmod -a $BASEVER-slitaz
}

post_remove()
{
	chroot "$1/" depmod -a $BASEVER-slitaz
}

