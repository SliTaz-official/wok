# SliTaz package receipt.

PACKAGE="gtk+3-demo"
VERSION="3.2.3"
CATEGORY="development"
SHORT_DESC="The GIMP Toolkit example code and demo"
MAINTAINER="pankso@slitaz.org"
WEB_SITE="http://www.gtk.org/"

DEPENDS="gtk+3"
WANTED="gtk+3"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/share/pixmaps
	cp -a $install/usr/bin/gtk3-demo $fs/usr/bin
	cp -a $install/usr/share/gtk-3.0 $fs/usr/share
	install -Dm644 $stuff/gtk-demo.png $fs/usr/share/pixmaps
}
