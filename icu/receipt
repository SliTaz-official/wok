# SliTaz package receipt.

PACKAGE="icu"
VERSION="4c-4_0_d02"
CATEGORY="system-tools"
SHORT_DESC="C/C++ and Java libraries providing Unicode and Globalization."
MAINTAINER="pankso@slitaz.org"
TARBALL="icu${VERSION}-src.tgz"
WEB_SITE="http://www.icu-project.org/"
WGET_URL="http://download.icu-project.org/files/icu4c/4.0/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	mv icu icu-$VERSION && cd $src/source
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--disable-extras \
		--disable-tests \
		--disable-samples \
		$CONFIGURE_ARGS
	make
	make DESTDIR=$WOK/$PACKAGE/icu-$VERSION/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}
