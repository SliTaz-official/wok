# SliTaz package receipt.

PACKAGE="fbida"
VERSION="2.06"
CATEGORY="graphics"
SHORT_DESC="Set of applications for viewing and editing images"
MAINTAINER="pankso@slitaz.org"
DEPENDS="libexif"
BUILD_DEPENDS="libexif libexif-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://linux.bytesex.org/fbida/"
WGET_URL="http://dl.bytesex.org/releases/fbida/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	export prefix="/usr"
	make
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
}

