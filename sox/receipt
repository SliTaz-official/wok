# SliTaz package receipt.

PACKAGE="sox"
VERSION="14.1.0"
CATEGORY="multimedia"
SHORT_DESC="Swiss Army knife of sound processing programs."
MAINTAINER="pascal.bellard@slitaz.org"
DEPENDS="libtool libsamplerate alsa-lib flac libid3tag libmad libvorbis"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://sox.sourceforge.net/"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/sox
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/lib/pkgconfig $fs/usr/lib
	cp -a $_pkg/usr/lib/sox/*.so* $fs/usr/lib
	# Package all sox pkgs
	for i in $(cd $WOK; ls -d sox-*)
	do
		tazwok genpkg $i
	done
}

