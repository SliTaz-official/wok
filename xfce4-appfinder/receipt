# SliTaz package receipt.

PACKAGE="xfce4-appfinder"
VERSION="4.8.0"
CATEGORY="x-window"
SHORT_DESC="Xfce Application  Finder"
MAINTAINER="erjo@slitaz.org"
DEPENDS="libxfce4ui thunar gamin hal"
BUILD_DEPENDS="libxfce4ui-dev "
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.xfce.org"
WGET_URL="http://archive.xfce.org/xfce/${VERSION%.*}/src/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS && \
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/locale
	
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/share/icons $fs/usr/share
	cp -a $_pkg/usr/share/applications $fs/usr/share
	cp -a $_pkg/usr/share/locale/fr $fs/usr/share/locale
}

