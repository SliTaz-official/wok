# SliTaz package receipt.

PACKAGE="svkbd-de"
VERSION="git-1"
CATEGORY="x-window"
SHORT_DESC="Simple virtual keyboard that suck less (DE Layout)."
MAINTAINER="pankso@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://tools.suckless.org/svkbd"
HOST_ARCH="i486 arm"

WANTED="svkbd"
DEPENDS="xorg-libX11 xorg-libXtst"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin/
	cp -a ${install}/usr/bin/${PACKAGE} $fs/usr/bin
}
