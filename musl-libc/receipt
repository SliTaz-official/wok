# SliTaz package receipt.

PACKAGE="musl-libc"
SOURCE="musl"
VERSION="1.1.20"
CATEGORY="development"
SHORT_DESC="A lightweight, fast, simple, free libc."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://www.musl-libc.org/"
WGET_URL="${WEB_SITE}releases/$TARBALL"
TARGET="i386"

DEPENDS=""
BUILD_DEPENDS=""

# Rules to configure and make the package.
compile_rules()
{
	./configure --prefix=/usr/share/musl --exec-prefix=/usr/share/musl \
		--target=$TARGET $CONFIGURE_ARGS
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.   
genpkg_rules()                                      
{
	mkdir -p $fs/usr/share/musl/lib $fs/etc $fs/bin
	cp -a $install/lib $fs
	ln -s /usr/share/musl/lib/libc.so $fs/bin/ldd-musl
	cp -a $install/usr/share/musl/lib/*.so  $fs/usr/share/musl/lib
	echo "/usr/share/musl/lib" > $fs/etc/ld-musl-$TARGET.path
}
