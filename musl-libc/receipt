# SliTaz package receipt.

PACKAGE="musl-libc"
SOURCE="musl"
VERSION="0.9.4"
CATEGORY="development"
SHORT_DESC="A lightweight, fast, simple, free libc."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://www.etalabs.net/musl/"
WGET_URL="${WEB_SITE}releases/$TARBALL"
ARCH="i386"

DEPENDS=""
BUILD_DEPENDS=""

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr/share/musl --exec-prefix=/usr/share/musl \
		--target=$ARCH $CONFIGURE_ARGS
	make &&
	make $DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.   
genpkg_rules()                                      
{
	mkdir -p $fs/usr/share/musl/lib $fs/etc
	cp -a $install/lib $fs
	cp -a $install/usr/share/musl/lib/*.so  $fs/usr/share/musl/lib
	echo "/usr/share/musl/lib" > $fs/etc/ld-musl-$ARCH.path
}
