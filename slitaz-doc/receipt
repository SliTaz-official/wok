# SliTaz package receipt.

PACKAGE="slitaz-doc"
VERSION="1.0"
CATEGORY="base-system"
SHORT_DESC="SliTaz system documentation."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.slitaz.org/"
WGET_URL="http://download.tuxfamily.org/slitaz/sources/doc/$TARBALL"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/doc
    # Copy all rootfs from slitaz/ and set permissions.
    cp -a $src/slitaz $fs/usr/share/doc
	chown -R root.root $fs/*
}
