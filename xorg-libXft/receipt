# SliTaz package receipt.

PACKAGE="xorg-libXft"
VERSION="2.3.0"
CATEGORY="x-window"
SHORT_DESC="Xorg server module."
MAINTAINER="pankso@slitaz.org"
SOURCE="libXft"
TARBALL="$SOURCE-$VERSION.tar.bz2"
WEB_SITE="http://www.x.org/"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

DEPENDS="expat fontconfig xorg-libXrender"
BUILD_DEPENDS="freetype-dev expat-dev fontconfig-dev xorg-libXrender-dev \
 xorg-xproto xorg-libX11-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}
