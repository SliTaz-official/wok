# SliTaz package receipt.

PACKAGE="mcabber"
VERSION="0.9.7"
CATEGORY="network"
SHORT_DESC="Jabber console client."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://lilotux.net/~mikael/mcabber"
WGET_URL="$WEB_SITE/files/$TARBALL"
DEPENDS="libcrypto openssl glib gpgme libgpg-error  ncurses"
BUILD_DEPENDS="libcrypto-dev openssl-dev glib glib-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs
}

