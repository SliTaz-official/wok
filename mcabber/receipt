# SliTaz package receipt.

PACKAGE="mcabber"
VERSION="0.9.10"
CATEGORY="network"
SHORT_DESC="Jabber console client."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://lilotux.net/~mikael/mcabber"
WGET_URL="$WEB_SITE/files/$TARBALL"

DEPENDS="libcrypto openssl glib gpgme libgpg-error  ncurses"
BUILD_DEPENDS="ncurses-dev glib-dev"

# What is the latest version available today?
current_version()
{
	wget -O - ${WGET_URL%/*} 2>/dev/null | \
	sed "/current/d;/$PACKAGE-/!d;/tar/!d;s|.*$PACKAGE-\\(.*\\).tar.*\".*|\\1|" | sort -Vr | sed q
}

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
}

