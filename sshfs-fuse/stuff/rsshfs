#!/bin/sh
# from https://github.com/rom1v/rsshfs

rhost="${2%%:*}"
rpath="${2#*:}"
lpath="$1"
shift 2

case "$lpath" in
-u)	ssh "$rhost" fusermount -u $@ "$rpath"
	;;
	
''|-*)	cat <<EOT
usage:
	$0 localpath remotehost:remotepath [-o ro -o allow_other]
	$0 -u remotehost:remotepath [-z]
EOT
	;;
	
*)	fifo=/tmp/rsshfs-$$
	mkfifo $fifo
	sftp-server < $fifo | \
	ssh "$rhost" sshfs -o slave ":$lpath" "$rpath" "$@" > $fifo
	rm -f $fifo
esac
