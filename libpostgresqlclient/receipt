# SliTaz package receipt.

PACKAGE="libpostgresqlclient"
VERSION="8.3.9"
CATEGORY="misc"
SHORT_DESC="SQL database system libraries."
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://www.pgsql.com/"
WANTED="postgresql"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	while read file; do
		dir=$(dirname $file)
		[ -d $fs$dir ] || mkdir -p $fs$dir
		cp -a $_pkg$file $fs$file
	done < $src/$PACKAGE.files-list
	strip -s $fs/usr/lib/postgresql/*.so*
	ln -s /usr/lib/postgresql/libpq.so.5 $fs/usr/lib/libpq.so.5
}

