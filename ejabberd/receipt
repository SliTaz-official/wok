# SliTaz package receipt.

PACKAGE="ejabberd"
VERSION="2.0.3"
CATEGORY="network"
SHORT_DESC="XMPP server (real-time communication)."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.$PACKAGE.im/"
WGET_URL="http://freshmeat.net/redir/$PACKAGE/56344/url_tgz/$TARBALL"
DEPENDS="erlang expat openssl zlib"
BUILD_DEPENDS="erlang expat-dev openssl-dev zlib-dev"
CONFIG_FILES="/etc/ejabberd"

# Rules to configure and make the package.
compile_rules()
{
	cd $src/src
	./configure --prefix=/usr --infodir=/usr/share/info \
	--sysconfdir=/etc --localstatedir=/var \
	--mandir=/usr/share/man $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/../_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/etc/init.d
	cp -a $_pkg/* $fs
	ln -s /usr/sbin/ejabberdctl $fs/etc/init.d/ejabberd
}

