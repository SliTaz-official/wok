# SliTaz package receipt.

PACKAGE="mesa"
VERSION="7.0.3"
CATEGORY="misc"
SHORT_DESC="3D Graphics Library."
MAINTAINER="pascal.bellard@slitaz.org"
DEPENDS="xorg"
BUILD_DEPENDS="xorg-dev xorg-xextproto"
SOURCE="Mesa"
TARBALL="${SOURCE}Lib-$VERSION.tar.bz2"
WEB_SITE="http://www.mesa3d.org/"
WGET_URL="$SF_MIRROR/mesa3d/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{ 
	ln -s $src $PACKAGE-$VERSION
	cd $src
	make realclean
	make linux-x86 &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/local/lib $fs/usr
}

