# SliTaz package receipt.

PACKAGE="p11-kit-dev"
VERSION="0.23.12"
CATEGORY="development"
SHORT_DESC="Library to work with PKCS#11 modules, development files"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="BSD"
WEB_SITE="https://p11-glue.freedesktop.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/postlfs/p11-kit.html"

WANTED="p11-kit"

DEPENDS="p11-kit pkg-config gettext libtasn1-dev gtk-doc libxslt cacerts libffi-dev libffi glib glib-dev"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	cp -a $install/usr/include $fs/usr
}
