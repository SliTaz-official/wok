# SliTaz package receipt.

PACKAGE="python-gazpacho"
SOURCE="gazpacho"
VERSION="0.7.2"
CATEGORY="development"
SHORT_DESC="A GUI builder for the GTK+ toolkit"
MAINTAINER="claudinei@slitaz.org"
DEPENDS="python pygtk python-kiwi"
BUILD_DEPENDS="python python-dev pygtk python-kiwi"
SUGGESTED="twisted"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://gazpacho.sicem.biz"
WGET_URL="http://ftp.gnome.org/pub/gnome/sources/$SOURCE/0.7/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	python setup.py install --root=$_pkg || return 1
	mkdir -p $_pkg/usr/share/locale/pt
	cp locale/fr $_pkg/usr/share/locale
	cp locale/pt_BR/LC_MESSAGES $_pkg/usr/share/locale/pt
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/locale/pt
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
	cp -a $_pkg/usr/share $fs/usr
}

