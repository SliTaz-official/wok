# SliTaz package receipt.

PACKAGE="libshout"
VERSION="2.2.2"
CATEGORY="multimedia"
SHORT_DESC="Library for accessing a shoutcast/icecast server."
MAINTAINER="slaxemulator@gmail.com"
DEPENDS="libvorbis libtheora speex"
BUILD_DEPENDS="libvorbis-dev libtheora-dev speex-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.icecast.org/"
WGET_URL="http://downloads.xiph.org/releases/$PACKAGE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure && make LDFLAGS+=-lspeex && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}

