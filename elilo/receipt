# SliTaz package receipt.

PACKAGE="elilo"
VERSION="3.10"
CATEGORY="system-tools"
SHORT_DESC="The EFI linux boot loader."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://elilo.sourceforge.net/"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"
BUILD_DEPENDS="gnu-efi"
# See http://mactel-linux.sourceforge.net/wiki/Main_Page
#     genisoimage -boot-hfs-file

# Rules to configure and make the package.
compile_rules()
{
	mkdir -p $install/usr/share $install/usr/lib $install/usr/sbin
	cp -a docs $install/usr/share/doc
	cp README* $install/usr/share/doc
	make -j1 && mv elilo.efi elilo.efi.x86_64
	make clean
	sed -i 's|uname -m|echo i686|' Make.defaults
	make -j1 &&
	cp elilo.efi $install/usr/lib/elilo &&
	cp eliloalt $install/usr/sbin
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}
