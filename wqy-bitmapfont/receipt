# SliTaz package receipt.

PACKAGE="wqy-bitmapfont"
VERSION="0.9.9"
CATEGORY="x-window"
SHORT_DESC="A popular Chinese bitmap font."
MAINTAINER="tsjz@ymail.com"
WEB_SITE="http://www.wqy.org/"
TARBALL="$PACKAGE-pcf-0.9.9-0.tar.gz"
WGET_URL="$SF_MIRROR/wqy/$TARBALL"
TAGS="font"

genpkg_rules()
{
	FONT=$fs/usr/share/fonts/wqy/wqy-bitmapfont
	mkdir -p $FONT
	cp -a $src/*.pcf $FONT
}

pre_install()
{
	fc-cache -v > /dev/null 2>&1
}
