# SliTaz package receipt.

PACKAGE="slang"
VERSION="2.1.3"
CATEGORY="development"
SHORT_DESC="S-Lang library"
MAINTAINER="erjo@slitaz.org"
DEPENDS="libiconv pcre"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.s-lang.org/index.html"
WGET_URL="ftp://ftp.fu-berlin.de/pub/unix/misc/slang/v2.1/$TARBALL
 ftp://space.mit.edu/pub/davis/slang/v2.1/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr  $CONFIGURE_ARGS &&
	make && \
	make elf && \
	make static &&
	make DESTDIR=$PWD/_pkg install install-static
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
	strip -s $fs/usr/bin/*
}

