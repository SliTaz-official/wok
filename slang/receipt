# SliTaz package receipt.

PACKAGE="slang"
VERSION="2.2.4"
CATEGORY="development"
SHORT_DESC="S-Lang library"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.s-lang.org/index.html"
WGET_URL="ftp://ftp.fu-berlin.de/pub/unix/misc/slang/v${VERSION%.*}/$TARBALL
 ftp://space.mit.edu/pub/davis/slang/v${VERSION%.*}/$TARBALL"

DEPENDS="pcre libpng zlib"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr $CONFIGURE_ARGS &&
	make -j1 && \
	make -j1 elf && \
	make -j1 static &&
	make -j1 DESTDIR=$DESTDIR install install-static
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib/*.so* $fs/usr/lib
	cp -a $install/usr/lib/slang $fs/usr/lib
}

