# SliTaz package receipt.


PACKAGE="mplayerplug-in"
VERSION="3.55"
CATEGORY="multimedia"
SHORT_DESC="a browser plugin that uses mplayer to play videos from websites"
MAINTAINER="jozee@slitaz.org"
DEPENDS="mplayer xorg-libXpm gtk+"
BUILD_DEPENDS="mplayer gtk+-dev xorg-libXpm-dev firefox-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://mplayerplug-in.sourceforge.net/" 
WGET_URL="http://downloads.sourceforge.net/mplayerplug-in/$TARBALL"
FIREFOX_VER="3.0.10"


# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --sysconfdir=/etc \
		--enable-gtk2 \
		--enable-wmp \
		--enable-qt \
		--enable-rm \
		--enable-dvx \
		MOZILLA_HOME="/usr/lib/firefox-$FIREFOX_VER" \
		GECKO_IDLDIR="/usr/share/idl/firefox-$FIREFOX_VER/stable" &&		
	make
	make DESTDIR=$PWD/_pkg install
}

genpkg_rules()
{
	mkdir -p $fs/usr/lib 
    cp -a $_pkg/etc $fs
    cp -a $_pkg/usr/lib/mozilla $fs/usr/lib
       
}
