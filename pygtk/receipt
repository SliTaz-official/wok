# SliTaz package receipt.

PACKAGE="pygtk"
VERSION="2.12.1"
CATEGORY="development"
SHORT_DESC="GTK+ for Python"
MAINTAINER="erjo@slitaz.org"
DEPENDS="python pycairo pygobject"
BUILD_DEPENDS="pygobject-dev pycairo-dev libglade-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.pygtk.org/"
WGET_URL="http://ftp.gnome.org/pub/GNOME/sources/pygtk/2.12/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr \
	 --infodir=/usr/share/info \
	 --disable-docs \
	 --mandir=/usr/share/man $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/lib 
	cp -a $_pkg/usr/bin/pygtk-codegen* $fs/usr/bin
	cp -a $_pkg/usr/lib/python2.5 $fs/usr/lib
}

