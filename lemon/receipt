# SliTaz package receipt.

PACKAGE="lemon"
_realver=3180000
VERSION="${_realver:0:1}.${_realver:1:2}.${_realver:3:1}"
CATEGORY="system-tools"
SHORT_DESC="The LEMON Parser Generator (from the SQLite project)."
MAINTAINER="pankso@slitaz.org"
LICENSE="PublicDomain"
WEB_SITE="http://www.sqlite.org/"
WANTED="sqlite"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/share/lemon
	cp -a $src/lemon $fs/usr/bin
	cp -a $src/lempar.c $fs/usr/share/lemon
}
