# SliTaz package receipt.

PACKAGE="libdvdread"
VERSION="4.1.3"
CATEGORY="system-tools"
SHORT_DESC="Librairy for reading DVDs"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://dvdnav.mplayerhq.hu/"
WGET_URL="${WEB_SITE}${TARBALL}"

BUILD_DEPENDS="libdvdcss-dev autoconf automake libtool"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	patch -Np1 -i $stuff/DVDFileStat.patch
	./autogen.sh $CONFIGURE_ARGS 2>&1 | grep -v /libtool &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}

