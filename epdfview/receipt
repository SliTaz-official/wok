# SliTaz package receipt.

PACKAGE="epdfview"
VERSION="0.1.7"
CATEGORY="office"
SHORT_DESC="Lightweight PDF document viewer using Poppler."
MAINTAINER="pankso@slitaz.org"
DEPENDS="gtk+ poppler glib libpng xorg-libXdamage gcc-lib-base"
BUILD_DEPENDS="gtk+-dev poppler-dev poppler"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://trac.emma-soft.com/epdfview/"
WGET_URL="http://trac.emma-soft.com/epdfview/chrome/site/releases/$TARBALL"
TAGS="pdf viewer"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	patch -Np0 -i ../stuff/fix-scrolling.patch
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		--without-cups \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    mkdir -p $fs/usr/share/pixmaps
    cp -a $_pkg/usr/bin $fs/usr
    cp -a $_pkg/usr/share/epdfview $fs/usr/share
    cd $fs/usr/share/pixmaps
	rm ../epdfview/pixmaps/icon_epdfview-24.png
	rm ../epdfview/pixmaps/icon_epdfview-48.png
    ln -s ../epdfview/pixmaps/icon_epdfview-32.png epdfview.png
}

