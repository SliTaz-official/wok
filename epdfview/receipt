# SliTaz package receipt.

PACKAGE="epdfview"
VERSION="0.1.6"
CATEGORY="extra"
SHORT_DESC="Lightweight PDF document viewer using Poppler."
MAINTAINER="pankso@slitaz.org"
DEPENDS="gtk+ poppler"
BUILD_DEPENDS="gtk+-dev poppler-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://trac.emma-soft.com/epdfview/"
WGET_URL="http://trac.emma-soft.com/epdfview/chrome/site/releases/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS
	make
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    mkdir -p $fs/usr/share/locale $fs/usr/share/pixmaps
    cp -a $_pkg/usr/bin $fs/usr
    cp -a $_pkg/usr/share/epdfview $fs/usr/share
    cp -a $_pkg/usr/share/locale/fr $fs/usr/share/locale
    strip -s $fs/usr/bin/*
    cd $fs/usr/share/pixmaps
    ln -s ../epdfview/pixmaps/icon_epdfview-48.png epdfview.png
}

