# SliTaz package receipt.

PACKAGE="sslh"
VERSION="1.17"
CATEGORY="network"
SHORT_DESC="Accept HTTPS SSH OpenVPN Tinc & XMPP connections on the same port."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-v$VERSION.tar.gz"
WEB_SITE="http://www.rutschle.net/tech/sslh.shtml"
WGET_URL="http://www.rutschle.net/tech/$TARBALL"
TAGS="ssh vpn tunnel"

DEPENDS="libwrap libconfig"
BUILD_DEPENDS="libwrap-dev libwrap libconfig-dev"

# Rules to configure and make the package.
compile_rules()
{
	make
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/sbin
	cp -a $src/sslh-fork $fs/usr/sbin
	cp -a $src/sslh-select $fs/usr/sbin
}
