# SliTaz package receipt.

PACKAGE="gidfwizard"
VERSION="0.6.4"
CATEGORY="development"
SHORT_DESC="Graphical IDF Wizard for GNU/EDMA."
MAINTAINER="hackdorte@sapo.pt"
LICENSE="LGPL"
SOFTWARE="edma"
GNU_FTP="http://ftp.gnu.org/gnu"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.gnu.org/software/edma/"
WGET_URL="$GNU_FTP/$SOFTWARE/$TARBALL"
TAGS="browser class edma"

DEPENDS="edma gecb gtk+ libtool"
BUILD_DEPENDS="gtk+-dev gcc pkg-config autoconf automake"

# Rules to configure and make the package.
compile_rules()
{
    ./configure \
        --prefix=/usr \
        $CONFIGURE_ARGS &&
    make $MAKEFLAGS &&
    make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/* $fs/
}
