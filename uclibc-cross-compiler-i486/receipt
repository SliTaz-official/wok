# SliTaz package receipt.

PACKAGE="uclibc-cross-compiler-i486"
VERSION="prebuilt"
CATEGORY="development"
SHORT_DESC="Toolchain for uclibc/i486."
MAINTAINER="pascal.bellard@slitaz.org"
SOURCE="cross-compiler-i486"
TARBALL="$SOURCE.tar.bz2"
WEB_SITE="http://impactlinux.com/aboriginal"
WGET_URL="$WEB_SITE/downloads/binaries/$TARBALL"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share $fs/usr/bin
	cp -a $src $fs/usr/share/$PACKAGE
	for i in $(cd $src ; ls bin/${PACKAGE##*-}-*); do
		file=$(basename $i)
		ln -s ../share/$PACKAGE/bin/$file $fs/usr/bin/uclibc-$file
	done
}

# Pre and post install commands for Tazpkg.
post_install()
{
	for i in $(cd $1/ ; ls usr/share/$PACKAGE/lib/ld-uClibc.so*); do
		[ -e $1/lib/$(basename $i) ] || ln -s /$i $1/lib
	done
	cat <<EOT
Add /usr/share/$PACKAGE/lib in your LD_LIBRARY_PATH to enable the shared libraries
EOT
}

pre_remove()
{
	for i in /lib/ld-uClibc.so*; do
		case "$(readlink $i)" in
		*usr/share/$PACKAGE/lib/*) rm -f $i ;;
		esac
	done
}
