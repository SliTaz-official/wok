# SliTaz package receipt.

PACKAGE="dialog"
VERSION="1.3-20160424"
CATEGORY="base-system"
SHORT_DESC="Script-interpreter which provides a set of curses widgets."
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2.1"
TARBALL="$PACKAGE-$VERSION.tgz"
WEB_SITE="https://invisible-island.net/dialog/"
WGET_URL="ftp://invisible-island.net/$PACKAGE/$TARBALL"
HOST_ARCH="i486 arm"

DEPENDS="ncursesw"
BUILD_DEPENDS="ncursesw-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--with-ncursesw \
		--enable-nls \
		--enable-widec \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr $fs/etc
	cp -a $install/usr/bin $fs/usr
	# Config file.
	cp $stuff/dialogrc $fs/etc
}
