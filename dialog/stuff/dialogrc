# Menu box color
menubox_color = (RED,BLACK,OFF)

# Menu box border color
menubox_border_color = (RED,BLACK,OFF)

# Item color
item_color = (WHITE,BLACK,ON)

# Selected item color
item_selected_color = (GREEN,BLACK,ON)

# Tag color
