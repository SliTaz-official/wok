# SliTaz package receipt.

PACKAGE="muparser"
VERSION="2.2.3"
CATEGORY="development"
SHORT_DESC="A fast math parser library"
MAINTAINER="devl547@gmail.com"
LICENSE="MIT"
TARBALL="muparser_v${VERSION//./_}.zip"
WEB_SITE="http://muparser.beltoforion.de/"
WGET_URL="http://downloads.sourceforge.net/project/muparser/muparser/Version%20$VERSION/$TARBALL"

DEPENDS=""
BUILD_DEPENDS=""

# Rules to configure and make the package.
compile_rules()
{
	./configure \
	--disable-samples \
	 $CONFIGURE_ARGS &&
	make $MAKEFLAGS && make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/
	#cp -a $install/usr/bin $fs/usr/
	cp -a $install/usr/lib $fs/usr/
}
