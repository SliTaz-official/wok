# SliTaz package receipt.

PACKAGE="dnsmasq"
VERSION="2.57"
CATEGORY="network"
SHORT_DESC="Lightweight, DNS forwarder and DHCP server."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.thekelleys.org.uk/$PACKAGE/doc.html"
WGET_URL="http://www.thekelleys.org.uk/$PACKAGE/$TARBALL"
CONFIG_FILE="/etc/dnsmasq.conf"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	sed -i -e 's/nawk/awk/' -e 's|/usr/local|/usr|' Makefile
	make PREFIX=/usr && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/sbin $fs/usr
	cp -a stuff/* $fs
}

