# SliTaz package receipt.

PACKAGE="knot-dns"
SOURCE=""knot
VERSION="2.9.1"
CATEGORY="network"
SHORT_DESC="High-performance authoritative DNS server"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
TARBALL="$SOURCE-$VERSION.tar.xz"
WEB_SITE="https://www.knot-dns.cz/"
WGET_URL="https://secure.nic.cz/files/knot-dns/$TARBALL"
TAGS="dns"

DEPENDS="gnutls liburcu libedit"
BUILD_DEPENDS="gnutls-dev liburcu-dev libedit-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/etc $fs/
	cp -a $install/var $fs/
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/sbin $fs/usr
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}
