# SliTaz package receipt.

PACKAGE="cellwriter"
VERSION="1.3.5"
CATEGORY="x-window"
SHORT_DESC="A grid-entry handwriting input panel."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://risujin.org/cellwriter/"
WGET_URL="http://pub.risujin.org/latest.php?cellwriter/$TARBALL"
HOST_ARCH="i486 arm"

DEPENDS="gtk+ xorg-libXtst"
BUILD_DEPENDS="gtk+-dev xorg-libXtst-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--without-gnome \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/share/${PACKAGE} $fs/usr/share
}

