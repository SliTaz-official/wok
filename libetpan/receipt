# SliTaz package receipt.

PACKAGE="libetpan"
VERSION="1.8"
CATEGORY="misc"
SHORT_DESC="Mail library"
MAINTAINER="erjo@slitaz.org"
LICENSE="BSD"
TARBALL="$VERSION.tar.gz"
WEB_SITE="https://www.etpan.org/libetpan.html"
WGET_URL="https://github.com/dinhviethoa/libetpan/archive/$TARBALL"

DEPENDS="libsasl expat libcurl libdb openssl gnutls libgnutls zlib gcc-lib-base"
BUILD_DEPENDS="autoconf automake libtool expat-dev gnutls-dev" 

# Rules to configure and make the package.
compile_rules()
{
	./autogen.sh \
	--with-openssl=no --with-gnutls=yes \
	$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/*.so* $fs/usr/lib
	
}

