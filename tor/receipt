# SliTaz package receipt.

PACKAGE="tor"
VERSION="0.3.5.8"
CATEGORY="network"
SHORT_DESC="TOR - An anonymizing overlay network for TCP."
MAINTAINER="pankso@slitaz.org"
LICENSE="BSD"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.torproject.org/"
WGET_URL="https://www.torproject.org/dist/$TARBALL"
HOST_ARCH="i486 arm"

DEPENDS="libevent libssl liblzma zstd"
BUILD_DEPENDS="wget libevent-dev openssl-dev liblzma-dev zstd-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
	#cp -a $install/usr/share/tor $fs/usr/share
	
	# config file.
	cp -a $install/etc $fs
	mv $fs/etc/tor/torrc.sample $fs/etc/tor/torrc
}
