# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
#	cp -a $install/* $fs
	mkdir -p	$fs/usr
	cp -a $src/*	$fs/usr

#deb#	cp -a $src/usr	$fs

	# remove big icons
	for size in 64 128 256 512 scalable; do
		rm -rf $fs/usr/share/icons/hicolor/${size}*
	done
}
