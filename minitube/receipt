# SliTaz package receipt.

PACKAGE="minitube"
COMMIT="3b1c032abf648b386ac82990edfc0a0733a9d0e8"
VERSION="${COMMIT:0:7}"
CATEGORY="multimedia"
SHORT_DESC="Minitube is a native YouTube client"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3"
WEB_SITE="http://flavio.tordini.org/minitube"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://gitorious.org/minitube/minitube/archive/$COMMIT.tar.gz"

DEPENDS="libQtCore libQtDBus libQtGui libQtNetwork libQtScript libQtSql \
libQtXml qt4-phonon"
BUILD_DEPENDS="wget cacerts Qt4-dev qmake"

# Rules to configure and make the package.
compile_rules()
{
	mkdir build; cd build
	qmake ../minitube.pro &&
	make && make INSTALL_ROOT=$install install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs

	for size in 64 128 256 512; do
		rm -rf $fs/usr/share/icons/hicolor/${size}x$size
	done
}
