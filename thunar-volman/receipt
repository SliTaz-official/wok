# SliTaz package receipt.

PACKAGE="thunar-volman"
VERSION="0.2.0"
CATEGORY="x-window"
SHORT_DESC="Thunar Volum Manager plugin"
MAINTAINER="erjo@slitaz.org"
DEPENDS="Thunar"
BUILD_DEPENDS="Thunar-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://foo-projects.org/~benny/projects/thunar-archive-plugin/index.html"
WGET_URL="http://download.berlios.de/xfce-goodies/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS && \
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/locale
	
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/libexec $fs/usr/libexec
	cp -a $_pkg/usr/share/applications $fs/usr/share
	cp -a $_pkg/usr/share/icons $fs/usr/share
	cp -a $_pkg/usr/share/locale/fr $fs/usr/share/locale
}

