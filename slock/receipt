# SliTaz package receipt.

PACKAGE="slock"
VERSION="0.9"
CATEGORY="security"
SHORT_DESC="Simple X display locker."
MAINTAINER="mallory@sweetpeople.org"
DEPENDS=""
BUILD_DEPENDS="xorg-dev xorg-xproto xorg-xextproto xorg-libX11-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.suckless.org/programs/slock.html"
WGET_URL="http://code.suckless.org/dl/tools/slock-0.9.tar.gz"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	mv config.mk config.mk.original
	sed -e 's/usr\/local/usr/' < config.mk.original > config.mk
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
	strip -s $fs/usr/bin/*
}

