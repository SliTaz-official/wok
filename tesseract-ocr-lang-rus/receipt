# SliTaz package receipt.

PACKAGE="tesseract-ocr-lang-rus"
VERSION="3.02"
CATEGORY="office"
SHORT_DESC="Russian language data for Tesseract OCR."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="Apache"
WEB_SITE="http://code.google.com/p/tesseract-ocr/"
TARBALL="tesseract-ocr-$VERSION.${PACKAGE#*lang-}.tar.gz"
WGET_URL="http://tesseract-ocr.googlecode.com/files/$TARBALL"

DEPENDS="tesseract-ocr"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
	cp -a $src/tesseract-ocr/tessdata $fs/usr/share/
}
