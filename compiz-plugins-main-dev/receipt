# SliTaz package receipt.

PACKAGE="compiz-plugins-main-dev"
VERSION="0.8.12.2"
CATEGORY="development"
SHORT_DESC="Compiz plugins-main devel files."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WANTED="compiz-plugins-main"
WEB_SITE="http://www.compiz.org/"

DEPENDS="pkg-config compiz-plugins-main"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/compiz
	cp -a $install/usr/include $fs/usr
	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	cp -a $install/usr/lib/compiz/*a $fs/usr/lib/compiz
}
