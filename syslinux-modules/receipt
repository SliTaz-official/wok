# SliTaz package receipt.

PACKAGE="syslinux-modules"
VERSION="3.72"
CATEGORY="system-tools"
SHORT_DESC="C32 modules for syslinux"
MAINTAINER="pankso@slitaz.org"
WANTED="syslinux"
WEB_SITE="http://syslinux.zytor.com/"
BUILD_DEPENDS="lzma"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    mkdir -p $fs/usr/share/boot
    for i in mboot sanboot chain elf reboot ifcpu64 linux sdi menu vesamenu; do
    	lzma e $src/com32/*/$i.c32 $fs/usr/share/boot/$i.c32.lzma 2> /dev/null
    done
}
