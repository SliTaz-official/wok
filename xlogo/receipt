# SliTaz package receipt.

PACKAGE="xlogo"
VERSION="0.9.959"
CATEGORY="games"
SHORT_DESC="A logo interpreter written in java."
MAINTAINER="claudinei@slitaz.org"
DEPENDS="java6-jre"
WEB_SITE="http://xlogo.tuxfamily.org"

# Rules to configure and make the package.
compile_rules()
{
	wget_url="http://downloads.tuxfamily.org/xlogo/common/xlogo.jar"
	mkdir $PACKAGE-$VERSION
	cd $src
	wget $wget_url
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	_pkg="$WOK/$PACKAGE/$PACKAGE-$VERSION"
	mkdir -p $fs/usr/lib/xlogo
	cp $_pkg/xlogo.jar $fs/usr/lib/xlogo
}

