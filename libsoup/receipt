# SliTaz package receipt.

PACKAGE="libsoup"
VERSION="2.26.0"
CATEGORY="multimedia"
SHORT_DESC="GNOME HTTP Library"
MAINTAINER="jozee@slitaz.org"
DEPENDS="libxml2 libproxy gnutls sqlite"
BUILD_DEPENDS="libxml2-dev libproxy-dev sqlite-dev gnutls-dev glib-dev gnutls libtool libgcrypt-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.gnome.org" 
WGET_URL="http://ftp.gnome.org/pub/gnome/sources/$PACKAGE/2.26/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--without-gnome &&
	make
	make DESTDIR=$PWD/_pkg install
	
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib 
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}
