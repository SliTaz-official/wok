# SliTaz package receipt.

PACKAGE="libsoup"
VERSION="2.32.2"
CATEGORY="x-window"
SHORT_DESC="GNOME Soup Library."
MAINTAINER="pankso@slitaz.org"
DEPENDS="glibc-base libxml2 zlib glib libgio gtk+ libgnutls libtasn1 libgcrypt"
BUILD_DEPENDS="gtk+-dev libgio libgio-dev libxml2-dev libgcrypt-dev libtasn1-dev gobject-introspection-dev gnutls-dev zlib-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://live.gnome.org/LibSoup/"
WGET_URL="ftp://ftp.gnome.org/pub/gnome/sources/$PACKAGE/${VERSION%.*}/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--with-html-dir=/usr/share/doc \
		--disable-gtk-doc \
		--without-gnome \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/lib/girepository-1.0 $fs/usr/lib
}

