# SliTaz package receipt.

PACKAGE="lxsession"
VERSION="0.4.6.1"
CATEGORY="x-window"
SHORT_DESC="LXDE X session manager."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/lxde/LXSession%20%28session%20manager%29/LXSession%200.4.6.1/$TARBALL"
WEB_SITE="http://wiki.lxde.org/en/LXSession"

DEPENDS="gtk+ dbus"
BUILD_DEPENDS="gtk+-dev dbus-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--sysconfdir=/etc \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr \
		$fs/etc/xdg/lxsession/LXDE
	cp -a $install/usr/bin $fs/usr
	# Use SliTaz Icon them for lxsession-logout
	#cp -a $install/usr/share/lxsession $fs/usr/share
	cp -a $stuff/desktop.conf $fs/etc/xdg/lxsession/LXDE
	chown -R 0.0 $fs
}
