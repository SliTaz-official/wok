# SliTaz package receipt.

PACKAGE="perl-datetime"
VERSION="0.69"
CATEGORY="development"
SHORT_DESC="DateTime module is a Perl extension."
MAINTAINER="pascal.bellard@slitaz.org"
DEPENDS="perl"
BUILD_DEPENDS="perl perl-params-validate perl-test-exception \
perl-datetime-locale perl-datetime-timezone"
SOURCE="DateTime"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://cpan.org/"
WGET_URL="http://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Build.PL &&
	./Build --destdir $DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
}

