# SliTaz package receipt.

PACKAGE="compiz-core-dev"
VERSION="0.8.12.3"
CATEGORY="development"
SHORT_DESC="Compiz devel files."
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT GPL LGPL"
WANTED="compiz-core"
WEB_SITE="http://www.compiz.org/"

DEPENDS="pkg-config compiz-core"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/compiz $fs/usr/share/compiz
	cp -a $install/usr/include $fs/usr
	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	cp -a $install/usr/lib/*.la $fs/usr/lib
	cp -a $install/usr/lib/compiz/*.la $fs/usr/lib/compiz/
}
