# SliTaz package receipt.

PACKAGE="xfce-mcs-plugins"
VERSION="4.4.3"
CATEGORY="x-window"
SHORT_DESC="Xfce setting manager plugins"
MAINTAINER="erjo@slitaz.org"
DEPENDS="libxfcegui4 xfce-mcs-manager xorg-libXrandr"
BUILD_DEPENDS="libxfcegui4-dev xfce-mcs-manager-dev xorg-libXrandr"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.xfce.org"
WGET_URL="http://www.p0llux.be/xfce/xfce-4.4.3/src/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr  \
		--infodir=/usr/share/info \
		--disable-debug \
		--enable-xrandr \
		--mandir=/usr/share/man $CONFIGURE_ARGS && \
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr \
		$fs/usr/share/locale \
		$fs/usr/lib/xfce4/mcs-plugins
		
	 
	cp -a $_pkg/usr/lib/xfce4/mcs-plugins/*.so* $fs/usr/lib/xfce4/mcs-plugins
	cp -a $_pkg/usr/share/locale/fr $fs/usr/share/locale
	cp -a $_pkg/usr/share/applications $fs/usr/share
	cp -a $_pkg/usr/share/icons $fs/usr/share
	cp -a $_pkg/usr/share/xfce-* $fs/usr/share
}

