# SliTaz package receipt.

PACKAGE="mencoder"
VERSION="1.0rc3"
CATEGORY="multimedia"
SHORT_DESC="MPlayer video and movie encoder."
MAINTAINER="pankso@slitaz.org"
DEPENDS="fribidi libtheora lzo libdv alsa-lib cdparanoia-III expat \
fontconfig freetype x264 jpeg libmad ncurses zlib lame libpng giflib enca lirc"
WANTED="mplayer"
WEB_SITE="http://www.mplayerhq.hu/design7/news.html"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	_pkg=$WOK/$WANTED/MPlayer-$VERSION/_pkg
	mkdir -p $fs/usr/bin
	cp -a $_pkg/usr/bin/mencoder $fs/usr/bin
}
