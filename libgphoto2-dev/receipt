# SliTaz package receipt.

PACKAGE="libgphoto2-dev"
VERSION="2.4.11"
CATEGORY="development"
SHORT_DESC="libgphoto2 devel files"
MAINTAINER="jozee@slitaz.org"
LICENSE="LGPL2.1"
WANTED="libgphoto2"
WEB_SITE="http://www.gphoto.org"

DEPENDS="libgphoto2 libexif-dev libusb-dev pkg-config"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/include $fs/usr
	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	cp -a $install/usr/lib/*.*a $fs/usr/lib/
	cp -a $install/usr/lib/libgphoto2_port $fs/usr/lib/
	
	# rm *.so files
	find $fs/usr/lib -name "*.so*" -exec rm -f {} \; 2> /dev/null
}
