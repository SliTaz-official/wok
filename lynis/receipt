# SliTaz package receipt.

PACKAGE="lynis"
VERSION="2.1.1"
CATEGORY="security"
SHORT_DESC="Security and system auditing tool."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://www.rootkit.nl/projects/lynis.html"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://cisofy.com/files/$TARBALL"

DEPENDS=""
BUILD_DEPENDS=""
SUGGESTED="wget procps perl findutils rpm4"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/local
	cp -a $src $fs/usr/local/lynis
	chown -R root.root $fs/usr/local/lynis
}

