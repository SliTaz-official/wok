# SliTaz package receipt.

PACKAGE="lynis"
VERSION="1.3.0"
CATEGORY="security"
SHORT_DESC="Security and system auditing tool."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://www.rootkit.nl/projects/lynis.html"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://www.rootkit.nl/files/$TARBALL"

DEPENDS=""
BUILD_DEPENDS=""
SUGGESTED="wget procps perl findutils rpm4 passwd"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
	cp -a $src $fs/usr/share/lynis
	chown -R root.root $fs/usr/share/lynis
}

