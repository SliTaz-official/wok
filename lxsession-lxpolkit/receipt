LICENSE="GPL2"
WEB_SITE="https://wiki.lxde.org/en/LXSession"
WANTED="lxsession"

DEPENDS="dbus gtk+"

HOST_ARCH="i486 arm"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin

	cp -a $install/usr/bin/lxpolkit		$fs/usr/bin
}
