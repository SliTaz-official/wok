# SliTaz package receipt.

PACKAGE="ntl"
VERSION="5.5.2"
CATEGORY="utilities"
SHORT_DESC="A Library for doing Number Theory"
MAINTAINER="al.bobylev@gmail.com"
WEB_SITE="http://shoup.net/ntl/"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/$TARBALL"

DEPENDS=""
BUILD_DEPENDS="gmp-dev gf2x-dev libtool"

# Rules to configure and make the package.
compile_rules()
{
	cd $src/src
	./configure CFLAGS="-march=$ARCH -Os -pipe -fomit-frame-pointer" \
		DEF_PREFIX=/usr NTL_STD_CXX=on NTL_GMP_LIP=on NTL_GF2X_LIB=on &&
	make &&
	sed -i '/^DEF_PREFIX=\/usr$/d' makefile
	make DEF_PREFIX=$install/usr install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs
}
