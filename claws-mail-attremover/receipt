# SliTaz package receipt.

PACKAGE="claws-mail-attremover"
VERSION="3.17.4"
CATEGORY="network"
SHORT_DESC="Claws-mail plugin - Remove attachments from emails."
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://www.claws-mail.org/plugins.php"

DEPENDS="claws-mail xorg-libXdamage"
WANTED="claws-mail"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/claws-mail/plugins
	cp -a $install/usr/lib/claws-mail/plugins/att_remover.so \
		$fs/usr/lib/claws-mail/plugins/
}
