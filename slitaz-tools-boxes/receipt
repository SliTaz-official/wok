# SliTaz package receipt.

PACKAGE="slitaz-tools-boxes"
VERSION="5.8.1"
CATEGORY="system-tools"
SHORT_DESC="All SliTaz GTKdialog boxes to command line tools."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://www.slitaz.org/"
SOURCE="slitaz-tools"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="http://hg.slitaz.org/slitaz-tools/archive/$VERSION.tar.gz"
CONFIG_FILES="/etc/wireless"
HOST_ARCH="i486 arm"

GENERIC_MENUS="no"
DEPENDS="slitaz-tools gettext-base yad"

# Rules to configure and make the package.
compile_rules()
{
	make && make DESTDIR=$DESTDIR install-boxes
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs
	cp -a $install/* $fs
	# No cdrom on emb devices
	case "$ARCH" in
		arm*) 
			rm -f $fs/usr/bin/burn-box 
			rm -f $fs/usr/share/applications/burn-*.desktop ;;
	esac
	chmod 0644 $fs/usr/share/locale/*/*/*.mo
	chown -R root.root $fs
}
