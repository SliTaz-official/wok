# SliTaz package receipt.

PACKAGE="claws-mail-tnefparse"
VERSION="0.3.13"
CATEGORY="network"
SHORT_DESC="Enables Claws Mail reading application/ms-tnef attachments."
MAINTAINER="erjo@slitaz.org"
WEB_SITE="http://www.claws-mail.org/plugins.php"
SOURCE="tnef_parse"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="http://www.claws-mail.org/downloads/plugins/$TARBALL"

DEPENDS="claws-mail "
BUILD_DEPENDS="claws-mail-dev python-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure $CONFIGURE_ARGS && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
		mkdir -p $fs/usr/lib/claws-mail/plugins
		cp -a $install/usr/lib/claws-mail/plugins/*.so \
			$fs/usr/lib/claws-mail/plugins
}
