# SliTaz package receipt.

PACKAGE="libmnl"
VERSION="1.0.3"
CATEGORY="network"
SHORT_DESC="A minimalistic user-space library oriented to Netlink developers."
MAINTAINER="samuel_trassare@yahoo.com"
LICENSE="GPL2"
WEB_SITE="http://www.netfilter.org/projects/$PACKAGE/index.html"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://www.netfilter.org/projects/$PACKAGE/files/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	./configure $CONFIGURE_ARGS && make && make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/lib* $fs/usr/lib/
}
