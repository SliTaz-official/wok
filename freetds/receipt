# SliTaz package receipt.

PACKAGE="freetds"
VERSION="0.82"
CATEGORY="system-tools"
SHORT_DESC="Microsoft SQL Server and Sybase databases client libraries."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.freetds.org/"
WGET_URL="ftp://ftp.ibiblio.org/pub/Linux/ALPHA/$PACKAGE/stable/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS
	make
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/etc $fs
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	# Package all freetds pkgs
	for i in $(cd $WOK; ls -d freetds-*)
	do
		tazwok genpkg $i
	done
}

