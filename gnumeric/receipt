# SliTaz package receipt.

PACKAGE="gnumeric"
VERSION="1.8.2"
CATEGORY="office"
SHORT_DESC="Office Spreadsheet application."
MAINTAINER="pankso@slitaz.org"
DEPENDS="gtk+ libgsf goffice libart_lgpl libgio bzlib"
BUILD_DEPENDS="gtk+-dev libgsf-dev goffice goffice-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.gnome.org/projects/gnumeric/"
WGET_URL="http://ftp.gnome.org/pub/GNOME/sources/gnumeric/1.8/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/lib/$PACKAGE $fs/usr/lib
	rm -rf $fs/usr/lib/$PACKAGE/$VERSION/include
	rm -rf $fs/usr/lib/$PACKAGE/$VERSION/plugins/*/*.la
	
	cp -a $_pkg/usr/share/$PACKAGE $fs/usr/share
	cp -a $_pkg/usr/share/pixmaps $fs/usr/share
}

