# SliTaz package receipt.

PACKAGE="tinc"
VERSION="1.0.36"
CATEGORY="network"
TAGS="vpn tunnel"
SHORT_DESC="Virtual Private Network daemon with pseudo STUN support."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.tinc-vpn.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="${WEB_SITE}packages/$TARBALL"

BUILD_DEPENDS="openssl-dev zlib-dev lzo-dev"
DEPENDS="libcrypto zlib lzo"

CONFIG_FILES="/etc/tinc"

current_version()
{
	wget -O - $WEB_SITE | sed '/version: /!d;s|.*">\(.*\)</a.*|\1|'
}

# Rules to configure and make the package.
compile_rules()
{
	./configure			\
		--prefix=/usr		\
		--sysconfdir=/etc	\
		--localstatedir=/var	\
		--mandir=/usr/share/man	\
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr

	cp -a $install/usr/sbin	$fs/usr
	cp -a $stuff/*		$fs
}
