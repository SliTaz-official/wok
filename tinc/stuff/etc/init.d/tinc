#!/bin/sh
# /etc/init.d/tinc: Start, stop and restart tinc deamon on SliTaz, at boot
# time or with the command line.
#
# To start daemon at boot time, just put the right name in the $RUN_DAEMONS
# variable of /etc/rcS.conf and configure options with /etc/daemons.conf.
#
. /etc/init.d/rc.functions
. /etc/daemons.conf

NAME=tinc
DESC="tinc deamon"
DAEMON=/usr/sbin/tincd
OPTIONS=$TINC_OPTIONS
PIDFILE=/var/run/tinc.pid

case "$1" in
  start)
    if active_pidfile $PIDFILE tincd ; then
      echo "$NAME already running."
      exit 1
    fi
    echo -n "Starting $DESC: $NAME... "
    $DAEMON $OPTIONS 
    status
    ;;
  stop)
    if ! active_pidfile $PIDFILE tincd ; then
      echo "$NAME is not running."
      exit 1
    fi
    echo -n "Stopping $DESC: $NAME... "
    $DAEMON -k 
    status
    ;;
  restart)
    if ! active_pidfile $PIDFILE tincd ; then
      echo "$NAME is not running."
      exit 1
    fi
    echo -n "Restarting $DESC: $NAME... "
    $DAEMON -k 
    sleep 2
    $DAEMON $OPTIONS
    status
    ;;
  *)
    echo ""
    echo -e "\033[1mUsage:\033[0m /etc/init.d/`basename $0` [start|stop|reload|restart]"
    echo ""
    exit 1
    ;;
esac

exit 0
