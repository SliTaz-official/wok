# SliTaz package receipt.

PACKAGE="fluidsynth"
VERSION="1.1.1"
CATEGORY="multimedia"
MAINTAINER="jozee@slitaz.org"
SHORT_DESC="A real-time software synthesizer based on the SoundFont 2 specifications."
BUILD_DEPENDS=" jack-audio-connection-kit-dev ladspa-dev"
WEB_SITE="http://www.fluidsynth.org/"
DEPENDS="glib2 jack-audio-connection-kit ladspa"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://savannah.nongnu.org/download/fluid/$TARBALL"
TAGS="synthesizer audio multimedia"

# Rules to configure and make the package.

compile_rules() {
  cd $src
  ./configure --prefix=/usr --enable-ladspa &&
  make &&
  make prefix=$PWD/_pkg/usr install
}
	
# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib 
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*so* $fs/usr/lib/
	
}
