# SliTaz package receipt.

PACKAGE="cmus"
VERSION="v2.4.3"
CATEGORY="multimedia"
SHORT_DESC="Cmus is a small, fast and powerful console music player."
MAINTAINER="claudinei@slitaz.org"
WEB_SITE="http://cmus.sourceforge.net"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

DEPENDS="ncurses libmad libvorbis alsa-lib"
BUILD_DEPENDS="ncurses-dev libmad-dev libvorbis-dev alsa-lib-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure prefix=/usr && 
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
	mkdir -p $fs/usr/bin
	mkdir -p $fs/usr/lib
	cp -a $install/usr/bin/cmus* $fs/usr/bin
	cp -a $install/usr/lib/cmus $fs/usr/lib
	cp -a $install/usr/share/cmus $fs/usr/share
}
