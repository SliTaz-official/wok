# SliTaz package receipt.

PACKAGE="libxcb"
VERSION="1.2"
CATEGORY="x-window"
SHORT_DESC="The X protocol C-language Binding (XCB) is a replacement for Xlib featuring a small footprint, latency hiding, direct access to the protocol, improved threading support, and extensibility."
MAINTAINER="mallory@sweetpeople.org"
DEPENDS="xcb-proto xorg-libXau xorg-libXdmcp"
BUILD_DEPENDS="xcb-proto pkg-config xorg-libXau-dev libpthread-stubs"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://xcb.freedesktop.org"
WGET_URL="$WEB_SITE/dist/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    mkdir -p $fs/usr/lib 
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}

