# SliTaz package receipt.

PACKAGE="pam_mount"
VERSION="1.20"
CATEGORY="system-tools"
SHORT_DESC="PAM Module that can mount volumes for a user session."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://pam-mount.sourceforge.net/"
WGET_URL="$SF_MIRROR/pam-mount/$TARBALL"
BUILD_DEPENDS="pam-dev libhx libhx-dev"
DEPENDS="pam libcrypto libxml2 libhx zlib"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --infodir=/usr/share/info \
	--sysconfdir=/etc --localstatedir=/var \
	--mandir=/usr/share/man $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/sbin $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/sbin $fs
	cp -a $_pkg/etc $fs
	cp -a $_pkg/lib $fs
	cp -a $_pkg/var $fs
}
