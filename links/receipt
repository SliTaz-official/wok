# SliTaz package receipt.

PACKAGE="links"
VERSION="2.13"
CATEGORY="network"
SHORT_DESC="Light and fast web browser using Ncurses or Xlib."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://links.twibright.com/"
WGET_URL="http://links.twibright.com/download/$TARBALL"
TAGS="web-browser"
HOST_ARCH="i486 arm"

SUGGESTED="gpm"
DEPENDS="ncurses libssl libcrypto jpeg libpng tiff xorg-libX11 xorg-libXau \
xorg-libXdmcp libxcb zlib liblzma bzlib libgomp"
BUILD_DEPENDS="openssl-dev xorg-libX11-dev jpeg-dev libpng-dev tiff-dev \
zlib-dev xorg-libXdmcp-dev libxcb-dev xorg-libXau-dev xz-dev bzip2-dev \
gpm-dev"

# Handle cross compilation
case "$ARCH" in
	arm*)
		VERSION="2.7" 
		TARBALL="$PACKAGE-$VERSION.tar.gz" 
		WGET_URL="http://links.twibright.com/download/$TARBALL" ;;
esac

# Handle SliTaz arch
case "$SLITAZ_ARCH" in
	arm*) VERSION="2.7" ;;
esac

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-graphics \
		--without-directfb \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/pixmaps $fs/usr/share/webhome
	cp -a $install/usr/bin $fs/usr
	cp $src/graphics/links.xpm $fs/usr/share/pixmaps
	cp $stuff/links.html $fs/usr/share/webhome
}
