# SliTaz package receipt.

PACKAGE="amsn"
VERSION="0.97.2"
CATEGORY="network"
SHORT_DESC="Alvaro's Messenger"
MAINTAINER="erjo@slitaz.org"
DEPENDS="tk tls jpeg xorg-libICE xorg-libSM xorg-libX11 xorg-libXau \
xorg-libXdmcp zlib libpng"
BUILD_DEPENDS="tcl-dev tk-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://amsn-project.net/"
WGET_URL="http://mirror.pimentvert.com/sources/amsn/$TARBALL"
TAGS="chat messenger im"


# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr \
	 --with-tcl=/usr/lib $CONFIGURE_ARGS && \
	make -j4 && \
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/share $fs/usr
}

