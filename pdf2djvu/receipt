# SliTaz package receipt.

PACKAGE="pdf2djvu"
VERSION="0.9.4"
SHORT_DESC="creates DjVu files from PDF files"
CATEGORY="graphics"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.xz"
MAINTAINER="psychomaniak@xakep.ru"
WEB_SITE="http://jwilk.net/software/pdf2djvu"
WGET_URL="$WEB_SITE/downloads/$TARBALL"

TAGS="pdf djvu"
DEPENDS="djvulibre poppler"
BUILD_DEPENDS="wget cacerts djvulibre-dev poppler-dev" #exiv2

# Rules to configure and make the package.
compile_rules()
{
	./configure && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs
}
