# SliTaz package receipt.

PACKAGE="htop"
VERSION="0.7"
CATEGORY="base-apps"
SHORT_DESC="Interactive process viewer."
MAINTAINER="pankso@slitaz.org"
DEPENDS="ncurses"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://htop.sourceforge.net/"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"
JWM_MENU='System tools:<Program icon="htop.png" label="Htop">xterm -bg black -fg white -e htop</Program>'

# Rules to configure and make the package.
compile_rules()
{
    cd $src
    ./configure --prefix=/usr --mandir=/usr/share/man $CONFIGURE_ARGS
    make
    make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    mkdir -p $fs/usr/bin $fs/usr/share
    cp -a $_pkg/usr/bin/* $fs/usr/bin
    cp -a $_pkg/usr/share/pixmaps $fs/usr/share
    strip -s $fs/usr/bin/*
}
