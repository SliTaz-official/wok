# SliTaz package receipt.

PACKAGE="gnutls"
VERSION="2.10.4"
CATEGORY="security"
SHORT_DESC="GNU Transport Layer Security Library"
MAINTAINER="erjo@slitaz.org"
DEPENDS="libgcrypt libgpg-error ncurses readline zlib gcc-lib-base libgnutls \
libtasn1"
BUILD_DEPENDS="libgcrypt-dev libgpg-error-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.gnu.org/software/gnutls/"
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man \
	--disable-guile \
	$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share $fs/usr/lib
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	# split libgnutls
	rm -f $fs/usr/lib/libgnutls.so.*
}

