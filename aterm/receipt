# SliTaz package receipt.

PACKAGE="aterm"
VERSION="1.0.1"
CATEGORY="misc"
SHORT_DESC="terminal emulator"
MAINTAINER="allan316@gmail.com"
DEPENDS="xorg-libSM xorg-libXext"
BUILD_DEPENDS="xorg-libSM-dev xorg-libXest-dev xorg-libXt-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://aterm.sourceforge.net"
WGET_URL="http://nchc.dl.sourceforge.net/sourceforge/aterm/$TARBALL"
TAGS="terminal"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
	strip -s $fs/usr/bin/*
}

