# SliTaz package receipt.

PACKAGE="libgtkimageview"
VERSION="1.6.4"
CATEGORY="system-tools"
SHORT_DESC="Simple image viewer widget for GTK."
MAINTAINER="gokhlayeh@slitaz.org"
DEPENDS="gtk+"
BUILD_DEPENDS="gtk+-dev expat-dev"
SOURCE="gtkimageview"
TARBALL="$SOURCE-$VERSION.tar.gz?format=raw"
WEB_SITE="http://trac.bjourne.webfactional.com/" 
WGET_URL="http://trac.bjourne.webfactional.com/attachment/wiki/WikiStart/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$PWD/_pkg install	
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
	# Remove devel files
	cd $fs/usr/lib
	rm -r libgtkimageview.a libgtkimageview.la pkgconfig/
}
