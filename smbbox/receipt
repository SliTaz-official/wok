# SliTaz package receipt

PACKED_SIZE="16.0K"
UNPACKED_SIZE="36.0K"
PACKAGE="smbbox"
VERSION="0.99"
CATEGORY="network"
SHORT_DESC="Tiny gui for mount/unmount smb share."
MAINTAINER="shann@slitaz.org"
SOURCE="smbbox"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="http://shannaraserver.free.fr/DATA/smbbox/$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://smbbox.free.fr"

DEPENDS="smbclient smbfs"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $src/$PACKAGE/smbbox $fs/usr/bin
	cp -a $src/$PACKAGE/smbbox-notify $fs/usr/bin
	chown -R root.root $fs
}
