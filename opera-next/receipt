# SliTaz package receipt.

PACKAGE="opera-next"
VERSION="12.00-1116"
CATEGORY="network"
SHORT_DESC="Opera Internet Browser (bleeding edge version)"
MAINTAINER="devl547@gmail.com"
TARBALL="$PACKAGE-$VERSION.i386.linux.tar.xz"
BUILD_DEPENDS="optipng"
WEB_SITE="http://opera.com"
WGET_URL="http://snapshot.opera.com/unix/quack_$VERSION/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	mkdir slitaz
	./install --prefix /usr --repackage slitaz/
	find | grep .png | xargs optipng -o7
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/share/applications
	cp -a $src/slitaz/* $fs/usr/
	cp $stuff/opera-next-browser.desktop $fs/usr/share/applications
}

