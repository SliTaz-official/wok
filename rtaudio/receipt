# SliTaz package receipt.

PACKAGE="rtaudio"
VERSION="4.0.11"
CATEGORY="multimedia"
SHORT_DESC="Common API for realtime audio input/output (C++ classes)."
MAINTAINER="pankso@slitaz.org"
TARBALL="${PACKAGE}-${VERSION}.tar.gz"
WEB_SITE="http://www.music.mcgill.ca/~gary/rtaudio/"
WGET_URL="http://www.music.mcgill.ca/~gary/rtaudio/release/$TARBALL"

DEPENDS="alsa-lib jack-audio-connection-kit"
BUILD_DEPENDS="alsa-lib-dev jack-audio-connection-kit-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--with-alsa \
		--with-jack \
		$CONFIGURE_ARGS &&
	make
	# Python bindings --> rtaudio-python ??
	#cd $src/contrib/python/pyrtaudio
	#CFLAGS="$CFLAGS -I../../../include" \
	#python setup.py build
	#python setup.py install --root="$DESTDIR"
	echo "Continuing, any error will remine in pkg build..."
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $src/librtaudio.so* $fs/usr/lib
	cd $fs/usr/lib
	ln -s librtaudio.so.$VERSION librtaudio.so.4
}
