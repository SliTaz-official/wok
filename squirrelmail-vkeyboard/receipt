# SliTaz package receipt.

PACKAGE="squirrelmail-vkeyboard"
VERSION="0.9.1"
CATEGORY="network"
SHORT_DESC="Virtual keyboard plugin for Web mail."
MAINTAINER="pascal.bellard@slitaz.org"
SOURCE="vkeyboard"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://www.squirrelmail.org/"
DEPENDS="squirrelmail"
WGET_URL="${WEB_SITE}plugins/$TARBALL"
CONFIG_FILES="/etc/squirrelmail/config-vkeyboard.php"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/squirrelmail/plugins $fs/etc/squirrelmail
	cp -a $SOURCE $fs/usr/share/squirrelmail/plugins
	mv $fs/usr/share/squirrelmail/plugins/$SOURCE/config.php.sample \
		$fs/etc/squirrelmail/config-vkeyboard.php
	ln -s /etc/squirrelmail/config-vkeyboard.php \
		$fs/usr/share/squirrelmail/plugins/$SOURCE/config.php
}

post_install()
{
	( cd $1/ ; cpio -o -H newc | gzip -9 ) > \
		$1/$INSTALLED/$PACKAGE/volatile.cpio.gz <<EOT
etc/squirrelmail/config-vkeyboard.php
EOT
	echo "\$plugins[] = '$SOURCE';" >> $fs/etc/squirrelmail/config_local.php
}

repack_cleanup()
{
        zcat $INSTALLED/$PACKAGE/volatile.cpio.gz | ( cd $1 ; cpio -id )
}
