# SliTaz package receipt.

PACKAGE="claws-mail-pdfviewer"
VERSION="0.9.2"
CATEGORY="network"
SHORT_DESC="PDF viewer for Claws Mail."
MAINTAINER="erjo@slitaz.org"
WEB_SITE="http://www.claws-mail.org/plugins.php"
SOURCE="pdf_viewer"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="http://www.claws-mail.org/downloads/plugins/$TARBALL"

DEPENDS="claws-mail poppler "
BUILD_DEPENDS="claws-mail-dev poppler-dev lcms-dev ghostscript-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure $CONFIGURE_ARGS && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
		mkdir -p $fs/usr/lib/claws-mail/plugins
		cp -a $install/usr/lib/claws-mail/plugins/*.so \
			$fs/usr/lib/claws-mail/plugins
}
