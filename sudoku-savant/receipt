# SliTaz package receipt.

PACKAGE="sudoku-savant"
VERSION="1.2.1"
CATEGORY="games"
SHORT_DESC="Sudoku games/generator using GTK."
DEPENDS="expat gtk+ xorg-libX11 xorg-libXau xorg-libXcomposite xorg-libXcursor \
xorg-libXdmcp xorg-libXext xorg-libXfixes xorg-libXinerama xorg-libXrandr \
xorg-libXrender xorg-libXinerama"
BUILD_DEPENDS="gtk+-dev"
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://sourceforge.net/projects/sudoku-savant/"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
	# No desktop-file-utils
	#echo "Continue..."
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
	# Temporary copy translation (sended to author, will propably 
	# be include in the next release).
	mkdir -p $fs/usr/share/locale/fr/LC_MESSAGES
	cp stuff/*.mo $fs/usr/share/locale/fr/LC_MESSAGES
}

