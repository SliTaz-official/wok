# SliTaz package receipt.

PACKAGE="mesa-dri-mach64"
VERSION="7.10"
CATEGORY="x-window"
SHORT_DESC="Mesa DRI drivers for ATI Mach64."
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://www.mesa3d.org/"
DEPENDS="mesa mesa-dri libdrm-mach64"
WANTED="mesa"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/dri
	cp $_pkg/usr/lib/dri/mach64_dri.so $fs/usr/lib/dri
}
