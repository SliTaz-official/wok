# SliTaz package receipt.

PACKAGE="openexr"
VERSION="2.3.0"
CATEGORY="x-window"
SHORT_DESC="Openexr library for EXR images."
MAINTAINER="slaxemulator@gmail.com"
LICENSE="BSD"
WEB_SITE="https://www.openexr.com/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
#WGET_URL="http://savannah.nongnu.org/download/$PACKAGE/$TARBALL"
WGET_URL="https://github.com/$PACKAGE/$PACKAGE/releases/download/v$VERSION/$TARBALL"

DEPENDS="ilmbase zlib"
BUILD_DEPENDS="ilmbase-dev zlib-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib

	cp -a $install/usr/bin		$fs/usr
	cp -a $install/usr/lib/*.so*	$fs/usr/lib
}
