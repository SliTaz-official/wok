# SliTaz package receipt.

PACKAGE="perl-params-validate"
VERSION="1.21"
CATEGORY="development"
SHORT_DESC="Params::Validate module is a Perl extension."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
SOURCE="Params-Validate"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://cpan.org/"
WGET_URL="https://metacpan.org/CPAN/authors/id/D/DR/DROLSKY/$TARBALL"

DEPENDS="perl perl-test-requires perl-module-implementation perl-test-fatal perl-test-simple"
BUILD_DEPENDS="$DEPENDS"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Build.PL &&
	./Build --destdir $DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
}

