# SliTaz package receipt.

PACKAGE="xorg-xkeyboard-config"
VERSION="1.8"
CATEGORY="x-window"
SHORT_DESC="Xorg server keyboard definition files."
MAINTAINER="pankso@slitaz.org"
DEPENDS="xorg xorg-xkbcomp"
BUILD_DEPENDS="perl-xml-parser xorg-xkbcomp"
SOURCE="xkeyboard-config"
TARBALL="$SOURCE-$VERSION.tar.bz2"
WEB_SITE="http://www.x.org/"
WGET_URL="http://xlibs.freedesktop.org/xkbdesc/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
    ./configure \
    	--prefix=/usr\
    	--sysconfdir=/etc \
    	--mandir=/usr/share/man \
    	--localstatedir=/var \
    	--with-xkb-base=/usr/share/X11/xkb \
    	--with-xkb-rules-symlink=xorg \
    	$CONFIGURE_ARGS &&
    make &&
    make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
    cp -a $_pkg/usr/share/X11 $fs/usr/share
}

