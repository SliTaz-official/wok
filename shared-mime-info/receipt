# SliTaz package receipt.

PACKAGE="shared-mime-info"
VERSION="0.91"
CATEGORY="x-window"
SHORT_DESC="Core database of common types and the *update-mime-database*."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.xz"
WEB_SITE="http://freedesktop.org/wiki/Software/shared-mime-info"
WGET_URL="http://freedesktop.org/~hadess/$TARBALL"

CROSS_BUGS="Run the cross compiled update-mime-database on build host"
#HOST_ARCH="i486 arm"

LOCALE=""
DEPENDS="glib libxml2 zlib"
BUILD_DEPENDS="perl-xml-parser glib-dev libxml2-dev intltool pkg-config"

# Handle cross compilation. Host perl/intltool are used
case "$ARCH" in
	arm*) BUILD_DEPENDS="glib-dev libxml2-dev" ;;
esac

# Rules to configure and make the package.
compile_rules()
{
    patch -Np1 -i $stuff/pbm.patch
    ./configure $CONFIGURE_ARGS &&
    make -j1 && make -j1 DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
	cp -a $install/usr/bin $fs/usr
    cp -a $install/usr/share/mime $fs/usr/share
}

# Update mime database.
post_install()
{
	chroot "$1/" /usr/bin/update-mime-database /usr/share/mime
}
