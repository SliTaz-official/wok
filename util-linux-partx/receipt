# SliTaz package receipt.

PACKAGE="util-linux-partx"
VERSION="2.21.1"
CATEGORY="system-tools"
SHORT_DESC="The partx utilities from Util linux NG (addpart,delpart,partx)."
MAINTAINER="pankso@slitaz.org"
DEPENDS="glibc-base"
WANTED="util-linux"
WEB_SITE="http://kernel.org/~kzak/util-linux/"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/sbin
	for i in addpart delpart partx; do
		cp -a $_pkg/usr/sbin/$i $fs/usr/sbin
	done
}
