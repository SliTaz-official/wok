# SliTaz package receipt.

PACKAGE="util-linux-cramfs"
VERSION="2.24"
CATEGORY="system-tools"
SHORT_DESC="The cramfs utilities from Util linux NG."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WANTED="util-linux"
WEB_SITE="http://kernel.org/~kzak/util-linux/"
HOST_ARCH="i486 arm"

DEPENDS="zlib"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/sbin
	cp -a $install/sbin/*cramfs $fs/sbin
}
