# SliTaz package receipt.

PACKAGE="snimpy"
VERSION="0.8.3"
CATEGORY="network"
SHORT_DESC="Interactive SNMP tool with Python."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="ISC"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://snimpy.readthedocs.org/"
WGET_URL="https://github.com/vincentbernat/snimpy/archive/$VERSION.tar.gz"

DEPENDS="python"
BUILD_DEPENDS="wget python setuptools libffi-dev glib"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py build &&
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib $fs/usr
}
