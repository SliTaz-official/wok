# SliTaz package receipt.

PACKAGE="boost"
VERSION="1_35_0"
CATEGORY="developpement"
SHORT_DESC="Peer-reviewed portable C++ source libraries."
MAINTAINER="erjo@slitaz.org"
DEPENDS=""
TARBALL="${PACKAGE}_${VERSION}.tar.bz2"
WEB_SITE="http://boost.org/"
WGET_URL="http://garr.dl.sourceforge.net/boost/$TARBALL"


# Rules to configure and make the package.
compile_rules()
{
	src=$WOK/$PACKAGE/${PACKAGE}_${VERSION}
	cd $src
	./configure --prefix=/usr
	make
	make PREFIX=$src/_pkg/usr \
	  EPREFIX=$src/_pkg/usr \
	  LIBDIR=$src/_pkg/usr/lib \
	  INCLUDEDIR=$src/_pkg/usr/include install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	_pkg=$WOK/$PACKAGE/${PACKAGE}_${VERSION}/_pkg
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
} 

# Rules to clean extras dirs or files
clean_wok()
{
	rm -rf $WOK/$PACKAGE/${PACKAGE}_${VERSION}
}
