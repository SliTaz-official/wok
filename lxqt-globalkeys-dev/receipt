# SliTaz package receipt.

PACKAGE="lxqt-globalkeys-dev"
VERSION="0.8.0"
CATEGORY="development"
SHORT_DESC="Daemon used to register global keyboard shortcuts (development)"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://github.com/lxde/lxqt-globalkeys"
WANTED="lxqt-globalkeys"
DEPENDS="lxqt-globalkeys pkg-config"
TAGS="LXQt"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share
	cp -a $install/usr/include $fs/usr
	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	cp -a $install/usr/share/cmake $fs/usr/share
}
