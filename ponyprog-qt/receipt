# SliTaz package receipt.

PACKAGE="ponyprog-qt"
VERSION="3.0.0"
CATEGORY="system-tools"
SHORT_DESC="PonyProg is the universal programmer for many serial devices."
MAINTAINER="psychomaniak@xakep.ru"
LICENSE="GPL"
WEB_SITE="http://www.lancos.com/prog.html"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/lancos/ponyprog/archive/v${VERSION}.tar.gz"

DEPENDS="libQtGui gcc49-lib-base"
BUILD_DEPENDS="Qt4-dev qmake cmake gcc49"

# Rules to configure and make the package.
compile_rules()
{
	export LD_LIBRARY_PATH="/usr/libgcc49:$LD_LIBRARY_PATH"
        export CXX=/usr/bin/i486-slitaz-linux-g++-49
        export CC=/usr/bin/i486-slitaz-linux-gcc-49

	qmake && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
        cp -a $install/* $fs
}
