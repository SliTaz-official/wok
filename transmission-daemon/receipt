# SliTaz package receipt.

PACKAGE="transmission-daemon"
VERSION="1.93"
CATEGORY="network"
SHORT_DESC="Transmission daemon and remote tool."
MAINTAINER="pankso@slitaz.org"
DEPENDS="libssl libcurl"
SUGGESTED="transmission-web transmission-cli"
WANTED="transmission"
WEB_SITE="http://www.transmissionbt.com/"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $_pkg/usr/bin/transmission-daemon $fs/usr/bin
	cp -a $_pkg/usr/bin/transmission-remote $fs/usr/bin
}
