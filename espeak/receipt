# SliTaz package receipt.

PACKAGE="espeak"
VERSION="1.42.04"
CATEGORY="misc"
SHORT_DESC="Speech synthesizer."
MAINTAINER="erjo@slitaz.org"
DEPENDS="portaudio"
BUILD_DEPENDS="portaudio-dev"
TARBALL="$PACKAGE-$VERSION-source.zip"
WEB_SITE="http://espeak.sourceforge.net/"
WGET_URL="http://sourceforge.net/projects/espeak/files/espeak/$TARBALL"
# Rules to configure and make the package.
compile_rules()
{
	mv  $src-source $PACKAGE-$VERSION 2>/dev/null
	cd $src/src
	
	# Using portaudio v19
	cp portaudio19.h portaudio.h
	
	make && make DESTDIR=$src/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/share $fs/usr
	
	# Make symlink
	cd $fs/usr/lib
	ln -s libespeak.so.1.1.42 libespeak.so.1
}

