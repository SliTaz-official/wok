# SliTaz package receipt

PACKAGE="util-linux-setterm"
VERSION="2.21.1"
CATEGORY="base-system"
SHORT_DESC="The setterm utility from Util linux NG."
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WANTED="util-linux"
WEB_SITE="http://kernel.org/~kzak/util-linux/"

DEPENDS="glibc-base"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $install/usr/bin/setterm  $fs/usr/bin
}

