# SliTaz package receipt.

PACKAGE="python-formalchemy"
SOURCE="formalchemy"
VERSION="1.4.2"
CATEGORY="development"
SHORT_DESC="Auto-generated, customizable HTML output form fields from SQLAlchemy mapped classes."
MAINTAINER="claudinei@slitaz.org"
LICENSE="MIT"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="https://pypi.org/project/$SOURCE/"
WGET_URL="https://github.com/FormAlchemy/$SOURCE/archive/$VERSION.tar.gz"

DEPENDS="python python-sqlalchemy python-webhelpers python-markupsafe \
python-tempita python-webob"
BUILD_DEPENDS="python-dev setuptools wget"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py install --root=$DESTDIR
	for i in $install/usr/lib/python*/site-packages/formalchemy/i18n_resources/*; do
		[ -s formalchemy/i18n_resources/$(basename $i)/LC_MESSAGES/formalchemy.po ] &&
		rm $i/LC_MESSAGES/formalchemy.mo &&
		msgfmt -o $i/LC_MESSAGES/formalchemy.mo \
		     formalchemy/i18n_resources/$(basename $i)/LC_MESSAGES/formalchemy.po
	done
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}
