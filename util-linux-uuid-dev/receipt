# SliTaz package receipt.

PACKAGE="util-linux-uuid-dev"
VERSION="2.24"
CATEGORY="development"
SHORT_DESC="The uuid devel files from Util linux NG."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WANTED="util-linux"
WEB_SITE="http://freecode.com/projects/util-linux/"
HOST_ARCH="i486 arm"

DEPENDS="pkg-config util-linux-uuid"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/pkgconfig $fs/usr/include
	cp -a $install/usr/lib/libuuid.*a $fs/usr/lib
	cp -a $install/usr/lib/pkgconfig/uuid.pc $fs/usr/lib/pkgconfig
	cp -a $install/usr/include/uuid $fs/usr/include
}
