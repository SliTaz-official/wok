# SliTaz package receipt.

PACKAGE="c-client"
VERSION="2007b"
CATEGORY="development"
SHORT_DESC="mail store formats support."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$PACKAGE.tar.Z"
SOURCE="imap"
WEB_SITE="http://www.washington.edu/imap/"
WGET_URL="ftp://ftp.cac.washington.edu/mail/$TARBALL"
BUILD_DEPENDS="openssl-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	sed -i 's|SSLCFLAGS)|SSLCFLAGS) -I/usr/include/openssl|' \
		src/osdep/unix/Makefile
	make slx
	mkdir -p _pkg/usr/include/c-client _pkg/usr/lib
	cp -a src/c-client/*.h _pkg/usr/include/c-client
	cp c-client/linkage.h _pkg/usr/include/c-client
	cp c-client/osdep.h _pkg/usr/include/c-client
	cp c-client/env_unix.h _pkg/usr/include/c-client
	cp c-client/c-client.a _pkg/usr/lib
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $_pkg/* $fs
}

