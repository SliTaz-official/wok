# SliTaz package receipt.

PACKAGE="libfox-dev"
VERSION="1.6.33"
CATEGORY="development"
SHORT_DESC="Development files for the FOX-toolkit."
MAINTAINER="chadi.elahmad@gmail.com"

WEB_SITE="http://www.fox-toolkit.org/"

WANTED="libfox"
SOURCE="fox"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/lib

	_pkg=$WOK/$WANTED/$SOURCE-$VERSION/_pkg
	cp -a $_pkg/usr/lib/*.*a $fs/usr/lib
	cp -a $_pkg/usr/lib/pkgconfig $fs/usr/lib
	cp -a $_pkg/usr/include $fs/usr
	cp -a $_pkg/usr/bin/fox-config $fs/usr/bin

	chmod +x $fs/usr/bin/*
}
