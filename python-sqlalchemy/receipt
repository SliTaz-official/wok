# SliTaz package receipt.

PACKAGE="python-sqlalchemy"
SOURCE="SQLAlchemy"
VERSION="0.7.10"
CATEGORY="development"
SHORT_DESC="The Python SQL toolkit and Object Relational Mapper"
MAINTAINER="claudinei@slitaz.org"
LICENSE="MIT"
SUGGESTED="python-pysqlite"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://www.sqlalchemy.org"
WGET_URL="https://pypi.python.org/packages/source/S/$SOURCE/$TARBALL"

DEPENDS="python"
BUILD_DEPENDS="wget python-dev"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}
