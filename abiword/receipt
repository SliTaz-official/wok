# SliTaz package receipt.

PACKAGE="abiword"
VERSION="2.4.6"
CATEGORY="office"
SHORT_DESC="Light and speed word processing application."
MAINTAINER="pankso@slitaz.org"
DEPENDS="gtk+ libgnomeprint libgnomeprintui libgnomecanvas fribidi libglade 
             popt libxml2 libart_lgpl"
BUILD_DEPENDS="gtk+-dev libgnomeprint-dev libgnomeprintui-dev libgnomecanvas-dev
             fribidi-dev libglade-dev popt-dev libxml2-dev libart_lgpl-dev"
SUGGESTED="abiword-plugins"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.abisource.com/"
WGET_URL="http://www.abisource.com/downloads/abiword/2.4.6/source/$TARBALL"
JWM_MENU='Productivity:<Program icon="abiword.png" label="AbiWord">abiword</Program>'

# Rules to configure and make the package.
compile_rules()
{
	cd $src/abi
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		--enable-extra-optimization \
		$CONFIGURE_ARGS
	make
	make DESTDIR=$src/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/pixmaps
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
	cp -a $_pkg/usr/share/AbiSuite-* $fs/usr/share
	# Non standard pixmap 
	cp $_pkg/usr/share/icons/abiword_48.png \
		$fs/usr/share/pixmaps/abiword.png
}

