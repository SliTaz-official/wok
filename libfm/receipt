# SliTaz package receipt.

PACKAGE="libfm"
VERSION="1.2.0"
CATEGORY="system-tools"
SHORT_DESC="File manager library from LXDE."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.xz"
WEB_SITE="http://pcmanfm.sourceforge.net"
WGET_URL="$SF_MIRROR/pcmanfm/files/$TARBALL"
HOST_ARCH="i486 arm"

DEPENDS="glibc-base glib libgio util-linux-uuid libxcb xcb-util expat \
zlib fontconfig freetype gtk+ atk cairo pango pixman menu-cache \
shared-mime-info"
BUILD_DEPENDS="gtk+-dev dbus-glib-dev dbus-dev startup-notification-dev \
libxcb-dev xcb-util-dev menu-cache-dev expat-dev libgio-dev \
shared-mime-info-dev"

# hand SliTaz arch and cross compilation
case "$SLITAZ_ARCH" in
	i?86) DEPENDS="$DEPENDS gamin"
esac

case "$ARCH" in
	i?86) BUILD_DEPENDS="$BUILD_DEPENDS intltool gamin-dev vala"
esac

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share
	cp -a $install/etc $fs
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib/*.so* $fs/usr/lib
	cp -a $install/usr/lib/libfm $fs/usr/lib
	cp -a $install/usr/share/libfm $fs/usr/share
	cp -a $install/usr/share/applications $fs/usr/share

	# add Sakura terminal
	cat >> $fs/usr/share/libfm/terminals.list << EOT

[sakura]
open_arg=-e
desktop_id=sakura.desktop
EOT
}
