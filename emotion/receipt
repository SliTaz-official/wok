# SliTaz package receipt.

PACKAGE="emotion"
VERSION="42672"
CATEGORY="x-window"
SHORT_DESC="E17 emotion libs."
MAINTAINER="pankso@slitaz.org"
DEPENDS="enlightenment xine-lib xorg-libXp xorg-libXss fribidi"
BUILD_DEPENDS="eet-dev evas-dev ecore-dev embryo-dev edje-dev xine-lib-dev
xorg-libXp-dev xorg-libXss-dev fribidi-dev"
WEB_SITE="http://www.enlightenment.org/"

# Rules to configure and make the package.
compile_rules()
{
	[ -d "$PACKAGE-$VERSION" ] && rm -rf $PACKAGE-$VERSION
	svn co http://svn.enlightenment.org/svn/e/trunk/$PACKAGE \
		-r $VERSION $PACKAGE-$VERSION
	cd $src
	./autogen.sh \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--disable-gstreamer \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/emotion
	cp -a $_pkg/usr/share $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/lib/emotion/*.so $fs/usr/lib/emotion
}
