# SliTaz package receipt.

PACKAGE="xorg-server-Xephyr"
VERSION="1.2.0"
CATEGORY="x-window"
SHORT_DESC="Xephyr server used to creat chrooted X env."
MAINTAINER="pankso@slitaz.org"
DEPENDS="freetype xorg-libXau xorg-libfontenc xorg-libXdmcp xorg-libXfont xorg-libXext xorg-libX11"
WANTED="xorg-server"
WEB_SITE="http://www.x.org/"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $_pkg/usr/bin/Xephyr $fs/usr/bin
	strip $fs/usr/bin/Xephyr
	chmod 4711 $fs/usr/bin/Xephyr
}
