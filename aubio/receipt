# SliTaz package receipt.

PACKAGE="aubio"
VERSION="0.3.2"
CATEGORY="multimedia"
MAINTAINER="jozee@slitaz.org"
SHORT_DESC="A library for audio labelling"
BUILD_DEPENDS=" libsamplerate-dev  jack-audio-connection-kit-dev fftw-dev libsndfile-dev fftw libsamplerate flac-dev libogg-dev libvorbis-dev"
WEB_SITE="http://aubio.piem.org/"
DEPENDS="libsamplerate fftw jack-audio-connection-kit flac libogg libvorbis"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/pub/$TARBALL"
TAGS="audio label multimedia"

# Rules to configure and make the package.

compile_rules() {
  cd $src
  ./configure --prefix=/usr &&
  make &&
  make DESTDIR=$PWD/_pkg install
}
	
# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib 
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*so* $fs/usr/lib/
	cp -a $_pkg/usr/share $fs/usr

}
