# SliTaz package receipt.

PACKAGE="fbpdf"
VERSION="20120621"
CATEGORY="multimedia"
SHORT_DESC="PDF reader in frame buffer."
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://repo.or.cz/w/fbpdf.git"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/snapshot/6bd851c0948734f3f001e7ad75f1f43d08130833.tar.gz"
TAGS="pdf"

DEPENDS=""
BUILD_DEPENDS=""

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	mkdir $DESTDIR
	make -k all fbpdf2 && cp fbpdf $DESTDIR
}


# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp $install/fb* $fs/usr/bin
}
