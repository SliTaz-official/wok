# SliTaz package receipt.

PACKAGE="lm-sensors"
SOURCE="lm_sensors"
VERSION="3.3.3"
CATEGORY="system-tools"
SHORT_DESC="Linux hardware monitoring."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
TARBALL="$SOURCE-$VERSION.tar.bz2"
SUGGESTED="rrdtool"
WEB_SITE="http://www.lm-sensors.org/"
WGET_URL="http://dl.lm-sensors.org/lm-sensors/releases/$TARBALL"

DEPENDS="perl linux-hwmon"
BUILD_DEPENDS="bison flex rrdtool-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	patch -p0 < $stuff/linux-3.0.patch &&
	make PREFIX=/usr && 
	make PREFIX=/usr PROG_EXTRA=sensord DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/etc $fs
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/sbin $fs/usr
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}
