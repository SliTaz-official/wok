# SliTaz package receipt.

PACKAGE="hdf5"
VERSION="1.8.9"
CATEGORY="misc"
SHORT_DESC="a data model, library, and file format for storing and managing data."
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://www.hdfgroup.org/HDF5"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://www.hdfgroup.org/ftp/HDF5/current/src/$TARBALL"

DEPENDS="zlib"
BUILD_DEPENDS="cmake szip zlib-dev"

# Rules to configure and make the package.
compile_rules()
{
	sed -i 's/Using_CMake.txt/USING_CMake.txt/' src/CMakeLists.txt
	./configure $CONFIGURE_ARGS &&
	make all && make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib $fs/usr
	rm -f $fs/usr/lib/*a
}
