# SliTaz package receipt.

PACKAGE="lua-dev"
VERSION="5.1.3"
CATEGORY="developement"
SHORT_DESC="Lua devel files."
WANTED="lua"
MAINTAINER="pankso@slitaz.org"
WEB_SITE="http://www.lua.org/"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/include
	# include
	for i in lua.h luaconf.h lualib.h lauxlib.h ../etc/lua.hpp
	do
		cp -a $src/src/$i $fs/usr/include
	done
	# liblua.a
	cp -a $src/src/liblua.a $fs/usr/lib
}

