# SliTaz package receipt.

PACKAGE="gtk+3-dev"
VERSION="3.14.8"
CATEGORY="development"
SHORT_DESC="The GIMP Toolkit 3.x (development files)"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="https://www.gtk.org/"

WANTED="gtk+3"
DEPENDS="cairo-dev glib-dev pango-dev atk-dev tiff-dev pkg-config libpng-dev \
jpeg-dev gtk+3 gdk-pixbuf-dev xorg-libXinerama-dev xorg-libXi-dev \
xorg-libXrandr-dev xorg-libXcursor-dev xorg-libXcomposite-dev \
xorg-libXdamage-dev dbus-dev"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p \
		$fs/usr/lib \
		$fs/usr/share
	cp -a $install/usr/include $fs/usr
	cp -a $install/usr/lib/girepository-1.0 $fs/usr/lib

	# Copy all libs and remove the shared.
	cp -a $install/usr/lib/gtk-3.0 $fs/usr/lib
	rm -rf $fs/usr/lib/gtk-3.0/3.0.0/*/*.so

	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	cp -a $install/usr/lib/*.la $fs/usr/lib

	cp -a $install/usr/share/aclocal $fs/usr/share
	cp -a $install/usr/share/gir-1.0 $fs/usr/share
}
