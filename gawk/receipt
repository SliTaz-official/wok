# SliTaz package receipt.

PACKAGE="gawk"
VERSION="3.1.8"
CATEGORY="development"
SHORT_DESC="GNU awk to handle simple data-reformatting."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.gnu.org/software/gawk/"
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS
	make 
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/locale
	cp -a $_pkg/usr/bin $fs/usr
	
	cp -a $_pkg/usr/share/awk $fs/usr/share
	cp -a $_pkg/usr/share/locale/fr $fs/usr/share/locale
	
	# Da strip...
	strip -s $fs/usr/bin/*
}

# Pre and post install commands for Tazpkg.
# We must remove all Busybox symlink before installing.
pre_install()
{
	local root
	root=$1
	rm -f $root/usr/bin/awk
}

post_remove()
{
	ln -s /bin/busybox /usr/bin/awk
}
