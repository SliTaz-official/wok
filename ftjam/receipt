# SliTaz package receipt.

PACKAGE="ftjam"
VERSION="2.5.3rc2"
CATEGORY="development"
MAINTAINER="jozee@slitaz.org"
LICENSE="BSD"
SHORT_DESC="FT Jam - an enhanced version of the Jam build tool"
WEB_SITE="http://freetype.org/jam/"
PROVIDE="jam"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://david.freetype.org/jam/$TARBALL"

DEPENDS="glibc-base"
BUILD_DEPENDS="bison"

# What is the latest version available today?
current_version()
{
	wget -O - https://sourceforge.net/projects/freetype/files/ftjam/ 2>/dev/null | \
	sed '/scope="row/!d;s|.*href="|"https://sourceforge.net|;q' | xargs wget -O - 2>/dev/null | \
	sed '/scope="row/!d;s|.*/ftjam/||;s|/.*||;q'
}

# Rules to configure and make the package.
compile_rules()
{
	./configure --prefix=/usr $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install 
}
	
# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
	
}
