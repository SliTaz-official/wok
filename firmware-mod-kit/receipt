# SliTaz package receipt.

PACKAGE="firmware-mod-kit"
VERSION="099"
CATEGORY="misc"
SHORT_DESC="Scripts and utilities to rebuild openwrt based images."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
TARBALL="fmk_$VERSION.tar.gz"
WEB_SITE="http://code.google.com/p/$PACKAGE/"
WGET_URL="http://$PACKAGE.googlecode.com/files/$TARBALL"

DEPENDS="liblzma zlib bash python-magic coreutils-file-special"
BUILD_DEPENDS="liblzma-dev zlib-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src/src
	./configure --prefix=/usr --infodir=/usr/share/info \
		--mandir=/usr/share/man \
	$CONFIGURE_ARGS && make -j 1
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	
	mkdir -p $fs/usr/share 
	cp -a $src $fs/usr/share/firmware-mod-kit
}
