# SliTaz package receipt.

PACKAGE="dukto"
VERSION="108"
CATEGORY="network"
SHORT_DESC="A simple, fast and multi-platform file transfer tool for LAN users."
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://code.google.com/p/$PACKAGE/"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="subversion|http://$PACKAGE.googlecode.com/svn/trunk/"

BUILD_DEPENDS="subversion Qt4-dev qmake"
DEPENDS="gcc-lib-base libQtDeclarative"

MISSING_DEPENDS="libQtDeclarative.so.4 (debian=libqt4-declarative)"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	qmake PREFIX="/usr/" &&
	make $MAKEFLAGS &&
	make INSTALL_ROOT=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp $install/usr/bin/dukto $fs/usr/bin
}
