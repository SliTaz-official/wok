# SliTaz package receipt.

PACKAGE="aspell"
VERSION="0.60.6"
CATEGORY="system-tools"
SHORT_DESC="GNU spell checker."
MAINTAINER="paul@slitaz.org"
LICENSE="LGPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://aspell.net/"
WGET_URL="ftp://ftp.gnu.org/gnu/aspell/$TARBALL"
TAGS="spell check"
HOST_ARCH="i486 arm"

DEPENDS="ncursesw"
BUILD_DEPENDS="ncursesw-dev libtinfo"

# Rules to configure and make the package.
compile_rules()
{
	export LDFLAGS="$LDFLAGS -ltinfo"
	./configure $CONFIGURE_ARGS && \
	make && make install

	cook_compress_manpages
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib/*.so* $fs/usr/lib
	cp -a $install/usr/lib/aspell* $fs/usr/lib
	# Remove unneeded files
	rm -f $fs/usr/lib/aspell*/*.*a
}
