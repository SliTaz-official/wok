# SliTaz package receipt.

PACKAGE="qtfm"
VERSION="5.4"
CATEGORY="x-window"
SHORT_DESC="Small and lightweight file manager using QT library"
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.qtfm.org/"
WGET_URL="https://1674466230121523820-a-qtfm-org-s-sites.googlegroups.com/a/qtfm.org/qtfm/$TARBALL"

DEPENDS="xorg-libX11 libQtCore libQtGui libQtNetwork libmagic"
BUILD_DEPENDS="wget cmake Qt4-dev qmake libmagic-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	qmake && make && make INSTALL_ROOT=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr/bin
}
