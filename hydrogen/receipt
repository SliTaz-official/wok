# SliTaz package receipt.

PACKAGE="hydrogen"
VERSION="0.9.5"
CATEGORY="multimedia"
MAINTAINER="jozee@slitaz.org"
SHORT_DESC="Advanced Drum Machine"
WEB_SITE="http://www.$PACKAGE-music.org/"
DEPENDS="libarchive liblrdf libQtCore libQtGui libQtXml jack-audio-connection-kit libsndfile"
BUILD_DEPENDS="scons libarchive-dev liblrdf-dev Qt4-dev jack-audio-connection-kit jack-audio-connection-kit-dev flac-dev libsndfile-dev alsa-lib-dev zlib-dev libtar-dev ladspa-dev raptor-dev pkg-config"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"
TAGS="multimedia"

# Rules to configure and make the package.

compile_rules() {
  cd $src
  export QTDIR=/usr
  mkdir -p $PWD/_pkg
  scons prefix=/usr libarchive=1 
  scons DESTDIR=$PWD/_pkg install 
}
	
# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/share/$PACKAGE $fs/usr/share	
}
