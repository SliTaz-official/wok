# SliTaz package receipt.

PACKAGE="linux-cifs"
VERSION="2.6.25.5"
CATEGORY="base-system"
SHORT_DESC="The Linux kernel cifs module."
MAINTAINER="pascal.bellard@slitaz.org"
WANTED="linux"
WEB_SITE="http://www.kernel.org/"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    local path
    path=lib/modules/$VERSION-slitaz/kernel
    mkdir -p $fs/$path
    export src
    export _pkg
    $src/list_modules.sh fs/cifs | while read module; do
    	dir=$path/$(dirname $module)
    	[ -d $fs/$dir ] || mkdir -p $fs/$dir
        cp -a $_pkg/$path/$module $fs/$dir
    done
}

# Post install/remove commands for Tazpkg.
post_install()
{
	grep -qs ^cifs$ $1/etc/filesystems || \
		echo "cifs" >> $1/etc/filesystems
	depmod -a -b "$1/" $VERSION-slitaz
}

post_remove()
{
	sed -i '/^cifs$/d' $1/etc/filesystems
	depmod -a $VERSION-slitaz
}
