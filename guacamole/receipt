# SliTaz package receipt.

PACKAGE="guacamole"
VERSION="0.9.4"
CATEGORY="network"
SHORT_DESC="Cientless remote desktop gateway for VNC or RDP"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
TARBALL="$PACKAGE-server-$VERSION.tar.gz"
WEB_SITE="http://guac-dev.org/"
WGET_URL="$SF_MIRROR/project/$PACKAGE/current/source/$TARBALL"

DEPENDS="cairo ossp-uuid libxml2 libvorbis"
BUILD_DEPENDS="cairo-dev ossp-uuid-dev libxml2-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure --prefix=/usr \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/sbin $fs/usr
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}
