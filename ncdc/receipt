# SliTaz package receipt.

PACKAGE="ncdc"
VERSION="1.20"
CATEGORY="network"
SHORT_DESC="NCurses Direct Connect."
MAINTAINER="paul@slitaz.org"
LICENSE="MIT"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="https://dev.yorhel.nl/ncdc"
WGET_URL="https://dev.yorhel.nl/download/$TARBALL"

DEPENDS="ncurses zlib bzip2 sqlite gnutls pcre"
BUILD_DEPENDS="ncurses-dev zlib-dev bzip2-dev sqlite-dev gnutls-dev
glib-dev pcre-dev libgnutls"

# Rules to configure and make the package.
compile_rules()
{
	./configure --prefix=/usr
	make
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr	
}
