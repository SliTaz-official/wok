# SliTaz package receipt.

PACKAGE="qpdf-dev"
VERSION="5.1.2"
CATEGORY="development"
SHORT_DESC="QPDF devel files"
MAINTAINER="mojo@slitaz.org"
LICENSE="Artistic-2.0"
WANTED="qpdf"
WEB_SITE="http://qpdf.sourceforge.net/"

DEPENDS="qpdf pkg-config"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
  mkdir -p $fs/usr/lib $fs/usr/include	
  cp -a $install/usr/lib/libqpdf.*a $fs/usr/lib
  cp -a $install/usr/lib/pkgconfig  $fs/usr/lib
  cp -a $install/usr/include/qpdf   $fs/usr/include
}
