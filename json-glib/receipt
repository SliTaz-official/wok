# SliTaz package receipt.

PACKAGE="json-glib"
VERSION="0.12.0"
CATEGORY="development"
SHORT_DESC="JSON-GLib is a library providing serialization and deserialization support for the JavaScript Object Notation"
MAINTAINER="mallory@sweetpeople.org"
DEPENDS="glib"
BUILD_DEPENDS="glib-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://live.gnome.org/JsonGlib"
WGET_URL="ftp://ftp.gnome.org/pub/gnome/sources/json-glib/0.12/$TARBALL"
TAGS="javascript"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}

