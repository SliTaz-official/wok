# SliTaz package receipt.

PACKAGE="perl-extutils-depends"
SOURCE="ExtUtils-Depends"
VERSION="0.304"
CATEGORY="development"
SHORT_DESC="Easily build XS extensions that depends on XS extensions."
MAINTAINER="claudinei@slitaz.org"
LICENSE="GPL"
DEPENDS="perl"
BUILD_DEPENDS="perl"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="https://metacpan.org/~flora/ExtUtils-Depends-0.304/"
WGET_URL="https://metacpan.org/CPAN/authors/id/F/FL/FLORA/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Makefile.PL &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
}

