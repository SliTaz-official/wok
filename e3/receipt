# SliTaz package receipt.

PACKAGE="e3"
VERSION="2.8"
CATEGORY="utilities"
SHORT_DESC="e3 is a full featured text editor written in NASM assembler."
MAINTAINER="devl547@gmail.com"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tgz"
WEB_SITE="http://sites.google.com/site/e3editor"
WGET_URL="https://sites.google.com/site/e3editor/Home/$TARBALL?attredirects=0"
TAGS="text-editor"

DEPENDS=""
BUILD_DEPENDS="make nasm wget"

# Rules to configure and make the package.
compile_rules()
{
    cd $src
    sed -i -e 's/-D$(EXMODE)//' Makefile &&
    sed -i -e 's#/man/man#/share/man/man#' Makefile
    make &&
    make PREFIX=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/
	cp -R $WOK/$PACKAGE/install/* $fs/usr/
}
