# SliTaz package receipt.

VERSION="8.5.5"
PACKAGE="tk${VERSION%%.[0-9]}-dev"
CATEGORY="development"
SHORT_DESC="The TCL gui toolkit"
MAINTAINER="erjo@slitaz.org"
DEPENDS="tcl${VERSION%%.[0-9]}"
SOURCE="tk"
TARBALL="${SOURCE}${VERSION}-src.tar.gz"
WEB_SITE="http://tcl.sourceforge.net/"
WANTED="tk${VERSION%%.[0-9]}"



# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	_pkg=$WOK/$WANTED/${SOURCE}${VERSION}/unix/_pkg
	
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.*a $fs/usr/lib
	cp -a $_pkg/usr/lib/tkConfig.sh $fs/usr/lib
	cp -a $_pkg/usr/include $fs/usr/
}

clean_wok(){
	rm -rf ${SOURCE}${VERSION}
}
