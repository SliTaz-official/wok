# SliTaz package receipt.

PACKAGE="azpainter"
VERSION="2.0.4"
CATEGORY="graphics"
SHORT_DESC="Full color painting software for illustration drawing."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3 BSD"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="https://osdn.net/projects/azpainter/"
WGET_URL="http://rwthaachen.dl.osdn.jp/azpainter/67264/$TARBALL"

DEPENDS="xorg-libX11 xorg-libXext xorg-libXi freetype fontconfig \
libpng libjpeg-turbo"
BUILD_DEPENDS="xorg-dev freetype-dev \
fontconfig-dev libpng-dev libjpeg-turbo-dev zlib-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man \
	$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install-strip
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}
