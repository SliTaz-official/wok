# SliTaz package receipt.

PACKAGE="python-whoosh"
SOURCE="Whoosh"
VERSION="2.5.7"
CATEGORY="development"
SHORT_DESC="Fast full text indexing, search, and spell checking library."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://pypi.python.org/pypi/Whoosh/"
WGET_URL="https://pypi.python.org/packages/source/${SOURCE:0:1}/$SOURCE/$TARBALL"

DEPENDS="python"
BUILD_DEPENDS="python wget setuptools"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py build
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs
}

