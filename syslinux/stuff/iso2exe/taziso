	[ -e /sys/block/fd0 ] && cdfile "$@"
}

cdexe()
{
	gotcdfile "$1" &&
	[ $(get 0 $file 2>/dev/null || echo 0) -eq 23117 ] &&
	menuitem "$@"
}

misspkg()
{
	for i in zip kexec-tools posixovl cdrkit cdrkit-isoinfo ; do
		[ -d /var/lib/tazpkg/installed/$i/ ] && continue
		[ "$1" != "install" ] && menuitem "$@" && return
		tazpkg get-install $i
	done
}

