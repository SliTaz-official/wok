	gotcdfile 'rootfs*.gz' && xfile tazusb "$@"
}

isbzImage()
{
	[ $(get 514 $file 4) -eq 1400005704 ] &&
	[ $(($(get 529 $file 1) & 1)) -eq 1 ]
}

