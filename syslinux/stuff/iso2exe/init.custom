#!/bin/sh

if [ "$1" == "loramhack" ]; then
	cp $0 $2/init.extra
	sed -i 's|^exec |exec /sbin|' $2/init.extra
	cp -a /extra/. $2
	exit
fi
if [ -d /etc ]; then
	[ -d /extra ] && cp -a /extra/. / && rm -rf /extra
	for i in /init.d/* ; do
		[ -f $i ] && echo "=== $(date)  $i === " && . $i
	done 2>&1 | tee /var/log/init.log
else
	sed -i	-e 's|fail 2mDone|&\n	'$0' loramhack /mnt$4|' \
		-e 's| /sbin/init| /init.extra|' /init
fi

exec /init "$@"
