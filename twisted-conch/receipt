# SliTaz package receipt.

PACKAGE="twisted-conch"
VERSION="10.2.0"
CATEGORY="network"
SHORT_DESC="The Twisted SSH Implementation."
MAINTAINER="pascal.bellard@slitaz.org"
SOURCE="TwistedConch"
TARBALL="$SOURCE-$VERSION.tar.bz2"
WEB_SITE="http://twistedmatrix.com/trac/"
WGET_URL="http://tmrc.mit.edu/mirror/twisted/Conch/${VERSION%.*}/$TARBALL"
DEPENDS="python twisted pycrypto"
BUILD_DEPENDS="python python-dev twisted"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	python setup.py build && python setup.py install --root=$PWD/_pkg
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $_pkg/usr $fs
}

