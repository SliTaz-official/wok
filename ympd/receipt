# SliTaz package receipt.

PACKAGE="ympd"
VERSION="1.2.1"
CATEGORY="multimedia"
SHORT_DESC="Lightweight MPD (Music Player Daemon) web client."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="https://www.ympd.org/"
WGET_URL="https://github.com/notandy/ympd/archive/v$VERSION.tar.gz"
#HOST_ARCH="i486 arm"

DEPENDS="mpd libmpdclient"
BUILD_DEPENDS="libmpdclient-dev wget cmake"

# Handle cross compilation.
case "$ARCH" in
	arm*) 
		BUILD_DEPENDS="libmpdclient-dev" 
		ARCH_ARGS="-DLIBMPDCLIENT_LIBRARY=/cross/$ARCH/sysroot/usr/lib \
		-DLIBMPDCLIENT_INCLUDE_DIR=/cross/$ARCH/sysroot/usr/include" ;;
esac

# Rules to configure and make the package.
compile_rules()
{
	mkdir build && cd build
	cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr \
		${ARCH_ARGS} .. &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
}
