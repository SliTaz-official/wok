# SliTaz package receipt.

PACKAGE="gst-plugins-base-1.0-dev"
VERSION="1.10.1"
SERIES="1.0"
CATEGORY="development"
SHORT_DESC="gst-plugins-base devel files"
MAINTAINER="jozee@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://gstreamer.freedesktop.org/"
HOST_ARCH="i486 arm"

WANTED="gst-plugins-base-1.0"
DEPENDS="gstreamer-1.0-dev pango-dev alsa-lib-dev libogg-dev \
libvorbis-dev libtheora-dev libtheora-enc udev-dev xorg-dev \
xorg-libXv-dev xorg-libXvMC-dev orc-dev pkg-config"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/gstreamer-$SERIES $fs/usr/share
	cp -a $install/usr/include $fs/usr
	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	cp -a $install/usr/lib/*.*a $fs/usr/lib/
	cp -a $install/usr/lib/gstreamer-$SERIES/*.*a $fs/usr/lib/gstreamer-$SERIES
}
