# SliTaz package receipt.

PACKAGE="slitaz-backgrounds"
VERSION="1.0"
CATEGORY="x-window"
SHORT_DESC="A collection of beautiful wallpapers for SliTaz."
MAINTAINER="hackdorte@sapo.pt"
LICENSE="PublicDomain"
WEB_SITE="http://people.slitaz.org/~leonardolaporte/slitaz/source/backgrounds"

TARBALL="papers.tar.gz"
WGET_URL="$WEB_SITE/$TARBALL"

DEPENDS=""
BUILD_DEPENDS="wget"

# Rules to configure and make the package.
compile_rules()
{
  mkdir -p $install/usr/share/backgrounds
  cp -a $src/* $install/usr/share/backgrounds
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
  cp -a $install/* $fs
}
