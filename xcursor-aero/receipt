TAGS="cursor-theme"

DEPENDS="xorg-libXcursor"
BUILD_DEPENDS=""

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/icons/aero
	cp -a $src/* $fs/usr/share/icons/aero
}
