# SliTaz package receipt.

PACKAGE="expat"
VERSION="2.2.9"
VERSION_UNDERSCORE="2_2_9"
CATEGORY="x-window"
SHORT_DESC="XML parsing C library"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://libexpat.github.io/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
#WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"
WGET_URL="https://github.com/libexpat/libexpat/releases/download/R_$VERSION_UNDERSCORE/$TARBALL"

HOST_ARCH="i486 arm"

# Rules to configure and make the package.
compile_rules()
{
	./configure $CONFIGURE_ARGS &&
	make -j 1 &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/bin
	cp -a $install/usr/bin/* $fs/usr/bin
	cp -a $install/usr/lib/*.so* $fs/usr/lib
	# expat so.0 symbolic link.
	cd $fs/usr/lib
	ln -s libexpat.so.1.*.* libexpat.so.0
}
