# SliTaz package receipt.

PACKAGE="libtaz"
VERSION="1.0"
CATEGORY="base-system"
SHORT_DESC="Slitaz generic library."
MAINTAINER="gokhlayeh@slitaz.org"
WEB_SITE="http://www.slitaz.org/"
TAGS="slitaz"
CONFIG_FILES="/etc/slitaz/slitaz.conf"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/slitaz/web \
		$fs/usr/lib/slitaz $fs/etc/slitaz
	cp -a $stuff/libtaz $fs/usr/lib/slitaz
	cp -a $stuff/libtaz-modules $fs/usr/lib/slitaz
	cp -a $stuff/slitaz.conf $fs/etc/slitaz
	cp -a $stuff/web $fs/usr/share/slitaz
}
