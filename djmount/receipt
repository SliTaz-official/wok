# SliTaz package receipt.

PACKAGE="djmount"
VERSION="0.71"
CATEGORY="multimedia"
SHORT_DESC="Mount uPnP mediaservers content as a Linux filesystem."
MAINTAINER="slitaz@kacper.se"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://djmount.sourceforge.net"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"
TAGS="upnp"

DEPENDS="fuse readline"
BUILD_DEPENDS="automake fuse-dev libupnp libupnp-dev readline-dev"

# Rules to configure and make the package.
compile_rules()
{
	sed -i 's|upnptools.h>|&\n#include <upnp/upnp.h>|' djmount/upnp_util.h

	./configure				\
		LDFLAGS="-lupnp"		\
		--prefix=/usr			\
		--infodir=/usr/share/info	\
		--mandir=/usr/share/man		\
		$CONFIGURE_ARGS 2>&1 | grep -v /config.rpath: &&
	make -j1 &&
	make -j1 install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
}
