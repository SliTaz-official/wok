# SliTaz package receipt.

PACKAGE="libexif-gtk"
VERSION="0.4.0"
CATEGORY="graphics"
SHORT_DESC="A library of widgets to help display EXIF tags in GTK programs."
MAINTAINER="developer@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="https://libexif.github.io/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/libexif/$TARBALL"

DEPENDS="gtk+ libexif"
BUILD_DEPENDS="file gtk+-dev libexif-dev"
HOST_ARCH="i486 arm"

# What is the latest version available today?
current_version()
{
	wget -O - https://sourceforge.net/projects/libexif/files/libexif-gtk/ 2>/dev/null | \
	sed '/scope="row/!d;s|.*href="|"https://sourceforge.net|;q' | xargs wget -O - 2>/dev/null | \
	sed '/scope="row/!d;s|.*/libexif-gtk/||;s|/.*||;q'
}

# Rules to configure and make the package.
compile_rules()
{
	# By default build with gtk2
	./configure &&
	make -j 1 &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}
