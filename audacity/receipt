# SliTaz package receipt.

PACKAGE="audacity"
VERSION="1.3.7"
CATEGORY="multimedia"
SHORT_DESC="software for recording and editing sounds"
MAINTAINER="allan316@gmail.com"
DEPENDS="wxWidgets ffmpeg libvorbis imlib2 libid3tag libmad flac libsndfile \
lame alsa-lib"
BUILD_DEPENDS="wxWidgets-dev ffmpeg-dev libvorbis-dev libmad-dev flac-dev \
libsndfile-dev lame-dev alsa-lib-dev"
TARBALL="$PACKAGE-fullsrc-$VERSION.tar.bz2"
WEB_SITE="http://audacity.sourceforge.net"
WGET_URL="http://nchc.dl.sourceforge.net/sourceforge/audacity/$TARBALL"
TAGS="sound audio recorder editor"

# Rules to configure and make the package.
compile_rules()
{
	mv $PACKAGE-src-$VERSION $PACKAGE-$VERSION 2>/dev/null
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		--without-ffmpeg \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr $fs/usr/share
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/share/applications $fs/usr/share	
}
