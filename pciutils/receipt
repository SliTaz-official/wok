# SliTaz package receipt.

PACKAGE="pciutils"
VERSION="3.1.2"
CATEGORY="system-tools"
SHORT_DESC="Utilities to list PCI device by name (lspci)."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
DEPENDS="glibc-base zlib"
WEB_SITE="http://mj.ucw.cz/pciutils.html"
WGET_URL="ftp://atrey.karlin.mff.cuni.cz/pub/linux/pci/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./update-pciids.sh
	make PREFIX=/usr IDSDIR=/usr/share/misc
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/share/misc
	cp -a $src/pci.ids.gz $fs/usr/share/misc
	# Un-gzipped version currently needed by udev
	cp -a $src/pci.ids $fs/usr/share/misc
	cp -a $src/lspci $fs/usr/bin
	cp -a $src/setpci $fs/usr/bin
	strip -s $fs/usr/bin/*
}
