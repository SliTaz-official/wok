# SliTaz package receipt.

PACKAGE="pciutils"
VERSION="3.6.2"
CATEGORY="system-tools"
SHORT_DESC="Linux PCI Utilities."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://mj.ucw.cz/sw/pciutils/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="ftp://atrey.karlin.mff.cuni.cz/pub/linux/pci/$TARBALL"

DEPENDS="glibc-base zlib pciids"
BUILD_DEPENDS="wget"

# Rules to configure and make the package.
compile_rules()
{
	make OPT="${CFLAGS} -fPIC -DPIC" SHARED=no PREFIX=/usr SHAREDIR=/usr/share/misc MANDIR=/usr/share/man all
	cp -a lib/libpci.a $WOK/$PACKAGE/source
	make clean
	make OPT="${CFLAGS}" ZLIB=yes SHARED=yes PREFIX=/usr SHAREDIR=/usr/share/misc MANDIR=/usr/share/man all
	make SHARED=yes PREFIX=/usr SHAREDIR=/usr/share/misc MANDIR=/usr/share/man DESTDIR="$DESTDIR" install install-lib
	cp -a $WOK/$PACKAGE/source/libpci.a $DESTDIR/usr/lib
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	mkdir -p $fs/usr/lib

	cp -a $install/usr/sbin/lspci	$fs/usr/bin
	cp -a $install/usr/sbin/setpci	$fs/usr/bin
	cp -a $install/usr/lib/*.so*	$fs/usr/lib
}

# Overlap busybox
pre_install()
{
	rm -f "$1/usr/bin/lspci"
}

post_remove()
{
	ln -s /bin/busybox "$1/usr/bin/lspci"
}
