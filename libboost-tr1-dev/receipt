# SliTaz package receipt.

PACKAGE="libboost-tr1-dev"
LIB_NAME="tr1"
VERSION="1.69.0"

CATEGORY="development"
SHORT_DESC="Part of the Boost C++ Libraries collection."
MAINTAINER="chadi.elahmad@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.boost.org/"

DEPENDS="libboost-tr1 libboost-dev"
WANTED="libboost-dev"
SOURCE="boost"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/include/$SOURCE
	cp -a $install/usr/include/$SOURCE/math/*$LIB_NAME* $fs/usr/include/boost
	cp -a $install/usr/lib/*$LIB_NAME*.*a $fs/usr/lib
}
