# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/mozilla/plugins
	cp -a $src/libflashplayer.so $fs/usr/lib/mozilla/plugins
}
