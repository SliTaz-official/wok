# SliTaz package receipt.

PACKAGE="tazusb"
VERSION="2.0"
CATEGORY="base-system"
SHORT_DESC="SliTaz LiveUSB utility."
MAINTAINER="spode@spodesabode.com"
DEPENDS="lzma"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.slitaz.org/"
WGET_URL="http://mirror.slitaz.org/sources/tazusb/$TARBALL"

# Rules to gen a SliTaz package suitable for Tazpkg.
#
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/share/doc/$PACKAGE
	cp -a $src/$PACKAGE $fs/usr/bin
	chmod 755 $fs/usr/bin/$PACKAGE
	cp -a $src/doc/$PACKAGE.en.html $fs/usr/share/doc/$PACKAGE
	chown -R root.root $fs
}
