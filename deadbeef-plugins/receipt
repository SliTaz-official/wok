# SliTaz package receipt.

PACKAGE="deadbeef-plugins"
VERSION="0.4.0"
CATEGORY="multimedia"
SHORT_DESC="Pugins for the Deadbeef audio player (flac, sndfile, lastfm)."
MAINTAINER="pankso@slitaz.org"
DEPENDS="deadbeef flac ffmpeg libsndfile libcurl libssl libcrypto"
WEB_SITE="http://deadbeef.sourceforge.net/"
WANTED="deadbeef"
TAGS="music audio player mp3 ogg"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/deadbeef
	cp -a $_pkg/usr/lib/deadbeef/*.so* $fs/usr/lib/deadbeef
	for l in alsa gtkui hotkeys vorbis mpgmad
	do
		rm $fs/usr/lib/deadbeef/$l.so*
	done
}
