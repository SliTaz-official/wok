# SliTaz package receipt

PACKAGE="yaff"
VERSION="1.2"
CATEGORY="utilities"
SHORT_DESC="Mozilla Firefox multi-launcher"
MAINTAINER="Babaorum <postmaster@baba0rum.com>"
SOURCE="slitaz-dev-tools"
TARBALL="$SOURCE-$VERSION.tar.bz2"
WGET_URL="http://hg.slitaz.org/slitaz-dev-tools/archive/$VERSION.tar.bz2"
WEB_SITE="http://www.slitaz.org/"

DEPENDS="gtkdialog"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/pixmaps $fs/usr/bin
	cp -a $src/$PACKAGE/yaff $fs/usr/bin
	cp -a $src/$PACKAGE/mozicon24.png $src/$PACKAGE/yaff.png \
	      $fs/usr/share/pixmaps
	chown -R root.root $fs
}
