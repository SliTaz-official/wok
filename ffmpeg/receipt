# SliTaz package receipt.

PACKAGE="ffmpeg"
VERSION="0.10.3"
CATEGORY="multimedia"
SHORT_DESC="Record, convert and stream audio and video."
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://ffmpeg.org/"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="${WEB_SITE}releases/$TARBALL"
DEPENDS="alsa-lib"
BUILD_DEPENDS="libsdl-dev zlib-dev bzip2-dev coreutils-file-format \
coreutils-file-special yasm"
SUGGESTED="ffplay"
TAGS="audio video convert stream"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--enable-shared \
		--disable-static \
		--enable-gpl \
		--enable-runtime-cpudetect \
		--enable-pthreads \
		--enable-small \
		--disable-ffprobe \
		--disable-ffserver \
		--disable-encoder=h263 \
		--disable-encoder=h263p \
		--disable-encoder=mpeg2video \
		--disable-encoder=mpeg4 \
		--disable-encoder=msmpeg4v1 \
		--disable-encoder=msmpeg4v2 \
		--disable-encoder=msmpeg4v3 \
		--disable-symver \
		--disable-debug \
		--disable-doc && \
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*so* $fs/usr/lib
	cp -a $_pkg/usr/bin $fs/usr
	mkdir -p $fs/usr/share
	cp -a $_pkg/usr/share/$PACKAGE $fs/usr/share
	# ffplay with it SDL dep go in a splited package
	rm $fs/usr/bin/ffplay
}
