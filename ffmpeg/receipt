# SliTaz package receipt.

PACKAGE="ffmpeg"
VERSION="0.5"
CATEGORY="multimedia"
SHORT_DESC="Record, convert and stream audio and video."
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://ffmpeg.org/"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="${WEB_SITE}releases/$TARBALL"
DEPENDS="bzlib freetype libsdl imlib2 alsa-lib jack-audio-connection-kit"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --enable-gpl \
	--arch=i486 --cpu=i486 \
	--enable-shared --enable-small \
	--enable-postproc \
	--disable-mmx  --disable-mmx2 --disable-ssse3 &&
	make &&
	make DESTDIR=$PWD/../_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib 
	cp -a $_pkg/usr/lib/*so* $fs/usr/lib
	cp -a $_pkg/usr/bin $fs/usr	
}
