# SliTaz package receipt.

PACKAGE="znc"
VERSION="1.2"
CATEGORY="network"
SHORT_DESC="An IRC bouncer with modules & scripts support."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
SOURCE="DFBSee"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://wiki.znc.in/ZNC"
WGET_URL="http://znc.in/releases/$TARBALL"
HOST_ARCH="i486 arm"

SUGGESTED="tcl"
DEPENDS="libssl zlib"
BUILD_DEPENDS="openssl tcl-dev zlib-dev"

# Rules to configure and make the package.
compile_rules()
{
	 ./configure \
		--enable-tcl \
		--disable-python \
		--disable-perl \
		--disable-cyrus \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib/znc $fs/usr/lib
	cp -a $install/usr/share/znc $fs/usr/share
}
