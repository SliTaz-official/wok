# SliTaz package receipt.

PACKAGE="youtube-dl"
VERSION="2018.09.18"
CATEGORY="utilities"
SHORT_DESC="Downloads videos from various streaming websites."
MAINTAINER="gokhlayeh@slitaz.org"
LICENSE="MIT"
TARBALL="$PACKAGE"
WEB_SITE="http://rg3.github.com/youtube-dl/"
WGET_URL="https://yt-dl.org/downloads/$VERSION/youtube-dl"

DEPENDS="python"
BUILD_DEPENDS="wget python"

compile_rules()
{
	chmod +x $src/youtube-dl
	echo | $src/youtube-dl
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $src/youtube-dl $fs/usr/bin
	chmod +x $fs/usr/bin/$PACKAGE
}
