# SliTaz package receipt.

PACKAGE="gtk-girepository"
VERSION="2.24.24"
SHORT_DESC="Required to run pygobject3 apps"
CATEGORY="development"
MAINTAINER="psychomaniak@xakep.ru"
WEB_SITE="https://www.gtk.org/"
LICENSE="GPL2"

DEPENDS="gtk+ gobject-introspection"
BUILD_DEPENDS="pango-dev gtk+-dev gdk-pixbuf-dev atk-dev"

compile_rules()
{
	mkdir -p $install/usr/lib
	cp -a /usr/lib/girepository-1.0 $install/usr/lib
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs
}
