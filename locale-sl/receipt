# SliTaz package receipt

PACKAGE="locale-sl"
VERSION="5.0"
CATEGORY="localization"
SHORT_DESC="Slovenian locale pack"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://www.slitaz.org/"
HOST_ARCH="i486 arm"

WANTED="glibc slitaz-i18n xorg-libX11 flag-icons tzdata kbd"
DEPENDS="glibc-base"

LOCALE="sl"
LOCALE_DEPENDS=""
KBD="slovene"
KB_FLAGS="SI:si"
GCONV="ISO8859-2 IBM852 CP1250"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	. $WOK/slitaz-i18n/stuff/locale-pack.functions
	. $WOK/slitaz-i18n/stuff/locale-pack.conf
	get_locale
}

# Back to C if it's the last used locale.
post_remove()
{
	grep -q =$LOCALE /etc/locale.conf &&
	echo -e "LANG=C\nLC_ALL=C" > /etc/locale.conf
}
