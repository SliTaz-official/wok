# SliTaz package receipt.

PACKAGE="thunar"
VERSION="1.3.0"
CATEGORY="x-window"
SHORT_DESC="Thunar File Manager"
MAINTAINER="erjo@slitaz.org"
SOURCE="Thunar"
TARBALL="$SOURCE-$VERSION.tar.bz2"
WEB_SITE="http://www.xfce.org"
WGET_URL="http://archive.xfce.org/src/xfce/$PACKAGE/${VERSION%.*}/$TARBALL"
TAGS="file-manager file-browser"

DEPENDS="libpng jpeg gtk+ libxfce4util dbus libexo pcre libexif libgudev \
gamin libxfce4ui startup-notification util-linux-uuid"
BUILD_DEPENDS="libpng-dev jpeg-dev gtk+-dev libxfce4util-dev dbus-dev \
libexo-dev zlib-dev intltool libgudev-dev libxfce4ui-dev xcb-util-dev \
startup-notification-dev util-linux-uuid-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-dbus \
		--enable-startup-notification \
		--enable-notifications \
		--enable-gudev \
		--libexecdir=/usr/lib \
		--enable-debug=no \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr \
		$fs/usr/lib/thunarx-2

	cp -a $install/etc $fs/
	cp -a $install/usr/bin $fs/usr

	cp -a $install/usr/lib/Thunar $fs/usr/lib
	cp -a $install/usr/lib/*.so* $fs/usr/lib
	cp -a $install/usr/lib/thunarx-2/*.so* $fs/usr/lib/thunarx-2

	cp -a $install/usr/share/applications $fs/usr/share
	cp -a $install/usr/share/icons $fs/usr/share
	cp -a $install/usr/share/pixmaps $fs/usr/share
	cp -a $install/usr/share/Thunar $fs/usr/share
}

