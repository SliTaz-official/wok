# SliTaz package receipt.

PACKAGE="perl-xml-entities"
VERSION="1.0000"
CATEGORY="development"
SHORT_DESC="XML::Entities module is a Perl extension."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
DEPENDS="perl"
BUILD_DEPENDS="perl perl-libwww perl-uri"
SOURCE="XML-Entities"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="https://metacpan.org/release/XML-Entities"
WGET_URL="https://metacpan.org/CPAN/authors/id/S/SI/SIXTEASE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Makefile.PL &&
	make &&
	make install DESTDIR=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
}

