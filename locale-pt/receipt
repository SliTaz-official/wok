# SliTaz package receipt

PACKAGE="locale-pt"
VERSION="5.0"
CATEGORY="localization"
SHORT_DESC="Portuguese locale pack"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://www.slitaz.org/"
HOST_ARCH="i486 arm"

WANTED="glibc slitaz-i18n xorg-libX11 flag-icons tzdata kbd"
DEPENDS="glibc-base"

LOCALE="pt"
LOCALE_DEPENDS=""
LOCALEDEF="pt_PT pt_PT@euro"
KBD="pt-latin1"
KB_FLAGS="PT:pt"
GCONV="ISO8859-1 ISO8859-15"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	. $WOK/slitaz-i18n/stuff/locale-pack.functions
	. $WOK/slitaz-i18n/stuff/locale-pack.conf
	get_locale
}

# Back to C if it's the last used locale.
post_remove()
{
	grep -q =$LOCALE /etc/locale.conf &&
	echo -e "LANG=C\nLC_ALL=C" > /etc/locale.conf
}
