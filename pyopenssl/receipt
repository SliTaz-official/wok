# SliTaz package receipt.

PACKAGE="pyopenssl"
VERSION="16.2.0"
CATEGORY="development"
SHORT_DESC="OpenSSL library subset wrapper for python."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="Apache"
SOURCE="pyOpenSSL"
TARBALL="$VERSION.tar.gz"
WEB_SITE="https://launchpad.net/pyopenssl/"
WGET_URL="https://github.com/pyca/pyopenssl/archive/$TARBALL"

DEPENDS="python openssl"
BUILD_DEPENDS="python python-dev openssl-dev python-setuptools"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py build && python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}
