# SliTaz package receipt.

PACKAGE="pyopenssl"
VERSION="0.10"
CATEGORY="development"
SHORT_DESC="OpenSSL library subset wrapper for python."
MAINTAINER="pascal.bellard@slitaz.org"
SOURCE="pyOpenSSL"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://pyopenssl.sourceforge.net/"
WGET_URL="http://pypi.python.org/packages/source/p/$SOURCE/$TARBALL"
DEPENDS="python openssl"
BUILD_DEPENDS="python python-dev openssl-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	python setup.py build && python setup.py install --root=$PWD/_pkg
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $_pkg/usr $fs
	find $fs/usr/lib/ -name "*.pyc" -delete
}

