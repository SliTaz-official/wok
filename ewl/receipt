# SliTaz package receipt.

PACKAGE="ewl"
VERSION="42530"
CATEGORY="x-window"
SHORT_DESC="The Enlightened Widget Library (E17)."
MAINTAINER="pankso@slitaz.org"
DEPENDS="jpeg ecore eet evas edje efreet emotion libcurl openssl \
ewl libpng xorg-libXss libidn libcrypto glib xorg-libXp"
BUILD_DEPENDS="eet-dev evas-dev ecore-dev efreet-dev emotion emotion-dev"
WEB_SITE="http://www.enlightenment.org/"

# Rules to configure and make the package.
compile_rules()
{
	[ -d "$PACKAGE-$VERSION" ] && rm -rf $PACKAGE-$VERSION
	svn co http://svn.enlightenment.org/svn/e/trunk/$PACKAGE \
		-r $VERSION $PACKAGE-$VERSION
	cd $src
	./autogen.sh \
		--prefix=/usr \
		--sysconfdir=/etc \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/etc $fs
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/lib/ewl $fs/usr/lib
	rm $fs/usr/lib/ewl/*/*.*a
	cp -a $_pkg/usr/share $fs/usr
}
