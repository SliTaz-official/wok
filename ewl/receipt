# SliTaz package receipt.

PACKAGE="ewl"
VERSION="42530"
CATEGORY="x-window"
SHORT_DESC="The Enlightened Widget Library (E17)."
MAINTAINER="pankso@slitaz.org"
DEPENDS="jpeg ecore eet evas edje efreet emotion libcurl openssl \
libpng xorg-libXss libidn libcrypto glib xorg-libXp"
BUILD_DEPENDS="cvs subversion eet-dev evas-dev ecore-dev efreet-dev efreet \
emotion emotion-dev"
WEB_SITE="http://www.enlightenment.org/"
WGET_URL="subversion|http://svn.enlightenment.org/svn/e/trunk/$PACKAGE"
BRANCH="$VERSION"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./autogen.sh \
		--prefix=/usr \
		--sysconfdir=/etc \
		$CONFIGURE_ARGS &&
	make -j 4 &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/etc $fs
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/lib/ewl $fs/usr/lib
	rm $fs/usr/lib/ewl/*/*.*a
	cp -a $_pkg/usr/share $fs/usr
}
