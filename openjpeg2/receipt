# SliTaz package receipt.

PACKAGE="openjpeg2"
VERSION="2.0.0"
CATEGORY="development"
SHORT_DESC="Open-source C-Library for JPEG 2000 (ver. 2.x)"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="BSD"
WEB_SITE="http://www.openjpeg.org/"
TARBALL="openjpeg-$VERSION.tar.gz"
WGET_URL="http://openjpeg.googlecode.com/files/$TARBALL"

DEPENDS="glibc-base tiff zlib"
BUILD_DEPENDS="cmake tiff-dev"

# Rules to configure and make the package.
compile_rules()
{
	cmake -DCMAKE_INSTALL_PREFIX=/usr . && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}

