# SliTaz package receipt.

PACKAGE="imagemagick-dev"
VERSION="7.0.8.33"
CATEGORY="development"
SHORT_DESC="ImagesMagick development files."
MAINTAINER="pankso@slitaz.org"
LICENSE="Apache"
WEB_SITE="https://www.imagemagick.org/"

SOURCE="ImageMagick"
WANTED="imagemagick"

DEPENDS="fftw-dev graphviz-dev ilmbase-dev imagemagick jpeg-dev \
	lcms-dev libpng-dev libxml2-dev openexr-dev pkg-config \
	tiff-dev util-linux-uuid-dev"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib

	cp -a $install/usr/include		$fs/usr
	cp -a $install/usr/lib/*.*a		$fs/usr/lib
	cp -a $install/usr/lib/pkgconfig	$fs/usr/lib
}
