# SliTaz package receipt.

PACKAGE="perl-pcsc"
VERSION="1.4.12"
SOURCE="pcsc-perl"
CATEGORY="system-tools"
SHORT_DESC="Perl Module for PC/SC SmartCard access."
MAINTAINER="pankso@slitaz.org"
TARBALL="$SOURCE-$VERSION.tar.bz2"
WEB_SITE="http://ludovic.rousseau.free.fr/softwares/pcsc-perl/"
WGET_URL="http://ludovic.rousseau.free.fr/softwares/$SOURCE/$TARBALL"

DEPENDS="perl pcsc-lite"
BUILD_DEPENDS="pcsc-lite-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Makefile.PL &&
	make && make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
}

