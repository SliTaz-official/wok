# SliTaz package receipt.

PACKAGE="udpxy"
VERSION="1.0.23-9"
VERBASE="${VERSION%-*}"
CATEGORY="network"
SHORT_DESC="a UDP-to-HTTP multicast traffic relay daemon."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
TARBALL="$PACKAGE.$VERSION-prod.tar.gz"
WEB_SITE="http://www.udpxy.com/"
WGET_URL="${WEB_SITE}download/${VERBASE/.*./_}/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/local/bin $fs/usr
}
