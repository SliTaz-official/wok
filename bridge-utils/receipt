# SliTaz package receipt.

PACKAGE="bridge-utils"
VERSION="1.4"
CATEGORY="system-tools"
SHORT_DESC="IEEE 802.1d ethernet bridging"
MAINTAINER="erjo@slitaz.org"
TARBALL="${PACKAGE}-${VERSION}.tar.gz"
WEB_SITE="http://www.linuxfoundation.org/en/Net:Bridge"
WGET_URL="$SF_MIRROR/bridge/bridge/${PACKAGE}-${VERSION}/${TARBALL}"
TAGS="ehternet bridge"

BUILD_DEPENDS="autoconf automake"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	autoconf 
	./configure --prefix=/usr &&
	make && make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/sbin  $fs/usr
}

# Overlap busybox
pre_install()
{
	rm -f $1/usr/sbin/brctl
}

post_remove()
{
	ln -s /bin/busybox /usr/sbin/brctl
}
