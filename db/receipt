# SliTaz package receipt.

PACKAGE="db"
VERSION="4.5.20"
CATEGORY="misc"
SHORT_DESC="Berkeley database system."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$PACKAGE-$VERSION.NC.tar.gz"
WEB_SITE="http://www.oracle.com/technology/software/products/berkeley-db/db/"
WGET_URL="http://download.oracle.com/berkeley-db/$TARBALL"
BUILD_DEPENDS="patch"
DEPENDS="libdb"

# Rules to configure and make the package.
compile_rules()
{

	ln -s $PACKAGE-$VERSION.NC $src
	cd $src
	wget  http://www.oracle.com/technology/products/berkeley-db/db/update/4.5.20/patch.4.5.20.1
	patch -p0 < patch.4.5.20.1
	cd build_unix
	../dist/configure --prefix=/usr --infodir=/usr/share/info \
		--mandir=/usr/share/man $CONFIGURE_ARGS
	make
	make DESTDIR=$PWD/../_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
	# Package all db pkgs
	for i in $(cd $WOK; ls -d db-* libdb)
	do
		tazwok genpkg $i
	done
}

clean_wok()
{
	rm -rf PACKAGE-$VERSION.NC
}
