# SliTaz package receipt.

PACKAGE="coreutils-file-summarize"
VERSION="8.31"
CATEGORY="system-tools"
SHORT_DESC="GNU utilities that summarize files."
MAINTAINER="rcx@zoominternet.net"
LICENSE="GPL3"
WEB_SITE="https://www.gnu.org/software/coreutils/coreutils.html"

DEPENDS="glibc-base"
WANTED="coreutils"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mandir="$fs/usr/share/man/man1"
	mkdir -p $mandir

	while read i
	  do
		mkdir -p $fs$(dirname $i)
		cp -a $install$i	$fs$i
		find $install -name "$(basename $i).*" -exec cp -a \{\} $mandir \;
	  done <<EOT
/usr/bin/cksum
/usr/bin/md5sum
/usr/bin/sha1sum
/usr/bin/sha224sum
/usr/bin/sha256sum
/usr/bin/sha384sum
/usr/bin/sha512sum
/usr/bin/sum
/usr/bin/wc
EOT
}

post_remove()
{
	# Restore all Busybox applets that have been replaced
	while read i
	  do
		busybox ln -s /bin/busybox "$1$i"
	  done <<EOT
/usr/bin/cksum
/usr/bin/md5sum
/usr/bin/sha1sum
/usr/bin/sha256sum
/usr/bin/sha512sum
/usr/bin/sum
/usr/bin/wc
EOT
}
