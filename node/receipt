# SliTaz package receipt.

PACKAGE="node"
VERSION="6.9.2"
CATEGORY="network"
SHORT_DESC="Node.js is a platform for easily building network applications."
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
TARBALL="$PACKAGE-v$VERSION.tar.gz"
WEB_SITE="https://nodejs.org/"
WGET_URL="http://nodejs.org/dist/v$VERSION/$TARBALL"
#HOST_ARCH="i486 arm"

DEPENDS="python libssl gcc49-lib-base"
BUILD_DEPENDS="python-dev openssl-dev gcc49"

# Rules to configure and make the package.
compile_rules()
{
	sed -i 's|uname -m|echo i486|' Makefile
	export LD_LIBRARY_PATH="/usr/libgcc49:$LD_LIBRARY_PATH"
	export CXX=/usr/bin/i486-slitaz-linux-g++-49
	export CC=/usr/bin/i486-slitaz-linux-gcc-49
	./configure --prefix=/usr &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib/node* $fs/usr/lib
}
