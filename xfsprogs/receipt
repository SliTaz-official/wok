# SliTaz package receipt.

PACKAGE="xfsprogs"
VERSION="2.9.8-1"
CATEGORY="system-tools"
SHORT_DESC="Utilities for making, mounting, and manipulating XFS file-system"
MAINTAINER="patel@math.uga.edu"
BUILD_DEPENDS="e2fsprogs-dev libtool"
TARBALL=${PACKAGE}_${VERSION}.tar.gz
WEB_SITE="http://oss.sgi.com/projects/xfs/"
WGET_URL="ftp://oss.sgi.com/projects/xfs/cmd_tars/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	mv $PACKAGE-2.9.8 $PACKAGE-$VERSION 2>/dev/null
	cd $src
	./configure \
		--prefix=/usr \
		--sbindir=/sbin \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS
	make
	make DIST_ROOT=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/sbin $fs
}
