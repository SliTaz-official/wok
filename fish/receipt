# SliTaz package receipt.

PACKAGE="fish"
VERSION="2.1.1"
CATEGORY="system-tools"
SHORT_DESC="The FrIendly SHell"
MAINTAINER="tcg.thegamer@gmail.com"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://fishshell.com"
WGET_URL="$WEB_SITE/files/$VERSION/$TARBALL"

DEPENDS="ncurses gcc-lib-base"
BUILD_DEPENDS="ncurses-dev"

compile_rules()
{
	export LDFLAGS="$LDFLAGS -ltinfo"
	./configure \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules()
{
	mkdir -p $fs/usr/share
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/etc $fs
	cp -a $install/usr/share/fish $fs/usr/share
	cp -a $install/usr/share/locale $fs/usr/share
}
