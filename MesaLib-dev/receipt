# SliTaz package receipt.

PACKAGE="MesaLib-dev"
VERSION="7.0.3"
CATEGORY="x-window"
SHORT_DESC="3D Graphics Library."
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://mesa3d.sourceforge.net/"
WANTED="MesaLib"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/local/include $fs/usr
}

