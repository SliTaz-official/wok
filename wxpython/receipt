# SliTaz package receipt.

PACKAGE="wxpython"
VERSION="2.8.11.0"
CATEGORY="x-window"
SHORT_DESC="GUI toolkit for the Python programming language."
MAINTAINER="pankso@slitaz.org"
DEPENDS="python gtk+"
BUILD_DEPENDS="python-dev gtk+-dev"
SOURCE="wxPython-src"
TARBALL="$SOURCE-$VERSION.tar.bz2"
WEB_SITE="http://www.wxpython.org/"
WGET_URL="$SF_MIRROR/$PACKAGE/wxPython/$VERSION/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
    cd $src
    ./configure \
    	--prefix=/usr \
    	--mandir=/usr/share/man \
    	--without-sdl \
    	$CONFIGURE_ARGS &&
    make &&
    make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/lib
	cp -a $_pkg/usr/bin/wxrc* $fs/usr/bin
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}
