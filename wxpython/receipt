# SliTaz package receipt.

PACKAGE="wxpython"
VERSION="2.8.11.0"
CATEGORY="x-window"
SHORT_DESC="GUI toolkit for the Python programming language."
MAINTAINER="pankso@slitaz.org"
DEPENDS="python wxWidgets"
BUILD_DEPENDS="python-dev wxWidgets-dev"
SOURCE="wxPython-src"
TARBALL="$SOURCE-$VERSION.tar.bz2"
WEB_SITE="http://www.wxpython.org/"
WGET_URL="$SF_MIRROR/$PACKAGE/wxPython/$VERSION/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
    cd $src
    ./configure \
	--with-gtk=2 \
	--with-libpng=sys \
	--with-libjpeg=sys \
	--with-libtiff=sys &&
    cd wxPython &&
    python setup.py WXPORT=gtk2 UNICODE=1 build &&
    python setup.py WXPORT=gtk2 UNICODE=1 install --root=$DESTDIR

}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/lib
	cp -a $_pkg/usr/bin/wxrc* $fs/usr/bin
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}
