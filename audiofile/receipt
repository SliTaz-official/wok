# SliTaz package receipt.

PACKAGE="audiofile"
VERSION="0.2.6"
CATEGORY="development"
SHORT_DESC="provides a uniform and elegant API for accessing a variety of audio file formats"
MAINTAINER="allan316@gmail.com"
DEPENDS=""
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.68k.org/~michael/audiofile/"
WGET_URL="http://www.68k.org/~michael/audiofile/audiofile-0.2.6.tar.gz"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}

