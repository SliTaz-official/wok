# SliTaz package receipt.

PACKAGE="eet"
VERSION="1.7.1"
CATEGORY="base-system"
SHORT_DESC="Enlightenment's file chunk reading/writing library."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.enlightenment.org/"
WGET_URL="http://download.enlightenment.org/releases/$TARBALL"
TAGS="e17"

DEPENDS="eina libjpeg"
BUILD_DEPENDS="eina-dev jpeg-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure $CONFIGURE_ARGS && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/bin $fs/usr/bin
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}
