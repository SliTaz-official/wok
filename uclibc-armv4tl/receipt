# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/lib
	cp -a $src/lib/*.so* $fs/lib
}

TAZBB_NO_INSTALL="because this is not the right target !"
