# SliTaz package receipt.

PACKAGE="python-mpd"
VERSION="0.3.0"
CATEGORY="multimedia"
SHORT_DESC="Python MPD client library"
MAINTAINER="jozee@slitaz.org"
LICENSE="LGPL3"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="https://pypi.python.org/pypi/python-mpd/"
WGET_URL="http://pypi.python.org/packages/source/p/python-mpd/$TARBALL"
HOST_ARCH="i486 arm"

DEPENDS="python"
BUILD_DEPENDS="python-dev"

# What is the latest version available today?
current_version()
{
	wget -O - https://pypi.org/project/$SOURCE/ 2>/dev/null | \
	sed "/$SOURCE-/!d;/tar/!d;s|.*$SOURCE-||;s|.tar.*||;q"
}

# Rules to configure and make the package.
compile_rules()
{
	python setup.py install --prefix=/usr --root="$DESTDIR"
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib $fs/usr
}
