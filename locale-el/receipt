# SliTaz package receipt

PACKAGE="locale-el"
VERSION="4.0"
CATEGORY="system-tools"
SHORT_DESC="Greek locale pack"
MAINTAINER="al.bobylev@gmail.com"
WEB_SITE="http://www.slitaz.org/"

WANTED="slitaz-i18n xorg-libX11"
DEPENDS="glibc-base"
BUILD_DEPENDS="glibc glibc-locale slitaz-i18n"

LOCALE="el"
LOCALEDEF="el_GR"
CHARMAP="UTF-8"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	. $WOK/slitaz-i18n/stuff/locale-pack.functions
	. $WOK/slitaz-i18n/stuff/locale-pack.conf
	mk_locale_dir
	get_slitaz_messages
	get_core_messages
	get_x11_locale
}

# Back to C if it's the last used locale.
post_remove()
{
	if grep -q $LOCALEDEF /etc/locale.conf; then
		echo "LANG=C" > /etc/locale.conf
		echo "LC_ALL=C" >> /etc/locale.conf
	fi
}
