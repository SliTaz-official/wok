# SliTaz package receipt.

PACKAGE="xorg-server"
VERSION="1.8.0"
CATEGORY="x-window"
SHORT_DESC="Xorg core server."
MAINTAINER="pankso@slitaz.org"
DEPENDS="xorg xorg-libxkbfile xorg-xf86-input-mouse xorg-xf86-input-keyboard \
xorg-xf86-video-vesa xorg-xkeyboard-config xorg-xkbcomp xorg-libpciaccess \
xorg-libXxf86vm libcrypto freetype pixman gcc-lib-base xorg-xf86-input-evdev"
BUILD_DEPENDS="xorg-dev-proto xorg-libXfont-dev xorg-xtrans xorg-libxkbfile-dev \
xorg-libfontenc-dev xorg-libpciaccess-dev xorg-libXxf86vm-dev openssl-dev \
dbus-dev mesa-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.x.org/"
WGET_URL="http://xorg.freedesktop.org/releases/individual/xserver/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--with-module-dir=/usr/lib/X11/modules \
		--with-xkb-output=/var/lib/xkb \
		--with-serverconfig-path=/etc/X11 \
		--with-fontdir=/usr/share/fonts/X11 \
		--enable-install-setuid \
		--enable-xorg \
		--enable-config-hal \
		--enable-config-dbus \
		--with-os-name="SliTaz GNU/Linux" \
		--with-builder-addr=$MAINTAINER \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/var
	cp -a $_pkg/usr/lib/X11 $fs/usr/lib
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/var/lib $fs/var
	cp -a $_pkg/etc $fs
	# Remove static libs and split Xnest
	rm $fs/usr/lib/X11/*/*.*a
	rm $fs/usr/lib/X11/*/*/*.*a
	rm $fs/usr/bin/Xnest
	rm $fs/usr/bin/Xvfb
}

# We need /var/tmp rw to let xkbcomp builr XKB definition.
post_install()
{
	chmod 1777 $1/var/tmp
}
