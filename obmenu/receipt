# SliTaz package receipt.

PACKAGE="obmenu"
VERSION="1.0"
CATEGORY="x-window"
SHORT_DESC="Openbox menu editor."
MAINTAINER="paul@slitaz.org"
DEPENDS="python pycairo pygobject pygtk libffi"
BUILD_DEPENDS="python python-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://obmenu.sourceforge.net/index.html"
WGET_URL="http://downloads.sourceforge.net/obmenu/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	python setup.py build
	python setup.py install --root=$PWD/_pkg
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/pixmaps
	cp -a $_pkg/usr $fs
	cp $_pkg/usr/share/obmenu/mnu48.png $fs/usr/share/pixmaps
}

post_install()
{
	echo -n "Enabling configuration file..."
	cp /home/tux/.config/openbox/menu.xml /root/.config/openbox
	status
}

post_remove()
{
	echo -n "Removing configuration files..."
	rm /root/.config/openbox/menu.xml
	status
}
