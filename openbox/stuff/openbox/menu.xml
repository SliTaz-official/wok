<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="favorites-menu" label="Favorites">
  <item label="File Manager">
    <action name="Execute"><command>emelfm2</command></action>
  </item>
  <item label="Terminal">
    <action name="Execute"><command>xterm</command></action>
  </item>
  <item label="Mount Devices">
    <action name="Execute"><command>subox mountbox</command></action>
  </item>
  <item label="Web Browser">
    <action name="Execute"><command>firefox</command></action>
  </item>
  <item label="Text Editor">
    <action name="Execute"><command>leafpad</command></action>
  </item>
  <item label="Images Viewer">
    <action name="Execute"><command>gpicview</command></action>
  </item>
</menu>

<menu id="desktop-effects" label="Desktop Effects">
  <item label="Active composite">
    <action name="Execute"><command>xcompmgr</command></action>
  </item>
  <item label="Active shadows">
    <action name="Execute"><command>xcompmgr -c</command></action>
  </item>
  <item label="Active shadows/fade">
    <action name="Execute"><command>xcompmgr -c -f</command></action>
  </item>
  <separator />
  <item label="Set opacity (actual)">
    <action name="Execute"><command>transset-df --actual --max 60</command></action>
  </item>
  <item label="Set opacity (click)">
    <action name="Execute"><command>transset-df --click --max 60</command></action>
  </item>
  <separator />
  <item label="Stop effects">
    <action name="Execute"><command>killall xcompmgr</command></action>
  </item>
</menu>

<menu id="slitaz-live-menu" label="SliTaz Live">
  <item label="Tazlito LiveCD Tool">
    <action name="Execute"><command>subox tazlitobox</command></action>
  </item>
  <item label="TazUSB Writefs">
    <action name="Execute"><command>subox "xterm -e tazusb writefs"</command></action>
  </item>
</menu>

<menu id="openbox-menu" label="Openbox">
  <item label="ObConf">
    <action name="Execute">
      <command>obconf</command>
    </action>
  </item>
  <item label="Reconfigure">
    <action name="Reconfigure" />
  </item>
  <item label="Exit">
    <action name="Exit" />
  </item>
</menu>

<menu id="system-actions-menu" label="System Actions">
  <item label="Reboot">
    <action name="Execute"><command>reboot</command></action>
  </item>
  <item label="Reboot (forced)">
    <action name="Execute"><command>reboot -f</command></action>
  </item>
  <item label="Shutdown">
    <action name="Execute"><command>poweroff</command></action>
  </item>
</menu>

<menu id="root-menu" label="Openbox 3">
  <separator label="SliTaz Openbox" />
  <menu id="favorites-menu" />
  <menu id="desktop-effects" />
  <menu id="slitaz-live-menu" />
  <menu id="client-list-menu" />
  <separator />
  <menu id="openbox-menu" />
  <menu id="system-actions-menu" />
</menu>

</openbox_menu>
