# SliTaz package receipt.

PACKAGE="fbgrab"
VERSION="1.3"
CATEGORY="misc"
SHORT_DESC="Frame buffer grabber."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://web.archive.org/web/20191223173748/http://fbgrab.monells.se/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="${WEB_SITE}$TARBALL"

DEPENDS="libpng zlib"
BUILD_DEPENDS="libpng-dev zlib-dev"
HOST_ARCH="i486 arm"

# What is the latest version available today?
current_version()
{
	wget -O - https://github.com/GunnarMonell/fbgrab/releases 2>/dev/null | \
	sed '/archive.*tar/!d;s|.*/v*\(.*\).tar.*|\1|;q'
}

# Rules to configure and make the package.
compile_rules()
{
	#sed -i '/splint/d' Makefile
	make
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp $src/fbgrab $fs/usr/bin
}
