# SliTaz package receipt.

PACKAGE="twisted-web"
VERSION="10.0.0"
CATEGORY="network"
SHORT_DESC="An HTTP protocol implementation together with clients and servers."
MAINTAINER="pascal.bellard@slitaz.org"
SOURCE="TwistedWeb"
TARBALL="$SOURCE-$VERSION.tar.bz2"
WEB_SITE="http://twistedmatrix.com/trac/"
WGET_URL="http://tmrc.mit.edu/mirror/twisted/Web/${VERSION%.*}/$TARBALL"
DEPENDS="python twisted"
BUILD_DEPENDS="$DEPENDS python-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	python setup.py build && python setup.py install --root=$PWD/_pkg
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $_pkg/usr $fs
}

