# SliTaz package receipt.

PACKAGE="gst-plugins-full"
VERSION="0.10.36"
CATEGORY="multimedia"
SHORT_DESC="Plays all multimedia files GStreamer is capable of"
MAINTAINER="domcox@slitaz.org"
LICENSE="lgpl"
WEB_SITE="www.slitaz.org"

DEPENDS="gstreamer gst-plugins-base gst-plugins-good gst-plugins-bad \
gst-plugins-ugly gst-ffmpeg schroedinger libsdl x264"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/doc
	cp $WOK/$PACKAGE/description.txt $fs/usr/share/doc/midori-video.txt
}
