# SliTaz package receipt.

PACKAGE="turses"
VERSION="0.2.7"
CATEGORY="network"
SHORT_DESC="A Twitter client for the console."
MAINTAINER="paul@slitaz.org"
LICENSE="GPL3"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="https://github.com/alejandrogomez/turses"
WGET_URL="http://pypi.python.org/packages/source/t/$PACKAGE/$TARBALL"

DEPENDS="python setuptools python-httplib2 python-urwid python-oauth2 python-tweepy"
BUILD_DEPENDS="python python-dev setuptools"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	python setup.py build
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}

