# SliTaz package receipt.

PACKAGE="fsarchiver"
VERSION="0.6.7"
CATEGORY="utilities"
MAINTAINER="devel@slitaz.org"
SHORT_DESC="A safe and flexible file-system backup and deployment tool"
DEPENDS="bzip2 e2fsprogs lzo xz libgcrypt liblzma util-linux-ng-blkid"
BUILD_DEPENDS=" bzip2-dev  e2fsprogs-dev  libgcrypt-dev lzo-dev liblzma-dev util-linux-ng-blkid-dev attr-dev"
WEB_SITE="http://www.fsarchiver.org/"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://downloads.sourceforge.net/$PACKAGE/$TARBALL"
TAGS="compression filesystem archive backup"

# Rules to configure and make the package.

compile_rules() {
  cd $src
  ./configure --prefix=/usr &&
  make &&
  make DESTDIR="$PWD/_pkg" install
}
	
# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/sbin $fs/usr
	
}
