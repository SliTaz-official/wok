# SliTaz package receipt.

PACKAGE="mrxvt"
VERSION="0.4.2"
CATEGORY="utilities"
SHORT_DESC="Terminal emulator with muli-tabs support."
MAINTAINER="pankso@slitaz.org"
DEPENDS="libpng jpeg freetype"
BUILD_DEPENDS="xorg-dev libpng-dev jpeg-dev freetype-dev"
TARBALL="$PACKAGE-$VERSION.tgz"
WEB_SITE="http://materm.sourceforge.net/"
WGET_URL="$SF_MIRROR/materm/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		--enable-xft \
		--enable-menubar \
		$CONFIGURE_ARGS
	make
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
}
