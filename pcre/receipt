# SliTaz package receipt.

PACKAGE="pcre"
VERSION="8.13"
CATEGORY="system-tools"
SHORT_DESC="Perl Compatible Regular Expressions."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.pcre.org/"
WGET_URL="ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	# http://bugs.exim.org/show_bug.cgi?id=1136
	patch -Np2 -i $stuff/r661.diff
	sed -i '12140d' testdata/testoutput2
	./configure --enable-utf8 $CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}
