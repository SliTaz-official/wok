# SliTaz package receipt.

PACKAGE="asterisk-sound-fr"
VERSION="1.4.16"
CATEGORY="misc"
SHORT_DESC="Open Source PBX and telephony toolkit sound files (fr)."
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://www.asterisk.org/"
TARBALL="asterisk-core-sounds-fr-gsm-$VERSION.tar.gz"
WGET_URL="http://downloads.asterisk.org/pub/telephony/sounds/releases/$TARBALL"
DEPENDS="asterisk"

# Rules to configure and make the package.
compile_rules()
{
	if [ ! -d $_pkg/var ]; then
		lang=${PACKAGE#asterisk-sound-}
		mkdir -p $_pkg/var/lib/asterisk/sounds/$lang
		for i in *; do
			case "$i" in
			$PACKAGE-$VERSION|taz|receipt|process.log);;
			*) mv $i $_pkg/var/lib/asterisk/sounds/$lang;;
			esac
		done
		cd $_pkg/var/lib/asterisk/sounds/$lang
		for i in */ ; do
			mkdir ../$i
			ln -s ../$lang/$i ../$i/$lang
		done
	fi
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $_pkg/* $fs
}
