# SliTaz package receipt.

PACKAGE="afio"
VERSION="2.5.1"
CATEGORY="system-tools"
SHORT_DESC="Archiver program for Linux/UNIX. "
MAINTAINER="erjo@slitaz.org"
LICENSE="LGPL"
WEB_SITE="http://members.chello.nl/~k.holtman/afio.html"
TARBALL="$PACKAGE-$VERSION.tgz"
WGET_URL="http://members.chello.nl/~k.holtman/$TARBALL"

DEPENDS=""
BUILD_DEPENDS=""

# Rules to configure and make the package.
compile_rules()
{
	make

	mkdir -p $install/usr/share/man/man1
	cp -a $src/afio.1 $install/usr/share/man/man1
	cook_compress_manpages
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $src/afio $fs/usr/bin
}
