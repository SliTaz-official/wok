# SliTaz package receipt.

PACKAGE="util-linux-ng-getopt"
VERSION="2.18"
CATEGORY="base-system"
SHORT_DESC="The getopt utility from Util linux NG."
MAINTAINER="pankso@slitaz.org"
DEPENDS="glibc-base"
BUILD_DEPENDS="slitaz-toolchain"
WANTED="util-linux-ng"
WEB_SITE="http://kernel.org/~kzak/util-linux-ng/"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $_pkg/usr/bin/getopt $fs/usr/bin
}
