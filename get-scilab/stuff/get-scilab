#!/bin/sh -e

PACKAGE="scilab"
WEB_SITE="http://www.scilab.org/"
CATEGORY="misc"
SHORT_DESC="Free Open Source Software for Numerical Computation."
MAINTAINER="somebody@scilab.org"
DEPENDS="xorg-libXss"
URL="http://www.scilab.org/fr/products/scilab/download"

ROOT="$1"
[ -d "$ROOT" ] || ROOT=""

if test $(id -u) != 0 ; then
        echo -e "\nYou must be root to run `basename $0`."
        echo -e "Please type 'su' and root password to become super-user.\n"
        exit 0
fi

if [ -d $ROOT/var/lib/tazpkg/installed/$PACKAGE ]; then
	[ -n "$ROOT" ] && exit 1
	tazpkg remove $PACKAGE
	[ -d /var/lib/tazpkg/installed/$PACKAGE ] && exit 1
fi

TMP_DIR=/tmp/get-$PACKAGE-$$-$RANDOM
CUR_DIR=$(pwd)
mkdir -p $TMP_DIR && cd $TMP_DIR

# Download tarball
URL="$(wget -O - $URL | sed '/linux-i686/!d;/href/!d;s/.*href=.\([^"]*\).*/\1/')"
FILE="$(basename $URL)"
wget -O $FILE "$URL"

if [ ! -f $FILE ]; then
	cd $CUR_DIR
	rm -rf $TMP_DIR
	echo "Could not download $FILE from $URL. Exiting."
	exit 1
fi

mkdir -p $PACKAGE/fs/usr/share
busybox tar xf $FILE -C $PACKAGE/fs/usr/share
# extracted pkg can be removed: Save RAM
rm -f $FILE

VERSION="$(ls $PACKAGE/fs/usr/share | sed 's/.*-//;s|/||')"
mv  $PACKAGE/fs/usr/share/* $PACKAGE/fs/usr/share/$PACKAGE
mkdir -p $PACKAGE/fs/usr/bin
ln -s /usr/share/$PACKAGE/bin/$PACKAGE $PACKAGE/fs/usr/bin/$PACKAGE

mv $PACKAGE $PACKAGE-$VERSION
cd $PACKAGE-$VERSION/fs

# Create menu
mkdir -p usr/share/applications
cat > usr/share/applications/$PACKAGE.desktop <<EOT
[Desktop Entry]
Version=1.0
Encoding=UTF-8
Name=$PACKAGE
Exec=$PACKAGE
Terminal=false
Categories=Application
Icon=/usr/share/scilab/share/icons/hicolor/24x24/apps/scilab.png
Comment=$SHORT_DESC
Type=Application
Categories=Office;
EOT
cd ../..

cat > $PACKAGE-$VERSION/receipt <<EOT
PACKAGE="$PACKAGE"
VERSION="$VERSION"
CATEGORY="$CATEGORY"
SHORT_DESC="$SHORT_DESC"
MAINTAINER="$MAINTAINER"
DEPENDS="$DEPENDS"
WEB_SITE="$WEB_SITE"
EOT

# Pack
tazpkg pack $PACKAGE-$VERSION

# Clean to save RAM memory
rm -rf $PACKAGE-$VERSION

# Install pseudo package
tazpkg install $PACKAGE-$VERSION.tazpkg --root=$ROOT
case " $@ " in
*\ --k*) mv $PACKAGE-$VERSION.tazpkg $CUR_DIR ;;
esac

# Clean
cd $CUR_DIR
rm -rf $TMP_DIR

