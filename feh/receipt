# SliTaz package receipt

PACKAGE="feh"
VERSION="1.3.4"
CATEGORY="graphics"
SHORT_DESC="Lightweight and powerfull image viewer and composer"
MAINTAINER="mallory@sweetpeople.org"
DEPENDS="imlib2 giblib jpeg zlib"
BUILD_DEPENDS="imlib2-dev imlib2 giblib-dev giblib xorg-xineramaproto jpeg-dev zlib-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://linuxbrit.co.uk/feh/"
WGET_URL="http://linuxbrit.co.uk/downloads/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr
	make
	make DESTDIR=../_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $_pkg/usr/bin/feh $fs/usr/bin
}
