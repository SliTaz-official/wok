# SliTaz package receipt.

PACKAGE="mysql-python"
SOURCE="MySQL-python"
VERSION="1.2.2"
CATEGORY="development"
SHORT_DESC="A Python interface to MySQL ."
MAINTAINER="claudinei@slitaz.org"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://mysql-python.sourceforge.net/"
WGET_URL="http://ufpr.dl.sourceforge.net/sourceforge/$PACKAGE/$TARBALL"
DEPENDS="python mysql zlib openssl"
BUILD_DEPENDS="python-dev mysql-dev zlib-dev openssl-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	sed -i 's/threadsafe = True/threadsafe = False/' $src/site.cfg
	python setup.py build
	python setup.py install --root=$PWD/_pkg
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
}

