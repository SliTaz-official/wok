# SliTaz package receipt.

PACKAGE="perl-xml-twig"
VERSION="3.34"
CATEGORY="development"
SHORT_DESC="XML::Twig module is a Perl extension."
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL"
DEPENDS="perl perl-xml-parser"
BUILD_DEPENDS="perl perl-xml-parser"
SOURCE="XML-Twig"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="https://metacpan.org/release/XML-Twig/"
WGET_URL="https://metacpan.org/CPAN/authors/id/M/MI/MIROD/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Makefile.PL -y &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
}

