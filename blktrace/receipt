# SliTaz package receipt.

PACKAGE="blktrace"
VERSION="1.2.0"
CATEGORY="system-tools"
SHORT_DESC="Block layer IO tracing."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://brick.kernel.dk/snaps"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$WEB_SITE/$TARBALL"

DEPENDS="libaio"
BUILD_DEPENDS="libaio-dev"

# What is the latest version available today?
current_version()
{
	wget -O - ${WGET_URL%/*} 2>/dev/null | \
	sed "/latest/d;/$PACKAGE-/!d;/tar/!d;/git/!d;s|.*$PACKAGE-\\(.*\\).tar.*\".*|\\1|" | sort -Vr | sed q
}

# Rules to configure and make the package.
compile_rules()
{
	sed -i 's|/usr/local|/usr|' Makefile

	make -j 1 DESTDIR=$DESTDIR install

	mkdir -p $install/usr/share
	mv $install/usr/man $install/usr/share
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
}
