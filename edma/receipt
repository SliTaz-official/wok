# SliTaz package receipt.

PACKAGE="edma"
VERSION="0.18.6"
CATEGORY="development"
SHORT_DESC="Open and modular development environment."
MAINTAINER="hackdorte@sapo.pt"
LICENSE="LGPL"
GNU_FTP="http://ftp.gnu.org/gnu"
TARBALL="gnu${PACKAGE}-$VERSION.tar.gz"
WEB_SITE="http://www.gnu.org/software/edma/"
WGET_URL="$GNU_FTP/$PACKAGE/$TARBALL"
TAGS="environment development framework"

DEPENDS="gecb gidfwizard"

BUILD_DEPENDS="gcc autoconf glibc-dev pkg-config automake"

# Rules to configure and make the package.
compile_rules()
{
    ./configure \
        --prefix=/usr \
        $CONFIGURE_ARGS &&
    make $MAKEFLAGS &&
    make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/* $fs/
}
