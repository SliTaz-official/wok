# SliTaz package receipt.

PACKAGE="opensc"
VERSION="0.13.0"
CATEGORY="security"
SHORT_DESC="Tools and libraries for smart cards."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="LGPL2.1"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="https://github.com/OpenSC/OpenSC/wiki"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"
CONFIG_FILES="/etc/opensc.conf"

DEPENDS="libcrypto zlib"
BUILD_DEPENDS="pcsc-lite-dev openssl-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
	cp -a $install/etc $fs
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/share/opensc $fs/usr/share
	cp -a $install/usr/lib $fs/usr
}
