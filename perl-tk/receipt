# SliTaz package receipt.

PACKAGE="perl-tk"
VERSION="804.028"
CATEGORY="development"
SHORT_DESC="perl-tk librairie"
MAINTAINER="sygne@ombres.eu"
DEPENDS="perl fontconfig jpeg xorg-libX11 xorg-libXau xorg-libXdmcp zlib libpng"
SOURCE="Tk"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://www.perltk.org/"
WGET_URL="http://search.cpan.org/CPAN/authors/id/S/SR/SREZIC/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Makefile.PL &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs 
	cp -a $_pkg/usr $fs/
	strip -s $fs/usr/bin/*
}

