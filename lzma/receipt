# SliTaz package receipt.

PACKAGE="lzma"
VERSION="4.22"
CATEGORY="extra"
SHORT_DESC="Compressor with a high compression ratio."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="lzma422.tar.bz2"
WEB_SITE="http://www.7-zip.org/"
WGET_URL="${WEB_SITE}dl/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd SRC/7zip/Compress/LZMA_Alone
	make
}


# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a SRC/7zip/Compress/LZMA_Alone/lzma $fs/usr/bin
	strip -s $fs/usr/bin/*
}

