# SliTaz package receipt.

PACKAGE="perl-lwp-useragent"
VERSION="5.823"
CATEGORY="development"
SHORT_DESC="LWP::UserAgent module is a Perl extension."
MAINTAINER="pascal.bellard@slitaz.org"
DEPENDS="perl"
BUILD_DEPENDS="perl"
SOURCE="libwww-perl"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://www.cpan.org/modules/by-authors/id/MJD/Template.html"
WGET_URL="http://search.cpan.org/CPAN/authors/id/G/GA/GAAS/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Makefile.PL &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
}

