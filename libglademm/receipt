# SliTaz package receipt.

PACKAGE="libglademm"
VERSION="2.6.7"
CATEGORY="system-tools"
SHORT_DESC="A C++ wrapper for libglade."
MAINTAINER="gokhlayeh@slitaz.org"
DEPENDS="gtkmm libglade glibmm"
BUILD_DEPENDS="gtkmm-dev libglade-dev cairomm-dev libxml2-dev glibmm-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://gtkmm.sourceforge.net/"
WGET_URL="http://ftp.gnome.org/pub/gnome/sources/$PACKAGE/2.6/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make -j 4 && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}

