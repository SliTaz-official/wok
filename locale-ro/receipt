# SliTaz package receipt

PACKAGE="locale-ro"
VERSION="5.0"
CATEGORY="system-tools"
SHORT_DESC="Romanian locale pack"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3"
WEB_SITE="http://www.slitaz.org/"
HOST_ARCH="i486 arm"

WANTED="glibc slitaz-i18n xorg-libX11 flag-icons tzdata kbd"
DEPENDS="glibc-base"

LOCALE="ro"
LOCALE_DEPENDS=""
KBD="ro ro_std ro_win"
KB_FLAGS="RO:ro"
GCONV="IBM852 CP1250 ISO8859-2 ISO8859-16"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	. $WOK/slitaz-i18n/stuff/locale-pack.functions
	. $WOK/slitaz-i18n/stuff/locale-pack.conf
	get_locale
}

# Back to C if it's the last used locale.
post_remove()
{
	echo -e "LANG=C\nLC_ALL=C" > /etc/locale.conf
}
