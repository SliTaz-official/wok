# SliTaz package receipt.

PACKAGE="trash-cli"
VERSION="0.12.9.14"
CATEGORY="utilities"
SHORT_DESC="Command line interface to the freedesktop.org trashcan."
MAINTAINER="paul@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="https://github.com/andreafrancia/trash-cli"
WGET_URL="git|git://github.com/andreafrancia/trash-cli"

DEPENDS="python"
BUILD_DEPENDS="git bzip2 python-dev python-setuptools"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py build
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir $fs/usr
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib $fs/usr
}
