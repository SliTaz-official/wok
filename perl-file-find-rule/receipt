# SliTaz package receipt.

PACKAGE="perl-file-find-rule"
VERSION="0.32"
CATEGORY="development"
SHORT_DESC="Perl/CPAN Module File::Find::Rule."
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL"
DEPENDS="perl-text-glob perl-number-compare perl"
BUILD_DEPENDS="$DEPENDS"
SOURCE="File-Find-Rule"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="https://metacpan.org/release/File-Find-Rule/"
WGET_URL="https://metacpan.org/CPAN/authors/id/R/RC/RCLAMP/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Makefile.PL &&
	make &&
	make install DESTDIR=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib $fs/usr
}

