# SliTaz package receipt.

PACKAGE="ccid"
VERSION="1.4.8"
CATEGORY="base-system"
SHORT_DESC="Chip/Smart Card Interface Devices driver."
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://pcsclite.alioth.debian.org/"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://alioth.debian.org/frs/download.php/3768/$TARBALL"
#https://alioth.debian.org/frs/download.php/3768/ccid-1.4.8.tar.bz2

DEPENDS="libusb pcsc-lite"
BUILD_DEPENDS="wget pcsc-lite-dev libusb-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr \
		--enable-usbdropdir=/usr/lib/pscs/drivers \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir $fs/etc/udev/rules.d/
	cp -a $install/* $fs/
	cp $src/src/92_pcscd_ccid.rules $fs/etc/udev/rules.d/
}
