# SliTaz package receipt.

PACKAGE="tacacs+"
VERSION="F4.0.4.18"
CATEGORY="misc"
SHORT_DESC="authentication server for cisco devices"
MAINTAINER="allan316@gmail.com"
LICENSE="MIT"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.shrubbery.net"
WGET_URL="ftp://ftp.shrubbery.net/pub/tac_plus/$TARBALL"

DEPENDS="libwrap pam"
BUILD_DEPENDS="libwrap-dev pam-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make && make -j 1 DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
}

