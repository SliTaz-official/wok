# SliTaz package receipt.

PACKAGE="popt"
VERSION="1.10.4"
CATEGORY="extra"
SHORT_DESC="Library for parsing command line options."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://directory.fsf.org/project/popt/"
WGET_URL="http://rpm.net.in/mirror/rpm-4.4.x/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS
	make
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share/locale
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/share/locale/fr $fs/usr/share/locale
	strip --strip-unneeded $fs/usr/lib/*
}

