# SliTaz package receipt.

PACKAGE="util-linux-ng"
VERSION="2.16.1"
CATEGORY="meta"
SHORT_DESC="Util linux new generation (Meta package to build utility ans libs)."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
DEPENDS="glibc-base"
BUILD_DEPENDS="slitaz-toolchain ncurses-dev e2fsprogs-dev"
WEB_SITE="http://kernel.org/~kzak/util-linux-ng/"
WGET_URL="ftp://ftp.kernel.org/pub/linux/utils/util-linux-ng/v2.16/$TARBALL"
LOCALE=""

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	if ! grep 'tty:x:4:' /etc/group; then
		addgroup -g 4 tty
	fi
	grep -qs 'define u8' fdisk/fdisksunlabel.c ||
	sed -i 's|#include <scsi/scsi.h>|#define u8 __u8\n&|' fdisk/fdisksunlabel.c
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--with-fsprobe=builtin \
		--enable-partx \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
}
