# SliTaz package receipt.

PACKAGE="libgio-dev"
VERSION="2.16.3"
CATEGORY="x-window"
SHORT_DESC="Glib libgio shared library."
MAINTAINER="pankso@slitaz.org"
WANTED="glib"
WEB_SITE="http://www.gtk.org/"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/pkgconfig $fs/usr/include
	cp -a $_pkg/usr/lib/libgio*.*a $fs/usr/lib
	cp -a $_pkg/usr/lib/pkgconfig/gio*.pc $fs/usr/lib/pkgconfig
	cp -a $_pkg/usr/include/gio-unix-2.0 $fs/usr/include
}
