# SliTaz package receipt.

PACKAGE="perl-maketext-gettext"
VERSION="1.26"
CATEGORY="development"
SHORT_DESC="Perl gettext and Maketext frameworks"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL3"
DEPENDS="perl"
BUILD_DEPENDS="perl"
SOURCE="Locale-Maketext-Gettext"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="https://metacpan.org/dist/Locale-Maketext-Gettext"
WGET_URL="https://metacpan.org/CPAN/authors/id/I/IM/IMACAT/$TARBALL"

current_version()
{
	wget -O - $WEB_SITE 2>/dev/null | \
	sed '/release-name/!d;s|.*-v*||;s|<.*||;q'
}

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Makefile.PL
	make
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
}

