# SliTaz package receipt.

PACKAGE="xpra"
VERSION="0.8.7"
CATEGORY="network"
SHORT_DESC="screen for X."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.xz"
WEB_SITE="http://xpra.org/"
WGET_URL="${WEB_SITE}src/$TARBALL"

DEPENDS="python gtk+ pygtk pygobject x264 ffmpeg libvpx"
BUILD_DEPENDS="python-dev pkg-config gtk+-dev pygtk-dev pygobject-dev \
xorg-dev python-cython x264-dev ffmpeg-dev libvpx-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	python setup.py build &&
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs/
}
