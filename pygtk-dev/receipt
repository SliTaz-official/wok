# SliTaz package receipt.

PACKAGE="pygtk-dev"
VERSION="2.12.1"
CATEGORY="development"
SHORT_DESC="GTK+ for Python dev files"
MAINTAINER="erjo@slitaz.org"
DEPENDS="pygtk"
BUILD_DEPENDS="pygobject-dev pycairo-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.pygtk.org/"
WANTED="pygtk"


# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/lib 
	cp -a $_pkg/usr/lib/pkgconfig $fs/usr/lib
	cp -a $_pkg/usr/lib/pygtk $fs/usr/lib
	cp -a $_pkg/usr/include $fs/usr
	cp -a $_pkg/usr/bin/pygtk-demo* $fs/usr/bin
}

