# SliTaz package receipt.

PACKAGE="pygobject"
VERSION="2.20.0"
CATEGORY="development"
SHORT_DESC="Python bindings for the GObject library"
MAINTAINER="erjo@slitaz.org"
DEPENDS="python glib libffi libgio"
BUILD_DEPENDS="python python-dev pkg-config glib glib-dev libffi-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.pygtk.org/docs/pygobject/index.html"
WGET_URL="http://ftp.gnome.org/pub/GNOME/sources/pygobject/2.20/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/python2.5 $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}

