# SliTaz package receipt.

PACKAGE="mpg123"
VERSION="1.4.3"
CATEGORY="multimedia"
SHORT_DESC="Command line audi player and streamer"
MAINTAINER="pankso@slitaz.org"
DEPENDS="alsa-lib"
BUILD_DEPENDS="alsa-lib-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.mpg123.de/"
WGET_URL="http://www.mpg123.de/download/$TARBALL"
HANDBOOK_URL='http://www.slitaz.org/doc/handbook/multimedia.html#mpg123'

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--with-audio=alsa \
		--with-default-audio=alsa \
		--with-seektable=0 \
		$CONFIGURE_ARGS
	make
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/mpg123
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/lib/mpg123/*.so* $fs/usr/lib/mpg123
	cp -a $_pkg/usr/bin $fs/usr
}

