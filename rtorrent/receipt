# SliTaz package receipt.

PACKAGE="rtorrent"
VERSION="0.8.5"
CATEGORY="network"
SHORT_DESC="Ncurses based torrent client"
MAINTAINER="mimas@slitaz.org"
DEPENDS="ncurses libtorrent zlib"
BUILD_DEPENDS="ncurses-dev libtorrent-dev libtorrent"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://libtorrent.rakshasa.no/"
WGET_URL="http://libtorrent.rakshasa.no/downloads/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
	strip -s $fs/usr/bin/*
}

