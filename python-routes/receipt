TAGS="python"
HOST_ARCH="i486 arm"

DEPENDS="python"
BUILD_DEPENDS="python python-dev setuptools"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}

