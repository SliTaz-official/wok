# SliTaz package receipt.

PACKAGE="libtorrent-rasterbar-dev"
VERSION="0.16.13"
CATEGORY="development"
SHORT_DESC="devel files for libtorrent-rasterbar"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="BSD"
WEB_SITE="https://www.rasterbar.com/products/libtorrent/"
WANTED="libtorrent-rasterbar"

DEPENDS="libtorrent-rasterbar libboost-math-dev libboost-thread-dev \
libboost-filesystem-dev zlib-dev pkg-config"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/include $fs/usr
	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	cp -a $install/usr/lib/*.*a $fs/usr/lib
}

