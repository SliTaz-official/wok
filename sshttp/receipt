# SliTaz package receipt.

PACKAGE="sshttp"
VERSION="0-27"
CATEGORY="network"
SHORT_DESC="hiding a SSH server behind a HTTP server."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="https://github.com/stealth/$PACKAGE"
WGET_URL="$WEB_SITE/tarball/$PACKAGE-$VERSION"
BUILD_DEPENDS="wget libcap libcap-dev"
DEPENDS="libcap gcc-lib-base"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	make && cp README $WOK/$PACKAGE/description.txt
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/sbin
	cp -a $src/sshttpd $fs/usr/sbin
}

