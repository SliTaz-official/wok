# SliTaz package receipt.

PACKAGE="libiconv-dev"
VERSION="1.12"
CATEGORY="library"
SHORT_DESC="Conversion between Unicode and country dependent character encoding"
MAINTAINER="domcox@users.soureforge.net"
DEPENDS=""
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.gnu.org/software/libiconv"
WANTED="libiconv"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.*a $fs/usr/lib
	cp -a $_pkg/usr/include $fs/usr
}

