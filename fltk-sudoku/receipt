# SliTaz package receipt.

PACKAGE="fltk-sudoku"
VERSION="1.3.2"
CATEGORY="games"
SHORT_DESC="FLTK Sudoku game."
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="http://www.fltk.org/"
HOST_ARCH="i486 arm"

WANTED="fltk"
DEPENDS="fltk"

# Rules to configure and make the package.
compile_rules()
{
	cd ${src}/test &&
	[ -x ./sudoku ] || make sudoku
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/games $fs/usr/share/pixmaps
	cp -a ${src}/test/sudoku $fs/usr/games/$PACKAGE
	cp -a ${src}/test/desktop/sudoku-32.png \
		$fs/usr/pixmaps/share/$PACKAGE.png
}
