# SliTaz package receipt.

PACKAGE="fltk-sudoku"
VERSION="1.3.2"
CATEGORY="games"
SHORT_DESC="FLT Sudoku game."
WANTED="fltk"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="http://www.fltk.org/"
HOST_ARCH="i486 arm"

# Rules to configure and make the package.
compile_rules()
{
	cd ${src}/test &&
	[ -x ./sudoku ] || make sudoku
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/games $fs/usr/pixmaps
	cp -a ${src}/test/editor $fs/usr/games/$PACKAGE
	cp -a ${src}/test/desktop/sudoku-128.png $fs/usr/pixmaps/$PACKAGE.png
}
