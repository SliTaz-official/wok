# SliTaz package receipt.

PACKAGE="evas-dev"
VERSION="1.7.6"
CATEGORY="development"
SHORT_DESC="E17 Evas devel files."
MAINTAINER="pankso@slitaz.org"
WANTED="evas"
WEB_SITE="http://www.enlightenment.org/"

DEPENDS="eet-dev expat-dev fontconfig-dev freetype-dev fribidi-dev
giflib-dev libpng-dev libxml2-dev tiff-dev"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/include $fs/usr
	cp -a $install/usr/lib/*.*a $fs/usr/lib
	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	cp -a $install/usr/lib/evas $fs/usr/lib
	rm -rf $fs/usr/lib/evas/modules/*/*/*/*.so
}
