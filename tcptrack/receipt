# SliTaz package receipt.

PACKAGE="tcptrack"
VERSION="1.4.2"
CATEGORY="network"
SHORT_DESC="TCP connection tracker."
MAINTAINER="paul@slitaz.org"
LICENSE="GPL2.1"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://freecode.com/projects/tcptrack"
WGET_URL="http://pkgs.fedoraproject.org/repo/pkgs/tcptrack/tcptrack-1.4.2.tar.gz/dacf71a6b5310caf1203a2171b598610/$TARBALL"

DEPENDS="ncurses libpcap"
BUILD_DEPENDS="ncurses-dev libpcap-dev"

# Rules to configure and make the package.
compile_rules()
{
	export LDFLAGS="$LDFLAGS -ltinfo"
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
}
