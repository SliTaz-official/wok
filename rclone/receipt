# SliTaz package receipt.

PACKAGE="rclone"
VERSION="1.35"
CATEGORY="system-tools"
SHORT_DESC="Cmdline tool to sync clound storage to local folder"
MAINTAINER="pankso@slitaz.org"
LICENSE="BSD"
TARBALL="$PACKAGE-v${VERSION}-linux-386.zip"
WEB_SITE="http://rclone.org/"
WGET_URL="http://downloads.rclone.org/$TARBALL"

DEPENDS="rsync"

# Rules to configure and make the package.
compile_rules()
{
	echo "Precompiled binary..."
	mkdir -p $install/usr/bin
	cp $src/rclone $install/usr/bin
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
}
