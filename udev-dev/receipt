# SliTaz package receipt.

PACKAGE="udev-dev"
VERSION="122"
CATEGORY="development"
SHORT_DESC="Udev devel file (volume_id)."
MAINTAINER="pankso@slitaz.org"
WANTED="udev"
WEB_SITE="http://www.kernel.org/pub/linux/utils/kernel/hotplug/udev.html"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/lib $fs/usr/lib/pkgconfig $fs/usr/include

	# Extra
	cp -a $src/extras/volume_id/lib/libvolume_id.a \
		$fs/lib
	cp -a $src/extras/volume_id/lib/libvolume_id.pc \
		$fs/usr/lib/pkgconfig
	cp -a $src/extras/volume_id/lib/libvolume_id.h \
		$fs/usr/include
}
