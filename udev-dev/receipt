# SliTaz package receipt.

PACKAGE="udev-dev"
VERSION="156"
CATEGORY="development"
SHORT_DESC="Udev devel file (libudev + libgudev)."
MAINTAINER="pankso@slitaz.org"
WANTED="udev"
WEB_SITE="http://www.kernel.org/pub/linux/utils/kernel/hotplug/udev.html"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/lib $fs/usr/lib/pkgconfig
	cp -a $_pkg/lib/*.a $fs/lib
	cp -a $_pkg/lib/pkgconfig/* $fs/usr/lib/pkgconfig
	cp -a $_pkg/usr/share/pkgconfig/* $fs/usr/lib/pkgconfig
	cp -a $_pkg/usr/include $fs/usr
}
