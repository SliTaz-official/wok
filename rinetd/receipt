# SliTaz package receipt.

PACKAGE="rinetd"
VERSION="0.62"
CATEGORY="network"
SHORT_DESC="internet ''redirection server''."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE.tar.gz"
WEB_SITE="https://github.com/boutell/rinetd"
WGET_URL="http://www.boutell.com/rinetd/http/$TARBALL"

# What is the latest version available today?
current_version()
{
	wget -O - https://raw.githubusercontent.com/boutell/rinetd/master/CHANGES 2>/dev/null | \
	sed '/^Version /!d;s|.*ersion ||;s|:.*||' | sort -Vr | sed q
}

# Rules to configure and make the package.
compile_rules()
{
	make
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/sbin
	cp -a $src/rinetd $fs/usr/sbin
}

