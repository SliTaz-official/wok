# SliTaz package receipt.

PACKAGE="go-sources"
VERSION="1.2.1"
CATEGORY="development"
SHORT_DESC="The Go programming language - Sources files."
MAINTAINER="domcox@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.golang.org"
WANTED="go"
TAGS="go"

DEPENDS="go"
BUILD_DEPENDS=""


# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/go/src
	cp -a $src/src/pkg $fs/usr/lib/go/src
	cp -a $src/src/cmd $fs/usr/lib/go/src
	cp -a $src/src/lib9 $fs/usr/lib/go/src
	cp -a $src/src/*.bash $fs/usr/lib/go/src
	cp -a $src/test $fs/usr/lib/go

	mkdir -p $fs/usr/lib/misc
	cp -a $src/misc/cgo $fs/usr/lib/go/misc
}

post_install()
{
	cd /tmp
   /bin/bash /usr/lib/go/src/run.bash --no-rebuild
}
