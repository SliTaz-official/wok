# SliTaz package receipt.

PACKAGE="perl-http-date"
VERSION="6.01"
CATEGORY="development"
SHORT_DESC="HTTP date conversion routines"
MAINTAINER="erjo@slitaz.org"
DEPENDS="perl-datetime-locale"
BUILD_DEPENDS="perl $DEPENDS"
SOURCE="HTTP-Date"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://search.cpan.org/~gaas/HTTP-Message-6.03/"
WGET_URL="http://www.cpan.org/authors/id/G/GA/GAAS/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Makefile.PL &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
}
