#!/bin/sh
# /etc/init.d/motion: Start, stop and restart Motion daemon on SliTaz,
# at boot time or with the command line. Daemons options are configured
# with /etc/daemons.conf
#
. /etc/init.d/rc.functions

NAME=Motion
DESC="$(_ 'Video detection daemon')"
DAEMON=/usr/bin/motion
PIDFILE=/run/motion/motion.pid

case "$1" in
	(start)
		if active_pidfile $PIDFILE motion
		  then
			_ '%s is already running.' $NAME
			exit 1
		fi
		action 'Starting %s: %s...' "$DESC" $NAME
		mkdir -p $(dirname $PIDFILE)
		$DAEMON -p $PIDFILE
		status
		;;
	(stop)
		if ! active_pidfile $PIDFILE motion
		  then
			_ '%s is not running.' $NAME
			exit 1
		fi
		action 'Stopping %s: %s...' "$DESC" $NAME
		kill $(cat $PIDFILE)
		rm $PIDFILE
		status
		;;
	(restart)
		if ! active_pidfile $PIDFILE motion
		  then
			echo "$NAME is not running."
			exit 1
		fi
		_ 'Restarting %s: %s...' "$DESC" $NAME
		kill $(cat $PIDFILE)
		rm $PIDFILE
		sleep 2
		$DAEMON -p $PIDFILE
		status
		;;
	(*)
		emsg "<n><b>$(_ 'Usage:')</b> $0 [start|stop|restart]"
		newline
		exit 1
		;;
esac

exit 0
