# SliTaz package receipt.

PACKAGE="motion"
VERSION="3.2.12"
CATEGORY="multimedia"
SHORT_DESC="Motion is a program that monitors the video signal from cameras."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.lavrsen.dk/foswiki/bin/view/Motion"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

DEPENDS="libpthread-stubs jpeg libv4l"
BUILD_DEPENDS="libpthread-stubs jpeg-dev libv4l-dev"
#ffmpeg --> breaks build

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	sed -i 's@<linux/videodev.h>@<libv4l1.h>\n#include <linux/videodev2.h>@' *.c *.h
	./configure \
		--sysconfdir=/etc/motion &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/etc/motion $fs/usr
	cp -a $install/usr/bin $fs/usr
	cp -a $stuff/motion.conf $fs/etc/motion
	cp -a $stuff/init.d $fs/etc
	chmod 0644 $fs/etc/motion/*
}
