# SliTaz package receipt.

PACKAGE="audacious-plugins"
VERSION="1.5.1"
CATEGORY="multimedia"
SHORT_DESC="Plugins for audacious music player"
MAINTAINER="mimas@slitaz.org"
DEPENDS="audacious neon libogg libvorbis alsa-lib lame flac"
BUILD_DEPENDS="audacious-dev neon flac-dev libogg-dev libvorbis-dev alsa-lib-dev lame-dev"
TARBALL="$PACKAGE-$VERSION.tbz2"
WEB_SITE="http://audacious-media-player.org/"
WGET_URL="http://distfiles.atheme.org/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		--disable-sse2 \
		$CONFIGURE_ARGS
	make
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/locale
	cp -a $_pkg/usr/lib $fs/usr
	cp -a $_pkg/usr/share/audacious $fs/usr/share
	cp -a $_pkg/usr/share/locale/fr $fs/usr/share/locale
}

