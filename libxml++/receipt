# SliTaz package receipt.

PACKAGE="libxml++"
VERSION="2.24.3"
CATEGORY="system-tools"
SHORT_DESC="C++ wrapper for the libxml XML parser library."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://libxmlplusplus.sourceforge.net/"
WGET_URL="http://ftp.gnome.org/pub/GNOME/sources/libxml++/2.24/$TARBALL"
DEPENDS="glibmm libsigc++ libxml2 zlib gcc-lib-base"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}

