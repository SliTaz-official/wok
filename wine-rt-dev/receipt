# SliTaz package receipt.

PACKAGE="wine-rt-dev"
VERSION="1.7.16"
CATEGORY="system-tools"
SHORT_DESC="Windows API for Linux development files."
MAINTAINER="xj@wp.pl"
LICENSE="LGPL2.1"
WEB_SITE="http://www.winehq.org/"
WANTED="wine-rt"
PROVIDE="wine-dev"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/wine $fs/usr/share
	cp -a $install/usr/include $fs/usr
	cp -a $install/usr/lib/wine/*.a $fs/usr/lib/wine
	cp -a $install/usr/lib/wine/*.def* $fs/usr/lib/wine		
}
