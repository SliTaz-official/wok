# SliTaz package receipt.

PACKAGE="evas"
VERSION="1.7.6"
CATEGORY="x-window"
SHORT_DESC="Enlightenment's hardware-accelerated retained canvas API"
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.enlightenment.org/"
WGET_URL="http://download.enlightenment.org/releases/$TARBALL"

DEPENDS="eina eet libxml2"
BUILD_DEPENDS="eina-dev eet-dev libpng-dev jpeg-dev expat-dev libxml2-dev \
freetype-dev"

# Rules to configure and make the package.
compile_rules()
{
	CFLAGS="$CFLAGS -fvisibility=hidden"
	LDFLAGS="$LDFLAGS -fvisibility=hidden"
	export LDFLAGS
	./configure \
		--disable-doc \
		--disable-install-examples \
		--enable-cpu-c \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/*.so* $fs/usr/lib
	cp -a $install/usr/lib/evas $fs/usr/lib
	rm -rf $fs/usr/lib/evas/modules/*/*/*/*.*a
}
