# SliTaz package receipt.

PACKAGE="pam-dev"
VERSION="1.0.3"
CATEGORY="development"
SHORT_DESC="Pluggable Authentication Modules, development files."
MAINTAINER="pascal.bellard@slitaz.org"
WANTED="pam"
WEB_SITE="http://www.us.kernel.org/pub/linux/libs/$PACKAGE/"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/lib $fs/usr
	cp -a $_pkg/usr/include $fs/usr
	ln -s security $fs/usr/include/pam
	cp -a $_pkg/lib/*a $fs/lib
	cp -a $_pkg/lib/security/*a $fs/lib
}
