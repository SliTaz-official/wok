# SliTaz package receipt.

PACKAGE="audacious"
VERSION="1.5.1"
CATEGORY="multimedia"
SHORT_DESC="Music player like xmms"
MAINTAINER="mimas@slitaz.org"
DEPENDS="gtk+ libmowgli libmcs dbus"
BUILD_DEPENDS="gtk+-dev libmowgli-dev libmcs-dev dbus-dev"
TARBALL="$PACKAGE-$VERSION.tbz2"
WEB_SITE="http://audacious-media-player.org/"
WGET_URL="http://distfiles.atheme.org/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		--disable-sse2 \
		$CONFIGURE_ARGS
	make
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share $fs/usr/lib
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib/
	cp -a $_pkg/usr/share/audacious $fs/usr/share
}

