# SliTaz package receipt.

PACKAGE="e2fsprogs"
VERSION="1.40.5"
CATEGORY="base-system"
SHORT_DESC="Filesystem utilities for use with ext2 and ext3."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://e2fsprogs.sourceforge.net/"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--with-root-prefix="" \
		--enable-elf-shlibs \
		--disable-evms \
		--sysconfdir=/etc \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS
	make
	make DESTDIR=$PWD/_pkg install
	make DESTDIR=$PWD/_pkg install-libs
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/etc $fs/usr/lib $fs/usr/share
	cp -a $_pkg/sbin $fs
	cp -a $_pkg/lib $fs
	cp -a $_pkg/etc/*.conf $fs/etc
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/sbin $fs/usr
	cp -ad $_pkg/usr/lib/*.so $fs/usr/lib
	cp -a $_pkg/usr/share/et $fs/usr/share
	cp -a $_pkg/usr/share/ss $fs/usr/share
	
	# Remove fsck provided by Busybox.
	rm -rf $fs/sbin/fsck*
}
