# SliTaz package receipt.

PACKAGE="opal"
VERSION="3.4.1"
CATEGORY="network"
SHORT_DESC="Open Phone Abstraction library."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.ekiga.org/"
WGET_URL="$WEB_SITE/admin/downloads/latest/sources/sources/$TARBALL"
BUILD_DEPENDS="ptlib ptlib-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --bindir=/bin \
	--libexecdir=/usr/bin --mandir=/usr/share/man \
	$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}


# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
	rm -f $fs/usr/lib/*.a
}

