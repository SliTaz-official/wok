# SliTaz package receipt.

PACKAGE="seamonkey-official"
VERSION="2.46"
CATEGORY="network"
SHORT_DESC="Official Seamonkey build by the seamonkey-project (English language)"
MAINTAINER="mojo@slitaz.org"
LICENSE="MPL2"
WEB_SITE="https://www.seamonkey-project.org"
TARBALL="seamonkey-$VERSION.tar.bz2"
WGET_URL="https://archive.mozilla.org/pub/seamonkey/releases/$VERSION/linux-i686/en-US/$TARBALL"
TAGS="web-browser"
HOST_ARCH="i486"

DEPENDS="gtk+ glib jpeg xorg-libX11 libIDL alsa-lib xorg-libXt curl libnotify \
libevent libvpx"

# Rules to configure and make the package.
compile_rules()
{
	# Installation path
	fx='/opt/seamonkey'

	mkdir -p \
		$install$fx \
		$install/usr/bin \
		$install/usr/share/applications \
		$install/usr/share/pixmaps 

	# Copy everything
	cp -a $src/* $install$fx

	# Executable
	ln -s $fx/seamonkey $install/usr/bin/seamonkey-official

	# Allow user updates (save user's and our traffic)
	chmod -R a+w $install$fx
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs
}
