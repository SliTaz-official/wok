HOST_ARCH="any"

compile_rules()
{
	[ -d $src ] || mkdir $src
	for i in *
	  do
		case "$i" in
		receipt|taz|process.log|$(basename $src));;
		*) mv -f $i $src;;
		esac
	  done
	[ -e $PACKAGE-$VERSION ] || ln -s $(basename $src) $PACKAGE-$VERSION
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/squirrelmail/locale
}

clean_wok()
{
	rm -f $PACKAGE-$VERSION
}
