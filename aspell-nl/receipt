# SliTaz package receipt.

PACKAGE="aspell-nl"
VERSION="0.50.2"
CATEGORY="system-tools"
SHORT_DESC="Dutch aspell dictionary."
MAINTAINER="paul@slitaz.org"
LICENSE="GPL"
WEB_SITE="ftp://ftp.gnu.org/gnu/aspell/dict/0index.html"

TARBALL="$SOURCE-${VERSION%.*}-${VERSION##*.}.tar.bz2"
WGET_URL="ftp://ftp.gnu.org/gnu/aspell/dict/nl/$TARBALL"

DEPENDS="aspell"
BUILD_DEPENDS="aspell aspell-dev"

# What is the latest version available today?
current_version()
{
	wget -O - $WEB_SITE 2>/dev/null | \
	sed "/$PACKAGE/!d;s|.*$PACKAGE-\\(.*\\).tar.*\".*|\\1|;q" 
}

# Rules to configure and make the package.
compile_rules()
{
	./configure &&
	make &&
	make install DESTDIR=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_folders	lib
}
