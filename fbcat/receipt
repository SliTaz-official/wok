# SliTaz package receipt.

PACKAGE="fbcat"
VERSION="0.3"
CATEGORY="misc"
SHORT_DESC="Takes a screenshot using the framebuffer device."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://jwilk.net/software/fbcat"
WGET_URL="https://$PACKAGE.googlecode.com/files/$TARBALL"
HOST_ARCH="i486 arm"

SUGGESTED="imagemagick"
BUILD_DEPENDS="wget"

# Rules to configure and make the package.
compile_rules()
{
	make
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $src/fbcat $fs/usr/bin
	cp -a $src/fbgrab $fs/usr/bin
}
