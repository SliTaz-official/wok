# SliTaz package receipt.

PACKAGE="python-notify"
VERSION="0.1.1"
CATEGORY="development"
SHORT_DESC="Python bindings for libnotify."
MAINTAINER="slaxemulator@gmail.com"
DEPENDS="libnotify pygtk"
BUILD_DEPENDS="libnotify-dev pygtk-dev python-dev pkg-config"
SOURCE="notify-python"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://www.galago-project.org/"
WGET_URL="http://www.galago-project.org/files/releases/source/$SOURCE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $_pkg/usr $fs
}

