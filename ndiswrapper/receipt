WGET_URL="$SF_MIRROR/$PACKAGE/stable/$VERSION/$TARBALL"
TAGS="windows wireless network"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/sbin $fs/sbin 
}
