# SliTaz package receipt.

PACKAGE="razorqt-runner"
VERSION="0.5.0"
CATEGORY="x-window"
SHORT_DESC="Razor-qt quick launch and runner application."
MAINTAINER="pankso@slitaz.org"
WANTED="razorqt"
WEB_SITE="http://razor-qt.org/"

DEPENDS="razorqt"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/etc/xdg/autostart $fs/usr/share/razor
	cp -a $install/usr/bin/razor-runner $fs/usr/bin
	cp -a $install/etc/xdg/autostart/razor-runner.desktop \
		$fs/etc/xdg/autostart
	cp -a $install/usr/share/razor/razor-runner \
		$fs/usr/share/razor
}
