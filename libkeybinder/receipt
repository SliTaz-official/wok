# SliTaz package receipt.

PACKAGE="libkeybinder"
VERSION="0.3.0"
CATEGORY="x-window"
SHORT_DESC="Library for registering global keyboard shortcuts"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/kupferlauncher/keybinder"
SOURCE="keybinder"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="http://kaizer.se/publicfiles/$SOURCE/$TARBALL"

DEPENDS="gtk+"
BUILD_DEPENDS="gtk+-dev gobject-introspection-dev xorg-libXext-dev python-dev \
pygtk-dev pygobject-dev automake autoconf libtool lua5.1-dev"

# Rules to configure and make the package.
compile_rules()
{
	autoreconf -vif &&
	./configure \
		--with-lua-suffix=5.1 \
		--with-lua-includes=/usr/include/lua/5.1 \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/*so* $fs/usr/lib
	cp -a $install/usr/lib/python* $fs/usr/lib
}

