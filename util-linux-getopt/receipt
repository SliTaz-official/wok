# SliTaz package receipt.

PACKAGE="util-linux-getopt"
VERSION="2.24"
CATEGORY="base-system"
SHORT_DESC="The getopt utility from Util linux NG."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WANTED="util-linux"
WEB_SITE="http://kernel.org/~kzak/util-linux/"
HOST_ARCH="i486 arm"

DEPENDS="glibc-base"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/share
	cp -a $install/usr/bin/getopt $fs/usr/bin
	cp -a $install/usr/share/doc/util-linux/getopt $fs/usr/share
}
