# SliTaz package receipt.

PACKAGE="liblouis-dev"
VERSION="3.9.0"
CATEGORY="utilities"
LICENSE="GPL3"
SHORT_DESC="Open-source braille translator and back-translator, development files."
MAINTAINER="yuripourre@gmail.com"
WEB_SITE="http://liblouis.org/"

WANTED="liblouis"
DEPENDS="liblouis pkg-config"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/include

	cp -a $install/usr/lib/*.la		$fs/usr/lib
	cp -a $install/usr/lib/pkgconfig	$fs/usr/lib
	cp -a $install/usr/include/*		$fs/usr/include
}
