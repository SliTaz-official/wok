# SliTaz package receipt.

PACKAGE="enna"
VERSION="v0.4.1"
CATEGORY="multimedia"
SHORT_DESC="Enna media center."
MAINTAINER="pankso@slitaz.org"
DEPENDS="eet evas ecore edje eina libplayer libvalhalla libcurl efreet \
lirc libcddb edbus sqlite libtasn1 libxdg-basedir libxml2 udev"
BUILD_DEPENDS="curl mercurial automake"
WEB_SITE="http://enna.geexbox.org/"
WGET_URL="mercurial|http://hg.geexbox.org/enna"
BRANCH="$VERSION"
TAGS="images music video e17"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./autogen.sh &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/share/enna $fs/usr/share
}

post_install()
{
	for f in $(find /usr/lib/ -name "*ver-svn-05*" ! -path */enlightenment/*); do 
		ln -s $f $(echo $f|sed s/-05/-03/); 
	done	
}
