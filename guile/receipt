# SliTaz package receipt.

PACKAGE="guile"
VERSION="1.8.7"
CATEGORY="development"
SHORT_DESC="Project GNU's extension language."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
DEPENDS="gmp libtool readline ncurses"
WEB_SITE="http://www.gnu.org/software/guile/"
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	
	# http://bugs.gentoo.org/show_bug.cgi?id=317175 	
	patch -p1 < ../stuff/guile-1.8.7-gcc45.u || exit 1
	
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/share/guile $fs/usr/share
}
