# SliTaz package receipt.

PACKAGE="leocad-pieces"
VERSION="3934"
CATEGORY="games"
SHORT_DESC="Pieces library for LeoCAD."
MAINTAINER="rcx@zoominternet.net"
SOURCE="pieces"
TARBALL="$SOURCE-$VERSION.zip"
WEB_SITE="http://www.leocad.org/"
WGET_URL="http://leocad.googlecode.com/files/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	mkdir -p $DESTDIR/usr/share/leocad
	cp -dp $src/* $DESTDIR/usr/share/leocad
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs
	cp -a $_pkg/* $fs
}
