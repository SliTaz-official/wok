# SliTaz package receipt.

PACKAGE="libboost-system-dev"
LIB_NAME="system"
VERSION="1.50.0"

CATEGORY="development"
SHORT_DESC="Part of the Boost C++ Libraries collection."
MAINTAINER="chadi.elahmad@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.boost.org/"

DEPENDS="libboost-system libboost-dev"
WANTED="libboost-dev"
SOURCE="boost"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/include/$SOURCE
	cp -a $install/usr/include/$SOURCE/$LIB_NAME $fs/usr/include/$SOURCE
	cp -a $install/usr/lib/*_${LIB_NAME}*.*a $fs/usr/lib
}
