# SliTaz package receipt.

PACKAGE="libgee"
VERSION="0.9.92"
CATEGORY="x-window"
SHORT_DESC="GObject collection library."
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://live.gnome.org/Libgee"
TARBALL="$PACKAGE-$VERSION.tar.xz"
SERIES="$(echo $VERSION | cut -d. -f1,2)"
WGET_URL="$GNOME_MIRROR/$PACKAGE/$SERIES/$TARBALL"

DEPENDS="glib libffi"
BUILD_DEPENDS="bash vala gobject-introspection-dev sed glib-dev libffi-dev sed"

# Rules to configure and make the package.
compile_rules() 
{
	sed -i 's|Func get_value|Func<V> get_value|' gee/gee-0.8.vapi
	./configure \
		--enable-introspection=yes \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}
