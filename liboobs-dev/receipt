# SliTaz package receipt.

PACKAGE="liboobs-dev"
VERSION="2.32.0"
CATEGORY="development"
SHORT_DESC="Development files for liboobs"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://developer.gnome.org/liboobs/stable"

WANTED="liboobs"
DEPENDS="liboobs glib-dev dbus-dev"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/include $fs/usr
	cp -a $install/usr/lib/*.*a $install/usr/lib/pkgconfig $fs/usr/lib
}
