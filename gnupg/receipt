# SliTaz package receipt.

PACKAGE="gnupg"
VERSION="2.2.8"
CATEGORY="security"
SHORT_DESC="Free implementation of the OpenPGP."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://www.gnupg.org/"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://www.gnupg.org/ftp/gcrypt/gnupg/$TARBALL"

DEPENDS="bzlib libassuan libcurl libgcrypt libksba libusb-compat ncurses pth \
readline pinentry gnutls libusb sqlite openldap npth"
BUILD_DEPENDS="libgpg-error-dev libassuan-dev libgcrypt-dev libksba-dev \
pth-dev curl-dev zlib-dev libusb-compat-dev readline-dev gnutls-dev libusb-dev sqlite-dev openldap-dev npth-dev"

# Rules to configure and make the package.
compile_rules()
{
	# Integrity check: https://www.gnupg.org/download/integrity_check.html
	echo "d87553a125832ea90e8aeb3ceeecf24f88de56fb  $SRC/$TARBALL" | sha1sum -c || exit 1

    export LDFLAGS="-lrt"
	./configure $CONFIGURE_ARGS --prefix=/usr --sysconfdir=/etc --sbindir=/usr/bin --libexecdir=/usr/lib/gnupg && make && make install

	find $install/usr/share/man -type f -exec gzip -9 \{\} \;
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs
	ln -sf gpg2 $fs/usr/bin/gpg
	rm -r $fs/usr/share/doc $fs/usr/share/info $fs/usr/share/locale
}
