# SliTaz package receipt.

PACKAGE="perl-authen-sasl"
VERSION="2.11"
CATEGORY="development"
SHORT_DESC="Authen::SASL module is a Perl extension."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
DEPENDS="perl perl-digest-hmac perl-gssapi"
BUILD_DEPENDS="perl perl-digest-hmac perl-gssapi"
SOURCE="Authen-SASL"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://cpan.org/"
WGET_URL="https://metacpan.org/CPAN/authors/id/G/GB/GBARR/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Makefile.PL &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
}

