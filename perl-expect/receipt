# SliTaz package receipt.

PACKAGE="perl-expect"
VERSION="1.35"
CATEGORY="development"
SHORT_DESC="Perl extension Expect."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Expect"

SOURCE="Expect"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="https://www.cpan.org/modules/by-module/Expect/$TARBALL"

SUGGESTED="perl-io-stty"
DEPENDS="perl-io-tty"
BUILD_DEPENDS="perl-io-tty"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make &&
	make install DESTDIR=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib	$fs/usr
}
