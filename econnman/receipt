# SliTaz package receipt.

PACKAGE="econnman"
VERSION="1.0.0"
CATEGORY="base-system"
SHORT_DESC="ConnMan user interface for Enlightenment."
MAINTAINER="domcox@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.enlightenment.org/"
WGET_URL="http://download.enlightenment.org/releases/$TARBALL"
TAGS="e enlightenment network"

DEPENDS="connman python-elementary python-edbus python-ecore python-edje"
BUILD_DEPENDS="python-elementary-dev python-edbus-dev
git autoconf automake libtool"

# Rules to configure and make the package.
compile_rules()
{
	./autogen.sh &&
	./configure --prefix=/usr &&
	make && make DESTDIR="$install" install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs
}
