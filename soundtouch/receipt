# SliTaz package receipt.

PACKAGE="soundtouch"
VERSION="2.1.2"
CATEGORY="multimedia"
SHORT_DESC="An audio processing library."
MAINTAINER="slaxemulator@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://www.surina.net/soundtouch/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://gitlab.com/$PACKAGE/$PACKAGE/-/archive/$VERSION/$TARBALL"

DEPENDS="gcc-lib-base"
BUILD_DEPENDS="automake libtool"

# Rules to configure and make the package.
compile_rules()
{
#	sed -i 's|/doc/|/share&|' Makefile*
#	patch -Np1 -i $stuff/$PACKAGE-1.4.0-mmx-sse-compile-fix.patch

	./bootstrap &&
	./configure		\
		--prefix=/usr	\
		--enable-shared	\
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib

	cp -a $install/usr/bin		$fs/usr
	cp -a $install/usr/lib/*.so*	$fs/usr/lib
}
