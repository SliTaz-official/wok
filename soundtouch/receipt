# SliTaz package receipt.

PACKAGE="soundtouch"
VERSION="1.5.0"
CATEGORY="multimedia"
SHORT_DESC="An audio processing library"
MAINTAINER="slaxemulator@gmail.com"
WEB_SITE="http://www.surina.net/soundtouch/"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/$TARBALL"
DEPENDS="gcc-lib-base"
BUILD_DEPENDS="libtool"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	patch -Np1 -i $stuff/$PACKAGE-1.4.0-mmx-sse-compile-fix.patch
	./configure --enable-shared $CONFIGURE_ARGS && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}
