# SliTaz package receipt.

PACKAGE="xorg-libXft-dev"
VERSION="2.3.1"
CATEGORY="development"
SHORT_DESC="Development files for libXft"
MAINTAINER="pankso@slitaz.org"
LICENSE="other"
WEB_SITE="https://www.x.org/"
HOST_ARCH="i486 arm"

WANTED="xorg-libXft"
DEPENDS="xorg-libXft xorg-libXrender-dev fontconfig-dev freetype-dev pkg-config"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p \
		$fs/usr/share/licenses \
		$fs/usr/lib
	cp -a $src/COPYING $fs/usr/share/licenses/${PACKAGE%-dev}.txt

	cp -a $install/usr/include $fs/usr
	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	cp -a $install/usr/lib/*.la $fs/usr/lib
}
