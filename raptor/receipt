# SliTaz package receipt.

PACKAGE="raptor"
VERSION="1.4.21"
CATEGORY="multimedia"
MAINTAINER="jozee@slitaz.org"
SHORT_DESC="A C library that parses RDF/XML/N-Triples into RDF triples"
BUILD_DEPENDS=" libxml2-dev  curl-dev  zlib-dev  openssl-dev  libxslt-dev "
WEB_SITE="http://librdf.org/raptor"
DEPENDS="libxml2 curl zlib openssl libxslt"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://librdf.org/dist/source/$TARBALL"

# Rules to configure and make the package.

compile_rules() {
  cd $src
  ./configure --prefix=/usr --disable-static &&
  make &&
  make prefix=$PWD/_pkg/usr install 
}
	
# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib 
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*so* $fs/usr/lib/	
}
