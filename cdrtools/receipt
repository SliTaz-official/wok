# SliTaz package receipt.

PACKAGE="cdrtools"
VERSION="3.00"
CATEGORY="multimedia"
SHORT_DESC="Command line programs to record CD/DVD/BluRay media."
MAINTAINER="paul@slitaz.org"
LICENSE="GPL2 LGPL2.1"
WEB_SITE="http://cdrecord.berlios.de/private/cdrecord.html"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="ftp://ftp.berlios.de/pub/cdrecord/$TARBALL"

DEPENDS=""

# Rules to configure and make the package.
compile_rules()
{
	# hack makefile
	cd $src/DEFAULTS
	sed -i 's/DEFINSGRP=	bin/DEFINSGRP=	root/' Defaults.linux
	cd ..
	sed -i 's|uname -m|echo i686|' RULES/*
	{
		./configure
		make && make DESTDIR=$DESTDIR install
	} 2>&1 | sed 's/: No such/:  no such/'

	mkdir -p $install/usr
	mv $install/opt/schily/* $install/usr
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share
	cp -a $install/etc $fs
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/sbin $fs/usr
	cp -a $install/usr/lib/siconv $fs/usr/lib
	cp -a $install/usr/share/doc $fs/usr/share
}
