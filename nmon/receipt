# SliTaz package receipt
PACKAGE="nmon"
VERSION="14g"
CATEGORY="system-tools"
SHORT_DESC="Nigel's performance Monitor."
MAINTAINER="meshca@clarkson.edu"
TARBALL="lmon$VERSION.c"
LICENSE="GPL3"
WEB_SITE="http://nmon.sourceforge.net/"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

DEPENDS="ncurses"
BUILD_DEPENDS="linux-api-headers ncurses-dev"

# Rules to configure and make the package.
compile_rules()
{
	cc -o nmon lmon$VERSION.c -g -O2 -D JFS -D GETUSER -Wall -D LARGEMEM \
		-lncurses -ltinfo -g -D POWER
}
					
# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin/
	cp -a $src/nmon $fs/usr/bin/nmon
}
