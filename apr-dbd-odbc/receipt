# SliTaz package receipt.

PACKAGE="apr-dbd-odbc"
VERSION="1.6.1"
CATEGORY="development"
SHORT_DESC="APR Library Utilities ODBC DBD driver."
MAINTAINER="erjo@slitaz.org"
LICENSE="Apache"
WEB_SITE="https://apr.apache.org"

DEPENDS="apr-util libunixODBC"
WANTED="apr-util"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/apr-util-1
	cp -a $install/usr/lib/apr-util-1/*odbc*.so $fs/usr/lib/apr-util-1
}
