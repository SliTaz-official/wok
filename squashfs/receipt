# SliTaz package receipt.

PACKAGE="squashfs"
VERSION="4.0"
CATEGORY="base-system"
SHORT_DESC="Linux squashfs userland tools."
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://$PACKAGE.sourceforge.net/"
TARBALL="squashfs$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"
DEPENDS="zlib linux-squashfs"
BUILD_DEPENDS="zlib-dev"
PROVIDE="cromfs-or-squashfs"

# Rules to configure and make the package.
compile_rules()
{
	mv ${PACKAGE}${VERSION} $src 2> /dev/null

	cd $src/squashfs-tools
	mkdir -p ../_pkg/usr/sbin ../_pkg/sbin
	if [ ! -d ../LZMA/lzma465 ]; then
		SF_MIRROR=http://switch.dl.sourceforge.net/sourceforge
		[ -s lzma465.tar.bz2 ] || 
		wget $SF_MIRROR/sevenzip/lzma465.tar.bz2
		mkdir -p ../LZMA/lzma465
		tar xjf lzma465.tar.bz2 -C ../LZMA/lzma465
	fi
	if [ ! -f lzma_wrapper.c ]; then
		patch -p2 -i ../../stuff/lzma.u
	fi
	make || return 1
	cp mksquashfs ../_pkg/usr/sbin
	cp unsquashfs ../_pkg/sbin
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $_pkg/usr $_pkg/sbin $fs
}
