# SliTaz package receipt.

PACKAGE="libplist"
VERSION="1.3"
CATEGORY="multimedia"
SHORT_DESC="A library to handle Apple Property List format whereas it's binary or XMl"
MAINTAINER="slaxemulator@gmail.com"
DEPENDS="glib libxml2"
BUILD_DEPENDS="libxml2-dev glib-dev cmake python python-dev "
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://libimobiledevice.org/"
WGET_URL="http://cloud.github.com/downloads/JonathanBeck/$PACKAGE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	mkdir build
	cd build
	cmake ../ -DCMAKE_INSTALL_PREFIX:PATH=/usr
	make && make DESTDIR=$PWD/../_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib 
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib/
	cp -a $_pkg/usr/bin $fs/usr
}
