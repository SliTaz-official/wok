# SliTaz package receipt.

PACKAGE="openvas-administrator"
VERSION="0.4.0"
CATEGORY="network"
SHORT_DESC="Network security scanner (administrator)."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.openvas.org/"
WGET_URL="http://wald.intevation.org/frs/download.php/686/$TARBALL"
DEPENDS="openvas-libraries"
BUILD_DEPENDS="libpcap openvas-libraries-dev openvas-libraries gnutls-dev cmake glib-dev"
CONFIG_FILES="/etc/openvas"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DSYSCONF_INSTALL_DIR=/etc \
		-DLOCALSTATEDIR=/var
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/etc $fs
	cp -a $_pkg/usr/bin $fs/usr
}

