# SliTaz package receipt.

PACKAGE="qemu-ppc"
VERSION="0.13.0"
CATEGORY="misc"
SHORT_DESC="General-purpose full virtualizer for PowerPC hardware."
MAINTAINER="erjo@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.nongnu.org/qemu/"
DEPENDS="qemu"
TAGS="virtualization"
WANTED="qemu"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/share/qemu
	
	cp -a $_pkg/usr/bin/qemu-*${PACKAGE#qemu-} $fs/usr/bin
	cp -a $_pkg/usr/share/qemu/*${PACKAGE#qemu-}* $fs/usr/share/qemu
}



