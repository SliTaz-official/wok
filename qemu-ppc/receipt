# SliTaz package receipt.

PACKAGE="qemu-ppc"
VERSION="1.2.0"
CATEGORY="misc"
SHORT_DESC="General-purpose full virtualizer for PowerPC hardware."
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://qemu.org"
TAGS="virtualization"
WANTED="qemu"

DEPENDS="qemu"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/share/qemu
	cp -a $install/usr/bin/qemu-*${PACKAGE#qemu-} $fs/usr/bin
	cd $fs/usr/bin && ln -s qemu-system-${PACKAGE#qemu-} $PACKAGE
}
