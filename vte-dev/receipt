# SliTaz package receipt.

PACKAGE="vte-dev"
VERSION="0.28.2"
CATEGORY="development"
SHORT_DESC="Terminal capabilities for GTK+ widgets devel files."
WANTED="vte"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.gnome.org/"
HOST_ARCH="i486 arm"

DEPENDS="vte pkg-config"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/*.*a $fs/usr/lib
	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	[ -d "$install/usr/lib/girepository-1.0" ] && 
		cp -a $install/usr/lib/girepository-1.0 $fs/usr/lib
	[ -d "$install/usr/share/gir-1.0" ] && \
		cp -a $install/usr/share/gir-1.0 $fs/usr/share
	cp -a $install/usr/include $fs/usr
}
