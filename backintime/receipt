# SliTaz package receipt.

PACKAGE="backintime"
VERSION="1.3.1"
CATEGORY="network"
TAGS="backup"
SHORT_DESC="A simple backup tool for linux."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://github.com/bit-team/backintime"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/releases/download/$VERSION/$TARBALL"

SUGGESTED="backintime-lang"
DEPENDS="py3k py3k-dbus rsync"
BUILD_DEPENDS="$DEPENDS meld" # python-glade2 python-gnome2

current_version()
{
	wget -O - ${WGET_URL%/down*} 2>/dev/null | \
	sed '/archive.*tar/!d;s|.*/v*\(.*\).tar.*|\1|;q'
}

# Rules to configure and make the package.
compile_rules()
{
	cd $src/common
	./configure			\
		--prefix=/usr		\
		--sysconfdir=/etc	\
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share

	cp -a $install/etc			$fs
	cp -a $install/usr/bin			$fs/usr
	cp -a $install/usr/share/backintime	$fs/usr/share
}
