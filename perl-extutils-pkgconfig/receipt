# SliTaz package receipt.

PACKAGE="perl-extutils-pkgconfig"
SOURCE="ExtUtils-PkgConfig"
VERSION="1.14"
CATEGORY="development"
SHORT_DESC="Simplistic interface to pkg-config"
MAINTAINER="claudinei@slitaz.org"
LICENSE="GPL"
DEPENDS="perl pkg-config"
BUILD_DEPENDS="perl pkg-config"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="https://metacpan.org/~xaoc/ExtUtils-PkgConfig-1.14/"
WGET_URL="https://metacpan.org/CPAN/authors/id/X/XA/XAOC/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Makefile.PL &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
}

