# SliTaz package receipt.

PACKAGE="gstreamer-dev"
VERSION="0.10.36"
SERIES="0.10"
CATEGORY="development"
SHORT_DESC="gstreamer devel files"
MAINTAINER="jozee@slitaz.org"
LICENSE="LGPL2"
WANTED="gstreamer"
WEB_SITE="http://gstreamer.freedesktop.org/"
HOST_ARCH="i486 arm"

DEPENDS="gstreamer glib-dev libgio-dev libxml2-dev"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/gstreamer-$SERIES $fs/usr/share
	cp -a $install/usr/include $fs/usr
	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	cp -a $install/usr/lib/*.*a $fs/usr/lib/
	cp -a $install/usr/lib/gstreamer-$SERIES/*.*a \
		$fs/usr/lib/gstreamer-$SERIES
	[ -d "$install/usr/lib/girepository-1.0" ] && \
		cp -a $install/usr/lib/girepository-1.0 $fs/usr/lib
	[ -d "$install/usr/share/gir-1.0" ] && \
		cp -a $install/usr/share/gir-1.0 $fs/usr/share
	cp -a $install/usr/share/aclocal $fs/usr/share
	cd $fs/usr/include
	ln -s gstreamer-$SERIES/gst gst
}
