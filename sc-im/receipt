# SliTaz package receipt.

PACKAGE="sc-im"
VERSION="0.7.0"
CATEGORY="office"
SHORT_DESC="Spreadsheet Calculator Improved"
MAINTAINER="paul@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="https://github.com/andmarti1424/sc-im"
WGET_URL="git|git://github.com/andmarti1424/sc-im"

DEPENDS="ncursesw"
BUILD_DEPENDS="git ncursesw-dev bison"

# Rules to configure and make the package.
compile_rules()
{
	cd $src/src
	# name = scim , to keep the same name as in version 0.6.0
	make -j1 name=scim prefix=/usr && make install name=scim prefix=/usr
}
# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_files scim scim_help
}
