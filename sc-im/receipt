# SliTaz package receipt.

PACKAGE="sc-im"
VERSION="20160603"
CATEGORY="office"
SHORT_DESC="Spreadsheet Calculator Improvised."
MAINTAINER="paul@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="https://github.com/andmarti1424/sc-im"
WGET_URL="git|git://github.com/andmarti1424/sc-im"

DEPENDS="ncurses libtinfo"
BUILD_DEPENDS="ncurses-dev git bzip2 bison flex"

# Rules to configure and make the package.
compile_rules()
{
	cd $src/src
	sed -i 's|ncursesw/curses|curses|' *.c *.h
	make -j1
	make DESTDIR=$DESTDIR install
}
# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr 
	cp -a $install/usr/share $fs/usr 
}
