# SliTaz package receipt.

PACKAGE="mtpaint"
VERSION="3.40"
CATEGORY="graphics"
SHORT_DESC="Light paint programm and image manipulation."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://mtpaint.sourceforge.net/"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"
#HOST_ARCH="i486 arm"

DEPENDS="gtk+ libpng lcms"
BUILD_DEPENDS="gtk+-dev libpng-dev lcms-dev"

# Rules to configure and make the package.
compile_rules()
{
	cp -a $stuff/icons/*.xpm $src/src/icons1
	case "$ARCH" in
		i?86)
			./configure \
				--cpu=$ARCH \
				--prefix=/usr \
				intl nogif ;;
		arm*)
			# we need: arm-slitaz-linux-gnueabi-pkg-config
			./configure \
				--prefix=/usr \
				--host=${HOST_SYSTEM} \
				intl nogif
	esac && make
	# install mo files to the right place
	for i in $(find $src/po/*.mo); do
		LNG=$(basename $i .mo)
		LFOLDER=$install/usr/share/locale/$LNG/LC_MESSAGES
		mkdir -p $LFOLDER
		cp -a $src/po/$LNG.mo $LFOLDER/mtpaint.mo
	done
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $src/src/mtpaint $fs/usr/bin
}
