# SliTaz package receipt.

PACKAGE="mtpaint"
VERSION="3.20"
CATEGORY="graphics"
SHORT_DESC="Light paint programm and image manipulation."
MAINTAINER="pankso@slitaz.org"
DEPENDS="gtk+"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://mtpaint.sourceforge.net/"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

# Rules to configure and make the package.
#
# SliTaz use Tango icons, so we convert some for mtPaint.
#
compile_rules()
{
	cp -a stuff/icons-tango $src/src
	cd $src
	./configure --cpu=i486 --prefix=/usr intl icons-tango
	make
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin \
		$fs/usr/share/locale/fr/LC_MESSAGES \
		$fs/usr/share/applications \
		$fs/usr/share/pixmaps
	cp -a $src/src/mtpaint $fs/usr/bin
	cp -a $src/po/fr.mo $fs/usr/share/locale/fr/LC_MESSAGES/mtpaint.mo
	cp -a $src/src/icons1/icon.xpm $fs/usr/share/pixmaps/mtpaint.xpm
}
