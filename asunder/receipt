# SliTaz package receipt.

PACKAGE="asunder"
VERSION="2.7"
CATEGORY="multimedia"
SHORT_DESC="GTK light CD ripper."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
SUGGESTED="lame flac"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://littlesvr.ca/asunder/"
WGET_URL="$WEB_SITE/releases/$TARBALL"
TAGS="audio rip"

DEPENDS="gtk+ libcddb alsa-lib cdparanoia-III xorg-libXdamage vorbis-tools"
BUILD_DEPENDS="gtk+-dev alsa-lib-dev libcddb-dev cdparanoia-III-dev \
xorg-libXdamage-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--prefix=/usr \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
	cd $fs/usr/share/pixmaps ; find -size +4k -delete
}
