# SliTaz package receipt.

PACKAGE="bin86"
VERSION="0.16.17"
CATEGORY="development"
SHORT_DESC="80x86 assembler and linker"
MAINTAINER="erjo@slitaz.org"
DEPENDS=""
BUILD_DEPENDS="slitaz-toolchain"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.debath.co.uk/dev86/"
WGET_URL="http://www.debath.co.uk/dev86/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	make 
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $src/as/as86 $fs/usr/bin
	cp -a $src/ld/ld86 $fs/usr/bin
	cp -a $src/ld/objdump86 $fs/usr/bin
	cd $fs/usr/bin 
	ln -sf objdump86 nm86
	ln -sf objdump86 size86
}

