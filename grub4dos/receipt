# SliTaz package receipt.

PACKAGE="grub4dos"
VERSION="0.4.3"
CATEGORY="system-tools"
SHORT_DESC="Some enhancments of grub boot loader."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$PACKAGE-$VERSION.zip"
WEB_SITE="http://grub4dos.sourceforge.net/"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"
BUILD_DEPENDS="lzma"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/boot $fs/usr/bin
	lzma e $src/grub.exe $fs/usr/share/boot/grub.exe.lzma
	lzma e $src/grldr $fs/usr/share/boot/grldr.lzma
	cp $src/bootlace.com $fs/usr/bin/bootlace
	chmod +x $fs/usr/bin/bootlace
}

