# SliTaz package receipt.

PACKAGE="xfce4-taskmanager"
VERSION="0.3.2"
CATEGORY="x-window"
SHORT_DESC="Simple taskmanager for Xfce."
MAINTAINER="erjo@slitaz.org"
DEPENDS="libxfce4util libxfcegui4 startup-notification"
BUILD_DEPENDS="libxfce4util-dev libxfcegui4-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://goodies.xfce.org/projects/applications/xfce4-taskmanager"
WGET_URL="http://goodies.xfce.org/releases/xfce4-taskmanager/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/applications
	cp -a $_pkg/usr/bin $fs/usr
	cp -a stuff/*.desktop $fs/usr/share/applications
}

