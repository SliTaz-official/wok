# SliTaz package receipt.

PACKAGE="fox"
VERSION="1.6.36"
CATEGORY="x-window"
SHORT_DESC="Fox toolkit."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
DEPENDS="libpng jpeg tiff xorg-libXft bzlib libgl libglu nvidia"
BUILD_DEPENDS="$DEPENDS libpng-dev jpeg-dev tiff-dev xorg-libXft-dev"
SUGGESTED="adie calculator pathfinder shutterbug"
WEB_SITE="http://www.fox-toolkit.org/"
WGET_URL="http://www.fox-toolkit.org/ftp/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--with-xft \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}
