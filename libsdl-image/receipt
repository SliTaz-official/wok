# SliTaz package receipt.

PACKAGE="libsdl-image"
SOURCE="SDL_image"
VERSION="1.2.6"
CATEGORY="development"
SHORT_DESC="An image file loading library."
MAINTAINER="chadi.elahmad@gmail.com"

TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://www.libsdl.org/projects/SDL_image/"
WGET_URL="http://www.libsdl.org/projects/SDL_image/release/$TARBALL"

DEPENDS="libsdl libpng jpeg zlib"
BUILD_DEPENDS="libsdl libsdl-dev libpng-dev jpeg-dev tiff-dev zlib-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		LIBS=" -lz " \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}
