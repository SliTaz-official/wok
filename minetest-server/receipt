LICENSE="MIT"
WEB_SITE="https://minetest.net/"

DEPENDS="curl libspatialindex libssl luajit minetest-common sqlite"
WANTED="minetest"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p ${fs}/usr/bin
	cp -a ${install}/usr/bin/minetestserver ${fs}/usr/bin
}
