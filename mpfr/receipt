# SliTaz package receipt

PACKAGE="mpfr"
VERSION="3.0.0"
CATEGORY="development"
SHORT_DESC="C library for multiple-precision floating-point computations."
MAINTAINER="pankso@slitaz.org"
DEPENDS="make gmp"
BUILD_DEPENDS="glibc-dev make gmp-dev gmp"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.mpfr.org/"
WGET_URL="http://www.mpfr.org/mpfr-current/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{	
	cd $src
	patch -Np1 -i ../stuff/mpfr-3.0.0-p3.patch 
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}

