#!/bin/sh -e

PACKAGE="bitcoin"
VERSION="0.7.2"
CATEGORY="misc"
WEB_SITE="http://bitcoin.org/"
SHORT_DESC="New digital currency for instant payments to anyone, anywhere."
MAINTAINER="somebody@bitcoin.org"
DEPENDS="libQtGui"
TARBALL="$PACKAGE-$VERSION-linux.tar.gz"
SF_MIRROR="http://netcologne.dl.sourceforge.net/project"
URL="$SF_MIRROR/$PACKAGE/Bitcoin/$PACKAGE-$VERSION/$TARBALL"

ROOT="$1"
[ -d "$ROOT" ] || ROOT=""

if test $(id -u) != 0 ; then
        echo -e "\nYou must be root to run `basename $0`."
        echo -e "Please type 'su' and root password to become super-user.\n"
        exit 0
fi

if [ -d $ROOT/var/lib/tazpkg/installed/$PACKAGE ]; then
	[ -n "$ROOT" ] && exit 1
	tazpkg remove $PACKAGE
	[ -d /var/lib/tazpkg/installed/$PACKAGE ] && exit 1
fi

TMP_DIR=/tmp/get-$PACKAGE-$$-$RANDOM
CUR_DIR=$(pwd)
mkdir -p $TMP_DIR && cd $TMP_DIR

# Download tarball
FILE="$(basename $URL)"
wget -O $FILE "$URL"

if [ ! -f $FILE ]; then
	cd $CUR_DIR
	rm -rf $TMP_DIR
	echo "Could not download $FILE from $URL. Exiting."
	exit 1
fi

mkdir -p $PACKAGE-$VERSION/fs/usr/bin
tar xzf $FILE

mv $PACKAGE-$VERSION-linux/bin/32/* $PACKAGE-$VERSION/fs/usr/bin
rm -rf $PACKAGE-$VERSION-linux

# extracted pkg can be removed: Save RAM
rm -f $FILE

cd $PACKAGE-$VERSION/fs

# Create menu
mkdir -p usr/share/applications
cat > usr/share/applications/$PACKAGE.desktop <<EOT
[Desktop Entry]
Version=1.0
Encoding=UTF-8
Name=$PACKAGE
Exec=/usr/bin/bitcoin-qt
Icon=stock_certificate.png
Terminal=false
Categories=Application
Comment=$SHORT_DESC
Type=Application
Categories=Office;
EOT
cd ../..

cat > $PACKAGE-$VERSION/receipt <<EOT
PACKAGE="$PACKAGE"
VERSION="$VERSION"
CATEGORY="$CATEGORY"
SHORT_DESC="$SHORT_DESC"
MAINTAINER="$MAINTAINER"
DEPENDS="$DEPENDS"
WEB_SITE="$WEB_SITE"
EOT

# Pack
tazpkg pack $PACKAGE-$VERSION

# Clean to save RAM memory
rm -rf $PACKAGE-$VERSION

# Install pseudo package
tazpkg install $PACKAGE-$VERSION.tazpkg --root=$ROOT
case " $@ " in
*\ --k*) mv $PACKAGE-$VERSION.tazpkg $CUR_DIR ;;
esac

# Clean
cd $CUR_DIR
rm -rf $TMP_DIR

