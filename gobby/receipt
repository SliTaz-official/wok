# SliTaz package receipt.

PACKAGE="gobby"
VERSION="0.4.10"
CATEGORY="network"
SHORT_DESC="Network collaborative editor."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
DEPENDS="gnutls libgpg-error libgcrypt gtk+ cairomm glibmm gtkmm gtksourceview
	libsigc++ libxml++ net6 obby xorg-libXdamage"
BUILD_DEPENDS="$DEPENDS gnutls-dev libgpg-error-dev libgcrypt-dev gtk+-dev
	cairomm-dev glibmm-dev gtkmm-dev gtksourceview-dev libsigc++-dev 
	libxml++-dev net6-dev obby-dev"
WEB_SITE="http://gobby.0x539.de/trac/"
WGET_URL="http://releases.0x539.de/gobby/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/share/pixmaps $fs/usr/share
	cp -a $_pkg/usr/share/icons/hicolor/48x48/apps/* $fs/usr/share/pixmaps
}

