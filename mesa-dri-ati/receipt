# SliTaz package receipt.

PACKAGE="mesa-dri-ati"
VERSION="7.9"
CATEGORY="x-window"
SHORT_DESC="Mesa DRI + Gallium3D r300 drivers for AMD/ATI Radeon and mach64 (include Rage128)."
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://www.mesa3d.org/"
DEPENDS="mesa mesa-dri libdrm-radeon"
WANTED="mesa"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/dri
	for driver in mach64 radeon r128 r200 r300 r600
	do
		cp $_pkg/usr/lib/dri/${driver}_dri.so \
			$fs/usr/lib/dri
	done
}

TAZBB_NO_INSTALL="because this is not hardware neutral"
