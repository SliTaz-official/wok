# SliTaz package receipt.

PACKAGE="mesa-dri-ati"
VERSION="7.10.2"
CATEGORY="x-window"
SHORT_DESC="Mesa DRI + Gallium3D r300 drivers for AMD/ATI Radeon."
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://www.mesa3d.org/"
DEPENDS="mesa mesa-dri libdrm-radeon"
WANTED="mesa"
#PROVIDE="xorg-xf86-video-ati"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/dri
	for driver in radeon r200 r300 r600
	do
		cp $install/usr/lib/dri/${driver}_dri.so \
			$fs/usr/lib/dri
	done
	# Radeon Xorg driver
	cp -a $install/usr/lib/xorg $fs/usr/lib
}
