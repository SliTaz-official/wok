# SliTaz package receipt.

PACKAGE="libsndfile"
VERSION="1.0.28"
CATEGORY="multimedia"
SHORT_DESC="A C library for reading and writing files containing sampled sound."
MAINTAINER="jozee@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://www.mega-nerd.com/libsndfile/" 

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/files/$TARBALL"

DEPENDS="alsa-lib libvorbis"
BUILD_DEPENDS="alsa-lib-dev libvorbis-dev"

HOST_ARCH="i486 arm"

# Handle slitaz arch
case "$SLITAZ_ARCH" in
	i?86) DEPENDS="$DEPENDS flac" ;;
esac

# Handle cross compilation.
case "$ARCH" in
	i?86) BUILD_DEPENDS="$BUILD_DEPENDS flac-dev" ;;
esac

# Rules to configure and make the package.
compile_rules()
{
	./configure			\
		--prefix=/usr		\
		--disable-sqlite	\
		$CONFIGURE_ARGS &&
	make -j 1 &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}
