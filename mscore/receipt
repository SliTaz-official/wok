# SliTaz package receipt.

PACKAGE="mscore"
VERSION="0.9.4"
CATEGORY="multimedia"
SHORT_DESC="a WYSIWYG music notation program"
MAINTAINER="allan316@gmail.com"
DEPENDS="libQtCore libQtGui libQtDesigner libQtScript libQtNetwork libQtSvg \
libQtXml portaudio alsa-lib Qt4-dev libssl libcrypto"
BUILD_DEPENDS="cmake Qt4-dev portaudio-dev alsa-lib-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://musescore.org"
WGET_URL="http://nchc.dl.sourceforge.net/sourceforge/mscore/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	sed -i "s/usr\/local/usr/" Makefile
	sed -i "s/BUILD_SCRIPT_INTERFACE TRUE/BUILD_SCRIPT_INTERFACE FALSE/" mscore/CMakeLists.txt
	sed -i "s/BUILD_SCRIPT_DEBUG TRUE/BUILD_SCRIPT_DEBUG FALSE/" mscore/CMakeLists.txt
	sed -i "s/STATIC_SCRIPT_BINDINGS FALSE/STATIC_SCRIPT_BINDINGS FALSE/" mscore/CMakeLists.txt
	make clean
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
	cp -a $_pkg/usr/share $fs/usr
}

