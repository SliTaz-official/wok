# SliTaz package receipt.

PACKAGE="gstreamer-1.0-dev"
VERSION="1.10.1"
SERIES="1.0"
CATEGORY="development"
SHORT_DESC="The gstreamer-1.0 devel files"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="http://gstreamer.freedesktop.org/"
HOST_ARCH="i486 arm"

WANTED="gstreamer-1.0"
DEPENDS="gstreamer-1.0 glib-dev libgio-dev libxml2-dev pkg-config"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/gstreamer-$SERIES $fs/usr/share
	cp -a $install/usr/include $fs/usr
	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	cp -a $install/usr/lib/*.*a $fs/usr/lib/
	cp -a $install/usr/lib/gstreamer-$SERIES/*.*a $fs/usr/lib/gstreamer-$SERIES
	cp -a $install/usr/share/aclocal $fs/usr/share
	cd $fs/usr/include
	ln -s gstreamer-$SERIES/gst gst
}
