# SliTaz package receipt.

PACKAGE="postgis"
VERSION="2.0.2"
CATEGORY="misc"
SHORT_DESC="Support for geographic objects to PostgreSQL"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://postgis.refractions.net/"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://postgis.refractions.net/download/$TARBALL"

DEPENDS="geos proj libpostgresqlclient libxml2 libgdal"
BUILD_DEPENDS="postgresql-dev geos-dev proj-dev libxml2-dev gtk+-dev gdal-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure --with-gui $CONFIGURE_ARGS \
			&& make -j 1 && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs
	rm -f $fs/usr/bin/shp2pgsql-gui 
}
