# SliTaz package receipt.

PACKAGE="xombrero"
VERSION="1.6.4"
CATEGORY="network"
SHORT_DESC="A minimalist web browser with sophisticated security features."
MAINTAINER="claudinei@slitaz.org"
LICENSE="ISC"
WEB_SITE="https://opensource.conformal.com/wiki/xombrero"
TARBALL="$PACKAGE-$VERSION.tgz"
WGET_URL="https://opensource.conformal.com/snapshots/$PACKAGE/$TARBALL"
TAGS="web-browser"

DEPENDS="gtk+ libwebkit libbsd"
BUILD_DEPENDS="gtk+-dev libwebkit-dev libsoup-dev gnutls-dev libbsd-dev \
groff wget"

# Rules to configure and make the package.
compile_rules()
{
	find -type f -print0 | xargs -0 sed -i 's|/usr/local|/usr|'
	sed -i "s|xombrero %u|xombrero -f /etc/xombrero.conf %u|" xombrero.desktop
	make PREFIX="/usr" -C linux GTK_VERSION="gtk2" install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir $fs/etc
	cp -a $install/* $fs
	cp $stuff/xombrero.conf $fs/etc
}
