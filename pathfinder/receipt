DEPENDS="fox"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $install/usr/bin/PathFinder $fs/usr/bin
	copy_generic_files
}
