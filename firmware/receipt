# SliTaz package receipt.

PACKAGE="firmware"
SOURCE="linux-firmware"
VERSION="20141201"
REVISION="38e5405"
CATEGORY="meta"
SHORT_DESC="Firmware files for Linux"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="other"
TARBALL="$SOURCE-$VERSION.$REVISION-1-any.pkg.tar.xz"
WEB_SITE="http://git.kernel.org/cgit/linux/kernel/git/firmware/linux-firmware.git"
WGET_URL="http://archlinux.mirrors.ovh.net/archlinux/core/os/i686/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	mkdir -p $DESTDIR/lib $DESTDIR/share
	mv $src/share/licenses/linux-firmware/* $src/share/licenses
	rm -fr $src/share/licenses/linux-firmware $src/lib/tmpfiles.d
	cp -a $src/* $DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/lib/firmware
}

