# SliTaz package receipt.

PACKAGE="xine-ui"
VERSION="0.99.5"
CATEGORY="extra"
SHORT_DESC="Xine media player user interface."
MAINTAINER="pankso@slitaz.org"
DEPENDS="xine-lib libvorbis xorg-libXtst"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.xinehq.de/"
WGET_URL="http://switch.dl.sourceforge.net/sourceforge/xine/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS
	make
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr $fs/usr/share/locale
	cp -a $_pkg/usr/bin $fs/usr
	strip -s $fs/usr/bin/* 2>/dev/null
	cp -a $_pkg/usr/share/pixmaps $fs/usr/share
	cp -a $_pkg/usr/share/xine $fs/usr/share
	cp -a $_pkg/usr/share/locale/fr $fs/usr/share/locale
}

