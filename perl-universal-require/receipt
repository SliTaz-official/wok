# SliTaz package receipt.

PACKAGE="perl-universal-require"
VERSION="0.18"
CATEGORY="development"
SHORT_DESC="UNIVERSAL::require module is a Perl extension"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
DEPENDS="perl"
BUILD_DEPENDS="perl"
SOURCE="UNIVERSAL-require"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="https://metacpan.org/dist/UNIVERSAL-require"
WGET_URL="https://cpan.metacpan.org/authors/id/N/NE/NEILB/$TARBALL"

current_version()
{
	wget -O - $WEB_SITE 2>/dev/null | \
	sed '/release-name/!d;s|.*-v*||;s|<.*||;q'
}

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
}
