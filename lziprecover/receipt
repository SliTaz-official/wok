# SliTaz package receipt.

PACKAGE="lziprecover"
VERSION="1.22"
CATEGORY="utilities"
SHORT_DESC="LZIP files recovery tool."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.nongnu.org/lzip/lziprecover.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://download.savannah.gnu.org/releases/lzip/lziprecover/$TARBALL"

DEPENDS="gcc-lib-base"

HOST_ARCH="i486 arm"

current_version()
{
	wget -O - $(dirname $WGET_URL) 2>/dev/null | \
	sed '/tar/!d;s|.*recover-\(.*\).tar.*".*|\1|' | sed '$!d'
}

# Rules to configure and make the package.
compile_rules()
{
	mkdir -p $DESTDIR/usr/share/doc
	cp README	$DESTDIR/usr/share/doc

	./configure		\
		--prefix=/usr	\
		$CONFIGURE_ARGS &&
	make -j 1 &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
}
