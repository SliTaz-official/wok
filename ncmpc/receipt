# SliTaz package receipt.

PACKAGE="ncmpc"
VERSION="0.21"
CATEGORY="multimedia"
SHORT_DESC="A ncurses MPD client."
MAINTAINER="paul@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="https://www.musicpd.org/clients/ncmpc/"
WGET_URL="https://www.musicpd.org/download/ncmpc/0/$TARBALL"
TAGS="music player"
HOST_ARCH="i486 arm"

DEPENDS="mpd glib ncurses libmpdclient"
BUILD_DEPENDS="glib-dev ncurses-dev libmpdclient-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/ncmpc
	cp -a $install/usr/bin $fs/usr
}

