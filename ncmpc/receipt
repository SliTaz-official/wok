# SliTaz package receipt.

PACKAGE="ncmpc"
VERSION="0.11.1"
CATEGORY="multimedia"
SHORT_DESC="A ncurses MPD client."
MAINTAINER="paul@slitaz.org"
DEPENDS="mpd"
BUILD_DEPENDS="pkg-config gtk+-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://hem.bredband.net/kaw/ncmpc/index.html"
WGET_URL="http://hem.bredband.net/kaw/ncmpc/files/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
	--enable-search-screen \
	--enable-clock-screen \
	--prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/ncmpc
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/share/doc/$PACKAGE $fs/usr/share
}

