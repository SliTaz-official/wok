# SliTaz package receipt.

PACKAGE="python-vatnumber"
SOURCE="vatnumber"
VERSION="1.0"
CATEGORY="development"
SHORT_DESC="Validate VAT numbers for Python."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="https://pypi.org/project/$SOURCE/"
WGET_URL="http://vatnumber.googlecode.com/files/$TARBALL"

DEPENDS="python"
BUILD_DEPENDS="python-dev python python-setuptools"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py build &&
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs
	cp -a $install/usr $fs
}
