# SliTaz package receipt.

PACKAGE="libqwt5-qt4"
VERSION="5.2.0"
CATEGORY="graphics"
SHORT_DESC="Lib Qt Widgets for Technical applications"
MAINTAINER="slitaz@objectif-securite.ch"
DEPENDS="libQtCore libQtGui"
BUILD_DEPENDS="qt-x11-opensource-src"
TARBALL="qwt-$VERSION.tar.bz2"
WEB_SITE="http://qwt.sourceforge.net"
WGET_URL="http://switch.dl.sourceforge.net/sourceforge/qwt/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd qwt-$VERSION
	qmake
	make &&
	make INSTALL_ROOT=$PWD/../_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $PWD/_pkg/usr/local/qwt-$VERSION/lib/libqwt.so* $fs/usr/lib
}

# clean commands for Tazwok.
clean_wok()
{
	rm -rf $WOK/$PACKAGE/_pkg
	rm -rf $WOK/$PACKAGE/qwt-$VERSION
}
