# SliTaz package receipt.

PACKAGE="exempi"
VERSION="2.1.1"
CATEGORY="utilities"
LICENSE="GPL3"
SHORT_DESC="An implementation of XMP (Adobe's Extensible Metadata Platform)."
MAINTAINER="yuripourre@gmail.com"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="https://wiki.freedesktop.org/libopenraw/Exempi/"
WGET_URL="https://libopenraw.freedesktop.org/download/$TARBALL"

DEPENDS="expat"
BUILD_DEPENDS="expat-dev libboost-dev libboost-test-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure              \
		--prefix=/usr    \
		--enable-static-no \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}
