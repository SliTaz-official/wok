# SliTaz package receipt.

PACKAGE="syslinux-extra"
VERSION="3.60"
CATEGORY="extra"
SHORT_DESC="MBR/FAT/EXT3/PXE bootloader files"
MAINTAINER="pankso@slitaz.org"
WANTED="syslinux"
WEB_SITE="http://syslinux.zytor.com/"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    mkdir -p $fs/boot/syslinux
    cp -a $src/memdisk/memdisk $fs/boot/syslinux
    cp -a $src/mbr/mbr.bin $fs/boot/syslinux
    cp -a $src/pxelinux.0 $fs/boot/syslinux
    mkdir -p $fs/bin
    cp -a $src/unix/syslinux-nomtools $fs/bin/syslinux
    cp -a $src/extlinux/extlinux $fs/bin
}
