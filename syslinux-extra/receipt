# SliTaz package receipt.

PACKAGE="syslinux-extra"
VERSION="3.62"
CATEGORY="system-tools"
SHORT_DESC="MBR/FAT/EXT3/PXE bootloader files"
MAINTAINER="pankso@slitaz.org"
WANTED="syslinux"
WEB_SITE="http://syslinux.zytor.com/"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    mkdir -p $fs/usr/share/syslinux
    lzma e $src/memdisk/memdisk $fs/usr/share/syslinux/memdisk.lzma
    cp -a $src/mbr/mbr.bin $fs/usr/share/syslinux
    lzma e $src/pxelinux.0 $fs/usr/share/syslinux/pxelinux.0.lzma
    #lzma e $src/com32/menu/vesamenu.c32 $fs/usr/share/syslinux/vesamenu.c32.lzma
    mkdir -p $fs/bin
    cp -a $src/unix/syslinux-nomtools $fs/bin/syslinux
    cp -a $src/extlinux/extlinux $fs/bin
    chown root.root $fs/usr/share/syslinux/* $fs/bin/*
}
