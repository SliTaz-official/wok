# SliTaz package receipt.

PACKAGE="libbonoboui-dev"
VERSION="2.24.3"
CATEGORY="development"
SHORT_DESC="The libbonoboui devel files."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://developer.gnome.org/libbonobo/"
WANTED="libbonoboui"

DEPENDS="libbonoboui libgnomecanvas-dev pkg-config"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/include $fs/usr
	cp -a $install/usr/lib/*.*a $fs/usr/lib
	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	cp -a $install/usr/lib/libglade $fs/usr/lib
	# remove archive lib
	find $fs/usr/lib -name *.so* -exec rm -f {} \;
}
