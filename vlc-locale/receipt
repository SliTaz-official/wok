# SliTaz package receipt.

PACKAGE="vlc-locale"
VERSION="3.0.6"
CATEGORY="multimedia"
SHORT_DESC="Locale files for vlc"
MAINTAINER="jozee@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.videolan.org/vlc/"
WANTED="vlc"

SUGGESTED="vlc"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	for i in de el en:en_GB es fa fr pl pt_BR ru sv zh_CN zh_TW; do
		install -D -m 644 -o root -g root $src/po/${i#*:}.gmo \
			$fs/usr/share/locale/${i%:*}/LC_MESSAGES/vlc.mo
	done
}
