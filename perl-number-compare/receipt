# SliTaz package receipt.

PACKAGE="perl-number-compare"
VERSION="0.01"
CATEGORY="development"
SHORT_DESC="Perl/CPAN Module Number::Compare"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL"
DEPENDS="perl"
BUILD_DEPENDS="perl"
SOURCE="Number-Compare"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="https://metacpan.org/release/Number-Compare/"
WGET_URL="https://metacpan.org/CPAN/authors/id/R/RC/RCLAMP/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Makefile.PL &&
	make &&
	make install DESTDIR=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
}