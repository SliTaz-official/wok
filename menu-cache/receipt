# SliTaz package receipt.

PACKAGE="menu-cache"
VERSION="0.3.2"
CATEGORY="x-window"
SHORT_DESC="Standard compliant menu library used by LXDE."
MAINTAINER="pankso@slitaz.org"
DEPENDS="glibc-base glib libgio"
BUILD_DEPENDS="slitaz-toolchain"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://lxde.sourceforge.net/"
WGET_URL="$SF_MIRROR/lxde/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib/menu-cache \
		--sysconfdir=/etc \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/lib/menu-cache $fs/usr/lib
	strip -s $fs/usr/lib/menu-cache/*
}
