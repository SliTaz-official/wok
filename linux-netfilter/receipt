# SliTaz package receipt.

PACKAGE="linux-netfilter"
VERSION="2.6.37"
CATEGORY="base-system"
SHORT_DESC="The Linux kernel netfilter modules."
MAINTAINER="devel@slitaz.org"
DEPENDS="linux"
WANTED="linux"
WEB_SITE="http://www.kernel.org/"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    local path
    path=lib/modules/$VERSION-slitaz/kernel
    mkdir -p $fs/$path
    
    export src
    export _pkg
    
    $WOK/$WANTED/stuff/list_modules.sh net/netfilter net/ipv4/netfilter net/8021q | \
    while read module; do
    	dir=$path/$(dirname $module)
    	[ -d $fs/$dir ] || mkdir -p $fs/$dir
        cp -a $_pkg/$path/$module $fs/$dir
    done
    rm -r $fs/$path/net/ipv6

    for i in $(cat $WOK/$WANTED/stuff/modules-$VERSION.list); do
        if [ $fs/lib/modules/$VERSION-slitaz/kernel/$i ]; then
	    rm -f $fs/lib/modules/$VERSION-slitaz/kernel/$i
	fi
    done
}

# Post install/remove commands for Tazpkg.
post_install()
{
	chroot "$1/" depmod -a $VERSION-slitaz
}

post_remove()
{
	chroot "$1/" depmod -a $VERSION-slitaz
}

