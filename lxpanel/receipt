# SliTaz package receipt.

PACKAGE="lxpanel"
VERSION="0.3.5"
CATEGORY="x-window"
SHORT_DESC="Standard compliant desktop panel."
MAINTAINER="pankso@slitaz.org"
DEPENDS="gtk+ slitaz-menus"
BUILD_DEPENDS="gtk+-dev gettext"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://lxde.sourceforge.net/"
WGET_URL="$SF_MIRROR/lxde/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	# Patch the menu
	patch -p0 < ../stuff/ptk-app-menu.patch  || exit 1
	patch -p0 < ../stuff/fr.patch || exit 1
	./configure \
		--prefix=/usr \
		--with-plugins=all \
		$CONFIGURE_ARGS
	make
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    mkdir -p $fs/usr/share
    cp -a $_pkg/usr/bin $fs/usr
    cp -a $_pkg/usr/lib $fs/usr
    cp -a $_pkg/usr/share/lxpanel $fs/usr/share
    
    # Remove a few "heavy" an unseful images
    rm $fs/usr/share/lxpanel/images/*.svg
    
    # Move profile to /etc/lxpanel (/usr maybe read-only)
    mkdir $fs/etc
    mv -f $fs/usr/share/lxpanel/profile $fs/etc/lxpanel
    ln -s /etc/lxpanel $fs/usr/share/lxpanel/profile
    
    # Default config
    mv $fs/etc/lxpanel/default $fs/etc/lxpanel/original
    cp -a stuff/default $fs/etc/lxpanel
}

# lxpanel logout calls lxsession-logout, not installed by default so
# fake.
post_install()
{
	locale root
	root=$1
	if [ ! -f $root/usr/bin/lxsession-logout ]; then
		cat > $root/usr/bin/lxsession-logout << "EOT"
#!/bin/sh
# lxsession-logout fake.
#
WM=`cat /etc/X11/wm.default`

case $WM in
	jwm)
		jwm -exit ;;
	openbox)
		openbox --exit ;;
esac
EOT
	chmod +x $root/usr/bin/lxsession-logout
	fi
}
