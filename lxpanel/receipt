# SliTaz package receipt.

PACKAGE="lxpanel"
VERSION="0.3.5.4"
CATEGORY="x-window"
SHORT_DESC="Standard compliant desktop panel."
MAINTAINER="pankso@slitaz.org"
DEPENDS="gtk+ slitaz-menus"
BUILD_DEPENDS="gtk+-dev gettext"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://lxde.sourceforge.net/"
WGET_URL="$SF_MIRROR/lxde/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	# Patch the menu
	patch -p0 < ../stuff/ptk-app-menu.patch  || exit 1
	patch -p0 < ../stuff/fr.patch || exit 1
	./configure \
		--prefix=/usr \
		--with-plugins=all \
		$CONFIGURE_ARGS
	make
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
	cp -a $_pkg/usr/share/lxpanel $fs/usr/share

	# Remove a few "heavy" an unseful images
	rm $fs/usr/share/lxpanel/images/file-manager.png
	rm $fs/usr/share/lxpanel/images/gnome-applications.png
	rm $fs/usr/share/lxpanel/images/gnome-devel.png
	rm $fs/usr/share/lxpanel/images/gnome-fs*.png
	rm $fs/usr/share/lxpanel/images/gnome-joystick.png
	rm $fs/usr/share/lxpanel/images/gnome-multimedia.png
	rm $fs/usr/share/lxpanel/images/gnome-s*
	rm $fs/usr/share/lxpanel/images/gnome-g*.png
	rm $fs/usr/share/lxpanel/images/gnome-u*.png
	rm $fs/usr/share/lxpanel/images/my-*
	rm $fs/usr/share/lxpanel/images/redhat*.png
	rm $fs/usr/share/lxpanel/images/gnome-netstatus-[d-t]*.png
	rm $fs/usr/share/lxpanel/images/ns-*.png

	# Move profile to /etc/lxpanel (/usr maybe read-only)
	mkdir $fs/etc
	mv -f $fs/usr/share/lxpanel/profile $fs/etc/lxpanel
	ln -s /etc/lxpanel $fs/usr/share/lxpanel/profile

	# Default config
	mv $fs/etc/lxpanel/default $fs/etc/lxpanel/original
	cp -a stuff/default $fs/etc/lxpanel
	
	# Declare lxsession-logout in files.list
	touch $fs/usr/bin/lxsession-logout
}

# lxpanel logout calls lxsession-logout, not installed by default so
# fake.
post_install()
{
	locale root
	root=$1
	if [ ! -s $root/usr/bin/lxsession-logout ]; then
		cat > $root/usr/bin/lxsession-logout << "EOT"
#!/bin/sh
# lxsession-logout fake.
#

desktopbox logout &
exit 0

EOT
	chmod +x $root/usr/bin/lxsession-logout
	fi
}
