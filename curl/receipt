# SliTaz package receipt.

PACKAGE="curl"
VERSION="7.61.1"
CATEGORY="network"
SHORT_DESC="Tool and libs for transferring files with URL syntax."
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="https://curl.haxx.se/"
WGET_URL="https://curl.haxx.se/download/$TARBALL"
HOST_ARCH="i486 arm"

DEPENDS="libssl libcurl zlib libidn"
BUILD_DEPENDS="openssl-dev libidn-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--disable-ldap \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/lib
	cp -a $install/usr/bin/curl $fs/usr/bin
}

