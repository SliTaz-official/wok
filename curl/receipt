# SliTaz package receipt.

PACKAGE="curl"
VERSION="7.21.3"
CATEGORY="network"
SHORT_DESC="Tool and libs for transferring files with URL syntax."
MAINTAINER="pankso@slitaz.org"
DEPENDS="openssl libcurl zlib"
BUILD_DEPENDS="openssl-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://curl.haxx.se/"
WGET_URL="http://curl.haxx.se/download/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		--disable-ldap \
		--without-libidn \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/lib
	cp -a $_pkg/usr/bin/curl $fs/usr/bin
}

