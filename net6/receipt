# SliTaz package receipt.

PACKAGE="net6"
VERSION="1.3.10"
CATEGORY="network"
SHORT_DESC="Net6 library (TCP protocol abstraction for C++)."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
DEPENDS="gnutls libgpg-error libgcrypt libsigc++ zlib gcc-lib-base"
BUILD_DEPENDS="$DEPENDS gnutls-dev libgpg-error-dev libgcrypt-dev"
WEB_SITE="http://releases.0x539.de/net6/"
WGET_URL="http://releases.0x539.de/net6/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}
