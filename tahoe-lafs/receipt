# SliTaz package receipt.

PACKAGE="tahoe-lafs"
VERSION="1.10.1"
CATEGORY="system-tools"
SHORT_DESC="Cloud storage system."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
TARBALL="allmydata-tahoe-$VERSION.zip"
WEB_SITE="https://tahoe-lafs.org/"
WGET_URL="${WEB_SITE}source/$PACKAGE/releases/$TARBALL"
TAGS="filesystem backup"

DEPENDS="python python-setuptools python-simplejson zopeinterface twisted pyopenssl \
pycrypto python-zfec python-foolscap python-pyasn1 python-mock \
python-pycryptopp"
BUILD_DEPENDS="wget python-dev gmp-dev openssl-dev"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py build
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}
