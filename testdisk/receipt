# SliTaz package receipt.

PACKAGE="testdisk"
VERSION="6.14"
CATEGORY="system-tools"
SHORT_DESC="Data recovery tools (testdisk + photorec)."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION-WIP.tar.bz2"
WEB_SITE="http://www.cgsecurity.org/wiki/TestDisk"
WGET_URL="http://www.cgsecurity.org/$TARBALL"
TAGS="recovery rescue"

DEPENDS="e2fsprogs ncurses jpeg krb5 zlib libcomerr3 ncursesw ntfs-3g"
BUILD_DEPENDS="e2fsprogs-dev ncurses-dev jpeg-dev ntfsprogs-dev ntfs-3g-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	grep -qs 'define u8' src/hdaccess.c ||
	sed -i 's|#include <scsi/scsi.h>|#define u8 __u8\n&|' src/hdaccess.c
	./configure $CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
}
