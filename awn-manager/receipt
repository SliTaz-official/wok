# SliTaz package receipt.

PACKAGE="awn-manager"
VERSION="0.4.0"
CATEGORY="x-window"
SHORT_DESC="Avant-window-navigator manager"
MAINTAINER="pankso@slitaz.org"
DEPENDS="avant-window-navigator pygtk python-xdg librsvg"
WANTED="avant-window-navigator"
WEB_SITE="https://launchpad.net/awn/"
TAGS="window-manager wm panel"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib \
			$fs/usr/bin \
			$fs/usr/share/$WANTED \
			$fs/usr/share/applications
	cp -a $_pkg/usr/bin/$PACKAGE $fs/usr/bin
	cp -a $_pkg/usr/lib/python* $fs/usr/lib
	cp -a $_pkg/usr/share/$WANTED/$PACKAGE $fs/usr/share/$WANTED
	cp -a $_pkg/usr/share/applications/awn-manager.desktop \
		$fs/usr/share/applications
}
