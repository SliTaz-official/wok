# SliTaz package receipt.

PACKAGE="hsetroot"
VERSION="1.0.2"
CATEGORY="x-window"
SHORT_DESC="Tool to set desktop wallpaper."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="https://github.com/himdel/hsetroot"
WGET_URL="http://thegraveyard.org/files/$TARBALL"
TAGS="wallpaper"
HOST_ARCH="i486 arm"

DEPENDS="imlib2 libpng freetype xorg-libX11 xorg-libXau xorg-libXdmcp \
xorg-libXext"
BUILD_DEPENDS="imlib2-dev libpng-dev"

# ARM: imlib2-dev must be installed in build chroot

# Rules to configure and make the package.
compile_rules()
{
	export LDFLAGS="$LDFLAGS -Wl,--copy-dt-needed-entries -lX11"
	./configure \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
}
