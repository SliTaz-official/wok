# SliTaz package receipt.

PACKAGE="leafpad"
VERSION="0.8.16"
CATEGORY="utilities"
SHORT_DESC="GTK simple text editor."
MAINTAINER="pankso@slitaz.org"
DEPENDS="gtk+"
BUILD_DEPENDS="pkg-config gtk+-dev xorg-libXrender-dev xorg-xproto"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://tarot.freeshell.org/leafpad/"
WGET_URL="http://savannah.nongnu.org/download/$PACKAGE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
    cd $src
    ./configure \
    	--prefix=/usr \
    	--infodir=/usr/share/info \
    	--mandir=/usr/share/man \
    	--disable-print \
    	$CONFIGURE_ARGS &&
    make &&
    make DESTDIR=$PWD/_pkg install &&
    # no xpm (5 ko)
    rm _pkg/usr/share/pixmaps/*.xpm
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    mkdir -p $fs/usr
    cp -a $_pkg/usr/bin $fs/usr
}
