# SliTaz package receipt.

PACKAGE="leafpad"
VERSION="0.8.18.1"
CATEGORY="utilities"
SHORT_DESC="GTK simple text editor."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://tarot.freeshell.org/leafpad/"
WGET_URL="http://savannah.nongnu.org/download/$PACKAGE/$TARBALL"
HOST_ARCH="i486 arm"
GENERIC_PIXMAPS="no"

DEPENDS="gtk+ xorg-libXdamage"
BUILD_DEPENDS="gtk+-dev xorg-libXrender-dev xorg-xproto"

# Rules to configure and make the package.
compile_rules()
{
	chmod +x install-sh
	./configure \
		--disable-print \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/icons/hicolor/48x48/apps
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/share/pixmaps/leafpad.png \
		$fs/usr/share/icons/hicolor/48x48/apps
}
