# SliTaz package receipt.

PACKAGE="leafpad"
VERSION="0.8.13"
CATEGORY="extra"
SHORT_DESC="GTK simple text editor."
MAINTAINER="pankso@slitaz.org"
DEPENDS="gtk+"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://tarot.freeshell.org/leafpad/"
WGET_URL="http://savannah.nongnu.org/download/$PACKAGE/$TARBALL"
JWM_MENU='Productivity:<Program icon="leafpad.png" label="Leafpad">leafpad</Program>'

# Rules to configure and make the package.
compile_rules()
{
    cd $src
    ./configure \
    	--prefix=/usr \
    	--infodir=/usr/share/info \
    	--mandir=/usr/share/man \
    	--disable-print \
    	$CONFIGURE_ARGS
    make
    make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    mkdir -p $fs/usr/share/pixmaps $fs/usr/share/locale
    cp -a $_pkg/usr/bin $fs/usr
    cp -a $_pkg/usr/share/pixmaps/leafpad.png $fs/usr/share/pixmaps
    cp -a $_pkg/usr/share/locale/fr $fs/usr/share/locale
    strip -s $fs/usr/bin/*
    # Freedesktop entry
	cp -a stuff/$PACKAGE.desktop $fs/usr/share/applications
}
