# SliTaz package receipt.

PACKAGE="fxload"
VERSION="0.0.20020411"
CATEGORY="system-tools"
SHORT_DESC="Utility to load xorcom astribank channel bank."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="${PACKAGE}_${VERSION}.orig.tar.gz"
WEB_SITE="http://www.xorcom.com/"
WGET_URL="http://updates.xorcom.com/astribank/$PACKAGE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	wget -c http://updates.xorcom.com/astribank/$PACKAGE/$PACKAGE
	chmod +x fxload
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{

	mkdir -p $fs/usr/bin $fs/usr/share/usb
	cp -a fxload $fs/usr/bin
	cp -a fxload*/a3load.hex $fs/usr/share/usb
	
}

