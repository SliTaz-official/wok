# SliTaz package receipt.

PACKAGE="yad"
VERSION="0.2.0"
CATEGORY="utilities"
SHORT_DESC="Display graphical dialogs from shell scripts or command line"
MAINTAINER="devl547@gmail.com"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://code.google.com/p/yad/"
WGET_URL="http://yad.googlecode.com/files/$TARBALL"
BUILD_DEPENDS="acl intltool gettext pkg-config glib-dev gtk+-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
}
