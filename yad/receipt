# SliTaz package receipt.

PACKAGE="yad"
VERSION="0.14.2"
CATEGORY="utilities"
SHORT_DESC="Display graphical dialogs from shell scripts or command line"
MAINTAINER="devl547@gmail.com"
TARBALL="$PACKAGE-$VERSION.tar.xz"
WEB_SITE="http://code.google.com/p/yad/"
WGET_URL="http://yad.googlecode.com/files/$TARBALL"

DEPENDS="gtk+"
BUILD_DEPENDS="acl intltool gettext pkg-config glib-dev gtk+-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	[ -f install-sh ] && chmod +x install-sh
	./configure \
		--enable-icon-browser &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
}
