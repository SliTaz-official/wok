# SliTaz package receipt.

PACKAGE="util-linux-cfdisk"
VERSION="2.21.1"
CATEGORY="system-tools"
SHORT_DESC="The cfdisk utility from Util linux NG."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WANTED="util-linux"
WEB_SITE="http://kernel.org/~kzak/util-linux/"
HOST_ARCH="i486 arm"

DEPENDS="glibc-base ncursesw"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/sbin $fs/usr/share/applications
	cp -a $install/sbin/cfdisk $fs/sbin
	cp $stuff/cfdisk.desktop $fs/usr/share/applications
}
