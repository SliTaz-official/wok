# SliTaz package receipt.

PACKAGE="perl-test-pod-coverage"
VERSION="1.08"
CATEGORY="development"
SHORT_DESC="Test::Pod::Coverage module is a Perl extension."
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL"
DEPENDS="perl"
BUILD_DEPENDS="perl"
SOURCE="Test-Pod-Coverage"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://www.cpan.org/modules/"
WGET_URL="https://metacpan.org/CPAN/authors/id/P/PE/PETDANCE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Makefile.PL &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
}
