# SliTaz package receipt.

PACKAGE="gutenprint"
VERSION="5.2.8"
CATEGORY="system-tools"
SHORT_DESC="Top quality printer drivers for Canon, Epson"
MAINTAINER="jozee@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://gimp-print.sourceforge.net/"
WGET_URL="$SF_MIRROR/gimp-print/$TARBALL"

DEPENDS="gnutls readline gtk+ cups libtasn1 gmp"
BUILD_DEPENDS="gnutls-dev expat-dev cups-dev libgcrypt-dev zlib-dev \
foomatic-db-engine libtasn1-dev gmp-dev tar"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--mandir=/usr/share/man \
		--disable-samples \
		--with-cups \
		--disable-test \
		$CONFIGURE_ARGS &&
	make &&
	make install 2>&1 | grep -v "rmdir: '/home/slitaz/wok/gutenprint/"
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/etc $fs/usr/lib $fs/usr/share
	
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/sbin $fs/usr
	cp -a $install/usr/lib/*.so* $fs/usr/lib
	cp -a $install/usr/lib/cups $fs/usr/lib
	cp -a $install/usr/lib/gutenprint $fs/usr/lib
	cp -a $install/usr/share/cups $fs/usr/share
	cp -a $install/usr/share/$PACKAGE $fs/usr/share	
	cp -a $install/etc   $fs
	
	# Remove docs
	rm -rf $fs/usr/share/$PACKAGE/doc
}

