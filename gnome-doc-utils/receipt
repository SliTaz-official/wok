# SliTaz package receipt.

PACKAGE="gnome-doc-utils"
VERSION="0.12.2"
CATEGORY="extras"
SHORT_DESC="Documentation  utilities for Gnome"
MAINTAINER="erjo@slitaz.org"
DEPENDS="libxml2 libxslt python"
BUILD_DEPENDS="libxml2-dev libxslt-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.gnome.org/"
WGET_URL="http://ftp.gnome.org/pub/gnome/sources/gnome-doc-utils/0.12/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr \
	 --infodir=/usr/share/info \
	 --disable-scrollkeeper \
	 --mandir=/usr/share/man $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/share/locale
	cp -a $_pkg/usr/bin/gnome-doc-tool $fs/usr/bin
	cp -a $_pkg/usr/bin/xml2po $fs/usr/bin
	cp -a $_pkg/usr/share/xml2po $fs/usr/share
	cp -a $_pkg/usr/share/xml $fs/usr/share

}

