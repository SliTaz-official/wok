# SliTaz package receipt.

PACKAGE="perl-log-log4perl"
VERSION="1.54"
CATEGORY="development"
SHORT_DESC="Log::Log4perl module is a Perl extension."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/pod/Log::Log4perl"
REPOLOGY="perl:log-log4perl"
SOURCE="Log-Log4perl"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="https://www.cpan.org/modules/by-module/Log/$TARBALL"
DEPENDS="perl"
BUILD_DEPENDS="perl"

current_version()
{
	wget -O - $WEB_SITE 2>/dev/null | \
	sed '/release-name/!d;s|.*-v*||;s|<.*||;q'
}

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make &&
	make install DESTDIR=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_folders	lib
}
