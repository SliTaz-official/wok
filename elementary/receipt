# SliTaz package receipt.

PACKAGE="elementary"
VERSION="0.6.0.063"
CATEGORY="x-window"
SHORT_DESC="Widget set based on EFL for mobile touch-screen devices."
MAINTAINER="pankso@slitaz.org"
DEPENDS="cairo evas ecore embryo edje libelementary"
BUILD_DEPENDS="cairo-dev evas-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.enlightenment.org/"
WGET_URL="http://download.enlightenment.org/snapshots/2009-12-02/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/share $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/lib/elementary $fs/usr/lib
}
