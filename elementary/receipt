# SliTaz package receipt.

PACKAGE="elementary"
VERSION="1.7.5"
CATEGORY="x-window"
SHORT_DESC="Widget set based on EFL for mobile touch-screen devices."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.enlightenment.org/"
WGET_URL="http://download.enlightenment.org/releases/$TARBALL"
TAGS="e17"

DEPENDS="eina eet evas ecore edje efreet libelementary edbus eio emotion \
ethumb embryo libxml2"
BUILD_DEPENDS="eina-dev eet-dev evas-dev ecore-dev edje-dev efreet-dev \
expat-dev jpeg-dev glib-dev libpng-dev edbus-dev eio-dev emotion-dev \
ethumb-dev embryo-dev lua5.1-dev libxml2-dev"

# Rules to configure and make the package.
compile_rules()
{
	CFLAGS="$CFLAGS -fvisibility=hidden"
	LDFLAGS="$LDFLAGS -fvisibility=hidden"
	export LDFLAGS
	./configure \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/edje/modules/elm/linux-gnu-i486-1.0.0
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/share $fs/usr
	cp -a $install/usr/lib/*.so* $fs/usr/lib
	cp -a $install/usr/lib/edje/modules/elm/linux-gnu-i486-1.0.0/module.so \
		$fs/usr/lib/edje/modules/elm/linux-gnu-i486-1.0.0
	cp -a $install/usr/lib/elementary $fs/usr/lib
	rm -f $fs/usr/lib/elementary/modules/*/*/*.la
	# Package: libelementary
	rm -f $fs/usr/lib/libelementary.so.*
}
