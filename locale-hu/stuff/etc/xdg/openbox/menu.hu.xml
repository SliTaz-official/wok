<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<!-- Favorite applications -->
<menu id="favorites-menu" label="Kedvenc alkalmazások">
  <item label="Fájlkezelõ">
    <action name="Execute"><command>pcmanfm</command></action>
  </item>
  <item label="Terminál">
    <action name="Execute"><command>xterm</command></action>
  </item>
  <item label="Meghajtók csatolása">
    <action name="Execute"><command>subox mountbox</command></action>
  </item>
  <item label="Web Böngészõ">
    <action name="Execute"><command>firefox</command></action>
  </item>
  <item label="Szövegszerkesztõ">
    <action name="Execute"><command>leafpad</command></action>
  </item>
  <item label="Képnézegetõ">
    <action name="Execute"><command>gpicview</command></action>
  </item>
</menu>

<!-- Desktop files -->
<menu id="desktop-menu" label="Asztali fájlok és ikonok">
  <item label="Új mappa létrehozása">
    <action name="Execute"><command>desktopbox new-folder</command></action>
  </item>
  <item label="Új fájl létrehozása">
    <action name="Execute"><command>desktopbox new-file</command></action>
  </item>
  <separator />
  <item label="Új ikon hozzáadása">
    <action name="Execute"><command>desktopbox add-icons</command></action>
  </item>
</menu>

<!-- Desktop effects -->
<menu id="desktop-effects" label="Asztali hatások">
  <item label="Composite aktiválása">
    <action name="Execute"><command>xcompmgr</command></action>
  </item>
  <item label="Árnyékok aktiválása">
    <action name="Execute"><command>xcompmgr -c -r 10</command></action>
  </item>
  <item label="Fény-árnyék aktiválása">
    <action name="Execute"><command>xcompmgr -c -f -r 10</command></action>
  </item>
  <separator />
  <item label="Áttetszés beállítása (aktuális)">
    <action name="Execute">
      <command>transset-df --actual --max 60</command>
    </action>
  </item>
  <item label="Áttetszõség beállítása (klikk)">
    <action name="Execute">
      <command>transset-df --click --max 60</command>
    </action>
  </item>
  <separator />
  <item label="Hatások kikapcsolása">
    <action name="Execute"><command>killall xcompmgr</command></action>
  </item>
</menu>

<!-- SliTaz Live (Tazlito and Tazusb) -->
<menu id="slitaz-live-menu" label="SliTaz Live">
  <item label="Tazlito LiveCD Készítõ">
    <action name="Execute"><command>subox tazlitobox</command></action>
  </item>
  <separator />
  <item label="TazUSB LiveUSB Készítõ">
    <action name="Execute">
      <command>subox tazusbbox</command>
    </action>
  </item>
  <item label="TazUSB Writefs (gzip)">
    <action name="Execute">
      <command>subox "xterm -e tazusb writefs gzip"</command>
    </action>
  </item>
  <item label="TazUSB Writefs (lzma)">
    <action name="Execute">
      <command>subox "xterm -e tazusb writefs lzma"</command>
    </action>
  </item>
  <item label="TazUSB Writefs (none)">
    <action name="Execute">
      <command>subox "xterm -e tazusb writefs none"</command>
    </action>
  </item>
</menu>

<!-- SliTaz documentation -->
<menu id="documentation-menu" label="Dokumentáció">
  <item label="Tazlito kézikönyv">
    <action name="Execute">
      <command>firefox /usr/share/doc/tazlito/tazlito.html</command>
    </action>
  </item>
  <item label="Tazpkg kézikönyv">
    <action name="Execute">
      <command>firefox /usr/share/doc/tazpkg/tazpkg.html</command>
    </action>
  </item>
  <item label="TazUSB Kézikönyv (angol)">
    <action name="Execute">
      <command>firefox /usr/share/doc/tazusb/tazusb.en.html</command>
    </action>
  </item>
  <item label="Tazwok Kézikönyv">
    <action name="Execute">
      <command>firefox /usr/share/doc/tazwok/tazwok.html</command>
    </action>
  </item>
  <item label="GNU General Public License">
    <action name="Execute">
      <command>xterm -T "General Public License" -e less -M /usr/share/licenses/gpl.txt</command>
    </action>
  </item>
</menu>

<!-- Openbox configuration -->
<menu id="openbox-menu" label="Openbox">
  <item label="ObConf-Openbox beállítása">
    <action name="Execute"><command>obconf</command></action>
  </item>
  <item label="Automatikus indítás Script">
    <action name="Execute">
      <command>geany ~/.config/openbox/autostart.sh</command>
    </action>
  </item>
  <item label="Openbox Menü">
    <action name="Execute">
      <command>geany ~/.config/openbox/menu.xml</command>
    </action>
  </item>
  <separator />
  <item label="Újrakonfigurálás">
    <action name="Reconfigure" />
  </item>
  <item label="Újraindítás">
    <action name="Restart" />
  </item>
</menu>

<menu id="root-menu" label="Openbox 3">
  <!-- <separator label="SliTaz Openbox" /> -->
  <menu id="favorites-menu" />
  <menu id="desktop-menu" />
  <!-- Pipe menu to open folder using GTK bookmarks -->
  <menu id="open-folder-menu" label="Mappa megnyitása"
        execute="/usr/lib/openbox/open-folder-menu.sh" />
  <menu id="desktop-effects" />
  <menu id="slitaz-live-menu" />
  <menu id="documentation-menu" />
  <separator />
  <menu id="client-list-menu" />
  <menu id="openbox-menu" />
  <separator />
  <item label="Kijelentkezés">
    <action name="Execute"><command>desktopbox logout</command></action>
  </item>
</menu>

</openbox_menu>
