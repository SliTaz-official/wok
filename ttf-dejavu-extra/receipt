# SliTaz package receipt.

PACKAGE="ttf-dejavu-extra"
VERSION="2.34"
CATEGORY="fonts"
SHORT_DESC="DejaVu True Type Font (extra)."
MAINTAINER="pankso@slitaz.org"
LICENSE="other"
WEB_SITE="http://dejavu.sourceforge.net/"
WANTED="ttf-dejavu"
TAGS="font"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/fonts/truetype/ttf-dejavu
	cd       $fs/usr/share/fonts/truetype/ttf-dejavu
	install -m644 -oroot -groot $src/ttf/* .
	rm ./DejaVuSans.ttf ./DejaVuSans-Bold.ttf ./DejaVuSansMono.ttf
}

