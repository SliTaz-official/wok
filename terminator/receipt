# SliTaz package receipt.

PACKAGE="terminator"
VERSION="0.96"
CATEGORY="x-window"
SHORT_DESC="Tool for arranging terminals."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
TARBALL="${PACKAGE}_$VERSION.tar.gz"
WEB_SITE="https://gnometerminator.blogspot.com/p/introduction.html"
WGET_URL="https://launchpad.net/terminator/trunk/$VERSION/+download/$TARBALL"

DEPENDS="python pygtk notify-python python-vte"
BUILD_DEPENDS="wget python-dev"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py install --root=$DESTDIR 2>&1 | grep -v "GTK icon cache"
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib $fs/usr
}
