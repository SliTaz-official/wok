# SliTaz package receipt.

PACKAGE="python-restkit"
SOURCE="restkit"
VERSION="4.2.1"
CATEGORY="development"
SHORT_DESC="An HTTP resource kit for Python"
MAINTAINER="claudinei@slitaz.org"
LICENSE="MIT"
TARBALL="$SOURCE-$VERSION.zip"
WEB_SITE="http://restkit.readthedocs.org"
WGET_URL="https://github.com/benoitc/$SOURCE/archive/$VERSION.zip"

DEPENDS="python python-http-parser python-socketpool"
BUILD_DEPENDS="python-dev setuptools wget"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	rm -rf $install/usr/restkit
	cp -a $install/usr $fs
}
