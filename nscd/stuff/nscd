#!/bin/sh
# /etc/init.d/nscd : Start, stop and restart nscd server on SliTaz, at
# boot time or with the command line.
#
# To start nscd server at boot time, just put nscd in the $RUN_DAEMONS
# variable of /etc/rcS.conf and configure options with /etc/daemons.conf
#
. /etc/init.d/rc.functions
. /etc/daemons.conf

NAME=nscd
DESC="$(_ 'name-server caching daemon')"
DAEMON=/usr/sbin/nscd
OPTIONS=$NSCD_OPTIONS
PIDFILE=/var/run/nscd/nscd.pid

[ -d /var/run/nscd ] || mkdir /var/run/nscd
[ -d /var/db/nscd ] || mkdir /var/db/nscd

case "$1" in
  start)
    if active_pidfile $PIDFILE nscd ; then
      _ '%s is already running.' $NAME
      exit 1
    fi
    action 'Starting %s: %s...' "$DESC" $NAME
    $DAEMON $OPTIONS
    status
    sleep 2
    ;;
  stop)
    if ! active_pidfile $PIDFILE nscd ; then
      _ '%s is not running.' $NAME
      exit 1
    fi
    action 'Stopping %s: %s...' "$DESC" $NAME
    kill $(cat $PIDFILE)
    status
    sleep 2
    ;;
  restart)
    if ! active_pidfile $PIDFILE nscd ; then
      _ '%s is not running.' $NAME
      exit 1
    fi
    action 'Restarting %s: %s...' "$DESC" $NAME
    kill $(cat $PIDFILE)
    sleep 2
    $DAEMON $OPTIONS
    status
    sleep 2
    ;;
  *)
    emsg "<n><b>$(_ 'Usage:')</b> $0 [start|stop|restart]"
    newline
    exit 1
    ;;
esac

exit 0
