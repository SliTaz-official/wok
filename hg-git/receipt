# SliTaz package receipt.

PACKAGE="hg-git"
VERSION="5861777f2f5e"
CATEGORY="misc"
SHORT_DESC="Git plugin for mercurial."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://hg-git-github.com/"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://bitbucket.org/durin42/$PACKAGE/get/$VERSION.tar.bz2"

DEPENDS="mercurial dulwich python"
BUILD_DEPENDS="wget python-dev"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py install --root=$DESTDIR --prefix=/usr
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs
}
