# SliTaz package receipt.

PACKAGE="claws-mail-perl"
VERSION="0.9.19"
CATEGORY="network"
SHORT_DESC="Perl interface to Claws Mail' filtering mechanism."
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://www.claws-mail.org/plugins.php"
SOURCE="perl_plugin"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="https://www.claws-mail.org/downloads/plugins/$TARBALL"

DEPENDS="claws-mail"
BUILD_DEPENDS="claws-mail-dev enchant-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure $CONFIGURE_ARGS && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
		mkdir -p $fs/usr/lib/claws-mail/plugins
		cp -a $install/usr/lib/claws-mail/plugins/*.so \
			$fs/usr/lib/claws-mail/plugins
}
