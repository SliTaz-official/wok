# SliTaz package receipt.

PACKAGE="claws-mail-perl"
VERSION="3.17.5"
CATEGORY="network"
SHORT_DESC="Perl interface to Claws Mail' filtering mechanism."
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://www.claws-mail.org/plugins.php"

DEPENDS="claws-mail perl-dev"
WANTED="claws-mail"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/claws-mail/plugins
	cp -a $install/usr/lib/claws-mail/plugins/${PACKAGE##*-}.so \
			$fs/usr/lib/claws-mail/plugins
}
