# SliTaz package receipt.

PACKAGE="xwax"
VERSION="1.5"
CATEGORY="multimedia"
SHORT_DESC="An open-source Digital Vinyl System (DVS) for Linux"
MAINTAINER="Lucas Levrel <llev@slitaz.org>"
LICENSE="GPL2"
WEB_SITE="http://xwax.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/releases/$TARBALL"

DEPENDS="libsdl libsdl-ttf alsa-lib"
BUILD_DEPENDS="libsdl-dev libsdl-ttf-dev alsa-lib-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure $CONFIGURE_ARGS --enable-alsa --prefix /usr && \
	LDFLAGS=-Os make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs
}
