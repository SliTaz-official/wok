# SliTaz package receipt.

PACKAGE="attr-dev"
VERSION="2.4.44"
CATEGORY="development"
SHORT_DESC="Development files for attr."
MAINTAINER="rcx@zoominternet.net"
DEPENDS=""
WEB_SITE="http://savannah.nongnu.org/projects/attr/"
WANTED="attr"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.*a $fs/usr/lib

	# Symlinks are not created correctly; create manually
	mkdir -p $fs/lib
	ln -s /usr/lib/libattr.a $fs/lib/libattr.a
	ln -s /usr/lib/libattr.la $fs/lib/libattr.la

	cp -a $_pkg/usr/include $fs/usr
}
