# SliTaz package receipt.

PACKAGE="memtester"
VERSION="4.5.1"
CATEGORY="misc"
TAGS="test diagnostic RAM"
SHORT_DESC="A userspace utility for testing the memory subsystem for faults."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://pyropus.ca/software/memtester"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/old-versions/$TARBALL"

DEPENDS=""
BUILD_DEPENDS=""

HOST_ARCH="i486 arm"

# Rules to configure and make the package.
compile_rules()
{
	make
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $src/memtester	$fs/usr/bin
}
