# SliTaz package receipt.

PACKAGE="wget"
VERSION="1.16"
CATEGORY="utilities"
SHORT_DESC="retrieves files from the web"
MAINTAINER="sygne@ombres.eu"
LICENSE="GPL3"
TARBALL="$PACKAGE-$VERSION.tar.xz"
WEB_SITE="http://www.gnu.org/software/wget/wget.html"
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"
HOST_ARCH="i486 arm"

DEPENDS="openssl libidn pcre"
BUILD_DEPENDS="openssl-dev libidn-dev"

# Handle cross compilation
case "$ARCH" in
	arm) ARCH_ARGS="--with-libssl-prefix=/cross/$ARCH/sysroot/usr/lib" ;;
esac

# Rules to configure and make the package.
compile_rules()
{
	./configure --with-ssl=openssl \
		$CONFIGURE_ARGS $ARCH_ARGS &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
}

# Post install rules.
post_install()
{
	[ -z "$quiet" ] && echo -e "
wget is in conflict with the busybox wget.
If you want to use the busybox wget, do (as root):
\033[1m ln -s /bin/busybox /usr/bin/wget \033[0m
"
}

post_remove()
{
	ln -s /bin/busybox "$1/usr/bin/wget"
}
