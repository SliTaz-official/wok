# SliTaz package receipt.

PACKAGE="postgresql-dev"
VERSION="9.0.1"
CATEGORY="development"
SHORT_DESC="SQL database system development files"
MAINTAINER="pascal.bellard@slitaz.org"
DEPENDS="postgresql"
WEB_SITE="http://www.postgresql.org/"
WANTED="postgresql"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/postgresql $fs/usr/bin
	cp -a $_pkg/usr/include $fs/usr
	cp -a $_pkg/usr/bin/pg_config $fs/usr/bin
	cp -a $_pkg/usr/lib/postgresql/*a $fs/usr/lib/postgresql
	strip --strip-debug $fs/usr/lib/postgresql/*.a
}

