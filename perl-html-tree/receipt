# SliTaz package receipt.

PACKAGE="perl-html-tree"
VERSION="4.1"
CATEGORY="development"
SHORT_DESC="HTML::Tree module is a Perl extension."
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL"
DEPENDS="perl perl-html-parser perl-html-tagset"
BUILD_DEPENDS="perl perl-html-parser perl-html-tagset"
SOURCE="HTML-Tree"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="https://metacpan.org/release/HTML-Tree"
WGET_URL="https://metacpan.org/CPAN/authors/id/J/JF/JFEARN/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Makefile.PL &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
}
