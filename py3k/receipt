# SliTaz package receipt.

PACKAGE="py3k"
VERSION="3.0"
CATEGORY="development"
SHORT_DESC="The Python 3000 programming language."
MAINTAINER="pascal.bellard@slitaz.org"
SOURCE="Python"
DEPENDS="openssl ncurses"
BUILD_DEPENDS="readline-dev openssl openssl-dev ncurses ncurses-dev"
TARBALL="$SOURCE-$VERSION.tar.bz2"
WEB_SITE="http://www.python.org/download/releases/3.0/"
WGET_URL="http://www.python.org/ftp/python/$VERSION/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --enable-shared --with-ncurses \
	--prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
	rm -f $fs/usr/bin/*-config
}

