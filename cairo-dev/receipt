# SliTaz package receipt.

PACKAGE="cairo-dev"
VERSION="1.16.0"
CATEGORY="development"
SHORT_DESC="2D graphics library, development files"
MAINTAINER="pankso@slitaz.org"
LICENSE="MPL LGPL2.1"
WEB_SITE="https://www.cairographics.org/"

WANTED="cairo"
DEPENDS="cairo pkg-config cairo-tools bzip2 fontconfig-dev freetype-dev glib-dev \
harfbuzz-dev libffi-dev libpng-dev libxcb-dev libxml2-dev pcre-dev pixman-dev \
xorg-libX11-dev xorg-libXau-dev xorg-libXdmcp-dev xorg-libXext-dev \
xorg-libXrender-dev"
HOST_ARCH="i486 arm"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/cairo
	cp -a $install/usr/lib/*.*a $fs/usr/lib
	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	cp -a $install/usr/lib/cairo/*.*a $fs/usr/lib/cairo
	cp -a $install/usr/include $fs/usr
}
