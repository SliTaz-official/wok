# SliTaz package receipt.

PACKAGE="cairo-dev"
VERSION="1.14.2"
CATEGORY="development"
SHORT_DESC="2D graphics library devel files."
MAINTAINER="pankso@slitaz.org"
LICENSE="MPL LGPL2.1"
WEB_SITE="http://www.cairographics.org/"
WANTED="cairo"
HOST_ARCH="i486 arm"

DEPENDS="pixman-dev xorg-libXrender-dev xorg-libXext-dev glib-dev libxcb-dev \
xcb-util-dev cairo fontconfig-dev freetype-dev libpng-dev expat-dev pkg-config"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/cairo
	cp -a $install/usr/lib/*.*a $fs/usr/lib
	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	cp -a $install/usr/lib/cairo/*.*a $fs/usr/lib/cairo
	cp -a $install/usr/include $fs/usr
}
