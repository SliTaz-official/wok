# SliTaz package receipt.

PACKAGE="python-shapely"
VERSION="1.3.2"
CATEGORY="development"
SHORT_DESC="Manipulation and analysis of geometric objects in the Cartesian plane."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
SOURCE="Shapely"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://pypi.python.org/pypi/$SOURCE/$VERSION"
WGET_URL="https://pypi.python.org/packages/source/${SOURCE:0:1}/$SOURCE/$TARBALL"

DEPENDS="python geos"
BUILD_DEPENDS="python-dev wget geos-dev"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}
