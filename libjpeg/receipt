# SliTaz package receipt.

PACKAGE="libjpeg"
VERSION="8c"
CATEGORY="x-window"
SHORT_DESC="JPEG image libs."
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://www.ijg.org/"
WANTED="jpeg"
TAGS="jpeg jpg"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p  $fs/usr/lib
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}
