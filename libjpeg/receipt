# SliTaz package receipt.

PACKAGE="libjpeg"
VERSION="9d"
CATEGORY="x-window"
TAGS="jpeg jpg"
SHORT_DESC="JPEG image libraries."
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://www.ijg.org/"

WANTED="jpeg"

HOST_ARCH="i486 arm"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p  $fs/usr/lib
	cp -a $install/usr/lib/*.so*	$fs/usr/lib
}
