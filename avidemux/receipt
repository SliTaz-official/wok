# SliTaz package receipt.

PACKAGE="avidemux"
VERSION="2.4.4"
CATEGORY="multimedia"
SHORT_DESC="free video editor"
MAINTAINER="allan316@gmail.com"
DEPENDS="libSDL alsa-lib libsdl-gfx libiconv"
BUILD_DEPENDS="cmake alsa-lib-dev libSDL-dev libsdl-gfx-dev libiconv-dev"
TARBALL="avidemux_2.4.4.tar.gz"
WEB_SITE="http://fixounet.free.fr/$PACKAGE"
WGET_URL="http://download.berlios.de/$PACKAGE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	mv $WOK/$PACKAGE/avidemux_2.4.4 $WOK/$PACKAGE/avidemux-2.4.4
	cd $src
	cmake -DCMAKE_INSTALL_PREFIX=/usr .
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/applications
	cp -a $_pkg/usr/bin $fs/usr
	cp -a stuff/avidemux.desktop $fs/usr/share/applications/
}

