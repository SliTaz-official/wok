# SliTaz package receipt.

PACKAGE="xorg-libXfont2-dev"
VERSION="2.0.4"
CATEGORY="development"
SHORT_DESC="Development files for libXfont2."
MAINTAINER="maintainer@slitaz.org"
LICENSE="other"
WEB_SITE="https://www.x.org/wiki/"

DEPENDS="freetype-dev glibc-dev pkg-config xorg-fontsproto 
	xorg-libfontenc-dev xorg-libXfont zlib-dev"
WANTED="xorg-libXfont2"

HOST_ARCH="i486 arm"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/licenses
	mkdir -p $fs/usr/lib

	cp -a $src/COPYING			$fs/usr/share/licenses/${PACKAGE%-dev}.txt
	cp -a $install/usr/include		$fs/usr
	cp -a $install/usr/lib/pkgconfig	$fs/usr/lib
	cp -a $install/usr/lib/*.la		$fs/usr/lib
}
