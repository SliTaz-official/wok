# SliTaz package receipt.

PACKAGE="udisks2-dev"
VERSION="2.1.3"
CATEGORY="development"
SHORT_DESC="D-Bus service to access and manipulate storage devices (development)"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.freedesktop.org/wiki/Software/udisks"
WANTED="udisks2"

DEPENDS="glib-dev libffi-dev libgio-dev pcre-dev udisks2"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share

	cp -a $install/usr/include $fs/usr
	cp -a $install/usr/lib/*.*a $fs/usr/lib
	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	cp -a $install/usr/lib/girepository-1.0 $fs/usr/lib
	cp -a $install/usr/share/gir-1.0 $fs/usr/share
}
