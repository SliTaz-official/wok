# SliTaz package receipt.

PACKAGE="R"
VERSION="3.1.1"
CATEGORY="office"
SHORT_DESC="Free software environment for statistical computing and graphics."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.r-project.org/"
WGET_URL="http://cran.r-project.org/src/base/R-3/$TARBALL"

DEPENDS="libgfortran readline bzlib libgomp midori epdfview pcre"
BUILD_DEPENDS="gfortran readline-dev bzip2-dev pcre-dev"

# Rules to configure and make the package.
compile_rules()
{
	export R_BROWSER="midori"
	export R_PDFVIEWER="epdfview"
	unset DESTDIR
	cd $src
	patch -p 0 < $stuff/pcre.u
	./configure \
		--enable-R-shlib \
		--with-system-zlib \
		--with-system-bzlib \
		--with-system-pcre \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$install install

	cook_compress_manpages
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib $fs/usr
	sed -i s'/bash/sh/' $fs/usr/bin/R
	sed -i s'/bash/sh/' $fs/usr/lib/R/bin/R
	sed -i s'/bash/sh/' $fs/usr/lib/R/bin/pager
}
