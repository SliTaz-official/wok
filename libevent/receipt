# SliTaz package receipt.

PACKAGE="libevent"
VERSION="2.0.22"
CATEGORY="system-tools"
SHORT_DESC="An event notification library."
MAINTAINER="0dddba11@googlemail.com"
LICENSE="BSD"
TARBALL="$PACKAGE-$VERSION-stable.tar.gz"
WEB_SITE="http://libevent.org"
WGET_URL="http://downloads.sourceforge.net/levent/$TARBALL"
HOST_ARCH="i486 arm"

DEPENDS="openssl"
BUILD_DEPENDS="openssl-dev wget"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}
