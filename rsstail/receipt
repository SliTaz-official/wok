# SliTaz package receipt.

PACKAGE="rsstail"
VERSION="1.8"
CATEGORY="news"
SHORT_DESC="RSSTail is more or less an rss reader"
MAINTAINER="tcg.thegamer@gmail.com"
LICENSE="GPL"
WEB_SITE="http://www.vanheusden.com"
TARBALL="$PACKAGE-$VERSION.tgz"
WGET_URL="${WEB_SITE}/${PACKAGE}/${TARBALL}"

DEPENDS="libnxml libmrss curl"
BUILD_DEPENDS="libnxml libnxml-dev libmrss libmrss-dev libcurl curl-dev"

# Rules to configure and make the package.
compile_rules()
{
	mkdir -p ${DESTDIR}/usr/bin && 
	mkdir -p ${DESTDIR}/usr/share/man/man1 &&
	make && 
	make DESTDIR=${DESTDIR} install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr/
}
