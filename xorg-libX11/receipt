 # SliTaz package receipt.

PACKAGE="xorg-libX11"
VERSION="1.5.99.902"
CATEGORY="x-window"
SHORT_DESC="X11 main client interface to X window system."
MAINTAINER="pankso@slitaz.org"
SOURCE="libX11"
TARBALL="$SOURCE-$VERSION.tar.bz2"
WEB_SITE="http://www.x.org/"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

DEPENDS="libxcb"
BUILD_DEPENDS="xorg-xtrans libxcb-dev pkg-config xorg-kbproto \
xorg-inputproto xorg-xextproto"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	sed -i 's/^# keys/keys/' man/xkb/XkbGetKeyVirtualModMap.man
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share/X11/locale
	
	cp -a $install/usr/lib/*.so* $fs/usr/lib
	cp -a $install/usr/lib/X11 $fs/usr/lib
	cp -a $install/usr/share/X11/*DB $fs/usr/share/X11
	
	# X11 locale.
	for i in C iso8859-1 en_US.UTF-8 ko_KR.UTF-8 pt_BR.UTF-8 zh_TW.UTF-8 zh_CN.UTF-8
	do
		cp -a $install/usr/share/X11/locale/$i $fs/usr/share/X11/locale
	done
	cp -a $install/usr/share/X11/locale/*.dir $fs/usr/share/X11/locale
	cp -a $install/usr/share/X11/locale/*.alias $fs/usr/share/X11/locale
}
