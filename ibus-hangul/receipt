# SliTaz package receipt.

PACKAGE="ibus-hangul"
VERSION="1.4.1"
CATEGORY="utilities"
SHORT_DESC="Intelligent Input Bus"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://code.google.com/p/ibus/"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://ibus.googlecode.com/files/$TARBALL"

DEPENDS="ibus"
BUILD_DEPENDS="intltool gettext perl ibus-dev glib-dev libhangul-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-gtk3 \
		--with-gtk2-im-module-dir=$(ls -d /usr/lib/gtk-2*/2*/immodules/) \
		$CONFIGURE_ARGS &&
	make && make -k DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs
}
