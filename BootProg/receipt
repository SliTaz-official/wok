# SliTaz package receipt.

PACKAGE="BootProg"
VERSION="slitaz"
CATEGORY="base-system"
SHORT_DESC="FAT12/16/32 Bootsector for .COMs/.EXEs"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://wiki.osdev.org/BootProg"

BUILD_DEPENDS="nasm lzma"

# Rules to configure and make the package.
compile_rules()
{
	mkdir -p $src && cd $src
	sed '1,/^exit 1/!d' $stuff/bootprog.sh > bootprog
	for i in boot16 boot32 bootex ; do
		cp $stuff/$i.asm .
		nasm $i.asm -f bin -o $i.bin -l $i.lst && cat $i.bin
	done | lzma -9 >> bootprog
	chmod +x bootprog
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $src/bootprog $fs/usr/bin
}
