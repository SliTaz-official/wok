# SliTaz package receipt.

PACKAGE="gptfdisk"
VERSION="1.0.3"
CATEGORY="system-tools"
SHORT_DESC="GUID Partition Table (GPT) Partitioning tools"
MAINTAINER="mojo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.rodsbooks.com/gdisk/"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://downloads.sourceforge.net/project/$PACKAGE/$PACKAGE/$VERSION/$TARBALL"

DEPENDS=""
BUILD_DEPENDS="util-linux-uuid-dev ncursesw-dev popt-dev"

# Rules to configure and make the package.
compile_rules()
{
make
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
        mkdir -p $fs/usr/bin     
        cp $src/gdisk $src/cgdisk \
        $src/sgdisk $src/fixparts $fs/usr/bin
}
