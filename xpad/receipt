# SliTaz package receipt.

PACKAGE="xpad"
VERSION="3.0"
CATEGORY="utilities"
SHORT_DESC="Desktop note pad using GTK+ toolkit."
MAINTAINER="pankso@slitaz.org"
DEPENDS="gtk+"
BUILD_DEPENDS="pkg-config gtk+"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://xpad.sourceforge.net/"
WGET_URL="http://launchpad.net/xpad/stable/3.0/+download/$TARBALL"
HANDBOOK_URL='http://www.slitaz.org/doc/handbook/utilities.html#xpad'

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/pixmaps
	cp -a $_pkg/usr/bin $fs/usr
	cp stuff/xpad.png $fs/usr/share/pixmaps
}
