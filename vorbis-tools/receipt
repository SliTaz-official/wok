# SliTaz package receipt.

PACKAGE="vorbis-tools"
VERSION="1.2.0"
CATEGORY="multimedia"
SHORT_DESC="Vorbis encoder, decoder and tiny tools."
MAINTAINER="pankso@slitaz.org"
DEPENDS="libogg libvorbis flac libao libcurl speex libcrypto"
BUILD_DEPENDS="libogg-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.vorbis.com/"
WGET_URL="http://downloads.xiph.org/releases/vorbis/$TARBALL"
TAGS="multimedia ogg"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	# Fix for version 1.1.1
	#sed -i '/CURLOPT_MUTE/d' ogg123/http_transport.c
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
}
