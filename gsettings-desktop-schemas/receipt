# SliTaz package receipt.

PACKAGE="gsettings-desktop-schemas"
VERSION="3.2.0"
CATEGORY="x-window"
SHORT_DESC="Collection of GSettings schemas for settings shared by various components of a GNOME Desktop"
MAINTAINER="al.bobylev@gmail.com"
DEPENDS="libgio"
BUILD_DEPENDS="libgio-dev"
TARBALL="$PACKAGE-$VERSION.tar.xz"
HI_VERSION=$(echo $VERSION | sed 's|\([0-9\.]*\)\.[0-9]*|\1|')
WEB_SITE="http://www.gnome.org/"
WGET_URL="http://ftp.gnome.org/pub/gnome/sources/gsettings-desktop-schemas/$HI_VERSION/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $_pkg/usr $fs
}
