# SliTaz package receipt.

PACKAGE="get-wifi-firmware"
VERSION="1.0"
CATEGORY="non-free"
SHORT_DESC="Get misc wifi firmwares."
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="See /usr/bin/$PACKAGE source"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp stuff/$PACKAGE $fs/usr/bin
	for i in b43 b43legacy ipw2100 ipw2200 rt61 rt73 \
		 iwlwifi-3945 iwlwifi-4965 iwlwifi-5000; do
		ln -s $PACKAGE $fs/usr/bin/get-$i-firmware
	done
}
