#!/bin/sh
#
# SliTaz GTKdialog example (tab used for ident).
#

export MAIN_DIALOG='
<window title="SliTaz box" icon-name="help">
<vbox>
	
	<text use-markup="true">
		<label>"<b>SliTaz - Box</b>"</label>
	</text>
	<text wrap="true" width-chars="50" use-markup="true">
		<label>"Some static text"</label>
	</text>	

	<frame Frame>
		<hbox>
			<text use-markup="true">
				<label>"<b>Entry:</b>"</label>
			</text>
			<entry>
				<default>defvalue</default>
				<variable>NAME</variable>
			</entry>
		</hbox>
	</frame>
	
	<tree>
		<width>320</width><height>80</height>
		<variable>DIR</variable>
		<label>Directories</label>
		<input>ls /</input>
		<action>pcmanfm /$DIR</action>
	</tree>

	<hbox>
		<button>
			<label>Button label</label>
			<input file icon="xterm"></input>
			<action>xterm &</action>
		</button>
		<button>
			<input file icon="exit"></input>
			<action type="exit">Exit</action>
		</button>
	</hbox>

</vbox>
</window>
'

gtkdialog --center --program=MAIN_DIALOG

exit 0
