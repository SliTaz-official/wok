# SliTaz package receipt.

PACKAGE="remmina-plugins"
VERSION="0.9.2"
CATEGORY="network"
SHORT_DESC="RDP, VNC, NX, XDMCP and SSH support for remmina"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://remmina.sourceforge.net/"
WGET_URL="$SF_MIRROR/remmina/$TARBALL"
TAGS="rdp vnc"

DEPENDS="remmina"
BUILD_DEPENDS="intltool remmina-dev gtk+-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure $CONFIGURE_ARGS && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/remmina/plugins
	cp -a $install/usr/share $fs/usr
	cp -a $install/usr/lib/remmina/plugins/*.so* $fs/usr/lib/remmina/plugins
}
