# SliTaz package receipt.

PACKAGE="compiz-libcompizconfig"
SOURCE="libcompizconfig"
VERSION="0.8.12.1"
CATEGORY="x-window"
SHORT_DESC="Compiz configuration library."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
TARBALL="$SOURCE-$VERSION.tar.xz"
WEB_SITE="https://github.com/compiz-reloaded"
WGET_URL="$WEB_SITE/$SOURCE/releases/download/v$VERSION/$TARBALL"

DEPENDS="compiz-core protobuf glib libgio libxml2"
BUILD_DEPENDS="xorg-dev compiz-core-dev glibc-dev libxml2-dev mesa-dev file \
libxslt-dev startup-notification-dev protobuf-dev glib-dev libgio-dev libtool"

# Rules to configure and make the package.
compile_rules()
{
	./configure --sysconfdir=/etc
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share
	cp -a $install/etc $fs
	cp -a $install/usr/lib/compiz* $fs/usr/lib
	cp -a $install/usr/lib/*.so* $fs/usr/lib
	cp -a $install/usr/share/compiz $fs/usr/share
	find $fs -name 'lib*a' -delete
}
