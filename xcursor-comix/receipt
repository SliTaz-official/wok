WGET_URL="http://www.limitland.de/downloads/comixcursors/$TARBALL"
TAGS="cursor-theme"

DEPENDS="xorg-libXcursor"
BUILD_DEPENDS=""

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/icons
	cp -a $src/* $fs/usr/share/icons
}
