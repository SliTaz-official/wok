# SliTaz package receipt.

PACKAGE="libmowgli"
VERSION="2.0.0"
CATEGORY="system-tools"
SHORT_DESC="High performance and highly flexible algorithms."
MAINTAINER="mimas@slitaz.org"
LICENSE="BSD"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://atheme.org/projects/libmowgli.html"
WGET_URL="https://github.com/atheme/libmowgli-2/archive/$TARBALL"

BUILD_DEPENDS="wget"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	sed -i "s/touch -t 0001010000 /touch /g" configure
	./configure \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/libmowgli*.so* $fs/usr/lib
}
