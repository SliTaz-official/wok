# SliTaz package receipt.

PACKAGE="libwebkit"
SOURCE="webkit"
VERSION="1.2.6"
CATEGORY="network"
SHORT_DESC="xHTML render library."
DEPENDS="gtk+ enchant libxslt expat gtk+ jpeg libpng libxml2 sqlite \
xorg-libICE xorg-libSM xorg-libX11 xorg-libXau xorg-libXcomposite \
xorg-libXcursor xorg-libXdmcp xorg-libXext xorg-libXfixes \
xorg-libXinerama xorg-libXrandr xorg-libXrender xorg-libXt acl \
xorg-libXdamage libsoup gcc-lib-base libtasn1 util-linux-ng-uuid"
BUILD_DEPENDS="gtk+-dev enchant enchant-dev gperf libxslt-dev jpeg-dev \
libpng-dev glib-dev autoconf automake gnutls-dev sqlite-dev libtool \
m4 bison flex xorg-libXdamage-dev acl-dev libsoup-dev libxml2-dev \
libxcb-dev xcb-util-dev util-linux-ng-uuid-dev zlib-dev libtasn1-dev \
gobject-introspection-dev tar gettext"
MAINTAINER="mallory@sweetpeople.org"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://webkitgtk.org"
WGET_URL="$WEB_SITE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	patch -Np0 -i ../stuff/introspection.patch
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		--enable-introspection=yes \
        --enable-video=no \
		--enable-jit=yes \
		--with-unicode-backend=glib \
		$CONFIGURE_ARGS &&
	make -j4 && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/bin
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $src/Programs/GtkLauncher $fs/usr/bin/
	cp -a $_pkg/usr/lib/girepository-1.0 $fs/usr/lib
}
