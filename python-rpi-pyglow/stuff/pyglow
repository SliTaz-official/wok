#!/bin/sh
#
# Tiny wrapper to Python Pyglow examples
#

ex="/usr/share/pyglow"

# Make sure we have i2c-dev module loaded
if ! lsmod | fgrep -q 'i2c_dev'; then
	modprobe i2c-dev
fi

case "$1" in
	cpu) 
		python ${ex}/cpu.py ;;
	clock) 
		python ${ex}/clock.py ;;
	set-leds) 
		python ${ex}/set_leds.py ;;
	'test') 
		python ${ex}/test.py ;;
	*) 
		echo "Usage: $(basename $0) [test|cpu|clock|set-leds]" ;;
esac

exit 0
