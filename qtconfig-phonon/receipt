# SliTaz package receipt.

PACKAGE="qtconfig-phonon"
VERSION="4.8.6"
CATEGORY="x-window"
SHORT_DESC="Qtconfig is a tool that allows users to customize the default settings for Qt applications."
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL3 LGPL2.1"
WEB_SITE="http://qt-project.org/"
WANTED="qt4"

DEPENDS="gst-plugins-base libQt3Support libQtNetwork libQtDBus qt4-phonon"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/share/qt/translations
	cp -a $install/usr/bin/qtconfig $fs/usr/bin
	cp -a $install/usr/share/qt/translations/qtconfig*.qm $fs/usr/share/qt/translations
}

