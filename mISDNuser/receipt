# SliTaz package receipt.

PACKAGE="mISDNuser"
VERSION="20080827"
CATEGORY="system-tools"
SHORT_DESC="beronet isdn drivers userland tools."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="${PACKAGE}_${VERSION}.tar.gz"
WEB_SITE="http://www.misdn.org/"
WGET_URL="${WEB_SITE}downloads/releases/$TARBALL"
DEPENDS="linux-isdn ncurses"

# Rules to configure and make the package.
compile_rules()
{
	mv $PACKAGE $src 2> /dev/null
	cd $src
	mkdir -p _pkg/usr/lib 2> /dev/null
	sed -i 's/^INSTALL_PREFIX.*/INSTALL_PREFIX := $(DESTDIR)/' Makefile
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	# Package all mISDNuser pkgs
	for i in $(cd $WOK; ls -d mISDNuser-*)
	do
		tazwok genpkg $i
	done
}

