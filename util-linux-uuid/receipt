WANTED="util-linux"
DEPENDS="glibc-base"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_files libuuid.so* uuidgen uuidd
	rm -r $fs/usr/share
}
