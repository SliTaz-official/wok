# SliTaz package receipt.

PACKAGE="tazlito"
VERSION="1.6"
CATEGORY="base-system"
SHORT_DESC="SliTaz Live Tool."
MAINTAINER="pankso@slitaz.org"
DEPENDS="lzma"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.slitaz.org/"
WGET_URL="http://download.tuxfamily.org/slitaz/sources/tazlito/$TARBALL"

# Rules to gen a SliTaz package suitable for Tazpkg.
#
# Tazlito is SliTaz Live Tool. On an other GNU/Linux install
# can be do with : make install from the sources directory.
#
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/share/doc/$PACKAGE $fs/etc/tazlito
	cp -a $src/$PACKAGE $fs/usr/bin
	chmod 755 $fs/usr/bin/$PACKAGE
	cp -a $src/doc/$PACKAGE.html $fs/usr/share/doc/$PACKAGE
	cp $src/tazlito.conf $fs/etc/tazlito
	# Declare /etc/tazlito/distro-packages.list
	touch $fs/etc/tazlito/distro-packages.list
}
