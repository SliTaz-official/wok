# SliTaz package receipt.

PACKAGE="hal-extra"
VERSION="0.5.13"
CATEGORY="x-window"
SHORT_DESC="Hal devel files."
WANTED="hal"
MAINTAINER="pankso@slitaz.org"
WEB_SITE="http://www.freedesktop.org/wiki/Software/hal"
DEPENDS="dbus dbus-glib glib hal"
EXTRA="
hald-addon-cpufreq
hald-addon-hid-ups
hald-addon-imac-backlight
hald-addon-ipw-killswitch
hald-probe-video4linux
hald-probe-net-bluetooth
hald-probe-ieee1394-unit
hald-probe-pc-floppy
hald-probe-printer"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/hal
	for lib in $EXTRA
	do
		cp $_pkg/usr/lib/hal/$lib $fs/usr/lib/hal
	done
}
