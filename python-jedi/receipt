# SliTaz package receipt.

PACKAGE="python-jedi"
SOURCE="jedi"
VERSION="0.9.0"
CATEGORY="development"
SHORT_DESC="An autocompletion tool for Python that can be used for text editors."
MAINTAINER="paul@slitaz.org"
LICENSE="MIT"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="https://pypi.org/project/$SOURCE/"
WGET_URL="https://pypi.python.org/packages/source/j/$SOURCE/$TARBALL"

DEPENDS="python"
BUILD_DEPENDS="wget setuptools python-dev"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}

