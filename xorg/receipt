# SliTaz package receipt.

PACKAGE="xorg"
VERSION="7.3"
CATEGORY="meta"
SHORT_DESC="Xorg server meta-package to compile/install all Xorg modules."
MAINTAINER="pankso@slitaz.org"
WEB_SITE="http://www.x.org/"
BUILD_DEPENDS="pkg-config perl freetype-dev fontconfig-dev xorg-xtrans"
DEPENDS="
xorg-libXdmcp
xorg-libXau
xorg-libX11
xorg-libXext
xorg-libXrender
xorg-libXrandr
xorg-libXfixes
xorg-libfontenc
xorg-libXfont
xorg-libXcomposite
xorg-libICE
xorg-libSM
xorg-libXt
xorg-libXinerama
xorg-libXmu
xorg-libXpm
xorg-libXaw
xorg-libXt
xorg-libXcursor
xorg-libXi
xorg-rgb"

# Rules to configure and make the package.
compile_rules()
{
    for pkg in $DEPENDS
    do
        tazwok compile $pkg
    done
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	for pkg in $DEPENDS
    do
        tazwok genpkg $pkg
    done
    # Have a file to avoid errors with tazpkg install.
    mkdir -p $fs/etc/X11
    echo "$VERSION" > $fs/etc/X11/version
}
