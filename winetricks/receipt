# SliTaz package receipt.

PACKAGE="winetricks"
VERSION="20110429"
CATEGORY="misc"
SHORT_DESC="Script to install various redistributable runtime libraries in Wine."
MAINTAINER="slaxemulator@gmail.com"
DEPENDS="wine cabextract xorg-xmessage unzip wget"
SUGGESTED="zenity"
WEB_SITE="http://wiki.winehq.org/winetricks"
_WGET_URL="http://www.kegel.com/wine/$PACKAGE"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	[ -s $SOURCES_REPOSITORY/$PACKAGE-$VERSION ] ||
		wget -O $SOURCES_REPOSITORY/$PACKAGE-$VERSION $_WGET_URL
	cp -a $SOURCES_REPOSITORY/$PACKAGE-$VERSION $fs/usr/bin/$PACKAGE
	chmod a+x $fs/usr/bin/$PACKAGE
}

