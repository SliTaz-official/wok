# SliTaz package receipt.

PACKAGE="spidermonkey"
VERSION="1.7.0"
CATEGORY="multimedia"
SHORT_DESC="Mozilla C implementation of Javascript"
MAINTAINER="jozee@slitaz.org"
DEPENDS=""
BUILD_DEPENDS=""
SOURCE="js"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://www.mozilla.org/js/spidermonkey/" 
WGET_URL="http://ftp.mozilla.org/pub/mozilla.org/js/$TARBALL"
TAGS="javascript"

# Rules to configure and make the package.
compile_rules()
{
	src=$WOK/$PACKAGE/$SOURCE/src
	cd $src	
	make -f Makefile.ref DIST=../_pkg/usr all export

}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	
	_pkg=$WOK/$PACKAGE/$SOURCE/_pkg
	cp -a $_pkg/usr/bin $fs/usr	
	cp -a $_pkg/usr/lib/*so* $fs/usr/lib
}
