# SliTaz package receipt.

PACKAGE="util-linux-whereis"
VERSION="2.21.1"
CATEGORY="base-system"
SHORT_DESC="The whereis utility and library from Util linux."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://kernel.org/~kzak/util-linux/"

DEPENDS="glibc-base"
WANTED="util-linux"
HOST_ARCH="i486 arm"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $install/usr/bin/whereis $fs/usr/bin
}
