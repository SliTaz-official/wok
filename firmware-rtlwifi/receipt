# SliTaz package receipt.

PACKAGE="firmware-rtlwifi"
VERSION="20120227"
CATEGORY="non-free"
SHORT_DESC="Firmware files for rtlwifi modules."
MAINTAINER="mojo@slitaz.org"
DEPENDS="linux-wireless"
WEB_SITE="http://git.kernel.org/?p=linux/kernel/git/dwmw2/linux-firmware.git;a=summary"
WANTED="firmware"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
  mkdir -p $fs/lib/firmware/rtlwifi $fs/usr/share/licenses
  cp -a $src/rtlwifi/* $fs/lib/firmware/rtlwifi
  cp -a $src/LICENCE.rtlwifi_firmware.txt $fs/usr/share/licenses
}

