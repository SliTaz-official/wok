# SliTaz PACKAGE receipt.

PACKAGE="qupzilla"
VERSION="v1.4.3"
CATEGORY="x-window"
SHORT_DESC="QupZilla is a new, lightweight and very fast QtWebKit browser"
MAINTAINER="claudinei@slitaz.org"
LICENSE="GPLv3"
WEB_SITE="https://github.com/QupZilla/qupzilla"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/archive/$VERSION.tar.gz"

DEPENDS="qt4 openssl gst-plugins-base"
BUILD_DEPENDS="Qt4-dev qmake openssl-dev wget"
SUGGESTED="qupzilla-locales"

# Rules to configure and make the PACKAGE.
compile_rules()
{
	export QUPZILLA_PREFIX="$DESTDIR/usr/"
	qmake &&
	make && make install 
}

# Rules to gen a SliTaz PACKAGE suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/$PACKAGE
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib $fs/usr
	cp -a $install/usr/share/$PACKAGE/themes $fs/usr/share/$PACKAGE
}
