# SliTaz package receipt.

PACKAGE="zbar"
VERSION="0.10"
CATEGORY="utilities"
SHORT_DESC="Decode barcode & QR code."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="LGPL2.1"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://zbar.sourceforge.net/"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

DEPENDS="jpeg imagemagick pango cairo freetype fontconfig atk gtk+ libgio"
BUILD_DEPENDS="linux-api-headers jpeg-dev imagemagick-dev pango-dev cairo-dev \
freetype-dev fontconfig-dev atk-dev gtk+-dev libgio-dev util-linux-uuid-dev \
lcms-dev fftw-dev openexr-dev ilmbase-dev graphviz-dev gdk-pixbuf libxml2-dev \
libtool"

# Rules to configure and make the package.
compile_rules()
{
	sed -i 's|w\(and/MagickWand\.h\)|MagickW\1|' configu* zbarimg/zbarimg.c
	./configure --prefix=/usr --mandir=/usr/share/man \
		--localstatedir=/var \
		--without-qt \
		--without-python \
		--disable-video \
	$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.   
genpkg_rules()                                      
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}
