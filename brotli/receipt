# SliTaz package receipt.

PACKAGE="brotli"
VERSION="1.0.2"
CATEGORY="base-system"
SHORT_DESC="A generic-purpose lossless compression algorithm."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="https://github.com/google/brotli"
WGET_URL="$WEB_SITE/archive/v$VERSION.tar.gz"
TAGS="compression"

DEPENDS="gcc-lib-base"
BUILD_DEPENDS="python-dev setuptools cmake"

# Rules to configure and make the package.
compile_rules()
{
	cmake .
	make bro
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/lib
	cp -a $src/bro $fs/usr/bin/
	cp -a $src/*.so* $fs/usr/lib
}
