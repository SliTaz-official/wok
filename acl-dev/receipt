# SliTaz package receipt.

PACKAGE="acl-dev"
VERSION="2.2.49"
CATEGORY="development"
SHORT_DESC="Development files for acl."
MAINTAINER="rcx@zoominternet.net"
DEPENDS=""
WEB_SITE="http://savannah.nongnu.org/projects/acl/"
WANTED="acl"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/include
	cp -a $_pkg/usr/lib/*.*a $fs/usr/lib

	# Symlinks are not created correctly; create manually
	mkdir -p $fs/lib
	ln -s /usr/lib/libacl.a $fs/lib/libacl.a
	ln -s /usr/lib/libacl.la $fs/lib/libacl.la

	cp -a $src/include/*acl*.h $fs/usr/include

	mkdir -p $fs/usr/include/sys
	ln -s /usr/include/acl.h $fs/usr/include/sys/acl.h
}
