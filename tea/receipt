# SliTaz package receipt.

PACKAGE="tea"
VERSION="33.5.0"
CATEGORY="development"
SHORT_DESC="Tead text editor using QT."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://tea-editor.sourceforge.net/"
WGET_URL="http://semiletov.org/tea-releases/$TARBALL"

DEPENDS="xorg-libX11 libQtCore libQtXml libQtGui"
BUILD_DEPENDS="Qt4-dev qmake xorg-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	qmake PREFIX=/usr && make
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/share/pixmaps
	cp -a $src/bin/tea $fs/usr/bin
	cp -a $src/icons/tea_icon_v2.png \
		$fs/usr/share/pixmaps/tea.png
}
