# SliTaz package receipt.

PACKAGE="fetchmail"
VERSION="6.3.26"
CATEGORY="network"
SHORT_DESC="Mail retrieval and forwarding utility"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.fetchmail.info/"
WGET_URL="http://download.berlios.de/fetchmail/$TARBALL"
HANDBOOK_URL="http://fetchmail.berlios.de/fetchmail-man.html"
TAGS="email"

DEPENDS="openssl"
BUILD_DEPENDS="openssl-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --with-ssl \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
}

