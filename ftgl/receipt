# SliTaz package receipt.

PACKAGE="ftgl"
VERSION="2.1.3-rc5"
CATEGORY="x-window"
SHORT_DESC="OpenGL library to use arbitrary fonts"
MAINTAINER="slaxemulator@gmail.com"
DEPENDS="freetype freeglut mesa libglu-mesa"
BUILD_DEPENDS="$DEPENDS freetype-dev freeglut-dev mesa-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://ftgl.wiki.sourceforge.net/"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	ln -s $WOK/$PACKAGE/$PACKAGE-2.1.3~rc5 $WOK/$PACKAGE/$PACKAGE-$VERSION
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		--with-pic \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}

