# SliTaz package receipt.

PACKAGE="log4c"
VERSION="1.2.1"
CATEGORY="system-tools"
SHORT_DESC="Logging for C Library"
MAINTAINER="erjo@slitaz.org"
WEB_SITE="http://log4c.sourceforge.net"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://prdownloads.sourceforge.net/log4c/$TARBALL"

DEPENDS=""
BUILD_DEPENDS=""

# Rules to configure and make the package.
compile_rules()
{
	./configure $CONFIGURE_ARGS \
		--sysconfdir=/etc && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/etc
	cp -a $install/usr/lib/*.so* $fs/lib
	cp -a $install/etc/log4crc.sample $fs/etc/log4crc
}
