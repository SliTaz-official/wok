# SliTaz package receipt.

PACKAGE="perl-algorithm-permute"
VERSION="0.12"
CATEGORY="development"
SHORT_DESC="Algorithm::Permute module is a Perl extension."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/"
DEPENDS="perl"
BUILD_DEPENDS="perl"
SOURCE="Algorithm-Permute"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="https://metacpan.org/CPAN/authors/id/E/ED/EDPRATOMO/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Makefile.PL &&
	make &&
	make install DESTDIR=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
}

