# SliTaz package receipt.

PACKAGE="sbackup"
VERSION="0.11.4"
CATEGORY="network"
SHORT_DESC="Simple backup."
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://sourceforge.net/projects/sbackup/"
TARBALL="${PACKAGE}_$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

DEPENDS="python notify-python gettext pygtk gvfs fuse \
sshfs-fuse curlftpfs desktop-file-utils"
BUILD_DEPENDS="$DEPENDS setuptools"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	make && make DESTDIR=$DESTDIR/usr install
	# sudo sbackupconfig
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs
}
