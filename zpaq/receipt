# SliTaz package receipt.

PACKAGE="zpaq"
VERSION="6.51"
CATEGORY="utilities"
SHORT_DESC="incremental journaling backup utility and archiver"
MAINTAINER="tcg.thegamer@gmail.com"
LICENSE="GPL3"
TARBALL="zpaq651.zip"
WEB_SITE="http://mattmahoney.net/dc/zpaq.html"
WGET_URL="http://mattmahoney.net/dc/zpaq651.zip"

DEPENDS=""
BUILD_DEPENDS=""

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	make &&
	mkdir -p $install/usr/bin &&
	cp zpaq $install/usr/bin/zpaq
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs/
}
