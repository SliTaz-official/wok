# SliTaz package receipt.

PACKAGE="libarchive"
VERSION="3.2.2"
CATEGORY="system-tools"
SHORT_DESC="C library and command line tool for reading archive."
MAINTAINER="erjo@slitaz.org"
LICENSE="BSD"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.libarchive.org/"
WGET_URL="${WEB_SITE}downloads/$TARBALL"

DEPENDS="acl libcrypto liblzma bzlib zlib libxml2"
BUILD_DEPENDS="acl-dev attr-dev libcrypto-dev openssl-dev zlib-dev libxml2-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make && make -j1 DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib 
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}

