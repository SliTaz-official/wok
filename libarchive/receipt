# SliTaz package receipt.

PACKAGE="libarchive"
VERSION="2.8.3"
CATEGORY="system-tools"
SHORT_DESC="C librairy and command line tool for reading archive."
MAINTAINER="erjo@slitaz.org"
DEPENDS="acl libcrypto liblzma bzlib zlib"
BUILD_DEPENDS="acl-dev libcrypto-dev bzlib-dev zlib-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://code.google.com/p/libarchive/"
WGET_URL="http://libarchive.googlecode.com/files/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	sed -i 's|acl/libacl.h|libacl.h|' tar/bsdtar_platform.h
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib 
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}

