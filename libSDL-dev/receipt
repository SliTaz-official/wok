# SliTaz package receipt.

PACKAGE="libSDL-dev"
VERSION="1.2.6"
CATEGORY="development"
SHORT_DESC="Simple DirectMedia Layer (used by Qemu)."
MAINTAINER="pankso@slitaz.org"
DEPENDS="xorg"
SOURCE="SDL"
WANTED="libSDL"
WEB_SITE="http://www.libsdl.org/"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share
	cp -a $WOK/$WANTED/$SOURCE-$VERSION/_pkg/usr/bin $fs/usr
	cp -a $WOK/$WANTED/$SOURCE-$VERSION/_pkg/usr/include $fs/usr
	cp -a $WOK/$WANTED/$SOURCE-$VERSION/_pkg/usr/lib/*.*a $fs/usr/lib
	
	# For 1.2.12
	#cp -a $WOK/$WANTED/$SOURCE-$VERSION/_pkg/usr/lib/pkgconfig $fs/usr/lib
	
	cp -a $WOK/$WANTED/$SOURCE-$VERSION/_pkg/usr/share/aclocal $fs/usr/share
}
