# Rules to configure and make the package.
compile_rules()
{
	python setup.py install --prefix=/usr --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs/
}
