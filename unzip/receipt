# SliTaz package receipt.

PACKAGE="unzip"
VERSION="5.52"
CATEGORY="system-tools"
SHORT_DESC="Zip dearchiver."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="unzip552.tar.gz"
WEB_SITE="http://www.info-zip.org/"
WGET_URL="ftp://tug.ctan.org/tex-archive/tools/zip/info-zip/src/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	make -f unix/Makefile generic
	make -f unix/Makefile prefix=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $_pkg/bin/unzip $fs/usr/bin
}

