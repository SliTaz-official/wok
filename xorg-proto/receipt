# SliTaz package receipt.

PACKAGE="xorg-proto"
VERSION="7.3"
CATEGORY="x-window"
SHORT_DESC="Meta-package for Xorg proto (devel)."
MAINTAINER="pankso@slitaz.org"
WEB_SITE="http://www.x.org/"
DEPENDS="
xorg-bigreqsproto
xorg-inputproto
xorg-kbproto
xorg-randrproto
xorg-renderproto
xorg-xcmiscproto
xorg-xextproto
xorg-xproto"

# Rules to configure and make the package.
# This package compile all Xorg proto.
compile_rules()
{
    for pkg in $DEPENDS
    do
        tazwok compile $pkg
    done
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	for pkg in $DEPENDS
    do
        tazwok genpkg $pkg
    done
    # Just to have a dir.
    mkdir -p $fs/usr/share/X11
}
