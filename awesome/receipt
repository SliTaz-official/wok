# SliTaz package receipt.

PACKAGE="awesome"
VERSION="3.2.1"
CATEGORY="x-window"
SHORT_DESC="awesome is a highly configurable, next generation framework window manager for X."
MAINTAINER="mallory@sweetpeople.org"
DEPENDS="xorg-libX11 libxcb xcb-util lua pango cairo imlib2 dbus libev"
BUILD_DEPENDS="cmake xorg-libX11-dev libxcb-dev xcb-util-dev lua-dev pango-dev cairo-dev imlib2-dev dbus-dev libev-dev gperf"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://awesome.naquadah.org"
WGET_URL="$WEB_SITE/download/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
    cd $src
    cmake -DCMAKE_INSTALL_PREFIX=/usr -DXDG_CONFIG_DIR=/etc/xdg .
    make
    make DESTDIR=_pkg install
    
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/etc
	cp -a $_pkg/etc $fs/
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/share $fs/usr
}

