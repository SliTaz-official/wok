# SliTaz package receipt.

PACKAGE="libcap"
VERSION="2.10"
CATEGORY="system-tools"
SHORT_DESC="Support for getting/setting POSIX.1e capabilities."
MAINTAINER="pankso@slitaz.org"
DEPENDS="linux"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.kernel.org/pub/linux/libs/security/linux-privs/"
WGET_URL="http://www.kernel.org/pub/linux/libs/security/linux-privs/libcap2/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	# Temp sym link for xattr.h
	mkdir -p /usr/include/attr
	ln -s /usr/include/linux/xattr.h /usr/include/attr/xattr.h
	cd $src
	make
	rm -rf /usr/include/attr
	make FAKEROOT=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $_pkg/lib $fs
	cp -a $_pkg/sbin $fs
}
