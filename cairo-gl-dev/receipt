# SliTaz package receipt.

PACKAGE="cairo-gl-dev"
VERSION="1.12.10"
CATEGORY="development"
SHORT_DESC="2D graphics library devel files with GL support."
MAINTAINER="pankso@slitaz.org"
LICENSE="MPL LGPL2.1"
WEB_SITE="http://www.cairographics.org/"
WANTED="cairo-gl"
HOST_ARCH="i486"

DEPENDS="pixman-dev xorg-libXrender-dev glib-dev libxcb-dev xcb-util-dev \
cairo fontconfig-dev freetype-dev libpng-dev expat-dev pkg-config \
mesa-wayland-dev"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/*.*a $fs/usr/lib
	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	cp -a $install/usr/include $fs/usr
}
