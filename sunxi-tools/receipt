# SliTaz package receipt.

PACKAGE="sunxi-tools"
VERSION="1.4.2"
CATEGORY="development"
SHORT_DESC="help hacking Allwinner A10 (aka sun4i) based devices."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://linux-sunxi.org/Sunxi-tools"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/linux-sunxi/sunxi-tools/archive/refs/tags/v$VERSION.tar.gz"

DEPENDS="libusb"
BUILD_DEPENDS="wget pkg-config libusb-dev"

# What is the latest version available today?
current_version()
{
	wget -O - https://github.com/linux-sunxi/sunxi-tools/tags 2>/dev/null | \
	sed '/archive.*tar/!d;s|.*/[A-Za-z_-]*\(.*\).tar.*|\1|;q'
}

# Rules to configure and make the package.
compile_rules()
{
	make && make phoenix_info
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $src/bin $fs/usr/
	for i in sunxi-nand-part sunxi-pio sunxi-fexc fex2bin bin2fex sunxi-fel phoenix_info ; do
		cp -a $src/$i $fs/usr/bin
	done
}
