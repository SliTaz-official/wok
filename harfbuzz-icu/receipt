# SliTaz package receipt.

PACKAGE="harfbuzz-icu"
VERSION="2.3.1"
CATEGORY="system-tools"
SHORT_DESC="OpenType text shaping engine with icu support"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.freedesktop.org/wiki/Software/HarfBuzz"

SOURCE="harfbuzz"
TARBALL="$SOURCE-$VERSION.tar.bz2"
WGET_URL="https://www.freedesktop.org/software/$SOURCE/release/$TARBALL"

DEPENDS="freetype glib icu"
BUILD_DEPENDS="freetype-dev glib-dev icu-dev"
PROVIDE="harfbuzz"

# Rules to configure and make the package.
compile_rules()
{
	./configure		\
		--with-freetype	\
		--with-glib	\
		--with-gobject	\
		--with-icu=yes	\
		$CONFIGURE_ARGS && 
	make -j 1 &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib

	cp -a $install/usr/bin		$fs/usr
	cp -a $install/usr/lib/*.so*	$fs/usr/lib
}
