# SliTaz package receipt.

PACKAGE="libvips"
VERSION="8.7.4"
CATEGORY="utilities"
LICENSE="LGPL2.1"
SHORT_DESC="An image processing library."
MAINTAINER="yuripourre@gmail.com"
TARBALL="vips-$VERSION.tar.gz"
WEB_SITE="https://libvips.github.io/libvips/"
WGET_URL="https://github.com/libvips/libvips/archive/v$VERSION.tar.gz"
TAGS="image"
DEPENDS="fftw lcms pango libpng jpeg imagemagick tiff zlib glib \
libexif openexr liboil"
BUILD_DEPENDS="wget cacerts pkg-config gtk-doc libtool swig \
gobject-introspection-dev fftw-dev lcms-dev libpng-dev jpeg-dev \
imagemagick-dev tiff-dev zlib-dev libexif-dev file findutils expat-dev"

# Rules to configure and make the package.
compile_rules()
{
	./autogen.sh &&
        autoreconf &&
        ./configure --prefix=/usr \
	--enable-gtk-doc=no &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}
