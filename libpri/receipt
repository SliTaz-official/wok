# SliTaz package receipt.

PACKAGE="libpri"
VERSION="1.4.11.4"
CATEGORY="system-tools"
SHORT_DESC="C implementation of the Primary Rate ISDN specification (with BRI support)."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.asterisk.org/"
WGET_URL="http://downloads.asterisk.org/pub/telephony/libpri/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	sed -i 's|uname -m|echo i486|' Makefile
	export CFLAGS="-Wno-error=unused-but-set-variable"
	sed -i 's|tei = (h->u.data|// &|;s/int tei;/int tei = tei;/' q921.c
	make
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/lib
	cp -a $src/*.so* $fs/lib
}
