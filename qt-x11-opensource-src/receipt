# SliTaz package receipt.

PACKAGE="qt-x11-opensource-src"
VERSION="4.5.0"
CATEGORY="development"
SHORT_DESC="qt x11 toolkit"
MAINTAINER="allan316@gmail.com"
DEPENDS="glibc-locale"
BUILD_DEPENDS="xorg-libX11-dev dbus-dev slitaz-dev-pkgs"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.trolltech.com"
WGET_URL="ftp://get.qtsoftware.com/qt/source/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	yes yes | ./configure --prefix=/usr &&
	make &&
	make INSTALL_ROOT=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	# dummy tree to avoid 'tazwok cmp --cook' building loop
	mkdir $fs/etc
}

