# SliTaz package receipt.

PACKAGE="qt-x11-opensource-src"
VERSION="4.4.1"
CATEGORY="development"
SHORT_DESC="qt x11 toolkit"
MAINTAINER="allan316@gmail.com"
DEPENDS="slitaz-dev-pkgs"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.trolltech.com"
WGET_URL="ftp://ftp.tu-chemnitz.de/pub/Qt/qt/source/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	mkdir -p _pkg/usr/
	yes yes | ./configure --prefix=$PWD/_pkg/usr &&
	make &&
	make  install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	# dummy tree to avoid 'tazwok cmp --cook' building loop
	mkdir $fs/etc
}

