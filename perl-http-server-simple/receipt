# SliTaz package receipt.

PACKAGE="perl-http-server-simple"
VERSION="0.52"
CATEGORY="development"
SHORT_DESC="Perl extensionHTTP::Server::Simple."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/HTTP-Server-Simple"

SOURCE="HTTP-Server-Simple"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="https://www.cpan.org/modules/by-module/HTTP/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make &&
	make install DESTDIR=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib	$fs/usr
}
