# SliTaz package receipt.

PACKAGE="tazweb"
VERSION="1.3"
CATEGORY="network"
SHORT_DESC="SliTaz simple and small Web Browser"
MAINTAINER="pankso@slitaz.org"
DEPENDS="gtk+ libwebkit"
BUILD_DEPENDS="gtk+-dev libwebkit-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.slitaz.org/"
WGET_URL="http://mirror.slitaz.org/sources/tazweb/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	make && make DESTDIR=$WOK/$PACKAGE/install install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs
	cp -a $_pkg/* $fs
}
