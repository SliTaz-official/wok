# Slitaz package receipt.

PACKAGE="libmnl-dev"
VERSION="1.0.3"
CATEGORY="network"
SHORT_DESC="A minimalistic user-space library oriented to Netlink developers."
MAINTAINER="samuel_trassare@yahoo.com"
LICENSE="LGPL2.1"
WEB_SITE="http://www.netfilter.org/projects/$PACKAGE/index.html"
WANTED="libmnl"

DEPENDS="libmnl pkg-config"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -ar $install/usr/include $fs/usr
	cp -ar $install/usr/lib/pkgconfig $fs/usr/lib/
}
