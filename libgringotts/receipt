# SliTaz package receipt.

PACKAGE="libgringotts"
VERSION="1.2.1"
CATEGORY="security"
SHORT_DESC="A Safebox for your Data."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://gringotts.shlomifish.org/"
WGET_URL="$SF_MIRROR/gringotts.berlios/$TARBALL"

DEPENDS="bzip2 zlib libmcrypt mhash"
BUILD_DEPENDS="bzip2-dev zlib-dev libmcrypt-dev mhash-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--prefix=/usr \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}
