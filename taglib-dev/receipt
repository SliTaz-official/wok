# SliTaz package receipt.

PACKAGE="taglib-dev"
VERSION="1.7"
CATEGORY="multimedia"
SHORT_DESC="Audio tag library."
MAINTAINER="pankso@slitaz.org"
SOURCE="taglib"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://developer.kde.org/~wheeler/taglib.html"
WGET_URL="http://developer.kde.org/~wheeler/files/src/$TARBALL"
DEPENDS="zlib gcc-lib-base"
BUILD_DEPENDS="zlib-dev cmake"
TAGS="multimedia music tag"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	mkdir build
	cd build
	cmake ../ \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DENABLE_STATIC=ON \
		-DWITH_MP4=ON \
		-DWITH_ASF=ON
	make VERBOSE=1
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.*a $fs/usr/lib
	cp -a $_pkg/usr/lib/pkgconfig $fs/usr/lib
	cp -a $_pkg/usr/include $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
	chmod +x $fs/usr/bin/*
}
