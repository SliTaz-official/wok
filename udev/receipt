# SliTaz package receipt.

PACKAGE="udev"
VERSION="126"
CATEGORY="base-system"
SHORT_DESC="Udev creat automaticly right devices in /dev."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.kernel.org/pub/linux/utils/kernel/hotplug/udev.html"
WGET_URL="http://www.us.kernel.org/pub/linux/utils/kernel/hotplug/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--sbindir=/sbin \
		--sysconfdir=/etc \
		--libdir=/lib
	make EXTRAS="extras/firmware extras/scsi_id extras/volume_id \
		extras/ata_id extras/usb_id extras/cdrom_id"
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/lib/firmware $fs/etc/udev/rules.d

	cp -a $_pkg/sbin $fs
	cp -a $_pkg/etc $fs
	cp -a $_pkg/lib $fs

	# Config files.
	cp stuff/udev.conf $fs/etc/udev
	cp -a $src/etc/udev/rules.d $fs/etc/udev
	cp stuff/90-permissions.rules $fs/etc/udev/rules.d
	cp -a $src/rules/packages/40-alsa.rules $fs/etc/udev/rules.d
}
