# SliTaz package receipt.

PACKAGE="udev"
VERSION="124"
CATEGORY="base-system"
SHORT_DESC="Udev creat automaticly right devices in /dev."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.kernel.org/pub/linux/utils/kernel/hotplug/udev.html"
WGET_URL="http://www.us.kernel.org/pub/linux/utils/kernel/hotplug/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	make EXTRAS="extras/firmware extras/scsi_id extras/volume_id \
		extras/ata_id extras/usb_id extras/cdrom_id"
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/sbin $fs/etc/udev $fs/lib/udev $fs/lib/firmware

	# /sbin
	cp -a $src/udevd $fs/sbin
	cp -a $src/udevadm $fs/sbin

	# Config files.
	cp stuff/udev.conf $fs/etc/udev
	cp -a $src/etc/udev/rules.d $fs/etc/udev
	cp stuff/90-permissions.rules $fs/etc/udev/rules.d
	cp -a $src/etc/udev/packages/40-alsa.rules $fs/etc/udev/rules.d

	# Extra
	cp -a $src/extras/firmware/firmware.sh $fs/lib/udev
	cp -a $src/extras/volume_id/vol_id $fs/lib/udev
	cp -a $src/extras/volume_id/lib/*.so* $fs/lib
	#cp -a $src/extras/cdrom_id/cdrom_id $fs/lib/udev
	#cp -a $src/extras/ata_id/ata_id $fs/lib/udev
	#cp -a $src/extras/scsi_id/scsi_id $fs/lib/udev
	#cp -a $src/extras/usb_id/usb_id $fs/lib/udev
}

clean_wok()
{
	rm -f device_*
	rm -f whitespace_*
}
