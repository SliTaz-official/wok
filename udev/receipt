# SliTaz package receipt.

PACKAGE="udev"
VERSION="121"
CATEGORY="base-system"
SHORT_DESC="Udev creat automaticly right devices in /dev."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.kernel.org/pub/linux/utils/kernel/hotplug/udev.html"
WGET_URL="http://www.us.kernel.org/pub/linux/utils/kernel/hotplug/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	make
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/sbin $fs/etc/udev $fs/lib/udev $fs/lib/firmware
	
	# /sbin
	cp -a $src/udevd $fs/sbin
	cp -a $src/udevadm $fs/sbin
	
	# Config files.
	cp stuff/udev.conf $fs/etc/udev
	cp -a $src/etc/udev/rules.d $fs/etc/udev
	cp -a $src/extras/firmware/firmware.sh $fs/lib/udev
	cp stuff/90-permissions.rules $fs/etc/udev/rules.d
	cp -a $src/etc/udev/packages/40-alsa.rules $fs/etc/udev/rules.d
}

clean_wok()
{
	rm device_*
	rm whitespace_*
}
