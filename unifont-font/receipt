# SliTaz package receipt.

PACKAGE="unifont-font"
VERSION="8.0.01"
CATEGORY="x-window"
SHORT_DESC="The Standard GNU Unifont TTF."
MAINTAINER="hackdorte@sapo.pt"
LICENSE="GPL2"
WEB_SITE="http://unifoundry.com/"

TARBALL="unifont-8.0.01.ttf"
WGET_URL="$WEB_SITE/pub/$PACKAGE/font-builds/$TARBALL"

DEPENDS=""
BUILD_DEPENDS="wget"

# Rules to configure and make the package.
compile_rules()
{
  mkdir -p $install/usr/share/fonts/$PACKAGE
  cp -a $src/* $install/usr/share/fonts/$PACKAGE
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
  cp -a $install/* $fs
}