# SliTaz package receipt.

PACKAGE="libxfce4mcs"
VERSION="4.4.3"
CATEGORY="x-window"
SHORT_DESC="Xfce settings managment library"
MAINTAINER="erjo@slitaz.org"
DEPENDS="xorg-libSM libxfce4util startup-notification"
BUILD_DEPENDS="xorg-libSM-dev libxfce4util-dev startup-notification-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.xfce.org/"
WGET_URL="http://www.p0llux.be/xfce/xfce-4.4.3/src/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr \
		--enable-startup-notification \
		--infodir=/usr/share/info \
		--enable-debug=no $CONFIGURE_ARGS && \
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}

