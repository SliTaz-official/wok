# SliTaz package receipt.

PACKAGE="jstetris"
VERSION="1.1.0"
CATEGORY="games"
SHORT_DESC="Tetris game in javascript"
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://javascript.internet.com/games/Tetris.html"

# Rules to configure and make the package.
compile_rules()
{
	mkdir $src
	cd $src
	wget -O index.html $WEB_SITE
	wget $(dirname $WEB_SITE)/JsTetris.js
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
        mkdir -p $fs/var/www/tetris $fs/usr/share/applications
	cp $src/* $fs/var/www/tetris
	chown -R 80.80 $fs/var/www/tetris
	cat > $fs/usr/share/applications/tetris.desktop <<EOT
[Desktop Entry]
Type=Application
Name=Tetris
Exec=browser file:///var/www/tetris/index.html
Icon=other.png
Terminal=false
Categories=Game;
Comment=Tetris game
EOT
}

