# SliTaz package receipt.

PACKAGE="xfig"
VERSION="3.2.8b"
CATEGORY="x-window"
SHORT_DESC="Vector graphics editor for X."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.xfig.org/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$SF_MIRROR/sourceforge/mcj/$TARBALL"
SUGGESTED="transfig"

DEPENDS="jpeg libpng xorg xorg-libXaw3d xorg-libXp"
BUILD_DEPENDS="spl-src xorg-imake xorg-cf-files xorg-gccmakedep jpeg-dev \
	libpng-dev xorg-libXaw3d-dev xorg-libXp"

# Rules to configure and make the package.
compile_rules()
{
	# obsolete with 3.2.8b
#	sed -i 's|/usr/local|/usr|;s|#define XAW3D|XCOMM &|' Imakefile
#	xmkmf
	./configure		\
		--prefix=/usr	\
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/*	$fs
	# many examples in /usr/share/xfig/Libraries appr. 16 MiB

	sed -i 's/^Fig\*Font:.*/Fig*Font:\t\t\tfixed/'	\
		$fs/usr/share/X11/app-defaults/Fig
}
