# SliTaz package receipt.

PACKAGE="pango-dev"
VERSION="1.28.3"
CATEGORY="development"
SHORT_DESC="Library for layout and rendering of text devel files."
MAINTAINER="pankso@slitaz.org"
DEPENDS="pango cairo-dev"
WANTED="pango"
WEB_SITE="http://www.pango.org/"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share
    cp -a $_pkg/usr/lib/*.*a $fs/usr/lib
    cp -a $_pkg/usr/lib/pkgconfig $fs/usr/lib
    cp -a $_pkg/usr/include $fs/usr
    cp -a $_pkg/usr/lib/pango $fs/usr/lib
    cp -a $_pkg/usr/lib/girepository-1.0 $fs/usr/lib
    rm -rf $fs/usr/lib/pango/1.6.0/modules/*.so
    cp -a $_pkg/usr/share/gir-1.0 $fs/usr/share
}
