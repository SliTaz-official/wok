# SliTaz package receipt.

PACKAGE="libfox-utils"
VERSION="1.6.33"
CATEGORY="development"
SHORT_DESC="Development files for the FOX-toolkit."
MAINTAINER="chadi.elahmad@gmail.com"

WEB_SITE="http://www.fox-toolkit.org/"

DEPENDS="libfox expat tiff libgl libglu nvidia"
WANTED="libfox"
SOURCE="fox"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/share

	_pkg=$WOK/$WANTED/$SOURCE-$VERSION/_pkg
	cp -a $_pkg/usr/share/man $fs/usr/share
	cp -a $_pkg/usr/bin/* $fs/usr/bin

	rm $fs/usr/bin/fox-config
	chmod +x $fs/usr/bin/*
}
