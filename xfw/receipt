# SliTaz package receipt.

PACKAGE="xfw"
VERSION="1.40"
CATEGORY="x-window"
SHORT_DESC="X File Writer - Text editor using the Fox Toolkit."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WANTED="xfe"
WEB_SITE="http://roland65.free.fr/xfe/"
LOCALE=""
TAGS="text-editor"

DEPENDS="fox"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	for i in /usr/bin /usr/share/pixmaps /usr/share/applications; do
		mkdir -p $fs$i
		cp -a $install$i/$PACKAGE* $fs$i
	done
}
