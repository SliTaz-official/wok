# SliTaz package receipt.

PACKAGE="scons"
VERSION="0.98.5"
CATEGORY="development"
SHORT_DESC="SCons is an Open Source software construction tool."
MAINTAINER="chadi.elahmad@gmail.com"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.scons.org/"
WGET_URL="http://garr.dl.sourceforge.net/sourceforge/scons/$TARBALL"

DEPENDS="python "
BUILD_DEPENDS="python python-dev "

# Rules to configure and make the package.
compile_rules()
{
	mkdir -p $src/_pkg/usr
	cd $src
	python setup.py install \
		--install-man \
		--standard-lib \
		--prefix=$src/_pkg/usr
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/
	cp -a $_pkg/usr/* $fs/usr
}

