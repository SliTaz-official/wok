# SliTaz package receipt.

PACKAGE="libgphoto2"
VERSION="2.4.5"
CATEGORY="graphics"
SHORT_DESC="core library of gphoto2 to access photos from digital camera"
MAINTAINER="jozee@slitaz.org"
DEPENDS="libexif jpeg libusb libusb-compat"
BUILD_DEPENDS="jpeg-dev libexif-dev libtool libexif jpeg libusb libusb-dev libusb-compat libusb-compat-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.gphoto.org" 
WGET_URL="$SF_MIRROR/gphoto/$TARBALL"
TAGS="camera photo"


# Rules to configure and make the package.
compile_rules()
{
   	cd $src
	./configure --prefix=/usr --with-exif --disable-static &&
	make &&
	make DESTDIR=$PWD/_pkg install
	
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    mkdir -p $fs/usr/lib/$PACKAGE $fs/usr/share
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/$PACKAGE $fs/usr/lib
	cp -a $_pkg/usr/lib/${PACKAGE}_port $fs/usr/lib
	cp -a $_pkg/usr/lib/udev $fs/usr/lib
	cp -a $_pkg/usr/lib/*so* $fs/usr/lib
	cp -a $_pkg/usr/share/$PACKAGE $fs/usr/share
	
}
