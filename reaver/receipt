# SliTaz package receipt.

PACKAGE="reaver"
VERSION="1.6.1"
CATEGORY="network"
SHORT_DESC="Brute force attack against Wifi Protected Setup."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://github.com/t6x/reaver-wps-fork-t6x"
TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$WEB_SITE/releases/download/v$VERSION/$TARBALL"
CONFIG_FILES="/etc/reaver"

DEPENDS="libpcap libsqlite"
BUILD_DEPENDS="libpcap-dev sqlite-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src/src
	./configure --prefix=/usr --sysconfdir=/etc $CONFIGURE_ARGS &&
	make && make cleanbin
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/etc/reaver $fs/usr/bin
	mkdir -p $install/usr/share/doc $install/usr/share/man
	cp -a $src/src/wash $fs/usr/bin
	cp -a $src/src/reaver $fs/usr/bin
	cp -a $src/README.md $src/docs/* $install/usr/share/doc
	mv $install/usr/share/doc/reaver.1.gz $install/usr/share/man
}
