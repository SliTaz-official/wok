# SliTaz package receipt.

PACKAGE="gphoto2"
VERSION="2.4.11"
CATEGORY="graphics"
SHORT_DESC="digital camera download and access program"
MAINTAINER="jozee@slitaz.org"
DEPENDS="libexif jpeg libgphoto2 readline popt libtool ncurses"
BUILD_DEPENDS="jpeg-dev libexif-dev libgphoto2 libgphoto2-dev readline readline-dev popt popt-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.gphoto.org" 
WGET_URL="$SF_MIRROR/gphoto/$TARBALL"
TAGS="camera photo"

# Rules to configure and make the package.
compile_rules()
{
   	cd $src
	./configure && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
	cp -a $_pkg/usr/bin $fs/usr
}
