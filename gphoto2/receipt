# SliTaz package receipt.

PACKAGE="gphoto2"
VERSION="2.4.8"
CATEGORY="graphics"
SHORT_DESC="digital camera download and access program"
MAINTAINER="jozee@slitaz.org"
DEPENDS="libexif jpeg libgphoto2 readline popt libtool ncurses"
BUILD_DEPENDS="jpeg-dev libexif-dev libgphoto2 libgphoto2-dev readline readline-dev popt-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.gphoto.org" 
WGET_URL="$SF_MIRROR/gphoto/$TARBALL"
TAGS="camera photo"


# Rules to configure and make the package.
compile_rules()
{
   	cd $src
	./configure --prefix=/usr &&
	make &&
	make prefix=$PWD/_pkg/usr install
	
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    mkdir -p $fs/usr/share
	cp -a $_pkg/usr/bin $fs/usr
	
}
