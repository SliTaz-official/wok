# SliTaz package receipt.

PACKAGE="pm-utils"
VERSION="1.4.1"
CATEGORY="system-tools"
SHORT_DESC="Collection of scripts that handle suspend and resume."
MAINTAINER="domcox@slitaz.org"
DEPENDS="bash kbd"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://pm-utils.freedesktop.org/"
WGET_URL="http://pm-utils.freedesktop.org/releases/$TARBALL"
CONFIG_FILES="/etc/pm"
TAGS="power-management"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/sbin $fs/usr
	cp -a $_pkg/usr/lib/pm-utils $fs/usr
	mkdir -p $fs/etc
	cp -a $_pkg/etc/pm $fs/etc
}
