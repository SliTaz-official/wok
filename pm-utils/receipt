# SliTaz package receipt.

PACKAGE="pm-utils"
VERSION="1.4.1"
CATEGORY="system-tools"
SHORT_DESC="scripts that handle suspend and resume on behalf of HAL."
MAINTAINER="domcox@users.sourceforge.net"
DEPENDS="bash kbd"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://pm-utils.freedesktop.org/"
WGET_URL="http://pm-utils.freedesktop.org/releases/$TARBALL"
TAGS="power-management"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	sed -i 's/grep -vxFf/grep -vFf/g' pm/functions.in
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/sbin $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
	mkdir -p $fs/etc
	cp -a $_pkg/usr/etc/pm $fs/etc
#	strip -s $fs/usr/bin/*
}

post_install()
{
	rmdir /etc/pm/config.d
	rmdir /etc/pm/power.d
	rmdir /etc/pm/sleep.d
	rmdir /etc/pm
}