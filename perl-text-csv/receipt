# SliTaz package receipt.

PACKAGE="perl-text-csv"
VERSION="1.20"
CATEGORY="development"
SHORT_DESC="Manipulate comma-separated value strings."
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL"
DEPENDS="perl"
BUILD_DEPENDS="perl"
SOURCE="Text-CSV"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="https://metacpan.org/release/Text-CSV/"
WGET_URL="https://metacpan.org/CPAN/authors/id/M/MA/MAKAMAKA/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL
	make
	make DESTDIR="$DESTDIR" install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr

	find $fs -name '.packlist' -delete
	find $fs -name '*.pod' -delete

}

