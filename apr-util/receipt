# SliTaz package receipt.

PACKAGE="apr-util"
VERSION="1.3.2"
CATEGORY="Development"
SHORT_DESC="Apache Portable Runtime Library Utilities"
MAINTAINER="lehswe@gmail.com"
DEPENDS="apr"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://apr.apache.org"
WGET_URL="http://apache.jumper.nu/apr/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --with-apr=/usr/bin --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS
	make
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/apr-util-1
	
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/lib/apr-util-1/*.so* $fs/usr/lib/apr-util-1
}
