# SliTaz package receipt.

PACKAGE="apr-util"
VERSION="1.3.9"
CATEGORY="development"
SHORT_DESC="APR Library Utilities"
MAINTAINER="lehswe@gmail.com"
DEPENDS="apr expat ncurses readline zlib"
BUILD_DEPENDS="apr-dev unixODBC-dev postgresql-dev mysql-dev libmysqlclient libpostgresqlclient"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://apr.apache.org"
WGET_URL="http://mir2.ovh.net/ftp.apache.org/dist/apr/$TARBALL
 http://apache.crihan.fr/dist/apr/$TARBALL"
 
# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --with-apr=$(apr-1-config --bindir) \
		--with-pgsql=/usr \
		--with-mysql \
		--prefix=/usr \
		--infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/apr-util-1
	
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	#cp -a $_pkg/usr/lib/apr-util-1/*.so* $fs/usr/lib/apr-util-1
}
