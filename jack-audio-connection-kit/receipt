# SliTaz package receipt.

PACKAGE="jack-audio-connection-kit"
VERSION="0.121.3"
CATEGORY="multimedia"
SHORT_DESC="low-latency audio server"
MAINTAINER="allan316@gmail.com"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://jackaudio.org"
WGET_URL="http://jackaudio.org/downloads/$TARBALL"
TAGS="audio server"

DEPENDS="alsa-lib ncurses readline libsndfile libogg"
BUILD_DEPENDS="alsa-lib-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install

	install -Dm644 $src/jack/jslist.h $_pkg/usr/include/jack/jslist.h
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/jack
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib/*.so* $fs/usr/lib
	cp -a $install/usr/lib/jack/*.so* $fs/usr/lib/jack
}

