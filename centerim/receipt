# SliTaz package receipt.

PACKAGE="centerim"
VERSION="4.22.10"
CATEGORY="network"
SHORT_DESC="Console mode IM"
MAINTAINER="allan316@gmail.com"
DEPENDS="ncursesw curl libssl libidn"
BUILD_DEPENDS="ncursesw-dev curl-dev openssl-dev libidn-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.centerim.org"
WGET_URL="$WEB_SITE/download/releases/$TARBALL"
TAGS="im instant-messenger cli command-line"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	mkdir -p $DESTDIR/usr
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/share/centerim $fs/usr/share	
}

