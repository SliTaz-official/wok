# SliTaz package receipt.

PACKAGE="libfox-doc"
VERS="1.6"
VERSION="1.6.33"
CATEGORY="development"
SHORT_DESC="Documents and some examples using FOX."
MAINTAINER="chadi.elahmad@gmail.com"
DEPENDS="libfox libgl libglu"

WEB_SITE="http://www.fox-toolkit.org/"

WANTED="libfox"
SOURCE="fox"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/doc

	src=$WOK/$WANTED/$SOURCE-$VERSION
	_pkg=$src/_pkg
	cp -a $_pkg/usr/share/doc/* $fs/usr/share/doc
	rm -f $src/tests/*.o
	cp -a $src/tests $fs/usr/share/doc/fox*
}
