# SliTaz package receipt.

PACKAGE="hubicfuse"
VERSION="1.3.1"
CATEGORY="network"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
SHORT_DESC="Support for mounting Hubic drive"
WEB_SITE="https://github.com/TurboGit/hubicfuse"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/TurboGit/hubicfuse/archive/v$VERSION.tar.gz"

DEPENDS="curl fuse libssl libjson-c"
BUILD_DEPENDS="wget pkg-config curl-dev fuse-dev openssl-dev libxml2-dev \
glib libjson-c-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure -prefix=/usr $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}
	
# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs/
}
