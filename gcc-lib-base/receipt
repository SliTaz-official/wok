# SliTaz package receipt.

PACKAGE="gcc-lib-base"
VERSION="4.5.2"
CATEGORY="development"
SHORT_DESC="GCC base libraries, libgcc_s and libstdc++."
WEB_SITE="http://gcc.gnu.org/"
MAINTAINER="pankso@slitaz.org"
WANTED="gcc"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share/locale/fr/LC_MESSAGES
	cp -a $_pkg/usr/lib/libgcc_s.so* $fs/usr/lib
	cp -a $_pkg/usr/lib/libstdc++.so* $fs/usr/lib
	rm $fs/usr/lib/*-gdb.py
	# French locale
	cp $_pkg/usr/share/locale/fr/LC_MESSAGES/libstdc++.mo \
	$fs/usr/share/locale/fr/LC_MESSAGES
}

