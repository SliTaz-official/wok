# SliTaz package receipt.

PACKAGE="gcc-lib-base"
VERSION="4.2.2"
CATEGORY="development"
SHORT_DESC="GCC base libraries, libgcc_s and libstdc++."
MAINTAINER="pankso@slitaz.org"
WANTED="gcc"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/libgcc_s.so* $fs/usr/lib
	cp -a $_pkg/usr/lib/libstdc++.so* $fs/usr/lib
	strip --strip-unneeded $fs/usr/lib/*
	# French locale
	mkdir -p $fs/usr/share/locale/fr/LC_MESSAGES
	cp $_pkg/usr/share/locale/fr/LC_MESSAGES/libstdc++.mo \
	$fs/usr/share/locale/fr/LC_MESSAGES
}

