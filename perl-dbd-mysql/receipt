# SliTaz package receipt.

PACKAGE="perl-dbd-mysql"
VERSION="4.048"
CATEGORY="development"
SHORT_DESC="DBD::mysql module is a Perl extension."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
SOURCE="DBD-mysql"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://cpan.org/"
WGET_URL="https://cpan.metacpan.org/authors/id/M/MI/MICHIELB/$TARBALL"

DEPENDS="perl perl-dbi-dbd libmysqlclient zlib"
BUILD_DEPENDS="perl perl-dbi-dbd mysql-dev"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL
	make
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
}
