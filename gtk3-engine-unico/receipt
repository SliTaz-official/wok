# SliTaz package receipt.

PACKAGE="gtk3-engine-unico"
VERSION="1.0.2"
CATEGORY="x-window"
SHORT_DESC="Unico GTK3 theme engine"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://launchpad.net/unico"
SOURCE="unico"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="https://launchpad.net/unico/1.0/$VERSION/+download/$TARBALL"

DEPENDS="gtk+3"
BUILD_DEPENDS="gtk+3-dev wget"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--enable-debug=no \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs
	find $fs -name '*.*a' -delete
}
