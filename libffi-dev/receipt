# SliTaz package receipt.

PACKAGE="libffi-dev"
VERSION="3.2.1"
CATEGORY="development"
SHORT_DESC="libffi, development files."
MAINTAINER="rcx@zoominternet.net"
LICENSE="MIT"
WEB_SITE="https://sourceware.org/libffi/"

WANTED="libffi"
DEPENDS="libffi pkg-config"

HOST_ARCH="i486 arm"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	mkdir -p $fs/usr/include

	cp -a $install/usr/lib/*.*a		$fs/usr/lib
	cp -a $install/usr/lib/pkgconfig	$fs/usr/lib
	cp -a $install/usr/lib/$WANTED-$VERSION	$fs/usr/lib

	# Copy the headers to the standard location
	cp -a $install/usr/lib/$WANTED-$VERSION/include/* \
		$fs/usr/include
}
