# SliTaz package receipt.

PACKAGE="coreutils-file-format"
VERSION="8.12"
CATEGORY="system-tools"
SHORT_DESC="GNU utilities that format file contents."
MAINTAINER="rcx@zoominternet.net"
LICENSE="GPL3"
WEB_SITE="http://www.gnu.org/software/coreutils/"
WANTED="coreutils"

DEPENDS="glibc-base"

# Rules to gen a SliTaz package suitable for Tazpkg.
#
# This is a special package for installed system or developer. We only take
# a few things, as Busybox provides all the basic utilities, but not for compiling.
# But DO NOT erase a Busybox applet, remove it before with pre_install rules.
#
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $install/usr/bin/fmt $fs/usr/bin
	cp -a $install/usr/bin/pr $fs/usr/bin
	cp -a $install/usr/bin/fold $fs/usr/bin
}

post_remove()
{
	ln -s /bin/busybox "$1/usr/bin/fold"
}
