# SliTaz package receipt.

PACKAGE="poppler"
VERSION="0.10.4"
CATEGORY="office"
SHORT_DESC="Poppler is a PDF rendering library."
MAINTAINER="pankso@slitaz.org"
BUILD_DEPENDS="pkg-config jpeg fontconfig"
TARBALL="$PACKAGE-$VERSION.tar.gz"
DEPENDS="expat freetype gtk+ jpeg libxml2 xorg-libXdamage"
WEB_SITE="http://poppler.freedesktop.org/"
WGET_URL="http://poppler.freedesktop.org/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}
