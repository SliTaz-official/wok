# SliTaz package receipt.

PACKAGE="aircrack-ng"
VERSION="1.0-rc1"
CATEGORY="network"
SHORT_DESC="802.11 WEP and WPA-PSK keys cracking program."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.aircrack-ng.org/"
WGET_URL="http://download.aircrack-ng.org/$TARBALL"
#http://patches.aircrack-ng.org/

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS
	make
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/local/bin $fs/usr
	cp -a $_pkg/usr/local/sbin $fs/usr
}

