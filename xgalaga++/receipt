# SliTaz package receipt.

PACKAGE="xgalaga++"
VERSION="0.8.4"
CATEGORY="games"
SHORT_DESC="A clone of the classic game Galaga for the X Window System."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
TARBALL="${PACKAGE}_$VERSION.tar.gz"
WEB_SITE="http://marc.mongenet.ch/OSS/XGalaga"
WGET_URL="$WEB_SITE/$TARBALL"

DEPENDS="xorg-libX11 xorg-libXpm libxcb xorg-libXau xorg-libXdmcp"
BUILD_DEPENDS="xorg-dev"

# Rules to configure and make the package.
compile_rules()
{
	make xgalaga++
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $src/xgalaga++ $fs/usr/bin
}

