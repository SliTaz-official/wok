WEB_SITE="http://www.virtualbox.org/"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp stuff/get-virtualbox $fs/usr/bin
	
	# Improve Slitaz support.
	#cd $fs/usr/bin && patch -p1 -i ../../../../../stuff/installer.u
}

