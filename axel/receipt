# SliTaz package receipt.

PACKAGE="axel"
VERSION="2.16.1"
CATEGORY="network"
TAGS="web internet"
SHORT_DESC="Download accelerator."
MAINTAINER="rocky@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://github.com/axel-download-accelerator/axel"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://github.com/frs/axel-download-accelerator/$PACKAGE/releases/download/v$VERSION/$TARBALL"
CONFIG_FILES="/etc/axelrc"
DEPENDS="openssl"
BUILD_DEPENDS="openssl-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--prefix=/usr \
		--disable-nls \
		$CONFIGURE_ARGS &&
	make &&
	make install DESTDIR=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_files axel axelrc
}
