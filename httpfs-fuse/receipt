# SliTaz package receipt.

PACKAGE="httpfs-fuse"
VERSION="2.06.08.26"
CATEGORY="system-tools"
SHORT_DESC="HTTP Filesystem implemented with FUSE."
MAINTAINER="pascal.bellard@slitaz.org"
DEPENDS="fuse"
BUILD_DEPENDS="fuse-dev"
SOURCE="httpfs_with_static_binaries"
TARBALL="${SOURCE}_$VERSION.tar.gz"
WEB_SITE="http://httpfs.sourceforge.net/"
WGET_URL="$SF_MIRROR/httpfs/$TARBALL"
TAGS="filesystem"

# Rules to configure and make the package.
compile_rules()
{
	mkdir $src
	for i in *; do
		case "$i" in
		receipt|process.log|taz|$(basename $src));;
		*) mv $i $src
		esac
	done
	cd $src
	. ./make_httpfs && cp httpfs $DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $_pkg/httpfs $fs/usr/bin
}
