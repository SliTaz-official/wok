# SliTaz package receipt.

PACKAGE="libdaq"
VERSION="0.6.2"
CATEGORY="network"
SHORT_DESC="Data Acquisition library for packet I/O."
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="https://www.snort.org/"
WGET_URL="https://www.snort.org/downloads/1221"

DEPENDS="libpcap"
BUILD_DEPENDS="libpcap-dev flex bison wget"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		$CONFIGURE_ARGS &&
	make -j1 && make -j1 DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/daq
	cp -a $install/usr/lib/daq/*.so* $fs/usr/lib/daq
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}

