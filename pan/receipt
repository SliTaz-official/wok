# SliTaz package receipt.

PACKAGE="pan"
VERSION="0.133"
CATEGORY="network"
SHORT_DESC="pan is a usenet newsreader"
MAINTAINER="allan316@gmail.com"
DEPENDS="pcre gmime gtkspell"
BUILD_DEPENDS="pcre-dev gmime gmime-dev gtkspell-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://pan.rebelbase.com"
WGET_URL="$WEB_SITE/download/releases/$VERSION/source/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/share/applications $fs/usr/share
	cp -a $_pkg/usr/share/pixmaps $fs/usr/share
}

