# SliTaz package receipt.

PACKAGE="adminer"
VERSION="3.3.4"
CATEGORY="misc"
SHORT_DESC="Database management in a single PHP file."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION"
WEB_SITE="http://www.adminer.org/"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL.php"

DEPENDS="php"
BUILD_DEPENDS=""

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	[ -s "$SOURCES_REPOSITORY/$TARBALL" ] ||
		wget -O "$SOURCES_REPOSITORY/$TARBALL" $WGET_URL
	cp "$SOURCES_REPOSITORY/$TARBALL" index.php
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/var/www/$PACKAGE
	cp $src/index.php $fs/var/www/$PACKAGE/
}
