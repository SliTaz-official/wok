# SliTaz package receipt.

PACKAGE="openal"
SOURCE="openal-soft"
VERSION="1.16.0"
CATEGORY="multimedia"
SHORT_DESC="cross-platform 3D audio API."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="LGPL2"
TARBALL="$SOURCE-$VERSION.tar.bz2"
WEB_SITE="http://www.openal.org/"
WGET_URL="http://www.openal-soft.org/openal-releases/$TARBALL"
BUILD_DEPENDS="cmake"
TAGS="multimedia audio sound 3D"

# Rules to configure and make the package.
compile_rules()
{
	cmake -DCMAKE_INSTALL_PREFIX=/usr
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}

# Pre and post install commands for Tazpkg.
post_install()
{
	case " $(. $1/etc/rcS.conf; echo $LOAD_MODULES) " in
	*\ snd-pcm-oss\ *) ;;
	*) [ -s $1/etc/rcS.conf ] &&
		sed -i 's|LOAD_MODULES="|&snd-pcm-oss ' $1/etc/rcS.conf
	   [ "$1" ] || modprobe snd-pcm-oss;;
	esac
}
