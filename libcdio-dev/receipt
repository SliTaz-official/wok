# SliTaz package receipt.

PACKAGE="libcdio-dev"
VERSION="0.80"
CATEGORY="development"
SHORT_DESC="GNU Compact Disc Input and Control Library"
MAINTAINER="rj.rohit@gmail.com"
WANTED="libcdio"
WEB_SITE="http://www.gnu.org/software/libcdio/"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.*a $fs/usr/lib
	cp -a $_pkg/usr/lib/pkgconfig $fs/usr/lib
	cp -a $_pkg/usr/include $fs/usr
	
	# libcdio_paranoia.pc is missing
	cp -a stuff/libcdio_paranoia* $fs/usr/lib/pkgconfig
}
