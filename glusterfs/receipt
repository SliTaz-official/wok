# SliTaz package receipt.

PACKAGE="glusterfs"
VERSION="3.3.0"
CATEGORY="misc"
SHORT_DESC="Distributed file system."
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://www.gluster.org/"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://download.gluster.org/pub/gluster/glusterfs/${VERSION%.*}/$VERSION/$TARBALL"

DEPENDS="python readline mpc-library elfutils openssl"
BUILD_DEPENDS="flex python readline-dev mpc-library elfutils openssl-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --infodir=/usr/share/info \
		--libexecdir=/usr/share \
		--mandir=/usr/share/man \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
	cp -a $_pkg/etc $fs
	cp -a $_pkg/var $fs
	cp -a $_pkg/sbin $fs
	cp -a $_pkg/usr/sbin $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
	cp -a $_pkg/usr/share/glusterfs $fs/usr/share
}
