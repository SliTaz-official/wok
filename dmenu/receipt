# SliTaz package receipt.

PACKAGE="dmenu"
VERSION="3.9"
CATEGORY="misc"
SHORT_DESC="dynamic menu lauch bar"
MAINTAINER="jozee@slitaz.org"
DEPENDS="xorg-libX11 xorg-libXau xorg-libXdmcp xorg-libXext xorg-libXinerama"
BUILD_DEPENDS="xorg-libX11-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://code.suckless.org/dl/tools"
WGET_URL="$WEB_SITE/$TARBALL"
TAGS="launchbar"

# Rules to configure and make the package.
compile_rules()
{
    cd $src
    make &&
    make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    mkdir -p $fs/usr/bin
    cp -a $_pkg/usr/local/bin/* $fs/usr/bin/
       
}
