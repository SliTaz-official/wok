# SliTaz package receipt.

PACKAGE="duplicity"
VERSION="0.7.18.2"
CATEGORY="network"
SHORT_DESC="Encrypted bandwidth-efficient backup using the rsync algorithm."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://duplicity.nongnu.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://code.launchpad.net/$PACKAGE/${VERSION%.*.*}-series/$VERSION/+download/$TARBALL"

DEPENDS="python librsync gnupg paramiko cryptopp lftp"
BUILD_DEPENDS="$DEPENDS python-dev setuptools"
# NcFTP boto librsync-dev

# Rules to configure and make the package.
compile_rules()
{
	./setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs
}
