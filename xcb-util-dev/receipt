
PACKAGE="xcb-util-dev"
VERSION="0.3.6"
CATEGORY="development"
SHORT_DESC="xcb-util development files"
MAINTAINER="mallory@sweetpeople.org"
DEPENDS="xcb-util"
WANTED="xcb-util"
WEB_SITE="http://xcb.freedesktop.org"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/include $fs/usr
	cp -a $_pkg/usr/lib/*.*a $fs/usr/lib
	cp -a $_pkg/usr/lib/pkgconfig $fs/usr/lib
	
	ln -s $fs/usr/lib/libxcb-util.la $fs/usr/lib/libxcb-aux.la
	ln -s $fs/usr/lib/libxcb-util.la $fs/usr/lib/libxcb-event.la
	ln -s $fs/usr/lib/libxcb-util.la $fs/usr/lib/libxcb-atom.la
}
