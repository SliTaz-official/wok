# SliTaz package receipt.

PACKAGE="remmina"
SOURCE="Remmina"
VERSION="1.0.0"
CATEGORY="network"
SHORT_DESC="Remote desktop client written in GTK+"
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://$PACKAGE.sourceforge.net/"
WGET_URL="https://github.com/downloads/FreeRDP/$SOURCE/$TARBALL"
SUGGESTED="remmina-plugins"
TAGS="rdp vnc"

DEPENDS="gtk+"
BUILD_DEPENDS="gtk+-dev intltool wget cmake libgcrypt-dev libssh-dev vte-dev \
freerdp-dev libgnome-keyring-dev gettext"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	export LDFLAGS="-Wl,--copy-dt-needed-entries -lX11"
	mkdir build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DWITH_TELEPATHY=OFF \
		-DWITH_AVAHI=OFF &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/share $fs/usr
	cp -a $install/usr/bin $fs/usr
}
