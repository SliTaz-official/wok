# SliTaz package receipt.

PACKAGE="mixxx"
VERSION="1.8.1"
CATEGORY="multimedia"
SHORT_DESC="Digital DJ mixing software"
MAINTAINER="slaxemulator@gmail.com"
DEPENDS="libsndfile libogg libid3tag libmad libvorbis portaudio portmidi libQtOpenGL libQtWebkit libQt3Support libQtScript libQtSvg libQtDBus qt4-phonon"
BUILD_DEPENDS="libsndfile-dev libogg-dev libid3tag-dev libmad-dev libvorbis-dev portaudio-dev qt4-phonon Qt4-dev alsa-lib-dev jack-audio-connection-kit-dev mesa-dev scons pkg-config"
TARBALL="$PACKAGE-$VERSION-src.tar.gz"
WEB_SITE="http://www.mixxx.org/"
WGET_URL="http://downloads.mixxx.org/$PACKAGE-$VERSION/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	scons qtdir=/usr/lib/qt prefix=/usr install_root=$PWD/_pkg/usr
	scons qtdir=/usr/lib/qt prefix=/usr install_root=$PWD/_pkg/usr install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/* $fs/usr
}

