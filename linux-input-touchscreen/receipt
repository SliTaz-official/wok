# SliTaz package receipt.

PACKAGE="linux-input-touchscreen"
VERSION="2.6.37"
CATEGORY="base-system"
SHORT_DESC="The Linux kernel touchscreen input drivers."
MAINTAINER="jozee@slitaz.org"
WANTED="linux"
WEB_SITE="http://www.kernel.org/"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    local path
    path=lib/modules/$VERSION-slitaz/kernel
    mkdir -p $fs/$path
    export src
    export _pkg
    $wanted_stuff/list_modules.sh drivers/input/touchscreen \
	  lib/ts_bm.ko.gz lib/ts_fsm.ko.gz lib/ts_kmp.ko.gz | while read module; do
    	dir=$path/$(dirname $module)
    	[ -d $fs/$dir ] || mkdir -p $fs/$dir
        cp -a $_pkg/$path/$module $fs/$dir
    done

    for i in $(cat $wanted_stuff/modules-$VERSION.list); do
        if [ $fs/lib/modules/$VERSION-slitaz/kernel/$i ]; then
	    rm -f $fs/lib/modules/$VERSION-slitaz/kernel/$i
	fi
    done
}

# Post install/remove commands for Tazpkg.
post_install()
{
	chroot "$1/" depmod -a $VERSION-slitaz
}

post_remove()
{
	chroot "$1/" depmod -a $VERSION-slitaz
}

