# SliTaz package receipt.

PACKAGE="connman-tools"
VERSION="1.21"
CATEGORY="network"
SHORT_DESC="Daemon for managing internet connections, dev tools."
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://connman.net/"
WANTED="connman"

DEPENDS="readline ncursesw"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	# client
        mkdir -p $fs/usr/sbin
	install -Dm755 $src/client/connmanctl  $fs/usr/sbin
}
