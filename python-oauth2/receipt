# SliTaz package receipt.

PACKAGE="python-oauth2"
VERSION="1.5.211"
CATEGORY="development"
SHORT_DESC="Library for OAuth version 1.0."
MAINTAINER="paul@slitaz.org"
LICENSE="MIT"
SOURCE="oauth2"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="https://github.com/simplegeo/python-oauth2"
WGET_URL="http://pypi.python.org/packages/source/o/$SOURCE/$TARBALL"
TAGS="python"

DEPENDS="python"
BUILD_DEPENDS="python python-dev setuptools"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}

