# SliTaz package receipt.

PACKAGE="feedparser"
VERSION="5.1.3"
CATEGORY="misc"
SHORT_DESC="Parse RSS and Atom feeds in Python"
MAINTAINER="jozee@slitaz.org"
LICENSE="MIT"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="https://github.com/kurtmckee/feedparser"
WGET_URL="http://feedparser.googlecode.com/files/$TARBALL"

DEPENDS="libxml2 python"
BUILD_DEPENDS="libxml2-dev python-dev setuptools"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib 
	cp -a $install/usr/lib/python* $fs/usr/lib
}
