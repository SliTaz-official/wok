# SliTaz package receipt.

PACKAGE="feedparser"
VERSION="4.1"
CATEGORY="misc"
SHORT_DESC="Parse RSS and Atom feeds in Python"
MAINTAINER="jozee@slitaz.org"
DEPENDS="libxml2 python"
BUILD_DEPENDS="libxml2-dev python-dev"
TARBALL="$PACKAGE-$VERSION.zip"
WEB_SITE="http://feedparser.sf.net" 
WGET_URL="http://downloads.sourceforge.net/$PACKAGE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	patch -Np0 -i ../stuff/feedparser_uft8_decoding.patch
	python setup.py build
    python setup.py install --root=$PWD/$PACKAGE-$VERSION/_pkg	

}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib 
	cp -a $_pkg/usr/lib/python* $fs/usr/lib	
}
