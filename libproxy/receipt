# SliTaz package receipt.

PACKAGE="libproxy"
VERSION="0.3.0"
CATEGORY="multimedia"
SHORT_DESC="library to provide automatic proxy configuration management"
MAINTAINER="jozee@slitaz.org"
DEPENDS="glib gtk+"
BUILD_DEPENDS="glibc-base"
SUGGESTED="python icu libcurl libxslt webkit-r"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://libproxy.googlecode.com"
WGET_URL="$WEB_SITE/files/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--without-mozjs &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/lib/$PACKAGE $fs/usr/lib
	#cp -a $_pkg/usr/lib/python* $fs/usr/lib
}
