# SliTaz package receipt.

PACKAGE="rtaudio-dev"
VERSION="4.0.11"
CATEGORY="development"
SHORT_DESC="Rtaudio C++ classes devel files."
MAINTAINER="pankso@slitaz.org"
WEB_SITE="http://www.music.mcgill.ca/~gary/rtaudio/"
WANTED="rtaudio"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/usr/include/rtaudio
	cp -a $src/rtaudio-config $fs/usr/bin
	cp -a $src/*.h $fs/usr/include/rtaudio
	cp -a $src/include/*.h $fs/usr/include/rtaudio
	# GCC fix
	sed -i "/inline/s/;$//" "$fs/usr/include/rtaudio/RtAudio.h"
}
