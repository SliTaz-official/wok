# SliTaz package receipt.

PACKAGE="usbutils"
VERSION="0.91"
CATEGORY="system-tools"
SHORT_DESC="Displaying information about USB."
MAINTAINER="erjo@slitaz.org"
DEPENDS="glibc-base libusb libusb-compat zlib"
BUILD_DEPENDS="libusb-dev pkg-config zlib-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://linux-usb.sourceforge.net/"
WGET_URL="http://www.kernel.org/pub/linux/utils/usb/$PACKAGE/$TARBALL"
TAGS="usb"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--datadir=/usr/share/misc \
		--libdir=/usr/lib \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/misc
	cp -a $_pkg/usr/sbin $fs/usr
	cp -a $_pkg/usr/share/misc/usb.ids.gz $fs/usr/share/misc
}
