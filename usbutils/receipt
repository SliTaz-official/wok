# SliTaz package receipt.

PACKAGE="usbutils"
VERSION="0.81"
CATEGORY="system-tools"
SHORT_DESC="Displaying information about USB."
MAINTAINER="erjo@slitaz.org"
DEPENDS="libusb zlib"
BUILD_DEPENDS="libusb-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://linux-usb.sourceforge.net/"
WGET_URL="http://dfn.dl.sourceforge.net/sourceforge/linux-usb/$TARBALL
 http://surfnet.dl.sourceforge.net/sourceforge/linux-usb/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--datadir=/usr/share/misc \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
	cp -a $_pkg/usr/sbin $fs/usr
	cp -a $_pkg/usr/share/misc $fs/usr/share
	# Compress IDS db.
	gzip $fs/usr/share/misc/usb.ids
}

