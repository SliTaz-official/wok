# SliTaz package receipt.

PACKAGE="xorg-dev-proto"
VERSION="7.3"
CATEGORY="x-window"
SHORT_DESC="Meta-package to build/install all Xorg protocols."
MAINTAINER="pankso@slitaz.org"
WANTED="xorg"
WEB_SITE="http://www.x.org/"
DEPENDS="
xorg-proto
xorg-bigreqsproto
xorg-inputproto
xorg-kbproto
xorg-randrproto
xorg-renderproto
xorg-xcmiscproto
xorg-xextproto
xorg-xproto
xorg-xtrans
xorg-fixesproto
xorg-xineramaproto"

# Rules to compile all proto  packages listed in $DEPENDS
compile_rules()
{
	for pkg in $DEPENDS
	do
		tazwok compile $pkg
	done
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	for pkg in $DEPENDS
	do
		tazwok genpkg $pkg
	done
	# Just to have a dir.
	mkdir -p $fs/usr/share/X11
}
