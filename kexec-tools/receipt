# SliTaz package receipt.

PACKAGE="kexec-tools"
VERSION="2.0.17"
CATEGORY="system-tools"
SHORT_DESC="Directly boot into a new kernel."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.xz"
WEB_SITE="https://www.kernel.org/pub/linux/utils/kernel/kexec/"
WGET_URL="${WEB_SITE}$TARBALL"
HOST_ARCH="i486 arm x86_64"

DEPENDS="zlib"
BUILD_DEPENDS="wget zlib-dev liblzma-dev"

# What is the latest version available today?
current_version()
{
	wget -O - ${WGET_URL%/*} 2>/dev/null | \
	sed "/latest/d;/rc/d;/$PACKAGE-[0-9]/!d;/tar/!d;s|.*$PACKAGE-\\(.*\\).tar.*\".*|\\1|" | sort -Vr | sed q 
}

# Rules to configure and make the package.
compile_rules()
{
	export LDFLAGS="$LDFLAGS -lpthread"
	case "$ARCH" in
	i?86)
		./configure prefix=/usr \
			--build=$BUILD_SYSTEM \
			--host=$HOST_SYSTEM \
			--target=i386-linux ;;
	*)
		./configure prefix=/usr \
			--build=$BUILD_SYSTEM \
			--host=$HOST_SYSTEM ;;
	esac &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Important cross compiled package so run readelf.
testsuite()
{
	cd $install
	readelf -h usr/sbin/kexec
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
	rm -rf $fs/usr/share
}
