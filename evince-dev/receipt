# SliTaz package receipt.

PACKAGE="evince-dev"
VERSION="2.29.4"
CATEGORY="office"
SHORT_DESC="Evince developement headers files."
MAINTAINER="erjo@slitaz.org"
DEPENDS="evince gnome-doc-utils"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://projects.gnome.org/evince/"
WANTED="evince"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/evince/2/backends
	
	cp -a $_pkg/usr/include $fs/usr
	cp -a $_pkg/usr/lib/*.*a $fs/usr/lib
	cp -a $_pkg/usr/lib/evince/2/backends/*.*a $fs/usr/lib/evince/2/backends
	
}
