# SliTaz package receipt.

PACKAGE="perl-fuse"
VERSION="0.14"
CATEGORY="development"
SHORT_DESC="Fuse module is a Perl extension."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
SOURCE="Fuse"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://cpan.org/"
WGET_URL="https://metacpan.org/CPAN/authors/id/D/DP/DPAVLIN/$TARBALL"

DEPENDS="perl fuse perl-filesys-statvfs perl-lchown perl-unix-mknod"
BUILD_DEPENDS="perl fuse-dev perl-filesys-statvfs perl-lchown perl-unix-mknod"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Makefile.PL &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
}

