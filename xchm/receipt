# SliTaz package receipt.

PACKAGE="xchm"
VERSION="1.18"
CATEGORY="utilities"
SHORT_DESC="Cross-platform GUI for chmlib"
MAINTAINER="allan316@gmail.com"
DEPENDS="wxWidgets chmlib xorg-libXdamage xorg-libXxf86vm"
BUILD_DEPENDS="wxWidgets wxWidgets-dev chmlib-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://xchm.sourceforge.net"
WGET_URL="http://transact.dl.sourceforge.net/sourceforge/xchm/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/locale \
		$fs/usr/share/applications \
		
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/share/locale/fr $fs/usr/share/locale
	cp -a $_pkg/usr/share/pixmaps $fs/usr/share
	
	cp -a stuff/*.desktop $fs/usr/share/applications
}

