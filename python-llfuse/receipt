# SliTaz package receipt.

PACKAGE="python-llfuse"
SOURCE="llfuse"
VERSION="0.38"
CATEGORY="development"
SHORT_DESC="Python bindings for the low level FUSE API."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="LGPL2"
TARBALL="$SOURCE-$VERSION.tar.bz2"
WEB_SITE="http://code.google.com/p/$PACKAGE/"
WGET_URL="http://$PACKAGE.googlecode.com/files/$TARBALL"

DEPENDS="fuse"
BUILD_DEPENDS="python-dev fuse-dev attr-dev python-distribute openssl"

# Rules to configure and make the package.
compile_rules()
{
	sed -i -e 's|import sys|&\nimport ssl|' -e 's|http:|https:|' -e \
	  's|.*urlopen(url|\t    ssl._create_default_https_context = ssl._create_unverified_context\n&|' \
		util/distribute_setup.py
	python setup.py build &&
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}
