# SliTaz package receipt.

PACKAGE="python-llfuse"
SOURCE="llfuse"
VERSION="0.38"
CATEGORY="development"
SHORT_DESC="Python bindings for the low level FUSE API."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="LGPL2"
TARBALL="$SOURCE-$VERSION.tar.bz2"
WEB_SITE="http://code.google.com/p/$PACKAGE/"
WGET_URL="http://$PACKAGE.googlecode.com/files/$TARBALL"

DEPENDS="fuse"
BUILD_DEPENDS="python-dev fuse-dev attr-dev python-distribute"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	python setup.py build &&
	python setup.py test &&
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}
