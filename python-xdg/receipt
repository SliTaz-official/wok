# SliTaz package receipt.

PACKAGE="python-xdg"
VERSION="0.26"
CATEGORY="development"
SHORT_DESC="Python library to access freedesktop.org standards."
MAINTAINER="paul@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="https://www.freedesktop.org/wiki/Software/pyxdg/"

SOURCE="pyxdg"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="https://files.pythonhosted.org/packages/source/${SOURCE:0:1}/$SOURCE/$TARBALL"

DEPENDS="python"
BUILD_DEPENDS="python python-dev"

# What is the latest version available today?
current_version()
{
	wget -O - https://github.com/takluyver/pyxdg/tags 2>/dev/null | \
	sed '/archive.*tar/!d;s|.*/[a-z-]*\(.*\).tar.*|\1|;q'
}

# Rules to configure and make the package.
compile_rules()
{
	python setup.py build &&
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr	$fs
}
