# SliTaz package receipt.

PACKAGE="libcurl"
VERSION="7.19.4"
CATEGORY="network"
SHORT_DESC="Curl library files."
MAINTAINER="pankso@slitaz.org"
WANTED="curl"
WEB_SITE="http://curl.haxx.se/"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
    cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}
