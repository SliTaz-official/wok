# SliTaz package receipt.

PACKAGE="valgrind"
VERSION="3.8.1"
CATEGORY="development"
SHORT_DESC="Memory debugger and profiler."
MAINTAINER="paul@slitaz.org"
LICENSE="GPL2"
SUGGESTED="perl"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://valgrind.org/"
WGET_URL="http://valgrind.org/downloads/$TARBALL"
TAGS="profiler"

DEPENDS=""
BUILD_DEPENDS="sed autoconf"

# Rules to configure and make the package.
compile_rules()
{
	autoconf
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS 2>&1 | grep -v MUTEX_ERRORCHECK &&
	make && make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/valgrind
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib/valgrind/* $fs/usr/lib/valgrind
	# remove static libraries
	rm $fs/usr/lib/valgrind/*.*a	
}
