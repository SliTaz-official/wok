# Rules to configure and make the package.
compile_rules()
{
	. $stuff/compile.rules
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_files			\
		DejaVuSans.ttf		\
		DejaVuSans-Bold.ttf	\
		DejaVuSansMono.ttf	\
		*sans.conf		\
		*mono.conf
}
