# SliTaz package receipt.

PACKAGE="lz4"
VERSION="102"
CATEGORY="base-system"
SHORT_DESC="High speed compressor."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://code.google.com/p/lz4/"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="subversion|http://lz4.googlecode.com/svn/trunk/"
TAGS="compression"

BUILD_DEPENDS="subversion"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	make
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp $src/lz4c $fs/usr/bin
}
