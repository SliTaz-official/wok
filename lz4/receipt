# SliTaz package receipt.

PACKAGE="lz4"
VERSION="131"
CATEGORY="base-system"
SHORT_DESC="High speed lossless compressor."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.lz4.org/"
TARBALL="$PACKAGE-r$VERSION.tar.gz"
WGET_URL="https://github.com/Cyan4973/lz4/archive/r$VERSION.tar.gz"
TAGS="compression"

BUILD_DEPENDS="wget"

# Rules to configure and make the package.
compile_rules()
{
	find -type f | xargs sed -i 's|usr/local|usr|'
	make && make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $install/usr/bin/lz4 $fs/usr/bin
}
