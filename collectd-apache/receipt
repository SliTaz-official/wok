# SliTaz package receipt.

PACKAGE="collectd-apache"
VERSION="5.8.1"
CATEGORY="network"
SHORT_DESC="Apache plugin for Collectd"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://collectd.org"

#CONFIG_FILES="/etc/collectd/collectd.conf"
WANTED="collectd"
DEPENDS="libcurl apache"
BUILD_DEPENDS="curl-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--prefix=/usr \
		--localstatedir=/var \
		--enable-apache \
		--disable-all-plugins \
		--sysconfdir=/etc/collectd \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/collectd

	cp -a $install/usr/lib/collectd/*.so* $fs/usr/lib/collectd
}
