# SliTaz package receipt.

PACKAGE="indent"
VERSION="2.2.10"
CATEGORY="utilities"
SHORT_DESC="A tool for formatting C code."
MAINTAINER="lufeng369@slitaz.org"
LICENSE="GPL3"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.gnu.org/software/indent/"
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	rm -f man/indent.1
	sed -i 's|/doc/|/share&|' doc/Makefile*
	./configure $CONFIGURE_ARGS && make -j 1 && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $install/usr/bin/indent $fs/usr/bin
}
