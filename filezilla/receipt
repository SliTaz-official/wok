# SliTaz package receipt.

PACKAGE="filezilla"
VERSION="3.3.5.1"
CATEGORY="network"
SHORT_DESC="FTP Client"
MAINTAINER="erjo@slitaz.org"
DEPENDS="wxWidgets gnutls libidn xorg-libXxf86vm libtasn1"
BUILD_DEPENDS="wxWidgets-dev gnutls gnutls-dev libidn libidn-dev xdg-utils gettext"
SOURCE="FileZilla"
TARBALL="${SOURCE}_${VERSION}_src.tar.bz2"
WEB_SITE="http://filezilla-project.org/"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"
TAGS="ftp client"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		--with-tinyxml=builtin \
		--without-dbus \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/share/filezilla $fs/usr/share
	
	rm -rf $fs/usr/share/fileszilla/docs
}

