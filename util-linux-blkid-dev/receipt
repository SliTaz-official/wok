# SliTaz package receipt.

PACKAGE="util-linux-blkid-dev"
VERSION="2.21.1"
CATEGORY="development"
SHORT_DESC="The blkid devel files from Util linux NG."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WANTED="util-linux"
WEB_SITE="http://kernel.org/~kzak/util-linux/"
HOST_ARCH="i486 arm"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/pkgconfig $fs/usr/include
	cp -a $install/usr/lib/libblkid.*a $fs/usr/lib
	cp -a $install/usr/lib/pkgconfig/blkid.pc $fs/usr/lib/pkgconfig
	cp -a $install/usr/include/blkid $fs/usr/include
}
