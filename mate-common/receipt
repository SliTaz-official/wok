# SliTaz package receipt.

PACKAGE="mate-common"
VERSION="1.9.0"
CATEGORY="utilities"
LICENSE="GPL3"
SHORT_DESC="Common package for MATE applications."
MAINTAINER="yuripourre@gmail.com"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.mate-desktop.org/"
WGET_URL="https://github.com/mate-desktop/$PACKAGE/archive/$TARBALL"

DEPENDS=""
BUILD_DEPENDS="wget autoconf automake"

# Rules to configure and make the package.
compile_rules()
{
	./autogen.sh                   \
		--prefix=/usr          \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/ $fs
}
