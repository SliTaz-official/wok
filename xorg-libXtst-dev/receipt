# SliTaz package receipt.

PACKAGE="xorg-libXtst-dev"
VERSION="1.2.3"
CATEGORY="development"
SHORT_DESC="Xorg module - development files."
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

SOURCE="libXtst"
DEPENDS="pkg-config xorg-libXext-dev xorg-libXi-dev xorg-libXtst
	xorg-recordproto"
WANTED="xorg-libXtst"

HOST_ARCH="i486 arm"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	mkdir -p $fs/usr/include/X11

	cp -a $install/usr/lib/*.*a*			$fs/usr/lib
	cp -a $install/usr/lib/pkgconfig		$fs/usr/lib
	cp -a $install/usr/include/X11/extensions	$fs/usr/include/X11/
}
