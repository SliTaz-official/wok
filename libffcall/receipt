		# $src = $PACKAGE-$VERSION
		#mv ffcall $PACKAGE-$VERSION 2>/dev/null
		#tar czf $TARBALL $PACKAGE-$VERSION
	#fi
	cd $src
	./configure &&
	make -j1 && make install
