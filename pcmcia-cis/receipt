# SliTaz package receipt.

PACKAGE="pcmcia-cis"
VERSION="3.2.8"
CATEGORY="system-tools"
SHORT_DESC="Card Information Structure files needed by some pcmcia cards"
MAINTAINER="domcox@slitaz.org"
DEPENDS="pcmciautils"
SOURCE="pcmcia-cs"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://pcmcia-cs.sourceforge.net"
WGET_URL="$SF_MIRROR/$SOURCE/$TARBALL"

genpkg_rules()
{
	# From the Linux Kernel 2.6 PCMCIA - mini-HOWTO
	# http://www.kernel.org/pub/linux/utils/kernel/pcmcia/howto.html
	# Get .dat files from pcmcia-cs and store it into /lib/firmware/
	mkdir -p $fs/lib/firmware
	cp -a $src/etc/cis/*.dat $fs/lib/firmware
	# Rename extension to .cis 
	cd $fs/lib/firmware
	for NAME in $(ls .); do 
		mv -f ${NAME} ${NAME%.*}.cis
	done
}

