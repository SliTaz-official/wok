# SliTaz package receipt.

PACKAGE="gfortran"
VERSION="4.5.2"
CATEGORY="development"
SHORT_DESC="GCC fortran extension."
WEB_SITE="http://gcc.gnu.org/"
MAINTAINER="pascal.bellard@slitaz.org"
DEPENDS="gcc libgfortran"
WANTED="gcc"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/gcc/i486-pc-linux-gnu/$VERSION $fs/usr/bin
	cp -a $_pkg/usr/bin/*gfortran $fs/usr/bin
	cp -a $_pkg/usr/lib/libgfortran*a $fs/usr/lib
	cp -a $_pkg/usr/lib/gcc/i486-pc-linux-gnu/$VERSION/f* \
		$fs/usr/lib/gcc/i486-pc-linux-gnu/$VERSION
	cp -a $_pkg/usr/lib/gcc/i486-pc-linux-gnu/$VERSION/libgfortran* \
		$fs/usr/lib/gcc/i486-pc-linux-gnu/$VERSION
}
