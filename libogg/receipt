# SliTaz package receipt.

PACKAGE="libogg"
VERSION="1.3.4"
CATEGORY="multimedia"
SHORT_DESC="OGG library from Xiph.org project."
MAINTAINER="pankso@slitaz.org"
LICENSE="BSD"
WEB_SITE="https://www.xiph.org/ogg/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="https://downloads.xiph.org/releases/ogg/$TARBALL"

DEPENDS="glibc-base"

HOST_ARCH="i486 arm"

# What is the latest version available today?
current_version()
{
	wget -O - ftp://ftp.osuosl.org/pub/xiph/releases/ogg/ 2>/dev/null | \
	sed '/libogg-/!d;/zip/d;s|.*libogg-||;s|.tar.*||' | sort -Vr | sed q
}


# Rules to configure and make the package.
compile_rules()
{
	./configure $CONFIGURE_ARGS &&
	make -j1 &&
	make -j1 DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/*.so*	$fs/usr/lib
}
