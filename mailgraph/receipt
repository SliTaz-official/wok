# SliTaz package receipt.

PACKAGE="mailgraph"
VERSION="1.14"
CATEGORY="misc"
SHORT_DESC="A RRDtool frontend for Mail statistics."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://mailgraph.schweikert.ch/"
WGET_URL="${WEB_SITE}pub/$TARBALL"
TAGS="logs"

DEPENDS="rrdtool-perl perl-file-tail"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/var/www/cgi-bin
	cp -a $src/mailgraph.pl $fs/usr/bin/mailgraph
	cp -a $src/mailgraph.cgi $fs/var/www/cgi-bin/
	cp -a $src/mailgraph.css $fs/var/www/cgi-bin/
}
