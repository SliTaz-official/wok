# SliTaz package receipt.

PACKAGE="clisp"
VERSION="2.49"
CATEGORY="development"
SHORT_DESC="GNU ANSI common lisp implementation."
MAINTAINER="paul@slitaz.org"
DEPENDS="readline ncurses"
BUILD_DEPENDS="readline-dev libsigsegv libffcall glibc-locale"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://clisp.sourceforge.net/"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src

	# Increase stack size to build.
	ulimit -s 16384

	./configure \
		--prefix=/usr \
		--with-libsigsegv \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		--cbc build &&

	# Be careful - unusual build rules!
	cd build &&
	make DESTDIR=$src/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
	cp -a $_pkg/usr/share $fs/usr
	# remove stuff
	rm -rf $fs/usr/share/man
}

