# SliTaz package receipt.

PACKAGE="tazchroot"
VERSION="0.0.5"
CATEGORY="base-system"
SHORT_DESC="Slitaz tool to manage chroot"
MAINTAINER="gokhlayeh@slitaz.org"
DEPENDS="libtaz"
#TARBALL="$PACKAGE-$VERSION.tar.gz"
TARBALL="$VERSION.tar.bz2"
WEB_SITE="http://www.slitaz.org/"
#WGET_URL="http://mirror.slitaz.org/sources/tazchroot/$TARBALL"
WGET_URL="http://hg.slitaz.org/tazchroot/archive/$TARBALL"
TAGS="slitaz"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin $fs/etc/slitaz \
		$fs/var/lib/tazchroot
	cp -a $src/tazchroot $fs/usr/bin
	chmod 755 $fs/usr/bin/tazchroot
	cp -a $src/tazchroot.conf $fs/etc/slitaz
	cp -a $src/scripts/* $fs/var/lib/tazchroot
}
