# SliTaz package receipt.

PACKAGE="gtksourceview"
VERSION="2.4.2"
CATEGORY="x-window"
SHORT_DESC="Extends GTK+ framework for multiline text editing."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://projects.gnome.org/gtksourceview/"
WGET_URL="http://ftp.gnome.org/pub/gnome/sources/gtksourceview/2.4/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/share/gtksourceview* $fs/usr/share
}

