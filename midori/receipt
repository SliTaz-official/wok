# SliTaz package receipt.

PACKAGE="midori"
VERSION="0.2.6"
CATEGORY="x-window"
SHORT_DESC="Light Web Browse using GTK+/WebKit."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
DEPENDS="libsexy libwebkit libsoup sqlite xorg-libXdamage xorg-libXss libnotify gcc-lib-base libgnutls"
BUILD_DEPENDS="python libsexy-dev libsexy libwebkit-dev libwebkit libsoup-dev sqlite-dev"
WEB_SITE="http://software.twotoasts.de/?page=midori"
WGET_URL="http://archive.xfce.org/src/apps/$PACKAGE/0.2/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--enable-sqlite \
		--enable-addons \
		--disable-unique \
		--disable-hildon &&
	make &&
	make DESTDIR=$PWD/_pkg install		
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p \
		$fs/usr/share/pixmaps \
		$fs/usr/share/icons
	cp -a $_pkg/etc $fs
	cp stuff/config $fs/etc/xdg/midori
	cp stuff/bookmarks.xbel $fs/etc/xdg/midori
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
	cp -a $_pkg/usr/share/$PACKAGE $fs/usr/share
	cp -a $_pkg/usr/share/icons/hicolor $fs/usr/share/icons
	cd $fs/usr/share/pixmaps
	ln -s ../icons/hicolor/22x22/apps/midori.png  .
}
