# SliTaz package receipt.

PACKAGE="midori"
VERSION="0.0.18"
CATEGORY="x-window"
SHORT_DESC="Light Web Browse using GTK+/WebKit."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
DEPENDS="libsexy webkit-r icu"
BUILD_DEPENDS="libsexy-dev webkit-r-dev icu-dev"
WEB_SITE="http://software.twotoasts.de/?page=midori"
WGET_URL="http://software.twotoasts.de/media/midori/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	chmod +x install-sh
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS
	make
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
}
