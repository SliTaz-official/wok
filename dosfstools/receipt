# SliTaz package receipt.

PACKAGE="dosfstools"
VERSION="2.11"
CATEGORY="extra"
SHORT_DESC="Tools to creat and check dos filesystems."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.src.tar.gz"
WEB_SITE="ftp://ftp.uni-erlangen.de/pub/Linux/LOCAL/dosfstools/"
WGET_URL="ftp://ftp.uni-erlangen.de/pub/Linux/LOCAL/dosfstools/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	make
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/sbin
	cp -a $src/mkdosfs/mkdosfs $fs/sbin
	cp -a $src/dosfsck/dosfsck $fs/sbin
	strip -s $fs/sbin/*
}
