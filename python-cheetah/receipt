# SliTaz package receipt.

PACKAGE="python-cheetah"
VERSION="2.4.3"
CATEGORY="development"
SHORT_DESC="Cheetah is a template engine and code generation tool written in Python."
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
SOURCE="Cheetah"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://www.cheetahtemplate.org/"
WGET_URL="http://pypi.python.org/packages/source/C/$SOURCE/$TARBALL"
TAGS="python"

DEPENDS="python"
BUILD_DEPENDS="python python-dev"

# Rules to configure and make the package.
compile_rules()
{
	sed -i 's/sys.version_info/&[:]/' cheetah/Template.py
	sed -i 's/\(naoeu.*\\n"\))/\1, convertEOLs=False)/' cheetah/Tests/SyntaxAndOutput.py
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}
