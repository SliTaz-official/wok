# SliTaz package receipt.

PACKAGE="dbus-glib"
VERSION="0.92"
CATEGORY="x-window"
SHORT_DESC="D-Bus glib binding."
DEPENDS="dbus glib"
BUILD_DEPENDS="dbus-dev glib-dev expat-dev pkg-config gettext"
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://freedesktop.org/wiki/Software/DBusBindings"
WGET_URL="http://dbus.freedesktop.org/releases/dbus-glib/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
}
