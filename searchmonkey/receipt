# SliTaz package receipt

PACKAGE="searchmonkey"
VERSION="0.8.1"
CATEGORY="utilities"
SHORT_DESC="A fast real-time search engine using GTK+."
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2.1"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://searchmonkey.sourceforge.net/"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

DEPENDS="gtk+ libglade xorg-libXdamage"
BUILD_DEPENDS="gtk+-dev libglade-dev xorg-libXdamage-dev"

# Rules to configure and make the package.
compile_rules()
{	
	cd $src
	./configure && 
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
}

