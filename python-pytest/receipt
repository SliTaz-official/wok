# SliTaz package receipt.

PACKAGE="python-pytest"
VERSION="2.3.4"
CATEGORY="development"
SHORT_DESC="A simple powerful testing with Python"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
SOURCE="pytest"
TARBALL="$SOURCE-$VERSION.zip"
WEB_SITE="http://pypi.python.org/pypi/pytest"
WGET_URL="http://pypi.python.org/packages/source/${SOURCE:0:1}/$SOURCE/$TARBALL"

DEPENDS="python"
BUILD_DEPENDS="python-dev python-setuptools"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py build
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
}
