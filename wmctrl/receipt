# SliTaz package receipt.

PACKAGE="wmctrl"
VERSION="c5c5eb8"
CATEGORY="utilities"
LICENSE="GPL"
MAINTAINER="yuripourre@gmail.com"
TARBALL="$PACKAGE-$VERSION.tar.xz"
WEB_SITE="https://sites.google.com/site/tstyblo/wmctrl/"
WGET_URL="http://git.make-linux.org/tools/$PACKAGE.git/snapshot/$TARBALL"
SHORT_DESC="A UNIX/Linux command line tool to interact with an EWMH/NetWM compatible X Window Manager."
DEPENDS="glib"
BUILD_DEPENDS="glib-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure                    \
		--prefix=/usr          \
		--mandir=/usr/share/man\
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
}
