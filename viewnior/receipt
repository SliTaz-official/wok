# SliTaz package receipt.

PACKAGE="viewnior"
VERSION="1.4"
CATEGORY="graphics"
SHORT_DESC="Light and simple image viewer."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://xsisqox.github.com/Viewnior/"
WGET_URL="http://dl.dropboxusercontent.com/s/zytq0suabesv933/$TARBALL"
TAGS="image photo viewer"
HOST_ARCH="i486 arm"

DEPENDS="gtk+ libffi exiv2"
BUILD_DEPENDS="gtk+-dev libffi-dev exiv2-dev"

case "$ARCH" in
	i?86) BUILD_DEPENDS="$BUILD_DEPENDS shared-mime-info-dev" ;;
esac

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--prefix=/usr \
		$CONFIGURE_ARGS &&
	make $MAKEFLAGS && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/icons/hicolor/24x24
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/share/viewnior $fs/usr/share
	cp -a $install/usr/share/icons/hicolor/24x24/apps \
		$fs/usr/share/icons/hicolor/24x24
}
