# SliTaz package receipt.

PACKAGE="icoutils"
VERSION="0.30.0"
CATEGORY="misc"
SHORT_DESC="Microsoft Windows icon and cursor files convertion tools."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.nongnu.org/icoutils"
WGET_URL="http://savannah.nongnu.org/download/$PACKAGE/$TARBALL"
#http://savannah.nongnu.org/download/icoutils/icoutils-0.30.0.tar.bz2

DEPENDS="png"
BUILD_DEPENDS="png-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --mandir=/usr/share/man \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make -j 1 DESTDIR=$DESTDIR install
return 1
}

# Rules to gen a SliTaz package suitable for Tazpkg.   
genpkg_rules()                                      
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
}
