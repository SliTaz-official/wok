# SliTaz package receipt.

PACKAGE="libplayer"
VERSION="1.0.0"
CATEGORY="multimedia"
SHORT_DESC="A multimedia A/V abstraction layer API."
DEPENDS="xine-lib"
BUILD_DEPENDS="xine-lib-dev python-dev"
SUGGESTED="mplayer-svn"
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://libplayer.geexbox.org/"
WGET_URL="http://libplayer.geexbox.org/releases/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	sed -i 's/cat -n/awk '"'"'{ printf "%6d  %s\\n",++n,$0 }'"'"' </' configure
	./configure \
		--prefix=/usr \
		--enable-binding-python \
		--enable-mplayer \
		--disable-gstreamer \
		--disable-vlc &&
	make && make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/bin $fs/usr
}
