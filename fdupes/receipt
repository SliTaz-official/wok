# SliTaz package receipt.

PACKAGE="fdupes"
VERSION="1.6.1"
CATEGORY="misc"
SHORT_DESC="Identify or delete duplicate files in specified directories."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://github.com/adrianlopezroche/fdupes"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/adrianlopezroche/$PACKAGE/archive/v$VERSION/$TARBALL"

DEPENDS=""
BUILD_DEPENDS=""

# Rules to configure and make the package.
compile_rules()
{
	make
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $src/fdupes $fs/usr/bin
}
