# SliTaz package receipt.

PACKAGE="orpheus"
VERSION="1.6"
CATEGORY="multimedia"
SHORT_DESC="Ncurses based audio player"
MAINTAINER="pascal.bellard@slitaz.org"
DEPENDS="ncurses libvorbis libogg libxml2 zlib"
SUGGESTED="mpg123"
BUILD_DEPENDS="ncurses-dev libvorbis-dev libogg-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://thekonst.net/en/orpheus"
WGET_URL="http://thekonst.net/download/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $_pkg/usr/bin $fs/usr
}

