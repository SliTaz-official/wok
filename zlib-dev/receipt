# SliTaz package receipt.

PACKAGE="zlib-dev"
VERSION="1.2.3"
CATEGORY="devel"
SHORT_DESC="Zlib compression library devel files."
MAINTAINER="pankso@slitaz.org"
WANTED="zlib"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.zlib.net/"
WGET_URL="http://www.clex.sk/download/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
    cd $src
    ./configure --prefix=/usr
    make
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    mkdir -p $fs/usr/lib
    mkdir -p $fs/usr/include
    cp -a $src/libz.a $fs/usr/lib
    cp $src/zconf.h $fs/usr/include
    cp $src/zlib.h $fs/usr/include
}
