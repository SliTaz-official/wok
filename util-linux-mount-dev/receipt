# SliTaz package receipt.

PACKAGE="util-linux-mount-dev"
VERSION="2.21.1"
CATEGORY="base-system"
SHORT_DESC="Libmount devel files."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WANTED="util-linux"
WEB_SITE="http://kernel.org/~kzak/util-linux/"

DEPENDS="util-linux-mount pkg-config"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/pkgconfig $fs/usr/include
	cp -a $install/usr/lib/libmount.*a $fs/usr/lib
	cp -a $install/usr/lib/pkgconfig/mount.pc $fs/usr/lib/pkgconfig
	cp -a $install/usr/include/libmount $fs/usr/include
}
