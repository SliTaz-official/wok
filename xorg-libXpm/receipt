# SliTaz package receipt.

PACKAGE="xorg-libXpm"
VERSION="3.5.10"
CATEGORY="x-window"
SHORT_DESC="X Pixmap Library"
MAINTAINER="pankso@slitaz.org"
LICENSE="other"
WEB_SITE="http://www.x.org/"
SOURCE="libXpm"
TARBALL="$SOURCE-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"
HOST_ARCH="i486 arm"

DEPENDS="xorg-libX11 xorg-libXt"
BUILD_DEPENDS="xorg-libXt-dev xorg-libXext-dev xorg-libSM-dev util-linux-uuid-dev"

# Rules to configure and make the package.
compile_rules()
{
	case "$ARCH" in
		arm*) 
			# ARM Hack
			for la in libICE.la libSM.la libuuid.la
			do
				if grep -q "^libdir='/usr/lib'" /usr/lib/${la}; then
					sed -i s"#/usr/lib#/cross/$ARCH/sysroot/usr/lib#" \
						/usr/lib/${la}
				fi 
			done ;;
	esac
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}
