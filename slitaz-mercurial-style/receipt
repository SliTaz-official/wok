# SliTaz package receipt.

PACKAGE="slitaz-mercurial-style"
VERSION="1.2"
CATEGORY="extra"
SHORT_DESC="SliTaz CSS style and images for Mercurial Web repos."
DEPENDS="mercurial"
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.slitaz.org/"
WGET_URL="http://download.tuxfamily.org/slitaz/sources/artwok/$TARBALL"
PYTHON_LIB="python2.5"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/$PYTHON_LIB/site-packages/mercurial/templates
	cp -a $src/slitaz \
		$fs/usr/lib/$PYTHON_LIB/site-packages/mercurial/templates
	cp -a $src/static \
		$fs/usr/lib/$PYTHON_LIB/site-packages/mercurial/templates
	chown -R root.root $fs
}

