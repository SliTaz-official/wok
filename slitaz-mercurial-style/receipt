# SliTaz package receipt.

PACKAGE="slitaz-mercurial-style"
VERSION="2.0"
CATEGORY="misc"
SHORT_DESC="SliTaz CSS style and images for Mercurial Web repos."
DEPENDS="mercurial"
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.slitaz.org/"
WGET_URL="http://download.tuxfamily.org/slitaz/sources/artwok/$TARBALL"
PYTHON_LIB="python2.5"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/$PYTHON_LIB/site-packages/mercurial
	cp -a stuff/templates $fs/usr/lib/$PYTHON_LIB/site-packages/mercurial
	chown -R root.root $fs
}
