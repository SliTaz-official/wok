# SliTaz package receipt.

PACKAGE="normalize"
VERSION="0.7.7"
CATEGORY="multimedia"
SHORT_DESC="Audio file volume normalizer"
MAINTAINER="devl547@gmail.com"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://normalize.nongnu.org/"
WGET_URL="http://savannah.nongnu.org/download/$PACKAGE/$TARBALL"
BUILD_DEPENDS="libmad-dev libaudiofile-dev"
DEPENDS="libmad libaudiofile"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --sysconfdir=/etc \
	--libexecdir=/usr/bin --mandir=/usr/share/man \
	$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/
	cp -a $_pkg/usr/bin $fs/usr
}
	