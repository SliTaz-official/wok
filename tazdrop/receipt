# SliTaz package receipt.

PACKAGE="tazdrop"
VERSION="1.0"
CATEGORY="office"
SHORT_DESC="SliTaz desktop Drag N' Drop tool"
MAINTAINER="pankso@slitaz.org"
DEPENDS="gtk+ yad"
WEB_SITE="http://www.slitaz.org/"

# Rules to configure and make the package.
compile_rules()
{
	# We release different version number of TazDrop than slitaz-tools
	report open-bloc
	cd $WOK/$PACKAGE
	tazwok get-src slitaz-tools --target=$src || { report close-bloc; return 1; }
	#hg clone http://hg.slitaz.org/slitaz-tools $PACKAGE-$VERSION
	cd $src/tazdrop
	make DESTDIR=$WOK/$PACKAGE/install install
	report close-bloc
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs
	cp -a $_pkg/* $fs
}
