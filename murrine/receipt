# SliTaz package receipt.

PACKAGE="murrine"
VERSION="200904svn"
CATEGORY="x-window"
SHORT_DESC="GTK2 engine to make your desktop look like a murrina"
MAINTAINER="jozee@slitaz.org"
DEPENDS="pixman expat libgio gtk+"
BUILD_DEPENDS="autoconf automake intltool libtool m4 gettext libgomp pixman-dev expat-dev libgio-dev gtk+-dev subversion libiconv"
WEB_SITE="http://www.cimitan.com/murrine" 
SVN_TRUNK="http://svn.gnome.org/svn/murrine/trunk/"


# Rules to configure and make the package.
compile_rules()
{
	svn checkout $SVN_TRUNK $PACKAGE-$VERSION
	cd $src
	./autogen.sh --prefix=/usr --enable-animation
	make
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share $fs/usr/lib
	cp -a $_pkg/usr/share $fs/usr
	cp -a $_pkg/usr/lib $fs/usr
	
}

