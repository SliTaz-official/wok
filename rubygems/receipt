# SliTaz package receipt.

PACKAGE="rubygems"
VERSION="1.3.1"
CATEGORY="development"
SHORT_DESC="Rubx packages Manager."
MAINTAINER="pankso@slitaz.org"
TARBALL="$PACKAGE-$VERSION.tgz"
DEPENDS="ruby"
BUILD_DEPENDS="ruby"
WEB_SITE="http://www.rubygems.org/"
WGET_URL="http://rubyforge.org/frs/download.php/45905/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	ruby setup.rb --prefix=/usr --destdir=$PWD/_pkg/usr
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/ruby/site_ruby/1.8 \
		$fs/usr/lib/ruby/gems/1.8/cache \
		$fs/usr/lib/ruby/gems/1.8/gems \
		$fs/usr/lib/ruby/gems/1.8/specifications
	cp -a $_pkg/usr/lib/* $fs/usr/lib/ruby/site_ruby/1.8
	cp -a $_pkg/usr/bin $fs/usr
}
