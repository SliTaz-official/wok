# SliTaz package receipt.

PACKAGE="rubygems"
VERSION="1.8.10"
CATEGORY="development"
SHORT_DESC="Ruby packages Manager."
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
TARBALL="$PACKAGE-$VERSION.tgz"
WEB_SITE="http://www.rubygems.org/"
WGET_URL="http://production.cf.rubygems.org/rubygems/$TARBALL"
TAGS="ruby"
HOST_ARCH="i486 arm"

# ARM: ruby-dev libruby-extras build host must be installed
DEPENDS="ruby libruby-extras"
BUILD_DEPENDS="ruby ruby-dev libruby-extras"

# Rules to configure and make the package.
compile_rules()
{
	ruby setup.rb --destdir=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
	cp -a $install/usr/bin $fs/usr
}
