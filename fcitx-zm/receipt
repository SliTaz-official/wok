# SliTaz package receipt.

PACKAGE="fcitx-zm"
VERSION="4.0"
CATEGORY="x-window"
SHORT_DESC="Zhengma Table for FCITX-4.0"
MAINTAINER="lufeng369"
DEPENDS="fcitx"
BUILD_DEPENDS="fcitx"
TARBALL="zm.mb"
WGET_URL="http://fcitx.googlecode.com/files/$TARBALL"
# Rules to gen a SliTaz package suitable for Tazpkg.
compile_rules()
{
	echo -n "Remove All Words,Remained Hanzi only"
#	mkdir stuff
	mb2txt $SOURCES_REPOSITORY/zm.mb | awk 'NR<=10{print} NR>10{if(length($2)==3)print}' > stuff/zm.txt
	cd stuff && txt2mb zm.txt zm.mb
	cd ..
	status

}
genpkg_rules()
{
	EXTDIR="$fs/usr/share/fcitx/data/table"
	mkdir -p $EXTDIR
	cp stuff/zm.mb $EXTDIR	
	cp stuff/zm.conf $EXTDIR
}

