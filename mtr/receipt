# SliTaz package receipt.

PACKAGE="mtr"
VERSION="0.93"
CATEGORY="network"
SHORT_DESC="My traceroute."
MAINTAINER="paul@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.bitwizard.nl/mtr/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="ftp://ftp.bitwizard.nl/mtr/$TARBALL"

DEPENDS="ncurses"
BUILD_DEPENDS="autoconf automake linux-api-headers ncurses-dev"

# What is the latest version available today?
current_version()
{
	wget -O - https://github.com/traviscross/mtr/tags 2>/dev/null | \
	sed '/archive.*tar/!d;s|.*/v*\(.*\).tar.*|\1|;q'
}

# Rules to configure and make the package.
compile_rules()
{
#	./bootstrap.sh

	export LDFLAGS="$LDFLAGS -ltinfo"

	./configure			\
		--prefix=/usr		\
		--without-gtk		\
		--mandir=/usr/share/man	\
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/sbin	$fs/usr
}
