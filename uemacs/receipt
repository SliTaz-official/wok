# SliTaz package receipt.

PACKAGE="uemacs"
VERSION="20120715"
CATEGORY="editors"
SHORT_DESC="Tiny emacs clone."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="other"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://git.kernel.org/?p=editors/uemacs/uemacs.git"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="git|git://git.kernel.org/pub/scm/editors/uemacs/uemacs.git"
TAGS="editor"

DEPENDS="ncurses"
BUILD_DEPENDS="git ncurses-dev"

# Rules to configure and make the package.
compile_rules()
{
	export LDFLAGS="$LDFLAGS -ltinfo"
	make
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $src/em $fs/usr/bin
	ln -s em $fs/usr/bin/uemacs
}
