# SliTaz package receipt.

PACKAGE="isomaster"
VERSION="1.2"
CATEGORY="extra"
SHORT_DESC="Graphical CD image (ISO) editor."
MAINTAINER="pankso@slitaz.org"
DEPENDS="gtk+"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://littlesvr.ca/isomaster/"
WGET_URL="http://littlesvr.ca/isomaster/releases/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	make PREFIX=/usr
	make PREFIX=/usr DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/locale $fs/usr/share/pixmaps
	cp -a $_pkg/usr/bin $fs/usr
	strip -s $fs/usr/bin/*
	# Pixmap (24x24), icons and locale fr stuff.
	cp -a stuff/isomaster.png $fs/usr/share/pixmaps
	cp -a $_pkg/usr/share/isomaster $fs/usr/share
	cp -a $_pkg/usr/share/locale/fr $fs/usr/share/locale
}
