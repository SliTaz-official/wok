# SliTaz package receipt.

PACKAGE="childsplay"
VERSION="2.6.1"
CATEGORY="games"
SHORT_DESC="Python educational game."
MAINTAINER="claudinei@slitaz.org"
LICENSE="GPL3"
TARBALL="$PACKAGE-$VERSION.tgz"
WEB_SITE="http://www.schoolsplay.org/"
WGET_URL="http://download.savannah.gnu.org/releases/childsplay/$TARBALL"

DEPENDS="python pygtk python-pygame python-pysqlite python-sqlalchemy libogg"

# Rules to configure and make the package.
compile_rules()
{
	mkdir -p ${DESTDIR}/usr/share/${PACKAGE}
	cp -a ${src}/* ${DESTDIR}/usr/share/${PACKAGE}
	mv ${DESTDIR}/usr/share/${PACKAGE}/locale ${DESTDIR}/usr/share
	rm -rf ${DESTDIR}/usr/share/${PACKAGE}/po
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/games
	cp ${stuff}/${PACKAGE} $fs/usr/games
	cp -a ${install}/* ${fs}
}
