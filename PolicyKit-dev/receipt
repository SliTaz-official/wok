# SliTaz package receipt.

PACKAGE="PolicyKit-dev"
VERSION="0.97"
CATEGORY="development"
SHORT_DESC="PolicyKit devel files."
MAINTAINER="rcx@zoominternet.net"
DEPENDS=""
BUILD_DEPENDS=""
WEB_SITE="http://www.freedesktop.org/wiki/Software/PolicyKit/"
WANTED="PolicyKit"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/polkit-1/extensions
	cp -a $_pkg/usr/lib/*.*a $fs/usr/lib
	cp -a $_pkg/usr/lib/polkit-1/extensions/*.*a $fs/usr/lib/polkit-1/extensions
	cp -a $_pkg/usr/lib/pkgconfig $fs/usr/lib
	cp -a $_pkg/usr/include $fs/usr
}
