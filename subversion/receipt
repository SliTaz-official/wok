# SliTaz package receipt.

PACKAGE="subversion"
VERSION="1.6.15"
CATEGORY="development"
SHORT_DESC="Subversion Source Code Management access"
MAINTAINER="lehswe@gmail.com"
DEPENDS="apr-util libsasl libssl libkrb5 util-linux-ng-uuid expat zlib neon sqlite \
gnutls libcomerr libcomerr3 libsvn"
BUILD_DEPENDS="$DEPENDS zlib-dev neon expat apr-dev apr-util-dev apr-util mysql-dev neon-dev \
sqlite-dev expat-dev krb5 krb5-dev util-linux-ng-uuid-dev python-dev"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://subversion.tigris.org"
WGET_URL="http://subversion.tigris.org/downloads/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure &&
	make -j1 &&
	make -j1 DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/bin $fs/usr
}

