# SliTaz package receipt.

PACKAGE="subversion"
VERSION="1.5.1"
CATEGORY="Development"
SHORT_DESC="Subversion Source Code Management access"
MAINTAINER="lehswe@gmail.com"
DEPENDS="apr-util"
BUILD_DEPENDS="zlib-dev neon expat apr-dev apr-util-dev apr-util"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://subversion.tigris.org"
WGET_URL="http://subversion.tigris.org/downloads/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS
	make
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib

	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/bin $fs/usr

}

# Rules to clean stuff
clean_wok()
{
	rm -rf $WOK/$PACKAGE/ss*
}

