# SliTaz package receipt.

PACKAGE="subversion"
VERSION="1.6.11"
CATEGORY="development"
SHORT_DESC="Subversion Source Code Management access"
MAINTAINER="lehswe@gmail.com"
DEPENDS="libproxy apr-util cyrus-sasl openssl krb5 util-linux-ng-uuid expat zlib neon sqlite \
gnutls libcomerr libcomerr3"
BUILD_DEPENDS="zlib-dev neon expat apr-dev apr-util-dev apr-util mysql-dev neon-dev \
sqlite-dev expat-dev krb5 krb5-dev libproxy libproxy-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://subversion.tigris.org"
WGET_URL="http://subversion.tigris.org/downloads/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS &&
	make -j 4 &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/bin $fs/usr
}

# Rules to clean stuff
clean_wok()
{
	rm -rf $WOK/$PACKAGE/ss*
}
