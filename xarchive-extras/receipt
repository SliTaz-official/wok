# SliTaz package receipt.

PACKAGE="xarchive-extras"
VERSION="0.2.8-6"
CATEGORY="x-window"
SHORT_DESC="XArchve command line archiving tools wrappers."
MAINTAINER="Erjo <erjo@slitaz.org>"
DEPENDS="xarchive"
WANTED="xarchive"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://xarchive.sourceforge.net/"


# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/xarchive/wrappers
	cp -a $_pkg/usr/lib/xarchive/wrappers/* $fs/usr/lib/xarchive/wrappers
	rm -f fs/usr/lib/xarchive/wrappers/tar-*
	rm -f fs/usr/lib/xarchive/wrappers/deb-*
	rm -f fs/usr/lib/xarchive/wrappers/rpm-*
	rm -f fs/usr/lib/xarchive/wrappers/zip-*
	sed -i 's|#!\s*/bin/bash|#!/bin/sh|' $_pkg/usr/lib/xarchive/wrappers/*
}

