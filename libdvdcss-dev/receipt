# SliTaz package receipt."

PACKAGE="libdvdcss-dev"
VERSION="1.2.12"
CATEGORY="system-tools"
SHORT_DESC="Read DVDs dev files."
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WANTED="libdvdcss"
WEB_SITE="http://www.videolan.org/developers/libdvdcss.html"

DEPENDS="libdvdcss"

genpkg_rules()
{
	mkdir -p $fs/usr
	
	# Copying include dir if existes
	if [ -d "$install/usr/include" ]; then
		cp -a $install/usr/include $fs/usr
	fi
	
	# Copying pkgconfig dir if existes
	if [ -d "$install/usr/lib/pkgconfig" ]; then
		mkdir -p $fs/usr/lib/
		cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	fi
	
	# Copying static libs if existes
	if ( find $install/usr/lib -name "*.*a" > /dev/null ); then
		mkdir -p $fs/usr/lib
		cp -a $install/usr/lib/*.*a $fs/usr/lib
	fi
}
