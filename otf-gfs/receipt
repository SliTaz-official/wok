# SliTaz package receipt.

PACKAGE="otf-gfs"
VERSION="20100912"
CATEGORY="x-window"
SHORT_DESC="Selection of open type fonts from the Greek Font Society"
MAINTAINER="al.bobylev@gmail.com"
WEB_SITE="http://www.greekfontsociety.gr/pages/gr_typefaces1.html"
TAGS="font otf"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $src && cd $src
	for font in DIDOT_OT BODONI_OT OLGA_OT NEOHELLENIC_OT ARTEMISIA_OT \
		THEOKRITOS_OT ELPIS_OT PYRSOS DIDOTCLASS_OT Porson_OT SOLOMOS_OT \
		DECKER PHILOSTRATOS GOSCHEN BODONICLASS_OT BASKERVILLE_OT GAZIS \
		COMPLUTUM_OT; do
		wget http://www.greekfontsociety.gr/GFS_${font}.zip
		unzip -o GFS_${font}.zip
	done
	FONTDIR=$fs/usr/share/fonts/OTF/GFS
	mkdir -p $FONTDIR
	install -Dm644 $src/GFS*/*otf $FONTDIR
}
