# SliTaz package receipt.

PACKAGE="otf-gfs"
VERSION="20211229"
CATEGORY="fonts"
TAGS="font otf"
SHORT_DESC="Selection of open type fonts from the Greek Font Society."
MAINTAINER="al.bobylev@gmail.com"
LICENSE="SIL_OFL"
WEB_SITE="http://www.greekfontsociety-gfs.gr"

EXTRA_SOURCE_FILES="	GFS_Artemisia.zip
			GFS_Baskerville.zip
			GFS_Bodoni.zip
			GFS_Bodoni_Classic.zip
			GFS_Complutum.zip
			GFS_Decker.zip
			GFS_Didot.zip
			GFS_Didot_Classic.zip
			GFS_Didot_Display.zip
			GFS_Elpis.zip
			GFS_Galatea.zip
			GFS_Gazis.zip
			GFS_Georgiou.zip
			GFS_Goschen.zip
			GFS_Heraklit.zip
			GFS_NeoHellenic.zip
			GFS_Olga.zip
			GFS_Orpheus.zip
			GFS_Orpheus_Classic.zip
			GFS_Orpheus_Sans.zip
			GFS_Philostratos.zip
			GFS_Porson.zip
			GFS_Pyrsos.zip
			GFS_Solomos.zip
			GFS_Theokritos.zip"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $src
	cd	$src
	for font in $EXTRA_SOURCE_FILES
	  do
		[ -s $SOURCES_REPOSITORY/$font ] ||
		wget -O $SOURCES_REPOSITORY/$font $WEB_SITE/_assets/fonts/$font
		cp $SOURCES_REPOSITORY/$font .
		unzip -o $font
	  done
	FONTDIR=$fs/usr/share/fonts/OTF/GFS
	mkdir -p $FONTDIR
	install -Dm644 $src/GFS*/*otf	$FONTDIR
}
