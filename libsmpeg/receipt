# SliTaz package receipt.

PACKAGE="libsmpeg"
SOURCE="smpeg"
VERSION="380"
CATEGORY="development"
SHORT_DESC="Mpeg decoding library"
MAINTAINER="claudinei@slitaz.org"
WEB_SITE="http://icculus.org/smpeg"
DEPENDS="libsdl"
BUILD_DEPENDS="libsdl libsdl-dev gtk+-dev autoconf automake m4 subversion"


# Rules to configure and make the package.
compile_rules()
{
	[ -d "$SOURCE-$VERSION" ] && rm -rf $SOURCE-$VERSION
	svn co svn://svn.icculus.org/$SOURCE/trunk \
		-r $VERSION $SOURCE-$VERSION
	cd $src
	chmod +x install-sh
	./autogen.sh
	./configure --prefix=/usr --disable-gtk-player $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib

}
