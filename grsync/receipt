# SliTaz package receipt.

PACKAGE="grsync"
VERSION="0.6.1"
CATEGORY="network"
SHORT_DESC="GTK+ intuitive interface to rsync."
MAINTAINER="pankso@slitaz.org"
DEPENDS="gtk+ rsync"
BUILD_DEPENDS="gtk+-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.opbyte.it/grsync/"
WGET_URL="http://www.opbyte.it/release/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS
	make
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
    mkdir -p $fs/usr/share/locale
    cp -a $_pkg/usr/bin $fs/usr
    cp -a $_pkg/usr/share/pixmaps $fs/usr/share/pixmaps
    cp -a $_pkg/usr/share/locale/fr_FR $fs/usr/share/locale/fr
    strip -s $fs/usr/bin/* 2>/dev/null
    
    sed -i s'|#!/bin/bash|#!/bin/sh|' $fs/usr/bin/grsync-batch
    
    # Desktop entry
    cp -a $_pkg/usr/share/applications $fs/usr/share
}
