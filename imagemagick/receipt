# SliTaz package receipt.

PACKAGE="imagemagick"
VERSION="6.6.8-10"
SHORT_VERSION="${VERSION%-*}"
CATEGORY="graphics"
SHORT_DESC="Images manipulation programs."
MAINTAINER="pankso@slitaz.org"
DEPENDS="xorg-libXext jpeg libpng tiff libxml2 freetype libgomp bzlib expat \
fontconfig lcms jasper ilmbase openexr graphviz librsvg libgsf libgio cairo gcc-lib-base jbigkit fftw"
BUILD_DEPENDS="jpeg-dev ilmbase-dev openexr-dev libpng-dev tiff-dev libxml2-dev lcms-dev graphviz-dev fftw-dev"
SOURCE="ImageMagick"
TARBALL="$SOURCE-$VERSION.tar.xz"
WEB_SITE="http://www.imagemagick.org/"
WGET_URL="ftp://ftp.imagemagick.org/pub/ImageMagick/$TARBALL"
TAGS="image photo toolkit"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		--without-perl \
		$CONFIGURE_ARGS &&
	make -j 4 &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/lib/$SOURCE-$SHORT_VERSION $fs/usr/lib
	cp -a $_pkg/usr/share/$SOURCE-$SHORT_VERSION $fs/usr/share
}

