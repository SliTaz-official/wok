# SliTaz package receipt.

PACKAGE="imagemagick"
VERSION="6.4.3"
CATEGORY="graphics"
SHORT_DESC="Images manipulation programs."
MAINTAINER="pankso@slitaz.org"
DEPENDS="xorg jpeg libpng tiff libxml2 freetype libgomp bzlib expat \
fontconfig"
BUILD_DEPENDS="jpeg-dev libpng-dev tiff-dev libxml2-dev lcms graphviz-dev"
SOURCE="ImageMagick"
TARBALL="$SOURCE-$VERSION-10.tar.bz2"
WEB_SITE="http://www.imagemagick.org/"
WGET_URL="ftp://ftp.imagemagick.org/pub/ImageMagick/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		--without-perl \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/share
	cp -a $_pkg/usr/bin $fs/usr
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	cp -a $_pkg/usr/lib/$SOURCE-$VERSION $fs/usr/lib
	cp -a $_pkg/usr/share/$SOURCE-$VERSION $fs/usr/share
}

