# SliTaz package receipt.

PACKAGE="nano"
VERSION="2.6.1"
CATEGORY="utilities"
SHORT_DESC="Nano Text Editor"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://nano-editor.org/"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="${WEB_SITE}dist/v${VERSION%.*}/$TARBALL"
TAGS="text-editor"
HOST_ARCH="i486 arm"

DEPENDS="ncursesw zlib"
SUGGESTED="gpm"
BUILD_DEPENDS="ncursesw-dev zlib-dev groff"
SPLIT="nano-doc"

# Handle cross compilation
case "$ARCH" in
	arm*) BUILD_DEPENDS="ncursesw-dev zlib-dev" ;;
esac

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-wrapping-as-root \
		--enable-utf8 \
		$CONFIGURE_ARGS $ARCH_ARGS &&
	make && make install

	cook_compress_manpages
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs
	rm -r $fs/usr/share/doc $fs/usr/share/locale $fs/usr/share/man

	# Config file.
	mkdir -p $fs/etc
	cp $src/doc/nanorc.sample $fs/etc/nanorc
	cd $fs; patch -p0 < $stuff/nano.patch

	# Shrink
	for i in $fs/usr/share/nano/*.nanorc; do
		sed -i '/^#/d;/^$/d' $i
	done
}
