# SliTaz package receipt.

PACKAGE="nano"
VERSION="2.4.3"
CATEGORY="utilities"
SHORT_DESC="GNU Nano Text Editor"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://www.nano-editor.org/"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="${WEB_SITE}dist/v${VERSION%.*}/$TARBALL"
TAGS="text-editor"
HOST_ARCH="i486 arm"

DEPENDS="ncursesw zlib"
SUGGESTED="gpm"
BUILD_DEPENDS="ncursesw-dev zlib-dev groff"

# Handle cross compilation
case "$ARCH" in
	arm*) BUILD_DEPENDS="ncursesw-dev zlib-dev" ;;
esac

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-utf8 \
		$CONFIGURE_ARGS $ARCH_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p \
		$fs/etc \
		$fs/usr/share
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/share/nano $fs/usr/share

	# Config file.
	cp $src/doc/nanorc.sample $fs/etc/nanorc
	cd $fs; patch -p0 < $stuff/nano.patch
}
