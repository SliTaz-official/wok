# SliTaz package receipt.

PACKAGE="nano"
VERSION="2.2.3"
CATEGORY="utilities"
SHORT_DESC="GNU Nano Text Editor."
MAINTAINER="pankso@slitaz.org"
DEPENDS="ncursesw"
BUILD_DEPENDS="ncursesw-dev"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.nano-editor.org/"
WGET_URL="http://www.nano-editor.org/dist/v2.2/$TARBALL"
TAGS="text-editor"

# Rules to configure and make the package.
compile_rules()
{
    cd $src
    ./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		--sysconfdir=/etc \
		--enable-all \
		--enable-extra \
		--enable-utf8 \
		$CONFIGURE_ARGS &&
    make &&
    make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share $fs/etc
    cp -a $_pkg/usr/bin $fs/usr
    cp -a $_pkg/usr/share/nano $fs/usr/share
    # Config file.
    cp stuff/nanorc $fs/etc
}
