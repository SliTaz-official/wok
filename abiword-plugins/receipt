# SliTaz package receipt.

PACKAGE="abiword-plugins"
VERSION="2.4.6"
CATEGORY="office"
SHORT_DESC="Extra plugins for Abiword."
MAINTAINER="pankso@slitaz.org"
DEPENDS="gtk+ libgnomeprint libgnomeprintui libgnomecanvas fribidi libglade 
             popt libxml2 libart_lgpl"
BUILD_DEPENDS="gtk+-dev libgnomeprint-dev libgnomeprintui-dev libgnomecanvas-dev
             fribidi-dev libglade-dev popt-dev libxml2-dev libart_lgpl-dev"
WANTED="abiword"
WEB_SITE="http://www.abisource.com/"

# Rules to configure and make the package.
compile_rules()
{
	cd $src/abiword-plugins
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS
	make
	make DESTDIR=$src/_pkg-plugins install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/AbiWord-2.4/plugins/
	_pkg=$src/_pkg-plugins
	
	cp -a $_pkg/usr/lib/AbiWord-2.4/plugins/*.so \
		$fs/usr/lib/AbiWord-2.4/plugins/
}

