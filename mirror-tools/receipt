# SliTaz package receipt.

PACKAGE="mirror-tools"
VERSION="1.0"
CATEGORY="misc"
SHORT_DESC="Mirrors toolset."
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://www.slitaz.org/"
DEPENDS="rrdtool rgzip"
BUILD_DEPENDS="mercurial"
SOURCE="slitaz-dev-tools"
WGET_URL="mercurial|http://hg.slitaz.org/slitaz-dev-tools"
BRANCH="$VERSION"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $src/$PACKAGE/rootfs/* $fs
	mkdir -p $fs/var/www
	cp -a $src/$PACKAGE/mirror-info $fs/var/www
	cp -a $src/$PACKAGE/slitaz $fs/var/www
	chown -R 80.80 $fs/var/www
}

