# SliTaz package receipt.

PACKAGE="epm"
VERSION="4.2"
CATEGORY="misc"
SHORT_DESC="File packaging program."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION-source.tar.bz2"
WEB_SITE="https://www.msweet.org/epm/"
WGET_URL="http://www.msweet.org/files/project2/$TARBALL"

DEPENDS=""
BUILD_DEPENDS=""

# Rules to configure and make the package.
compile_rules()
{
	./configure --prefix=/usr && make -j 1
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $src/epm $fs/usr/bin
}
