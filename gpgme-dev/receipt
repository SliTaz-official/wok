# SliTaz package receipt.

PACKAGE="gpgme-dev"
VERSION="1.11.1"
CATEGORY="security"
SHORT_DESC="C language library that allows to add support for cryptography to a program."
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.gnupg.org/related_software/gpgme/"

WANTED="gpgme"
DEPENDS="gpgme libassuan-dev libgpg-error-dev"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs
	rm -r $fs/usr/bin/gpgme-tool $fs/usr/lib/*.so*
}
