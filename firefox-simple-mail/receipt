# SliTaz package receipt.

PACKAGE="firefox-simple-mail"
VERSION="2.72"
CATEGORY="network"
SHORT_DESC="Simple mail client supporting POP/IMAP/SMTP."
MAINTAINER="pankso@slitaz.org"
DEPENDS="firefox"
BUILD_DEPENDS="firefox"
WEB_SITE="https://addons.mozilla.org/fr/firefox/addon/5593"
FIREFOX_VERSION="$(firefox -v | sed 's/.*Firefox \(.*\), Copy.*/\1/')"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/firefox-$FIREFOX_VERSION/extensions
	tar xjf stuff/${PACKAGE}-${VERSION}.tar.bz2 \
		-C $fs/usr/lib/firefox-$FIREFOX_VERSION/extensions
}
