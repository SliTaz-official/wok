# SliTaz package receipt.

PACKAGE="libedit"
VERSION="2.11"
CATEGORY="library"
SHORT_DESC="Berkeley-style licensed command line editor library"
MAINTAINER="domcox@users.sourceforge.net"
DEPENDS=""
SOURCE="libedit-20080712"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://www.thrysoee.dk/editline/"
WGET_URL="http://www.thrysoee.dk/editline/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS \
	&& make
	make DESTDIR=$PWD/_pkg install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/*.so* $fs/usr/lib
	strip --strip-unneeded $fs/usr/lib/*
}

