# SliTaz package receipt.

PACKAGE="memtest-serial"
VERSION="5.01"
CATEGORY="base-system"
SHORT_DESC="Memory failures detection tool using serial port."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.memtest.org/"
WANTED="memtest"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/boot
	cp $src/memtest.packed-115200 $fs/boot/memtest
}

# Pre and post install commands for Tazpkg.
post_install()
{
	cat <<EOT
Output to vga and serial port. Default kernel cmdline: console=ttyS0,115200e8
EOT
}
