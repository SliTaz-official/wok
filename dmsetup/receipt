WANTED="lvm2"

DEPENDS="libdevmapper"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/sbin
	cp $install/usr/sbin/dmsetup $fs/usr/sbin
}
