# SliTaz package receipt.

PACKAGE="libQtOpenGL"
VERSION="4.5.0"
CATEGORY="development"
SHORT_DESC="Qt OpenGL Library"
MAINTAINER="allan316@gmail.com"
DEPENDS="libQtGui libgl libglu xorg-libXxf86vm xorg-libXdamage libdrm"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.trolltech.com"
WANTED="qt-x11-opensource-src"
# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $_pkg/usr/lib/libQtOpenGL.so* $fs/usr/lib
}

