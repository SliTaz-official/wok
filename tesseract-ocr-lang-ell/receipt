# SliTaz package receipt.

PACKAGE="tesseract-ocr-lang-ell"
VERSION="3.02"
CATEGORY="office"
SHORT_DESC="Greek language data for Tesseract OCR."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="Apache"
WEB_SITE="https://github.com/tesseract-ocr/tessdata"
TARBALL="tesseract-ocr-$VERSION.${PACKAGE#*lang-}.tar.gz"
WGET_URL="https://storage.googleapis.com/google-code-archive-downloads/v2/code.google.com/tesseract-ocr/$TARBALL"

DEPENDS="tesseract-ocr"

# What is the latest version available today?
current_version()
{
	wget -O - $WEB_SITE/releases 2>/dev/null | \
	sed '/archive.*tar/!d;s|.*/[A-Za-z_-]*\(.*\).tar.*|\1|;q'
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
	cp -a $src/tessdata $fs/usr/share/
}
