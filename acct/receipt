# SliTaz package receipt.

PACKAGE="acct"
VERSION="6.6.2"
CATEGORY="utilities"
SHORT_DESC="Utilities that report data about users logged on GNU/Linux."
MAINTAINER="hackdorte@sapo.pt"
LICENSE="GPL3"
GNU_MIRROR="http://ftp.gnu.org/gnu"
TARBALL="$PACKAGE-$VERSION.tar.gz"

WEB_SITE="http://savannah.gnu.org/projects/acct/"
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"

TAGS="analysis network utilities"

DEPENDS="gcc-lib-base glibc"
BUILD_DEPENDS="glibc-dev"

# Rules to configure and make the package.
compile_rules()
{
  ./configure --prefix=/usr \
    $CONFIGURE_ARGS &&
    make $MAKEFLAGS &&
    make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
  mkdir -p $fs/usr/bin
  cp -a $install/usr/bin/* $fs/usr/bin

  mkdir -p $fs/usr/sbin
  cp -a $install/usr/sbin/* $fs/usr/sbin

  mkdir -p $fs/usr/share
  cp -a $install/usr/share/* $fs/usr/share
}
