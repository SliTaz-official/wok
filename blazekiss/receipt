# SliTaz package receipt.

PACKAGE="blazekiss"
VERSION="current"
CATEGORY="office"
SHORT_DESC="Tiny Wiki Engine in french."
MAINTAINER="pascal.bellard@slitaz.org"
TARBALL="$PACKAGE.zip"
WEB_SITE="http://dizplay.idleman.fr/Projects/Wiki/blazekiss/"
WGET_URL="http://dizplay.idleman.fr/Projects/Archives/$TARBALL"
DEPENDS="lighttpd php"
CONFIG_FILES="/var/www/blazekiss/_config.php"

# Rules to configure and make the package.
compile_rules()
{
	true
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	index=$(find $src -name index.php)
	src=$(dirname $index)
	mkdir -p $fs/var/www
	cp -a $src $fs/var/www/blazekiss
	rm -f $fs/var/www/blazekiss/historique/*/*.bak
	cp -a $stuff/* $fs/var/www/blazekiss/
	chown -R www.www $fs/var/www/blazekiss
}
