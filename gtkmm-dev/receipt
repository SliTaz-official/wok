# SliTaz package receipt.

PACKAGE="gtkmm-dev"
VERSION="2.24.3"
CATEGORY="development"
SHORT_DESC="Callback Framework for C++ devel files."
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2.1"
WANTED="gtkmm"
WEB_SITE="http://www.gtkmm.org/"

DEPENDS="gtkmm gtk+-dev atkmm-dev glibmm-dev libgiomm-dev pangomm-dev"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/lib/*.*a $fs/usr/lib
	cp -a $install/usr/lib/pkgconfig $fs/usr/lib
	cp -a $install/usr/lib/gtkmm-2.4 $fs/usr/lib
	cp -a $install/usr/lib/gdkmm-2.4 $fs/usr/lib
	cp -a $install/usr/include $fs/usr
}
