# SliTaz package receipt.

PACKAGE="dashel"
VERSION="1.0.4"
CATEGORY="system-tools"
SHORT_DESC="C++ cross-platform data stream helper encapsulation library."
MAINTAINER="pankso@slitaz.org"
LICENSE="BSD"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://aseba-community.github.io/dashel/"
WGET_URL="http://download.gna.org/dashel/$VERSION/$TARBALL"

DEPENDS="hal"
BUILD_DEPENDS="cmake hal-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	cmake -DCMAKE_INSTALL_PREFIX=/usr . &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/* $fs/usr
}
