# SliTaz package receipt.

PACKAGE="perl-datetime-format-strptime"
VERSION="1.56"
CATEGORY="development"
SHORT_DESC="DateTime::Format::Strptime module is a Perl extension."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
SOURCE="DateTime-Format-Strptime"
TARBALL="$SOURCE-$VERSION.tar.gz"
WEB_SITE="http://cpan.org/"
WGET_URL="https://metacpan.org/CPAN/authors/id/D/DR/DROLSKY/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl-datetime perl-params-validate perl-test-simple"

# Rules to configure and make the package.
compile_rules()
{
	cd $src
	perl Makefile.PL &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
}

